#DIM DYNAMIC AMOUNT
#DIM DYNAMIC LCOUNT

SIF MAXBASE:ARG:便量 > 0
    RETURN

AMOUNT = 3000
FOR LCOUNT, 0, VARSIZE("TALENT")
	SIF !TALENT:ARG:LCOUNT
		CONTINUE
	SELECTCASE TALENTNAME:LCOUNT ; TODO:add case
		CASE "食欲皆伝"
			最大値 *= 2
	ENDSELECT
NEXT

MAXBASE:ARG:便量 = AMOUNT

