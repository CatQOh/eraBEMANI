@INITIALIZE_AMOUNT_FOR_FECES, 対象
#DIM DYNAMIC AMOUNT
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 対象

SIF MAXBASE:対象:便量 > 0
	RETURN

AMOUNT = 200
FOR LCOUNT, 0, VARSIZE("TALENT")
	SIF !TALENT:対象:LCOUNT
		CONTINUE

	SELECTCASE TALENTNAME:LCOUNT ; TODO:add case
		CASE "アニマル", "ファーリー", "禁断の知識"
			TIMES AMOUNT, 1.30
		CASE "食欲皆伝"
			TIMES AMOUNT, 1.50
		CASE "リミットバースト"
			TIMES AMOUNT, 2.00
		CASE "体格"
			SELECTCASE TALENT:対象:LCOUNT
				CASE 1
					TIMES AMOUNT, 0.50
				CASE 2
					TIMES AMOUNT, 0.75
				CASE 4
					TIMES AMOUNT, 1.20
			ENDSELECT
	ENDSELECT
NEXT

AMOUNT += EXP:対象:排便経験

SIF AMOUNT < 50
	AMOUNT = 50

MAXBASE:対象:便量 = AMOUNT

