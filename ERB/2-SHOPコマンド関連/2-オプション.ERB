				CALL SETMAX(SOUND音量, 0)
				SETSOUNDVOLUME SOUND音量
				SIF サウンド
					CALL SE再生, トランプドロー
			CASE 100
				RESTART
		ENDSELECT
		GOTO SOUNDOPTION
ENDSELECT

