SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		FOR PAGING, 0, CHARANUM
			CALL PAGING, 1, "", "TARGET", "やめる"
		NEXT

		SIF RESULT >= 0
			LTARGET = RESULT
	CASE 2
		PRINTL □どの部位に装飾を施しますか？
		PRINTL
		PRINTL [10] 右乳首
		PRINTL [20] 左乳首
		PRINTL
		
		DRAWLINE

		BINPUT

		APOINT = RESULT
	CASE 3
		PRINTL □どんなアクセサリーをつけますか？
		PRINTL
		PRINTL [1] リングピアス
		PRINTL [2] バーベルピアス
		PRINTL

		DRAWLINE

		BINPUT

		SELECTCASE RESULT
			CASE 1
				EQUIPD_ACCESSORY = リングピアス
			CASE 2
				EQUIPD_ACCESSORY = バーベルピアス
