@ロケーション条件_Roots26
#DIM DYNAMIC LCOUNT
{
#DIMS DYNAMIC 条件用キャラ = 
"水城 セリカ",
"北見 エリカ",
"雛月 聖奈",
"雛月 理々奈"
}

;セリカ、エリカ、セム、リリスのいずれかの好感度が100以上
FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@バイト条件_Roots26
バイト要項 = 昼～夕方の時間帯で募集中
SIF GROUPMATCH(ターン, "昼", "夕")
	バイト可能 = 1
;ロケーション解禁済みで可能
SIF FINDELEMENTF(解禁済みロケーション, "Roots26") >= 0
	RETURN GETCHARANAME("雛月 聖奈")

RETURN 0

@出現キャラ_Roots26
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	始点 = 1
	終点 = CHARANUM
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;卑弥呼は居てはいけないので除外
		CASE "卑弥呼"
			出現率:LCOUNT = 0
		;セムさんは必ず居る
		CASE "雛月 聖奈"
			出現率:LCOUNT = 100
		;セリカ、エリカ、リリスは50%の確率で居る
		CASE "水城 セリカ", "北見 エリカ", "雛月 理々奈"
			出現率:LCOUNT = 50
		;Roots26世界に居るが登場作品フラグが設定されてないキャラ
		CASE "クロノス", "カイロス"
			出現率:LCOUNT = 25
		;低確率で他のRoots26キャラが居る 25%
		CASEELSE
			SIF GROUPMATCH("Roots26", CSTR:LCOUNT:登場作品, CSTR:LCOUNT:登場作品２, CSTR:LCOUNT:登場作品３)
				出現率:LCOUNT = 25
	ENDSELECT
NEXT

	
