@あけさか_専用コマンド_INPUT
#DIM DYNAMIC 対象

選択肢 = CRESULT:1
CALL 職場出現キャラ_あけさか
対象 = RESULT
SELECTCASE CRESULT:1
	CASE 0
		IF 対象
			CALL SCHOOL_KOJO, 対象, "あけさかで注文"
			CALL 好感度上昇, 対象, "友情", 15
		ELSE
			PRINTL あけさかで美味しいカレーを食べた
		ENDIF
		MONEY -= 1000
	CASE 1
		CALL SCHOOL_KOJO, 同行者, "あけさかで食事"
		CALL 好感度上昇, 同行者, "友情", 30
		MONEY -= 2000
ENDSELECT
WAIT
RETURN 1

