@ロケーション条件_いずみ洋裁店
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"和泉 一舞"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@バイト条件_いずみ洋裁店
バイト要項 = 昼～夕方の時間帯で募集中
SIF GROUPMATCH(ターン, "昼", "夕")
	バイト可能 = 1
;ロケーション解禁済みで可能
SIF FINDELEMENTF(解禁済みロケーション, "いずみ洋裁店") >= 0
	RETURN -1

RETURN 0

@出現キャラ_いずみ洋裁店
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	始点 = 1
	終点 = CHARANUM
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;イブ確定
		CASE "和泉 一舞"
			出現率:LCOUNT = 100
		;他ひなビタキャラがいる
		CASE "ひなビタキャラ"
			$HINABITA
			出現率:LCOUNT = 50
		;服飾が好きなキャラが居る
		{
		CASE "水城 セリカ", "北見 エリカ", "雛月 聖奈", "タルト", "タフィ", "ベリゼベス", "トリフォリ", 
			 "ジュディ", "ムラサキ", "リゼット", "モモコさん", "ラッテ", "ミニッツ", "いずみさん", "ロザリー",
			 "クアトロ", "ニット", "ノネット", "シェリー", "鈴花", "＊うさぬこ＊", "ユビ子", "おしゃれずきん",
			 "ローズ", "ミカ子", "柏木 咲姫", "舞園 星斗", "ミサキ", "ノーティガール", "天乃 探女"
		}
			出現率:LCOUNT = 20
		CASEELSE
			SIF GROUPMATCH("ひなビタ♪", CSTR:LCOUNT:登場作品, CSTR:LCOUNT:登場作品２, CSTR:LCOUNT:登場作品３)
				GOTO HINABITA
	ENDSELECT
NEXT
