@職場出現キャラ_おしゃま牛乳
#DIM DYNAMIC 対象
{
#DIMS DYNAMIC 出現キャラ =
"しゃま",
"みるく",
}

対象 = GETCHARANAME(出現キャラ:(RAND:VARSIZE("出現キャラ")))

SIF 対象 > 0 && CSTR:対象:現在地 == ""
	RETURN 対象

RETURN 0

@出現キャラ_おしゃま牛乳
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;しゃまみるく
		CASE "しゃま", "みるく"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 100
		;3人組
		CASE "ラズ", "シフォン", "ソルト"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 50
		;牛乳やナイスバディを求めてるキャラなど
		{
		CASE "赤のリピカ", "黃のラピカ", "クリープ", "埴仁 虎子", "チョコプラちゃん", "ミルク", "ホワイトメリー",
			 "ウェルダン", "ホイップ", "育江", "ルキア", "アロエ", "グリム・ルキア", "グリム・アロエ", 
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 20
		CASEELSE
			SIF TALENT:LCOUNT:料理人 && 出現率:LCOUNT >= 0
				出現率:LCOUNT = 20

	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART

