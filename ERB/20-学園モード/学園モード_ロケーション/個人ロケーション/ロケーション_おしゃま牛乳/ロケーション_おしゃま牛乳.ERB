	ENDIF
ELSE
	IF MONEY < 500
		CALL COLUMNPRINTL, 0, "　[---] - 牛乳を注文する(200＄)", "gray"
	ELSE
		CALL COLUMNPRINTL, 0, "　[  0] - 牛乳を注文する(200＄)"
	ENDIF
ENDIF

@おしゃま牛乳_専用コマンド_INPUT
#DIM DYNAMIC 対象

選択肢 = CRESULT:1
対象 = 0
CALL 職場出現キャラ_おしゃま牛乳
対象 = RESULT
SELECTCASE CRESULT:1
	CASE 0
		CALL SCHOOL_KOJO, 対象, "おしゃま牛乳で注文"
		CALL 好感度上昇, 対象, "友情", 5
		MONEY -= 500
	CASE 1
		CALL SCHOOL_KOJO, 同行者, "おしゃま牛乳で乾杯"
		CALL 好感度上昇, 同行者, "友情", 10
		MONEY -= 1000
ENDSELECT
WAIT
RETURN 1

