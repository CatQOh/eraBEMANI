@おコンの団子屋_専用コマンド_INPUT
#DIM DYNAMIC 対象

選択肢 = CRESULT:1
対象 = 0
SIF CSTR:GETCHARANAME("おコン"):現在地 == ""
	対象 = GETCHARANAME("おコン")
SELECTCASE CRESULT:1
	CASE 0
		IF 対象
			CALL SCHOOL_KOJO, 対象, "おコンの団子屋で注文"
			CALL 好感度上昇, 対象, "友情", 15
		ELSE
			PRINTL おコンの団子屋で美味しい団子を食べた
		ENDIF
		MONEY -= 500
	CASE 1
		CALL SCHOOL_KOJO, 同行者, "おコンの団子屋でお茶する"
		CALL 好感度上昇, 同行者, "友情", 30
		MONEY -= 1000
ENDSELECT
WAIT
RETURN 1

