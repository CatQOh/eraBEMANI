@ボルテ軒_専用コマンド_INPUT
#DIM DYNAMIC 対象
#DIM DYNAMIC ヤサイ = 3
#DIM DYNAMIC ニンニク = 3
#DIM DYNAMIC アブラ = 3
#DIM DYNAMIC タレ = 3

選択肢 = CRESULT:1
CALL 職場出現キャラ_ボルテ軒, 1
対象 = RESULT
SELECTCASE CRESULT:1
	CASE 0
		VARLINE = LINECOUNT
		DO
			CLEARLINE LINECOUNT-VARLINE
			PRINTL □ボルテ軒でラーメンを注文することにした。呪文をどうぞ
			PRINT 　ヤサイ
			SELECTCASE ヤサイ
				CASE 1
					PRINT 無し　　　
				CASE 2
					PRINT 少なめ　　
				CASE 3
					PRINT 普通　　　
				CASE 4
					PRINT マシ　　　
				CASE 5
					PRINT マシマシ　
			ENDSELECT
			PRINTPLAIN 　
			PRINTL [ 1] 無し [ 2] 少なめ [ 3] 普通 [ 4] マシ　 [ 5] マシマシ
			PRINT 　ニンニク
			SELECTCASE ニンニク
				CASE 1
					PRINT 無し　　
				CASE 2
					PRINT 少なめ　
				CASE 3
					PRINT 普通　　
				CASE 4
					PRINT オオメ　
				CASE 5
					PRINT マシマシ
			ENDSELECT
			PRINTPLAIN 　
			PRINTL [11] 無し [12] 少なめ [13] 普通 [14] オオメ [15] マシマシ
			PRINT 　アブラ
			SELECTCASE アブラ
				CASE 1
					PRINT 無し　　　
				CASE 2
					PRINT 少なめ　　
				CASE 3
					PRINT 普通　　　
				CASE 4
					PRINT オオメ　　
				CASE 5
					PRINT マシマシ　
			ENDSELECT
			PRINTPLAIN 　
			PRINTL [21] 無し [22] 少なめ [23] 普通 [24] オオメ [25] マシマシ
			PRINT 　タレ
			SELECTCASE タレ
				CASE 1
					PRINT 無味　　　　
				CASE 2
					PRINT 少なめ　　　
				CASE 3
					PRINT 普通　　　　
				CASE 4
					PRINT カラメ　　　
				CASE 5
					PRINT マシマシ　　
			ENDSELECT
			PRINTPLAIN 　
			PRINTL [31] 無味 [32] 少なめ [33] 普通 [34] カラメ [35] マシマシ
			PRINTL 　[0] これで注文
			BINPUT
			SELECTCASE RESULT
				CASE 0
					BREAK
				CASE 1 TO 5
					ヤサイ = RESULT
				CASE 11 TO 15
					ニンニク = RESULT%10
				CASE 21 TO 25
					アブラ = RESULT%10
				CASE 31 TO 35
					タレ = RESULT%10
			ENDSELECT
		LOOP 1
		IF 対象
			CALL SCHOOL_KOJO, 対象, "ボルテ軒で注文"
			;ヤサイマシニンニクアブラオオメ以上だと好感度ボーナス
			IF ヤサイ >= 4 && ニンニク >= 4 && アブラ >= 4 && NAME:対象 == "野増菜 かなで"
				CALL 好感度上昇, 対象, "友情", 20
			ELSE
				CALL 好感度上昇, 対象, "友情", 15
			ENDIF
		ELSE
			PRINTL ボルテ軒で美味しいラーメンを食べた
		ENDIF
		MONEY -= 800
	CASE 2
		CALL SCHOOL_KOJO, 同行者, "ボルテ軒で食事する"
		CALL 好感度上昇, 同行者, "友情", 30
		MONEY -= 1600
ENDSELECT
WAIT
RETURN 1

