@ロケーション条件_ヴィルヘルムのお城
#DIM DYNAMIC LCOUNT
{
#DIMS DYNAMIC 条件用キャラ = 
"ヴィルヘルム",
"ジャック"
}

;ヴィルヘルム、ジャックの相性が120以上
FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@出現キャラ_ヴィルヘルムのお城
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;ヴィルヘルムとジャックは必ず居る
		CASE "ヴィルヘルム", "ジャック"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 100
		;ラジェたちは学校に行ってなければ50%の確率で居る
		CASE "ラジェ", "ガレト", "ヴァロ", "タルタ", "ゼルハルト"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 50
		;パラド、トリフォリ、ガユカ、サタヌ、マモニスが極稀に居る 10%
		CASE "パラド", "ガレト", "ガユカ", "サタヌ", "マモニス"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 10
	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART
