IF 同行者
	IF MONEY < 10000
		CALL COLUMNPRINTL, 0, @"　[---] - %CALLNAME:同行者%と食事する(10000＄)", "gray"
	ELSE
		CALL COLUMNPRINTL, 0, @"　[  1] - %CALLNAME:同行者%と食事する(10000＄)"
	ENDIF
