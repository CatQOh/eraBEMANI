"クロノス",
"カイロス",
"ラプラシア",
"赤ノルニル",
"黄ノルニル",
"青ノルニル",
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@出現キャラ_過去
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;故人、死亡経験のあるキャラ
		{
		CASE "茶倉", "苑柄 冬花", "卑弥呼", "クロノス", "カイロス", "ジャックティーロ", "うらしまたろ子", "トヨタマヒメ", "イオリ", "パラド",
			 "アイオーネ", "キラー", "汐夏 ほたる", "冥道 ユウキ", "オルトリンデ", "N・ナーガ", "デボラ", "リデル", "サツキ", "グリム・サツキ",
			 "宍戸 美鈴", "ファロ", "マルファータ", "ベルフォート", "リネス", "マッドラット", "てまり", "サチ子", "快刀 乱麻"
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 20
	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART
