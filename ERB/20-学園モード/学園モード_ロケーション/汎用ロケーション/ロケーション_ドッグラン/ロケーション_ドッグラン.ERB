@ロケーション条件_ドッグラン
#DIM DYNAMIC LCOUNT

;無条件
RETURN 1

@出現キャラ_ドッグラン
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	始点 = 1
	終点 = CHARANUM
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;犬がいる
		{
		CASE "レーヴァスレーター", "大犬のお姉さん", "牡丹", "雪翔くん",
			 "アッシュ", "エス・エイト・タロウ", "おコン", "HOT.D", "セルゲイ",
			 "ホワイトメリー", "イナリ", "山吹", "ワン", "ポチコ", "ヴォルフガング",
			 "玉藻 銀丸", "天稲荷 コテツ", "フォクシー", 
		}
			出現率:LCOUNT = 30
	ENDSELECT
NEXT

	
