@ロケーション条件_墓地
RETURN -1

@出現キャラ_墓地
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	;日中と夜で居るキャラが違う
	IF ターン == "夜"
		SELECTCASE CHARANAMEF(LCOUNT)
			{
			CASE "偽トラン", "汐夏 ほたる", "冥道 ユウキ", "ユーリ", "アッシュ", "スマイル", "ジズ", "N・ナーガ",
				 "デボラ", "てまり", "リデル", "ぐわんぜさま", "グリム・サツキ", "宍戸 美玲"
			}

				SIF 出現率:LCOUNT >= 0
					出現率:LCOUNT = 30
		ENDSELECT
	ELSE
		;親類や知り合いを亡くした人
		SELECTCASE CHARANAMEF(LCOUNT)
			{
			CASE "北見 エリカ", "雛月 理々奈", "雛月 聖奈", "ナイア", "シア", "菱宮 春一", "イオリ", "マタン・カトルセ",
				 "椿(pop'n)", "ユウ", "グリム・ユウ", "アドフーク", "ミカレイ・バーン", "サーミリアス", "マルファータ", "ケイデンス"
			}
				SIF 出現率:LCOUNT >= 0
					出現率:LCOUNT = 30
		ENDSELECT
	ENDIF
NEXT
