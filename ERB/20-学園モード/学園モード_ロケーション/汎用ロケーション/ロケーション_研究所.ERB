@ロケーション条件_研究所
#DIM DYNAMIC LCOUNT
;工作技能3以上で行けるようになる
SIF ABL:PLAYER:工作技能 >= 3
	RETURN -1

RETURN 0

@出現キャラ_研究所
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;研究者や研究対象や警備員
		{
		CASE "うらしまたろ子", "トヨタマヒメ", "理子", "AI-My", "Dr.φ", "天月 エクサ", "ルート＠超ドー研", "ブラック", "ジェイド", "ジェダイト", "ニコラ",
			 "マラリヤ", "グリム・タイガ", "高須 らいむ", "メリム", "マルファータ", "マッドラット", "ハート", "マドカ", "T.B.リカ", "コナミレディ", "帝国魔導師 イセリア"
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 20
	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART
