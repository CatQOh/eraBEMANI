SELECTCASE RESULT
	CASE 0
		CSTR:PLAYER:現在地 = 自宅
		RETURN 1
	CASE 1
		バイト帰り = 1
		CALL ロケーション選択, 1
		バイト帰り = 0
		CSTR:PLAYER:現在地 = 自宅
		RETURN RESULT
ENDSELECT

