"オリーブ",
"ヤンクル"
}

対象 = GETCHARANAME(出現キャラ:(RAND:VARSIZE("出現キャラ")))

SIF 対象 > 0 && CSTR:対象:現在地 == ""
	RETURN 対象

RETURN 0

@出現キャラ_コレットオーダーショップ
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;オリーブヤンクル確定
		CASE "オリーブ", "ヤンクル"
			出現率:LCOUNT = 100
		;他リフレクに馴染みのあるキャラなど 主にジャケを飾ったキャラ
		{
		CASE "雛月 理々奈", "梅桐 天土", "キラー", "リヒト", "ルルスス", "マモニス", "キュベリア",
			 "青のルピカ", "黄のロピカ", "モード", "リリーゼ", "レイシス", "嬬武器 雷刀", "嬬武器 烈風刀",
			 "MZD", "六", "ミルク", "若さん", "つらら", "ロキ", "Σ", "リアン", "ギジリ", "寿々姫", "雷蔵",
			 "烈", "氷海", "ポチコ", "パステルくん", "ガッキー博士", "ルエリシア", "揚羽", "BisCo", "Mei", "ToRa",
			 "ユビ子", "スミス氏", "なぎさ", "ちせ"
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 10 
	ENDSELECT
NEXT


