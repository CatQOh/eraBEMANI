{
#DIMS DYNAMIC 条件用キャラ = 
"火々矢",
"兎々呂鬼",
"風々奇",
"夜々祇",
"おいわちゃん",
"エチダナ"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@出現キャラ_シノバズアイランド
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;シノバズキャラが確定でいる
		CASE "火々矢", "兎々呂鬼", "風々奇", "夜々祇", "おいわちゃん", "エチダナ"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 100
		;ニンジャっぽい人たちがいる
		{
		CASE "ユーズ", "大伴 茶倉", "雛月 聖奈", "神崎 紗矢", "Ⅸ籠", "アーミィ",
			 "ヨシオ", "あやめ", "雷蔵", "グリム・ユリ", "東雲 心菜", "知雲 ひばり", "伊賀崎ノ 楠子", "ラニウス・ヴルペクラ",
			 "京終 始果", "エモン・5"
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 30
	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART
