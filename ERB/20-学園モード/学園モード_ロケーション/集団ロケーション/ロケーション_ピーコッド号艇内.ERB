	SELECTCASE CHARANAMEF(LCOUNT)
		CASE "ヨナ・ライゼ", "レナ・イシュメイル", "ギデオン・ライゼ", "ミリアム・ベミドバル"
			SIF 出現率:LCOUNT >= 0
