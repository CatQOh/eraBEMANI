{
#DIMS DYNAMIC 条件用キャラ = 
"ウーノ",
"ツースト",
"若さん",
"フォース"
}

バイト要項 = 朝～夕方の時間帯で募集中
SIF GROUPMATCH(ターン, "朝", "昼", "夕")
	バイト可能 = 1
;メンバーのいずれかの好感度500以上でバイト可能
FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 500
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
