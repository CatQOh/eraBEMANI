RETURN 0

@出現キャラ_ミラクル☆4の事務所
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		CASE "ウーノ", "ツースト", "若さん", "フォース"
			出現率:LCOUNT = 100
	ENDSELECT
NEXT
