@ロケーション条件_リンクルキングダム
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"マモニス",
"アーシェム",
"ベルフェゴーラ",
"ベリゼベス",
"ルシェ",
"レーヴァスレーター",
"サタヌ",
"キュベリア",
"キュベルト",
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@出現キャラ_リンクルキングダム
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;リンクルの人たちが確定でいる
		CASE "マモニス", "アーシェム", "ベルフェゴーラ", "ベリゼベス", "ルシェ", "レーヴァスレーター", "サタヌ", "キュベリア", "キュベルト"
			出現率:LCOUNT = 100
		;モブや来訪者がいる
		{
		CASE "おはな", "おきつ", "おゆき", "駄天使ちゃん", "ヴァルキリー", "サキュバスちゃん",
			 "ニンフちゃん", "ニーソ姫", "リリト", "ヴィルヘルム"
		}
			出現率:LCOUNT = 100
	ENDSELECT
NEXT

	
