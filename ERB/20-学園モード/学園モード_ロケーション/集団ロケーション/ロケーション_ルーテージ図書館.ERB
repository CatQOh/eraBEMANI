@出現キャラ_ルーテージ図書館
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 始点
#DIM DYNAMIC 終点

;NOではなく登録番号で指定する
IF データベース参照中
	始点 = データベース参照中
	終点 = データベース参照中+1
ELSE
	IF 始点
		終点 = 始点
		始点 = 1
	ELSE
		始点 = RAND(1, CHARANUM)
		終点 = CHARANUM
	ENDIF
ENDIF

FOR LCOUNT, 始点, 終点
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != "" && !データベース参照中
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;司書組が確定でいる
		CASE "リプンテ", "スタンパ", "クリープ", "アイラ"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 100
		;本が好きそうな人達がいる
		{
		CASE "雛月 理々奈", "梅桐 彩葉", "ファウラ", "ラジェ", "浅見 文彦", "ロキ",
			 "アルフォンス・ミシェル", "花緒", "獅子若", "アルビレオ", "愛子", "リアン", 
			 "ロザリー", "寿々姫", "ルート＠超ドー研", "氷海", "パステルくん", "霜月 凛", "クレメンス・ジークハルト",
			 "ポイニー・クーン",
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 20
		CASEELSE
			IF TALENT:LCOUNT:読書家
				SIF 出現率:LCOUNT >= 0
					出現率:LCOUNT = 20
			ENDIF
	ENDSELECT
NEXT

SIF 始点 == 1
	RETURN
SIF !データベース参照中
	RESTART

@ルーテージ図書館_専用コマンド
IF 同行者
	CALL COLUMNPRINTL, 0, @"　[  1] - %CALLNAME:同行者%と本を読む"
ELSE
	IF ルーテージ図書館_貸出中
		CALL COLUMNPRINTL, 0, "　[  0] - 本を返却する"
	ELSE
		CALL COLUMNPRINTL, 0, "　[  0] - 本を借りる"
	ENDIF
ENDIF

@ルーテージ図書館_専用コマンド_INPUT
#DIM DYNAMIC 対象
#DIMS DYNAMIC 出現キャラ = "リプンテ", "スタンパ", "クリープ"
#DIM DYNAMIC 乱数

IF GROUPMATCH("", CSTR:GETCHARANAME("リプンテ"):現在地, CSTR:GETCHARANAME("スタンパ"):現在地, CSTR:GETCHARANAME("クリープ"):現在地)
	DO
		乱数 = RAND:3
		IF CSTR:GETCHARANAME(出現キャラ:乱数):現在地 == ""
			対象 = GETCHARANAME(出現キャラ:乱数)
			BREAK
		ENDIF
	LOOP 1
ENDIF

SELECTCASE CRESULT:1
	CASE 0
		IF 対象
			IF ルーテージ図書館_貸出中
				CALL SCHOOL_KOJO, 対象, "ルーテージ図書館で本を借りる"
			ELSE
				CALL SCHOOL_KOJO, 対象, "ルーテージ図書館で本を返却"
			ENDIF
			CALL 好感度上昇, 対象, "友情", 5
		ELSE
			IF ルーテージ図書館_貸出中
				PRINTL ルーテージ図書館で本を返却した
			ELSE
				PRINTL ルーテージ図書館で本を借りた
			ENDIF
		ENDIF
	CASE 1
		PRINTFORML □%CALLNAME:同行者%とどの本を読みますか？
		PRINTL 　[0] - 普通の本
		PRINTL 　[1] - 男女の身体について詳しく書かれた本
		BINPUT
		選択肢 = RESULT
		CALL SCHOOL_KOJO, 同行者, "ルーテージ図書館で本を読む"
		SELECTCASE 選択肢
			CASE 0
				CALL 好感度上昇, 同行者, "友情", 5
			CASE 1
				IF 小中高(CSTR:対象:在校) == "小" && !好感度:対象:既成事実 && CFLAG:対象:倫理観 < 30
					CALL 好感度上昇, 同行者, "友情", 5
				ELSE
					SIF CFLAG:対象:倫理観 >= 30 || TALENT:対象:貞操無頓着
						CALL 好感度上昇, 同行者, "セフレ", 5
				ENDIF
		ENDSELECT
ENDSELECT
WAIT
RETURN 1

