@SCHOOL_KOJO, 対象, シチュエーション
#DIM DYNAMIC LTARGET
#DIM DYNAMIC 対象
#DIMS DYNAMIC シチュエーション

IF OPTION:口上表示 && !CFLAG:対象:口上非表示
	LTARGET = TARGET
	TARGET = 対象
	TRYCALLFORM SCHOOL_%CSVNAMERPS(NO:対象)%, シチュエーション
	TARGET = LTARGET
	CFLAG:対象:面識 = 1
	RETURN RESULT
ELSE
	LTARGET = TARGET
	TRYCALLFORM SCHOOL_MESSAGE_%シチュエーション%
	TARGET = LTARGET
	RETURN RESULT
ENDIF
