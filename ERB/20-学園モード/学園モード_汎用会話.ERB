			CALL SCHOOL_KOJO, TARGET, "コマンド_八牌麻雀"
			RETURN RESULT
		ENDIF
		CALL SCHOOL_八牌麻雀
	CASE 100 TO 110
		;専用コマンド用枠として確保
		CALLFORM SCHOOL_KOJO, TARGET, @"専用コマンド_%専用コマンドリスト:(RESULT-100)%"
ENDSELECT
RETURN 1


