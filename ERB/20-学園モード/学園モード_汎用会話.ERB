	CASE 0 TO VARSIZE("コマンドリスト")-1
		IF EXISTFUNCTION(@"SCHOOL_%CSVNAMERPS(NO:TARGET)%_コマンド_%コマンドリスト:LRESULT%")
			CALL SCHOOL_KOJO, TARGET, @"コマンド_%コマンドリスト:LRESULT%"
