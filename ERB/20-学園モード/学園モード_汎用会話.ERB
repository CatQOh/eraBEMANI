		ENDIF
	CASE 99
		SIF OPTION:口上表示 && !CFLAG:対象:口上非表示 && EXISTFUNCTION(@"SCHOOL_%CSVNAMERPS(NO:TARGET)%_汎用会話キャンセル")
			CALLFORM SCHOOL_%CSVNAMERPS(NO:TARGET)%_汎用会話キャンセル
		RETURN 0
	CASE 100 TO 110
		;専用コマンド用枠として確保
		CALLFORM SCHOOL_KOJO, TARGET, @"専用コマンド_%専用コマンドリスト:(RESULT-100)%"
ENDSELECT

