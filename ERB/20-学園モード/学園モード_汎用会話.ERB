					SIF RESULTS != ""
						RESULTS = (%RESULTS%)
					CALL PRINTCOLORL, @"　[---] %専用コマンドリスト:LCOUNT%%RESULTS%", "gray"
					CONTINUE
				ENDIF
			CATCH
			ENDCATCH
			PRINTFORML 　[{LCOUNT+100}] %専用コマンドリスト:LCOUNT%
		NEXT
	ENDIF
