@選任ランダム, 科目
#FUNCTIONS
#DIMS DYNAMIC 赴任先
#DIM DYNAMIC LCOUNT
#DIMS DYNAMIC 学校
#DIMS DYNAMIC 科目

DO
	赴任先 = %学校名:(RAND:VARSIZE("学校名"))%
	SIF 赴任先 == ""
		CONTINUE
	;マジックアカデミーは固定で付いてるので赴任しない
	SIF 赴任先 == "マジックアカデミー"
		CONTINUE
	;大学には赴任しない
	SIF 小中高(赴任先) == "大"
		CONTINUE
	;赴任先に担当科目の教師が居なければ赴任
	FOR LCOUNT, 0, CHARANUM
		SIF 赴任先 == CSTR:LCOUNT:在任 && CSTR:LCOUNT:担当科目 == 科目
			RESTART
	NEXT
	BREAK
LOOP 1

RETURNF 赴任先

@小中高, 学校
#FUNCTIONS
#DIM DYNAMIC LCOUNT
#DIM 小
#DIM 中
#DIM 高
#DIMS DYNAMIC 学校

SIF 学校 == ""
	RETURNF ""

IF !小
	FOR LCOUNT, 0, VARSIZE("学校名")
		IF 学校名:LCOUNT == ""
			IF !小
				小 = LCOUNT
			ELSEIF !中
				中 = LCOUNT
			ELSE
				高 = LCOUNT
				BREAK
			ENDIF
		ENDIF
	NEXT
ENDIF

IF INRANGE(FINDELEMENT(学校名, 学校, 0, VARSIZE("学校名"), 1), 0, 小)
	RETURNF "小"
ELSEIF INRANGE(FINDELEMENT(学校名, 学校, 0, VARSIZE("学校名"), 1), 小, 中)
	RETURNF "中"
ELSEIF INRANGE(FINDELEMENT(学校名, 学校, 0, VARSIZE("学校名"), 1), 中, 高)
	RETURNF "高"
ELSE
	RETURNF "大"
ENDIF
