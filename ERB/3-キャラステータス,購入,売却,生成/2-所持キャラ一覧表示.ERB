			PRINTFORMLC 　[{LCOUNT, 2}] - %TALENTNAME:LCOUNT%
		NEXT
		CALL NEWLINE

		DRAWLINE
		PRINTPLAIN 　TALENT　
		PRINTFORML [{VARSIZE("TALENT")}] - 戻る
		BINPUT
		番号 = RESULT
		SELECTCASE RESULT
			CASE VARSIZE("TALENT")
				RESTART
			CASE 0 TO VARSIZE("TALENT")-1
				SIF TALENTNAME:番号 == ""
					CONTINUE
				SORTOPTION:1 = %TALENTNAME:番号%
				PRINTL □並べ替え
				PRINTL 　[0] - 昇順(素質の無いキャラ優先)
				PRINTL 　[1] - 降順(素質のあるキャラ優先)
				DRAWLINE
				PRINTPLAIN 　TALENT　
				PRINTL [10] - 戻る
				BINPUT
				SELECTCASE RESULT
					CASE 10
						RESTART
					CASE 0
						SORTOPTION:2 = 昇順
					CASE 1
						SORTOPTION:2 = 降順
				ENDSELECT
		ENDSELECT
	CASE 9
		DRAWLINE
		SORTOPTION:0 = 配属先
		PRINTL □配属先
		PRINTL 　[0] - 昇順(配属されてないキャラ優先)
		PRINTL 　[1] - 降順(配属されてるキャラ優先)
		DRAWLINE
		PRINTPLAIN 　ASSIGNED　
		PRINTL [10] - 戻る
		BINPUT
		SELECTCASE RESULT
			CASE 10
				RESTART
			CASE 0
				SORTOPTION:2 = 昇順
			CASE 1
				SORTOPTION:2 = 降順
		ENDSELECT
	CASE 10
		SIF ORIGIN
			CONTINUE
		SORTOPTION:0 = 解禁日
		PRINTL □解禁日
		PRINTL 　[0] - 昇順(早い順)
		PRINTL 　[1] - 降順(遅い順)
		DRAWLINE
		PRINTPLAIN 　UNLOCK　
		PRINTL [10] - 戻る
		BINPUT
		SELECTCASE RESULT
			CASE 10
				RESTART
			CASE 0
				SORTOPTION:2 = 昇順
			CASE 1
				SORTOPTION:2 = 降順
		ENDSELECT
ENDSELECT
