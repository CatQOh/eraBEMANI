@所持キャラ一覧_INPUT
#DIM DYNAMIC LTARGET
SELECTCASE CRESULT:1
	CASE MASTER
		SELECTCASE SHOP_キャラ表示情報
			CASE "調教対象選択"
				TARGET = -1
			CASE "助手選択1"
				ASSI = -1
			CASE "助手選択2"
				ASSI:1 = -1
			CASE "ABL上昇"
				PRINTW 主人の能力上昇はスキルツリーから行ってください
			CASE "能力表示"
				GOTO 能力表示
		ENDSELECT
	CASE -1
		SHOP_キャラ表示情報 = 調教対象選択
	CASE -2
		SHOP_キャラ表示情報 = 助手選択1
		SHOP_キャラページ = 0
	CASE -3
		SHOP_キャラ表示情報 = 助手選択2
		SHOP_キャラページ = 0
	CASE -4
		SHOP_キャラ表示情報 = 能力表示
	CASE -5
		SHOP_キャラ表示情報 = ABL上昇
	CASE -6
		SHOP_キャラ表示情報 = ロストキャラ表示
		SHOP_キャラページ = 0
	;CASE -1
	;	SIF 表示上限 > 10
	;		表示上限 -= 10
	;CASE -9
	;	表示上限 += 10
	CASE 999
		SHOP_キャラページ--
	CASE 1000
		RETURN
	CASE 1001
		SHOP_キャラページ++
	CASE 1010
		CALL CHARA_SORT
	CASE 1011
		INVERTBIT SHOP_表示切り替え, 0
	CASE 1012
		INVERTBIT SHOP_配属キャラ選択不可, 0
	CASE 1013
		SKIPDISP 1
		CALL CHARASORTING, ワンタッチソート:0, ワンタッチソート:1, ワンタッチソート:2
		SKIPDISP 0
	CASE 1020
		CALL 登場作品フィルタ設定
		SHOP_キャラページ = 0
	CASE 0 TO CHARANUM-1
		SELECTCASE SHOP_キャラ表示情報
			CASE "調教対象選択"
				CALL ASSIGN_TARGET, CRESULT:1
			CASE "助手選択1"
				SELECTCASE CRESULT:1
					CASE ASSI
						ASSI = -1
					CASEELSE
						CALL ASSIGN_ASSI, CRESULT:1
				ENDSELECT
			CASE "助手選択2"
				SELECTCASE CRESULT:1
					CASE ASSI:1
						ASSI:1 = -1
					CASEELSE
						CALL ASSIGN_ASSI, CRESULT:1, 2
				ENDSELECT
			CASE "能力表示", "ロストキャラ表示"
				CALLF プレイ称号計算, "能力表示"
				$能力表示
				LTARGET = TARGET
				TARGET = CRESULT:1
				;TARGETの能力表示中はあっちで「調教対象に指定」を表示させないためのフラグ
				IF TARGET == LTARGET
					SHOW_TARGET = LTARGET
				ELSE
					SHOW_TARGET = 0
				ENDIF
				対象変更済み = 0
				IF SHOP_キャラ表示情報 == "ロストキャラ表示"
					ロストキャラ表示 = 1
					CALL STATUS
					ロストキャラ表示 = 0
				ELSE
					CALL STATUS
				ENDIF
				;TARGET変更がされてる場合は戻さない
				SIF !対象変更済み && ASSI != LTARGET && ASSI:1 != LTARGET
					TARGET = LTARGET
				;TARGET変更無しかつ元々TARGETが居なかった場合も戻す
				SIF !対象変更済み && LTARGET == -1
					TARGET = -1
			CASE "ABL上昇"
				FLAG:能力上昇 = TARGET
				TARGET = CRESULT:1
				CALL ABL上昇画面
				TARGET = FLAG:能力上昇
		ENDSELECT
		RETURN
ENDSELECT

@STATUS_BAR, 対象
#DIM DYNAMIC 対象
#DIM DYNAMIC 文字色
#DIMS DYNAMIC 文字列

IF CFLAG:対象:タグ色 > 0
	文字色 = CFLAG:対象:タグ色
ELSE
	文字色 = -1
ENDIF

IF CFLAG:対象:キャラロスト
	文字列 += COLUMNPRINTF("　")
ELSE
	IF CFLAG:対象:使用不可
		文字列 += COLUMNPRINTF("不", 文字色)
	ELSEIF TALENT:対象:アニマル
		文字列 += COLUMNPRINTF("獣", 文字色)
	ELSEIF CHECK_CHILD_CARE(対象)
		文字列 += COLUMNPRINTF("妊", 文字色)
	ELSEIF 対象 == TARGET
		文字列 += COLUMNPRINTF("☆", 文字色)
	ELSEIF 対象 == ASSI
		文字列 += COLUMNPRINTF("１", 文字色)
	ELSEIF 対象 == ASSI:1
		文字列 += COLUMNPRINTF("２", 文字色)
	ELSEIF CFLAG:対象:監禁
		文字列 += COLUMNPRINTF("監", 文字色)
	ELSEIF CSTR:対象:配属 != ""
		文字列 += COLUMNPRINTF("KA", 文字色)
	;助手経験あり
	;ELSEIF ISASSI:対象
	;	文字列 += COLUMNPRINTF("●", 文字色)
	;助手可能
	ELSEIF CFLAG:対象:助手可能
		文字列 += COLUMNPRINTF("●", 文字色)
	ELSEIF CFLAG:対象:タグ色
		文字列 += COLUMNPRINTF("■", 文字色)
	ELSE
		文字列 += COLUMNPRINTF("　")
	ENDIF
ENDIF

