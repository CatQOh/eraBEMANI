			CASE 61 TO 90
				文字列 += COLUMNPRINTF("良好 ", "cyan")
			CASE 91 TO 100
				文字列 += COLUMNPRINTF("最高 ", "lime")
		ENDSELECT
		IF GUI
			文字列 += @"%IMGTOTAG(BASEBAR("モチベ", 対象, 4))% "
		ELSE
			文字列 += COLUMNPRINTF(@"{CFLAG:対象:モチベーション, 3}/100 ")
		ENDIF
	ELSE
		IF GUI
			文字列 += @"体力:%IMGTOTAG(BASEBAR("体力", 対象, 11))% "
			文字列 += @"気力:%IMGTOTAG(BASEBAR("気力", 対象, 11))% "
		ELSE
