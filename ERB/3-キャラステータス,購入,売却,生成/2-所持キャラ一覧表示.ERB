	文字列 += COLUMNPRINTF("○", 文字色)
ELSEIF CFLAG:対象:タグ色
	文字列 += COLUMNPRINTF("■", 文字色)
ELSE
	文字列 += COLUMNPRINTF("　")
ENDIF

