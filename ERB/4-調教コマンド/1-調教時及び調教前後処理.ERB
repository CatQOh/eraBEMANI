			CALL 相性加算, TARGET, MASTER, 1, 200
			SIF ASSI > 0
				CALL 相性加算, TARGET, ASSI, 1, 200
		ENDIF
	ENDIF
	;絶倫：調教中の射精回数10回以上（出し尽くす）
	IF CFLAG:残数 <= 0 && !TALENT:絶倫 && PENIS(TARGET)
		CALL KOJO_MESSAGE_EVENT, "絶倫"
		TALENT:絶倫 = 1
	ENDIF
ENDIF


