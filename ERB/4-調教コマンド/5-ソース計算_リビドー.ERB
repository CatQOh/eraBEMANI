@リビドー計算
#DIM DYNAMIC 上昇値

SIF CFLAG:死亡
	RETURN

;身体的な絶頂は関係無い
;BASE:リビドー += (NOWEX:Ｃ絶頂+NOWEX:Ｖ絶頂+NOWEX:Ａ絶頂+NOWEX:Ｂ絶頂)*

SELECTCASE FALLTYPE(TARGET)
	;恋慕 情愛、恭順
	CASE 1
		上昇値 = SOURCE:情愛+SOURCE:恭順/5
		;プレゼントコマンドが強力なのでそれだけ下げる
		SIF SELECTCOMS == "プレゼント"
			上昇値 /= 100
	;淫乱 身体系、性行動
	CASE 2
		上昇値 = (SOURCE:快C+SOURCE:快B+SOURCE:快A+SOURCE:快B+SOURCE:性行動)/5
	;服従 達成、屈従
	CASE 3
		上昇値 = SOURCE:達成/5+SOURCE:屈従
ENDSELECT

;上昇値 += SOURCE:欲情/10

;快楽刻印
上昇値 += (SOURCE:快C+SOURCE:快B+SOURCE:快A+SOURCE:快B+SOURCE:性行動)*MARK:快楽刻印/10
;屈服刻印
上昇値 += (SOURCE:達成+SOURCE:屈従)*MARK:屈服刻印/10

;マゾっ気
上昇値 += (SOURCE:苦痛+SOURCE:恐怖)*ABL:マゾっ気*(TALENT:マゾ+1)/5

;欲情補正
上昇値 += (GETPALAMLV(PALAM:欲情, 10)+1)*上昇値/5

SIF CFLAG:賢者タイム
	上昇値 /= 20

;何もしてないのにイきまくるのを防ぐために時間経過で下げる
上昇値 -= 500

BASE:リビドー += 上昇値

SIF BASE:リビドー < 0
	BASE:リビドー = 0

IF BASE:リビドー >= 10000
	NOWEX:リビドー = BASE:リビドー/10000
	EX:リビドー++
	PRINTL リビドー絶頂
	BASE:リビドー -= NOWEX:リビドー*(10-GETPALAMLV(PALAM:欲情, 10))*5
	SIF BASE:リビドー >= 10000
		BASE:リビドー = 9999
ENDIF
