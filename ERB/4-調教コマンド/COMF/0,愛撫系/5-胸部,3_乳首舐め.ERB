@USERCOM_ABLE_乳首舐め, ARG
#FUNCTION
コマンド実行条件 += "ゲーセンではトイレじゃないと実行できない/"
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	COMRESULT = 0
コマンド実行条件 += "B道具使用中は実行できない/"
SIF Ｂ使用中(TARGET)
	COMRESULT = 0
コマンド実行条件 += "胸部が露出しているか露出させられる構造じゃないと実行できない/"
IF OVER_BUST(TARGET) != ""
	IF (TEQUIP:上半身上着 || (TEQUIP:全身上着 && CFLAG:着衣併用 != 1))
		SELECTCASE CFLAG:上着パイズリ
			CASE 0, 2
				COMRESULT = 0
		ENDSELECT
	ENDIF
	IF TEQUIP:上半身下着
		SELECTCASE CFLAG:下着パイズリ
			CASE 0, 2
				COMRESULT = 0
		ENDSELECT
	ENDIF
ENDIF

RETURNF COMRESULT

@COM_乳首舐め
PRINTL 乳首舐め
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 30
LOSEBASE:気力 += 50

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 20

SOURCE:快B = 200
SOURCE:情愛 = 20
SOURCE:苦痛 = 20
SOURCE:露出 = 50
SOURCE:不潔 = 100
SOURCE:反感 = 50
SOURCE:液体 = 10

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 10

;調教者のTALENT:舌使いをみる
SIF TALENT:PLAYER:舌使い
	TIMES SOURCE:快B , 1.50
	
;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:苦痛 , 3.00

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の胸汚れ消去
STAIN:胸 = 0

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

RETURN 1
