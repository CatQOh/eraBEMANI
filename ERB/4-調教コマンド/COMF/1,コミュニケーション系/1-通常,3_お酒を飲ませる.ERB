;-------------------------------------------------
;お酒を飲ませる
;-------------------------------------------------
@USERCOM_ABLE_お酒を飲ませる, ARG
#FUNCTION
#DIM DYNAMIC LCOUNT
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;拘束中はダメ
コマンド実行条件 += "拘束中は実行できない/"
SIF TEQUIP:アイマスク || TEQUIP:縄 || TEQUIP:ボールギャグ || TEQUIP:触手
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0

;妊娠中は飲ませされない
コマンド実行条件 += "対象が妊娠中は実行できない/"
SIF TALENT:妊娠
	COMRESULT = 0

;機械と無機物は飲めない
コマンド実行条件 += "対象が[無機物]or[機械]だと実行できない/"
SIF TALENT:無機物 || CSTR:種族 == "機械"
	COMRESULT = 0

コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

;お酒持ってないとダメ ただしお正月はお屠蘇があるのでおｋ
コマンド実行条件 += "お酒アイテムが必要/"
IF MONTH == 1 && DAYS == 1
	RETURNF COMRESULT
ELSEIF COMRESULT
	SIF SUMARRAY(ITEM, 250, 300) == 0
		COMRESULT = 0
	;SIF レシピ判定("自家醸造日本酒") == 2 || レシピ判定("自家製ワイン") == 2 || レシピ判定("自家製ウイスキー") == 2 || レシピ判定("自家醸造ビール") == 2
	;	LOCAL = 1
ENDIF

RETURNF COMRESULT

@COM_お酒を飲ませる
#DIM DYNAMIC ALC
#DIM DYNAMIC お酒
#DIMS DYNAMIC 製法
#DIM DYNAMIC 材料, 3
#DIM DYNAMIC LCOUNT

VARSET 材料, 0

PRINTL 何を飲ませますか？

SIF ITEM:スーパードライ || ITEM:一番搾り || ITEM:プレミアムモルツ || ITEM:ヱビス || ITEM:ほろよい || ITEM:ストロングゼロ
	PRINTL [1] 缶飲料類
SIF ITEM:皆伝; || レシピ判定("自家醸造日本酒") == 2
	PRINTL [2] 皆伝(日本酒)
SIF ITEM:アルパカ; || レシピ判定("自家製ワイン") == 2
	PRINTL [3] アルパカ(ワイン)
SIF ITEM:魔王
	PRINTL [4] 魔王(焼酎)
SIF ITEM:倉吉; || レシピ判定("自家製ウイスキー") == 2
	PRINTL [5] 倉吉(ウイスキー)
SIF ITEM:スペリオール
	PRINTL [6] スペリオール(ラム)
SIF ITEM:ビーフィーター
	PRINTL [7] ビーフィーター(ジン)
SIF ITEM:アブソルート
	PRINTL [8] アブソルート(ウォッカ)
SIF ITEM:カルーア
	PRINTL [9] カルーア
SIF MONTH == 1 && DAYS == 1
	PRINTL [10] お屠蘇(Alc.2%)
;SIF ITEM:スピリタス
;	PRINTL [10] スピリタス
PRINTL [100] やっぱりやめる

SIF ISSKIP()
	RETURN
BINPUT
SELECTCASE RESULT
	CASE 1
		PRINTL 何を飲ませますか？
		SIF ITEM:スーパードライ
			PRINTL [0] スーパードライ(Alc.5%)
		SIF ITEM:一番搾り
			PRINTL [1] 一番搾り(Alc.5%)
		SIF ITEM:プレミアムモルツ
			PRINTL [2] プレミアムモルツ(Alc.5%)
		SIF ITEM:ヱビス
			PRINTL [3] ヱビス(Alc.5%)
		SIF ITEM:ほろよい
			PRINTL [4] ほろよい(Alc.3%)
		SIF ITEM:ストロングゼロ
			PRINTL [5] ストロングゼロ(Alc.9%)
		;SIF レシピ判定("自家醸造ビール") == 2
		;	PRINTL [6] 自家醸造ビール(Alc.5%)
		BINPUT
		SELECTCASE RESULT
			CASE 0 TO 3
				お酒 = RESULT+250
				IF ITEM:ジンジャーエール || ITEM:レモンジュース || ITEM:アルパカ
					PRINTFORML %ITEMNAME:お酒%をどのように飲ませますか？
					PRINTL [1] そのまま(Alc.5%)
					SIF ITEM:ジンジャーエール
						PRINTL [2] シャンディガフ(Alc.3%)
					SIF ITEM:レモンジュース
						PRINTL [3] パナシェ(Alc.3%)
					SIF ITEM:アルパカ
						PRINTL [4] ビアスプリッツァー(Alc.8%)
					BINPUT
					SELECTCASE RESULT
						CASE 1
							酒名 = %ITEMNAME:(RESULT+250)%
							製法 = ビール
							ALC = 5
						CASE 2
							製法 = ビール
							酒名 = シャンディガフ
							材料:0 = GETNUM(ITEM, "ジンジャーエール")
							ALC = 3
						CASE 3
							製法 = ビール
							酒名 = パナシェ
							材料:0 = GETNUM(ITEM, "レモンジュース")
							ALC = 3
						CASE 4
							製法 = ビール
							酒名 = ビアスプリッツァー
							材料:0 = GETNUM(ITEM, "アルパカ")
							ALC = 8
					ENDSELECT
				ELSE
					酒名 = %ITEMNAME:(RESULT+250)%
					製法 = ビール
					ALC = 5
				ENDIF
			CASE 4
				お酒 = RESULT+250
				酒名 = ほろよい
				ALC = 3
			CASE 5
				お酒 = RESULT+250
				酒名 = ストロングゼロ
				ALC = 9
			;CASE 6
			;	酒名 = 自家醸造ビール
		ENDSELECT
	CASE 2
		お酒 = GETNUM(ITEM, "皆伝")
		PRINTL 皆伝をどのように飲ませますか？
		PRINTL [1] そのまま(Alc.12%)
		PRINTL [2] 熱燗(Alc.12%)
		SIF ITEM:ライムジュース
			PRINTL [3] サムライロック(Alc.3～10%)
		BINPUT
		SELECTCASE RESULT
			CASE 1
				酒名 = 皆伝
				ALC = 12
			CASE 2
				製法 = 熱燗
				酒名 = 皆伝の熱燗
				ALC = 12
			CASE 3
				製法 = ライム割り
				酒名 = サムライロック
				PRINTL アルコール度数を決めてください(3～10%)
				CALL TWO_DIGIT, 10, "%", 3
				ALC = RESULT
		ENDSELECT
	CASE 3
		お酒 = GETNUM(ITEM, "アルパカ")
		酒名 = アルパカ
		ALC = 12
	CASE 4
		お酒 = GETNUM(ITEM, "魔王")
		PRINTL 魔王をどのように飲ませますか？
		PRINTL [1] 水割り(Alc.5～20%)
		PRINTL [2] お湯割り(Alc.5～20%)
		PRINTL [3] ロック(Alc.22%)
		PRINTL [4] ストレート(Alc.25%)
		SIF ITEM:炭酸水
			PRINTL [5] 焼酎ハイボール(Alc.5～20%)
		SIF ITEM:コーラ
			PRINTL [6] 焼酎コーク(Alc.5～20%)
		SIF ITEM:ジンジャーエール
			PRINTL [7] 焼酎ジンジャー(Alc.5～20%)
		SIF リソース:精液 >= 100
			PRINTL [8] 精液割り(Alc.5～20%)
		SIF リソース:母乳 >= 100
			PRINTL [9] 母乳割り(Alc.5～20%)
		BINPUT
		SELECTCASE RESULT
			CASE 1, 2, 5, 6, 7, 8, 9
				SELECTCASE RESULT
					CASE 1
						製法 = 水割り
						酒名 = 焼酎の水割り
					CASE 2
						製法 = お湯割り
						酒名 = 焼酎のお湯割り
					CASE 5
						製法 = ハイボール
						酒名 = 焼酎ハイボール
					CASE 6
						製法 = コーラ割り
						酒名 = 焼酎コーク
					CASE 7
						製法 = ジンジャー割り
						酒名 = 焼酎ジンジャー
					CASE 8
						製法 = 精液割り
						酒名 = ザーメンサワー
					CASE 9
						製法 = 母乳割り
						酒名 = 母乳サワー
					CASE 10
						製法 = 粘液混ぜ
						酒名 = 焼酎ゼリー
				ENDSELECT
				PRINTL アルコール度数を決めてください(5～20%)
				CALL TWO_DIGIT, 20, "%", 5
				ALC = RESULT
			CASE 3
				酒名 = 焼酎のロック
				ALC = 22
			CASE 4
				酒名 = 焼酎のストレート
				ALC = 25
		ENDSELECT
	CASE 5
		お酒 = GETNUM(ITEM, "倉吉")
		PRINTL 倉吉をどのように飲ませますか？
		PRINTL [1] 水割り(Alc.9～35%)
		PRINTL [2] お湯割り(Alc.9～35%)
		PRINTL [3] ロック(Alc.37%)
		PRINTL [4] ストレート(Alc.40%)
		SIF ITEM:炭酸水
			PRINTL [5] ハイボール(Alc.9～35%)
		SIF ITEM:コーラ
			PRINTL [6] コークハイ(Alc.9～35%)
		SIF ITEM:ジンジャーエール
			PRINTL [7] ジンジャーハイ(Alc.9～35%)
		SIF リソース:精液 >= 100
			PRINTL [8] ザーメンハイボール(Alc.9～35%)
		SIF リソース:母乳 >= 100
			PRINTL [9] 母乳ハイボール(Alc.9～35%)
		SIF リソース:粘液 >= 100
			PRINTL [10] ウイスキージュレ(Alc.9～35%)
		BINPUT
		SELECTCASE RESULT
			CASE 1, 2, 5, 6, 7, 8, 9, 10
				SELECTCASE RESULT
					CASE 1
						製法 = 水割り
						酒名 = ウイスキーの水割り
					CASE 2
						製法 = お湯割り
						酒名 = ウイスキーのお湯割り
					CASE 5
						製法 = ハイボール
						酒名 = ハイボール
					CASE 6
						製法 = コーラ割り
						酒名 = コークハイ
					CASE 7
						製法 = ジンジャー割り
						酒名 = ジンジャーハイ
					CASE 8
						製法 = 精液割り
						酒名 = ザーメンハイボール
					CASE 9
						製法 = 母乳割り
						酒名 = 母乳ハイボール
					CASE 10
						製法 = 粘液混ぜ
						酒名 = ウイスキージュレ
				ENDSELECT
				PRINTL アルコール度数を決めてください(9～35%)
				CALL TWO_DIGIT, 35, "%", 9
				ALC = RESULT
			CASE 3
				酒名 = 倉吉のロック
				ALC = 37
			CASE 4
				酒名 = 倉吉のストレート
				ALC = 40
		ENDSELECT
	CASE 6
		お酒 = GETNUM(ITEM, "スペリオール")
		PRINTL スペリオールをどのように飲ませますか？
		PRINTL [1] ストレート(Alc.40%)
		PRINTL [2] ロック(Alc.37%)
		SIF ITEM:コーラ
			PRINTL [3] キューバリバー(Alc.9～35%)
		SIF ITEM:ライムジュース
			PRINTL [4] ダイキリ(Alc.20～35%)
		SIF ITEM:トニックウォーター
			PRINTL [5] ラムトニック(Alc.9～35%)
		SIF ITEM:レモンジュース && ITEM:炭酸水
			PRINTL [6] ラムフィズ(Alc.9～35%)
		SIF ITEM:ライムジュース && ITEM:炭酸水
			PRINTL [7] モヒート(Alc.9～35%)
		BINPUT
		SELECTCASE RESULT
			CASE 1
				酒名 = スペリオールのストレート
				ALC = 40
			CASE 2
				酒名 = スペリオールのロック
				ALC = 37
			CASE 3 TO 7
				SELECTCASE RESULT
					CASE 3
						製法 = コーラ割り
						酒名 = キューバリバー
					CASE 4
						製法 = ライム割り
						酒名 = ダイキリ
					CASE 5
						製法 = トニック割り
						酒名 = ラムトニック
					CASE 6
						製法 = カクテル
						酒名 = ラムフィズ
						材料:0 = GETNUM(ITEM, "レモンジュース")
						材料:1 = GETNUM(ITEM, "炭酸水")
					CASE 7
						製法 = カクテル
						酒名 = モヒート
						材料:0 = GETNUM(ITEM, "ライムジュース")
						材料:1 = GETNUM(ITEM, "炭酸水")
				ENDSELECT
				IF 酒名 == "ダイキリ"
					PRINTL アルコール度数を決めてください(20～35%)
					CALL TWO_DIGIT, 35, "%", 20
				ELSE
					PRINTL アルコール度数を決めてください(9～35%)
					CALL TWO_DIGIT, 35, "%", 9
				ENDIF
				ALC = RESULT
		ENDSELECT
	CASE 7
		お酒 = GETNUM(ITEM, "ビーフィーター")
		PRINTL ビーフィーターをどのように飲ませますか？
		PRINTL [1] ストレート(Alc.47%)
		PRINTL [2] ロック(Alc.44%)
		SIF ITEM:トニックウォーター
			PRINTL [3] ジントニック(Alc.9～42%)
		SIF ITEM:炭酸水
			PRINTL [4] ジンリッキー(Alc.9～42%)
		SIF ITEM:ライムジュース
			PRINTL [5] ギムレット(Alc.25～42%)
		SIF ITEM:レモンジュース && ITEM:炭酸水
			PRINTL [6] ジンフィズ(Alc.9～42%)
		SIF ITEM:レモンジュース && ITEM:ジンジャーエール
			PRINTL [7] ジンバック(Alc.9～42%)
		BINPUT
		SELECTCASE RESULT
			CASE 1
				酒名 = ビーフィーターのストレート
				ALC = 47
			CASE 2
				酒名 = ビーフィーターのロック
				ALC = 44
			CASE 3 TO 7
				SELECTCASE RESULT
					CASE 3
						製法 = トニック割り
						酒名 = ジントニック
					CASE 4
						製法 = ハイボール
						酒名 = ジンリッキー
					CASE 5
						製法 = ライム割り
						酒名 = ギムレット
					CASE 6
						製法 = カクテル
						酒名 = ジンフィズ
						材料:0 = GETNUM(ITEM, "レモンジュース")
						材料:1 = GETNUM(ITEM, "炭酸水")
					CASE 7
						製法 = カクテル
						酒名 = ジンバック
						材料:0 = GETNUM(ITEM, "レモンジュース")
						材料:1 = GETNUM(ITEM, "ジンジャーエール")
				ENDSELECT
				IF 酒名 == "ギムレット"
					PRINTL アルコール度数を決めてください(25～42%)
					CALL TWO_DIGIT, 42, "%", 25
				ELSE
					PRINTL アルコール度数を決めてください(9～42%)
					CALL TWO_DIGIT, 42, "%", 9
				ENDIF
				ALC = RESULT
		ENDSELECT
	CASE 8
		お酒 = GETNUM(ITEM, "アブソルート")
		PRINTL アブソルートをどのように飲ませますか？
		PRINTL [1] ストレート(Alc.40%)
		PRINTL [2] ロック(Alc.37%)
		SIF ITEM:トニックウォーター
			PRINTL [3] ウォッカトニック(Alc.9～35%)
		SIF ITEM:炭酸水
			PRINTL [4] ウォッカリッキー(Alc.9～35%)
		SIF ITEM:カルーア
			PRINTL [5] ブラックルシアン(Alc.25～37%)
		SIF ITEM:ライムジュース && ITEM:ジンジャーエール
			PRINTL [6] モスコミュール(Alc.9～35%)
		BINPUT
		SELECTCASE RESULT
			CASE 1
				酒名 = アブソルートのストレート
				ALC = 40
			CASE 2
				酒名 = アブソルートのロック
				ALC = 37
			CASE 3 TO 6
				SELECTCASE RESULT
					CASE 3
						製法 = トニック割り
						酒名 = ウォッカトニック
					CASE 4
						製法 = ハイボール
						酒名 = ウォッカリッキー
					CASE 5
						製法 = カクテル
						酒名 = ブラックルシアン
						材料:0 = GETNUM(ITEM, "カルーア")
					CASE 6
						製法 = カクテル
						酒名 = モスコミュール
						材料:0 = GETNUM(ITEM, "ライムジュース")
						材料:1 = GETNUM(ITEM, "ジンジャーエール")
				ENDSELECT
				IF 酒名 == "ブラックルシアン"
					PRINTL アルコール度数を決めてください(25～37%)
					CALL TWO_DIGIT, 37, "%", 25
				ELSE
					PRINTL アルコール度数を決めてください(9～35%)
					CALL TWO_DIGIT, 35, "%", 9
				ENDIF
				ALC = RESULT
		ENDSELECT
	CASE 9
		お酒 = GETNUM(ITEM, "カルーア")
		PRINTL カルーアをどのように飲ませますか？
		PRINTL [1] ストレート(Alc.20%)
		PRINTL [2] ロック(Alc.18%)
		;牛乳は生活必需品だから常にある（暴論）
		PRINTL [3] カルーアミルク(Alc.5～15%)
		SIF ITEM:炭酸水
			PRINTL [4] カルーアソーダ(Alc.5～15%)
		SIF ITEM:アブソルート
			PRINTL [5] ブラックルシアン(Alc.25～37%)
		SIF リソース:母乳 >= 100
			PRINTL [6] カルーア母乳(Alc.5～15%)
		SIF リソース:粘液 >= 100
			PRINTL [7] カルーアジュレ(Alc.5～15%)
		BINPUT
		SELECTCASE RESULT
			CASE 1
				酒名 = カルーアのストレート
				ALC = 40
			CASE 2
				酒名 = カルーアのロック
				ALC = 37
			CASE 3 TO 7
				SELECTCASE RESULT
					CASE 3
						製法 = カクテル
						酒名 = カルーアミルク
					CASE 4
						製法 = ハイボール
						酒名 = カルーアソーダ
					CASE 5
						製法 = カクテル
						酒名 = ブラックルシアン
						材料:0 = GETNUM(ITEM, "アブソルート")
					CASE 6
						製法 = 母乳割り
						酒名 = カルーア母乳
					CASE 7
						製法 = 粘液混ぜ
						酒名 = カルーアジュレ
				ENDSELECT
				IF 酒名 == "ブラックルシアン"
					PRINTL アルコール度数を決めてください(25～37%)
					CALL TWO_DIGIT, 37, "%", 25
				ELSE
					PRINTL アルコール度数を決めてください(5～15%)
					CALL TWO_DIGIT, 15, "%", 5
				ENDIF
				ALC = RESULT
		ENDSELECT
	CASE 10
		酒名 = お屠蘇
		ALC = 2
	CASE 100
		PRINTFORMW お酒を飲ませるのを止めました
		RETURN 0
ENDSELECT

CALL ALC_ORDER, ALC, 製法, お酒

PRINTFORM  = {RESULT}
SELECTCASE RESULT
	CASE IS < 0
		PRINT  < 
	CASE IS > 0
		PRINT  > 
	CASEELSE
		PRINT  = 
ENDSELECT
PRINT 実効値0
WAIT

TFLAG:GETNUM(TFLAG, "お酒") = お酒
TFLAG:アルコール度数 = ALC

;実行できない お酒は特殊の地の文
IF RESULT < 0
	CALL KOJO_MESSAGE_EVENT, "飲酒拒否時"
	RETURN 0
ELSE
	SIF 酒名 != "お屠蘇"
		ITEM:お酒--
	SELECTCASE 製法
		CASE "ハイボール"
			ITEM:炭酸水--
		CASE "コーラ割り"
			ITEM:コーラ--
		CASE "ジンジャー割り"
			ITEM:ジンジャーエール--
		CASE "トニック割り"
			ITEM:トニックウォーター--
		CASE "レモン割り"
			ITEM:レモンジュース--
		CASE "ライム割り"
			ITEM:ライムジュース--
		CASE "精液割り"
			リソース:精液 -= 100
		CASE "母乳割り"
			リソース:母乳 -= 100
		CASE "粘液混ぜ"
			リソース:粘液 -= 100
		CASE "カクテル"
			FOR LCOUNT, 0, VARSIZE("材料")
				SIF 材料:LCOUNT
					ITEM:(材料:LCOUNT)--
			NEXT
	ENDSELECT
ENDIF

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

