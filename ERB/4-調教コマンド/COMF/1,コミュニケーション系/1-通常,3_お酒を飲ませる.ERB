;特殊ソース処理
;-------------------------------------------------
IF TALENT:下戸
	CFLAG:酔 += ALC*2
ELSEIF TALENT:酒豪
	CFLAG:酔 += ALC/2
ELSE
	CFLAG:酔 += ALC
ENDIF

;各種メリットは酔い上限突き抜けてない場合にのみ発動
IF CFLAG:酔 > 100
	CFLAG:酔 = 100
ELSE
	SELECTCASE ITEMNAME:お酒
		;皆伝は音ゲーマーが飲むとボーナス
		CASE "皆伝"
			SIF TALENT:音ゲーマー
				TEQUIP:お酒ボーナス++
		;魔王は悪魔か小悪魔が飲むとボーナス
		CASE "魔王"
			SIF CSTR:種族 == "悪魔" || TALENT:小悪魔
				TEQUIP:お酒ボーナス++
		;アルパカは獣、獣人、ファーリーが飲むとボーナス
		CASE "アルパカ"
			SIF CSTR:種族 == "獣" || CSTR:種族 == "獣人" || TALENT:ファーリー
				TEQUIP:お酒ボーナス++
		;倉吉はひなビタキャラが飲むとボーナス
		CASE "倉吉"
			SELECTCASE CHARANAMEF(TARGET)
				CASE "山形 まり花", "和泉 一舞", "春日 咲子", "霜月 凛", "芽兎 めう", "東雲 夏陽", "東雲 心菜", "星見 日向", "久領堤 纒"
					TEQUIP:お酒ボーナス++
					;実績：ひなビタキャラにピュアモルトウイスキー倉吉を飲ませる
					CALL 実績解除, "地元のお酒めう！"
			ENDSELECT
		;スペリオールは人魚が飲むとボーナス
		CASE "スペリオール"
			SIF CSTR:種族 == "人魚"
				TEQUIP:お酒ボーナス++
		;ジンのボーナスが思いつかない 誰か助けて
		CASE "ジン"
		;アブソルートは特段ボーナスは無いが、ウォッカの特徴として二日酔いしにくい
		CASE "アブソルート"
			IF TALENT:下戸
				TEQUIP:ウォッカ += ALC*2
			ELSEIF TALENT:酒豪
				TEQUIP:ウォッカ += ALC/2
			ELSE
				TEQUIP:ウォッカ += ALC
			ENDIF
		;カルーアは飲みやすいが獣人と獣に飲ませると大ダメージ
		CASE "カルーア"
			IF CSTR:種族 == "獣人"
				LOSEBASE:体力 += 300
				LOSEBASE:気力 += 300
			ELSEIF CSTR:種族 == "獣"
				LOSEBASE:体力 += 500
				LOSEBASE:気力 += 500
			ENDIF
		;お屠蘇 アイテム必要無いので特にボーナスも無い
		CASE "お屠蘇"
	ENDSELECT
	;精液割りは精液中毒LV3以上でボーナス
	SIF 製法 == "精液割り" && ABL:精液中毒 >= 3
		TEQUIP:お酒ボーナス++
	;無理のない範囲で飲ませるとストレス低下
	IF TALENT:酒豪
		SIF CFLAG:酔 <= 80
			CFLAG:ストレス値 -= ALC/5
	ELSEIF TALENT:下戸
		SIF CFLAG:酔 <= 20
			CFLAG:ストレス値 -= ALC/3
	ELSE
		SIF CFLAG:酔 <= 50
			CFLAG:ストレス値 -= ALC/5
	ENDIF
ENDIF

;粘液混ぜを飲ませるとそこそこのスライム浸食、深化が発生、泥酔してると効力が落ちる。酔い上限を超えてても起きる
IF 製法 == "粘液混ぜ"
	IF (TALENT:下戸 && CFLAG:酔 >= 20) || CFLAG:酔 >= 50
		CALL スライム度増加, 0, TARGET, RAND(0, 2), RAND(3, 6)
	ELSE
		CALL スライム度増加, 0, TARGET, RAND(2, 5), RAND(30, 60)
	ENDIF
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

SIF 製法 == "精液割り"
	CALL EXPUP, "精液経験", 2

RETURN 1

