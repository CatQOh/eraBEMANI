	実効値:1 = CFLAG:酔
ENDIF

IF 実効値:1 >= 5 && TALENT:下戸
	PRINTFORM +酒が回っている({実効値:1/5})
	実効値 += 実効値:1/5
ELSEIF 実効値:1 >= 3
	PRINTFORM +酒が回っている({実効値:1/3})
	実効値 += 実効値:1/3
ENDIF

IF CFLAG:二日酔い
	PRINT -二日酔い(5)
	実効値 -= 5
ENDIF

IF CFLAG:陥落
	PRINT +陥落(5)
	実効値 += 5
ENDIF

IF GETPALAMLV(PALAM:恭順, 10)
	PRINTFORM +恭順({GETPALAMLV(PALAM:恭順, 10)})
	実効値 += GETPALAMLV(PALAM:恭順, 10)
ENDIF

IF 製法 == "ビール" && !TALENT:酒豪 && (TALENT:体格 <= 2 || TALENT:下戸)
	PRINT -ビールは苦くて無理(10)
	実効値 -= 10
	SELECTCASE 酒名
		CASE "シャンディガフ", "パナシェ", "ビアスプリッツァー"
			PRINT +ビールの苦さを軽減(5)
			実効値 += 5
	ENDSELECT
ENDIF

IF !TALENT:下戸
	SELECTCASE 製法
		CASE "ハイボール", "ビール", "コーラ割り", "ジンジャー割り", "レモン割り", "ライム割り", "トニック割り", "カクテル"
			IF FLAG:気温 >= 200
				PRINTFORM +高気温&冷飲料({(FLAG:気温-190)/10})
				実効値 += (FLAG:気温-190)/10
			ENDIF
		CASE "お湯割り", "熱燗"
			IF FLAG:気温 <= 100
				PRINTFORM +低気温&温飲料({(110-FLAG:気温)/10})
				実効値 += (110-FLAG:気温)/10
			ENDIF
	ENDSELECT
ENDIF

SELECTCASE 製法
	CASE "精液割り"
		IF ABL:精液中毒 < 3
			PRINTFORM -精液中毒LV{ABL:精液中毒}({(3-ABL:精液中毒)*3})
			実効値 -= (3-ABL:精液中毒)*3
		ELSEIF ABL:精液中毒 > 3
			PRINTFORM +精液中毒LV{ABL:精液中毒}({(ABL:精液中毒-3)*3})
			実効値 += (ABL:精液中毒-3)*3
		ENDIF
