@USERCOM_ABLE_魔法詠唱, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中も不可能（暫定）
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;PLAYERが魔法使いじゃないとできない
コマンド実行条件 += "実行者が[魔法使い]じゃないと実行できない/"
SIF !TALENT:PLAYER:魔法使い
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_魔法詠唱
#DIM DYNAMIC スキル
#DIM DYNAMIC 消費量

CALLFORM DISABLE, "魔法詠唱選択", TARGET
DISABLE = RESULT

スキル = ABL:PLAYER:魔法技能
DRAWLINE
PRINTFORML □魔法一覧 詠唱者:%NAME:PLAYER% 魔法技能LV{スキル}
PRINTFORML 　%NAME:PLAYER%の魔力%BARSTR(BASE:PLAYER:魔力, MAXBASE:PLAYER:魔力, 32)%({BASE:PLAYER:魔力}/{MAXBASE:PLAYER:魔力})
IF TALENT:魔法使い
	SIF 相性値(PLAYER, TARGET) >= 150 && 相性値(TARGET, PLAYER) >= 150 && !GETBIT(DISABLE, 1)
		PRINTFORML 　[ 1] - 魔力吸収 唇を介して魔力を受け取る 相性が良くないと実行不可（150％）
	SIF !GETBIT(DISABLE, 2)
		PRINTFORML 　[ 2] - 魔力譲与 唇を介して魔力を与える 相性が良いほど効率が良い（最高200％）
ENDIF
消費量 = 魔力消費量(3, スキル)/3
;Heatstroke
IF !GETBIT(DISABLE, 3)
	PRINTFORML 　[ 3] - ヒートストローク（魔力消費量 {消費量}）
	PRINTL 　　　　 気温が高いほど実効値上昇
ENDIF
;WHITE OUT
IF !GETBIT(DISABLE, 4)
	PRINTFORML 　[ 4] - ホワイトアウト（魔力消費量 {消費量}）
	PRINTL 　　　　 気温が低いほど実効値上昇
ENDIF
IF スキル >= 4
	消費量 = 魔力消費量(4, スキル)/3
	;リカーシブファンクション
	IF !GETBIT(DISABLE, 5)
		PRINTFORML 　[ 5] - リカーシブファンクション（魔力消費量 {消費量}）
		PRINTL 　　　　 コマンド連続実行によるデメリットが発生しなくなる
	ENDIF
	;魚氷に上り 耀よひて
	IF !GETBIT(DISABLE, 6)
		PRINTFORML 　[ 6] - ニコニコサンフラワーキッス（魔力消費量 {消費量}）
		PRINTL 　　　　 キス系コマンドに恐怖が伴うようになる
	ENDIF
ENDIF
IF スキル >= 5
	消費量 = 魔力消費量(5, スキル)/3
	;METALLIC MIND
	IF !GETBIT(DISABLE, 7)
		PRINTFORML 　[ 7] - メタリックマインド（魔力消費量 {消費量}）
		PRINTL 　　　　 実効値が低下する代わりにマイナスソースを軽減する
	ENDIF
	;Go Berzerk
	IF !GETBIT(DISABLE, 8)
		PRINTFORML 　[ 8] - ゴー・バーサーク（魔力消費量 {消費量}）
		PRINTL 　　　　 欲情、恭順が上がりやすくなり、気力0でのソース低下が発生しなくなるが、体力消費量が増える
	ENDIF
ENDIF
IF スキル >= 6
	消費量 = 魔力消費量(6, スキル)/3
	;Honey Party
	IF !GETBIT(DISABLE, 9)
		PRINTFORML 　[ 9] - ハニーパーティ（魔力消費量 {消費量}）
		PRINTL 　　　　 浴槽が媚薬ローション風呂になる
	ENDIF
	;LUV CAN SAVE YOU
	IF !GETBIT(DISABLE, 10)
		IF TFLAG:ラブキャンセーブユー == 2
			PRINTL 　[10] - ラブキャンセーブユー解除
			PRINTL 　　　　 当魔法の効果を解除する
		ELSEIF TFLAG:ラブキャンセーブユー == 0
			PRINTFORML 　[10] - ラブキャンセーブユー（魔力消費量 {消費量}）
			PRINTL 　　　　 対象が絶頂に達しなくなる
		ENDIF
	ENDIF
ENDIF
消費量 = 魔力消費量(7, スキル)/3
IF スキル >= 7
	;Chain of Pain
	IF !GETBIT(DISABLE, 11)
		PRINTFORML 　[11] - チェイン・オブ・ペイン（魔力消費量 {消費量}）
		PRINTL 　　　　 体力減少が苦痛ソースに上乗せされる
	ENDIF
ENDIF
消費量 = 魔力消費量(8, スキル)/3
IF スキル >= 8
	;DEADLOCK
	IF !GETBIT(DISABLE, 12)
		PRINTFORML 　[12] - デッドロック（魔力消費量 {消費量}）
		PRINTL 　　　　 3ターン、実行判定を無視する
	ENDIF
ENDIF
消費量 = 5000
IF スキル >= 10
	;終極+焔獄OVERKILL
	IF !GETBIT(DISABLE, 13)
		PRINTFORML 　[13] - 終極オーバーキル（魔力消費量 {消費量}）
		PRINTL 　　　　 常軌を逸した恐怖、苦痛、不快を与え、即時調教を終了する 対象は30ターン使用不可になる
	ENDIF
ENDIF
DRAWLINE
PRINTPLAIN 　魔法詠唱　
PRINTL [ 0] - 戻る

SIF ISSKIP()
	RETURN 0
BINPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		詠唱魔法 = 魔力吸収
		CALL KOJO_MESSAGE_COM
		;対象の魔力半減
		PRINTFORML %CALLNAME:TARGET%の魔力-{BASE:魔力-BASE:魔力/2}
		消費量 = BASE:魔力-BASE:魔力/2
		BASE:魔力 /= 2
		;PLAYERの魔力は相性に応じて貰った分だけ増加 200%でそのまま加算
		消費量 = 消費量*(LIMIT(相性値(TARGET, PLAYER)-100, 0, 100))/100
		PRINTFORML %CALLNAME:PLAYER%の魔力+{消費量}
		BASE:PLAYER:魔力 += 消費量
		CALL SETBASE, PLAYER
		LOSEBASE:体力 += 5
		LOSEBASE:気力 += 50
	CASE 2
		詠唱魔法 = 魔力譲与
		CALL KOJO_MESSAGE_COM
		;PLAYERの魔力半減
		PRINTFORML %CALLNAME:PLAYER%の魔力-{BASE:PLAYER:魔力-BASE:PLAYER:魔力/2}
		消費量 = BASE:PLAYER:魔力-BASE:PLAYER:魔力/2
		BASE:PLAYER:魔力 /= 2
		;魔力譲与は苦痛が伴う 相性によって効率が上がり、苦痛も軽減される
		;効率=相性-100%
		消費量 = 消費量*(LIMIT(相性値(TARGET, PLAYER)-100, 0, 100))/100
		PRINTFORML %CALLNAME:TARGET%の魔力+{消費量}
		BASE:魔力 += 消費量
		CALL SETBASE, PLAYER
		;相性が100%以下だと最大体力の半分のダメージを受ける
		LOSEBASE:体力 += MAXBASE:体力/2/LIMIT(相性値(TARGET, PLAYER)-100, 1, 100)
	CASE 3
		消費量 = 魔力消費量(3, スキル)/3
		詠唱魔法 = ヒートストローク
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 3, PLAYER
		TFLAG:ヒートストローク = 1
	CASE 4
		消費量 = 魔力消費量(3, スキル)/3
		詠唱魔法 = ホワイトアウト
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 3, PLAYER
		TFLAG:ホワイトアウト = 1
	CASE 5
		消費量 = 魔力消費量(4, スキル)/3
		詠唱魔法 = リカーシブファンクション
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 4, PLAYER
		TFLAG:リカーシブファンクション = 1
	CASE 6
		消費量 = 魔力消費量(4, スキル)/3
		詠唱魔法 = ニコニコサンフラワーキッス
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 4, PLAYER
		TFLAG:ニコニコサンフラワーキッス = 1
	CASE 7
		消費量 = 魔力消費量(5, スキル)/3
		詠唱魔法 = メタリックマインド
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 5, PLAYER
		TFLAG:メタリックマインド = 1
	CASE 8
		消費量 = 魔力消費量(5, スキル)/3
		詠唱魔法 = ゴー・バーサーク
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 5, PLAYER
		TFLAG:ゴーバーサーク = 1
	CASE 9
		消費量 = 魔力消費量(6, スキル)/3
		詠唱魔法 = ハニーパーティ
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 6, PLAYER
		TFLAG:ハニーパーティ = 1
	CASE 10
		SIF !TFLAG:ラブキャンセーブユー
			消費量 = 魔力消費量(6, スキル)/3
		詠唱魔法 = ラブキャンセーブユー
		CALL KOJO_MESSAGE_COM
		IF !TFLAG:ラブキャンセーブユー
			PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
			BASE:PLAYER:魔力 -= 消費量
			CALL EXPUP, "詠唱経験", 6, PLAYER
			TFLAG:ラブキャンセーブユー = 2
		ELSE
			TFLAG:ラブキャンセーブユー = 1
		ENDIF
	CASE 11
		消費量 = 魔力消費量(7, スキル)/3
		詠唱魔法 = チェイン・オブ・ペイン
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 7, PLAYER
		TFLAG:チェインオブペイン = 1
	CASE 12
		消費量 = 魔力消費量(8, スキル)/3
		詠唱魔法 = デッドロック
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 8, PLAYER
		;このターンで-1されるので4
		TFLAG:実行判定無視 = 4
	CASE 13
		消費量 = 5000
		詠唱魔法 = 終極オーバーキル
		CALL KOJO_MESSAGE_COM
		PRINTFORML %CALLNAME:PLAYER%の魔力-{消費量}
		BASE:PLAYER:魔力 -= 消費量
		CALL EXPUP, "詠唱経験", 10, PLAYER
		LOSEBASE:体力 = BASE:体力
		LOSEBASE:気力 = BASE:気力
		UP:恐怖 = RAND(200, 300)*RAND(2000, 3000)
		UP:苦痛 = RAND(200, 300)*RAND(2000, 3000)
		UP:不快 = RAND(200, 300)*RAND(2000, 3000)
		CFLAG:使用不可 = 31
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

RETURN 1
