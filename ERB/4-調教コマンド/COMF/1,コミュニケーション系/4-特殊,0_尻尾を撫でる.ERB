@USERCOM_ABLE_尻尾を撫でる
#FUNCTION
;尻尾無いとダメ
コマンド実行条件 += "対象に[尻尾]が必要/"
SIF !TALENT:尻尾
	COMRESULT = 0

RETURNF COMRESULT

@COM_尻尾を撫でる
PRINTL 尻尾を撫でる
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 15

SIF 陥落(TARGET)
	SOURCE:情愛 = 200
SOURCE:恭順 = 50
SOURCE:屈従 = 30
SOURCE:恐怖 = 10
SOURCE:不潔 = 30
SOURCE:露出 = 10

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

SIF TALENT:親愛
	CALL EXPUP, "愛情経験", 1

RETURN 1
