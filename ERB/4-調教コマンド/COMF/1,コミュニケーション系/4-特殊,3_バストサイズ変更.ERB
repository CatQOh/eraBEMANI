@USERCOM_ABLE_バストサイズ変更, ARG
#FUNCTION
;溶ける快のみ行える
コマンド実行条件 += "実行者か対象に[溶ける快]が必要/"
SIF !TALENT:溶ける快 && !TALENT:PLAYER:溶ける快
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_バストサイズ変更

PRINTL □誰が行いますか？
SIF TALENT:溶ける快
	PRINTFORML 　[1] %CALLNAME:TARGET%(%バストサイズ(TALENT:バストサイズ)%)
SIF TALENT:PLAYER:溶ける快
	PRINTFORML 　[2] %CALLNAME:PLAYER%(%バストサイズ(TALENT:PLAYER:バストサイズ)%)
PRINTL 　[0] キャンセル


SIF ISSKIP()
	RETURN
BINPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		IF TALENT:溶ける快
			PRINTL どの程度の大きさにしますか？
			PRINTL [1] - 絶壁
			PRINTL [2] - 貧乳
			PRINTL [3] - 並乳
			PRINTL [4] - 巨乳
			PRINTL [5] - 豊乳
			PRINTL [6] - 爆乳
			IF MOD:バストサイズ限界突破
				PRINTL [7] - 爆乳+1
				PRINTL [8] - 爆乳+2
				PRINTL [9] - 爆乳+3
			ENDIF
			PRINTL [0] - 戻る
			BINPUT
			SELECTCASE RESULT
				CASE 0
					RETURN 0
				CASE 1 TO 9
					TALENT:バストサイズ = RESULT
					RETURN 1
			ENDSELECT
		ENDIF
	CASE 2
		IF TALENT:PLAYER:溶ける快
			PRINTL どの程度の大きさにしますか？
			PRINTL [1] - 絶壁
			PRINTL [2] - 貧乳
			PRINTL [3] - 並乳
			PRINTL [4] - 巨乳
			PRINTL [5] - 豊乳
			PRINTL [6] - 爆乳
			IF MOD:バストサイズ限界突破
				PRINTL [7] - 爆乳+1
				PRINTL [8] - 爆乳+2
				PRINTL [9] - 爆乳+3
			ENDIF
			PRINTL [0] - 戻る
			BINPUT
			SELECTCASE RESULT
				CASE 0
					RETURN 0
				CASE 1 TO 9
					TALENT:PLAYER:バストサイズ = RESULT
					RETURN 1
			ENDSELECT
		ENDIF
ENDSELECT
