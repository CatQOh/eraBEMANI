;-------------------------------------------------
;貞操帯
;-------------------------------------------------
@USERCOM_ABLE_貞操帯, ARG
#FUNCTION
#DIM DYNAMIC 条件確定

;ゲーセンに居る場合はトイレじゃないとできない
コマンド実行条件 += "ゲーセンではトイレじゃないと実行できない/"
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	COMRESULT = 0
;上級売春中はダメ
;だけど上級売春でも使えるようにしたい
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;解除はいつでも可能
SIF CFLAG:貞操帯 && COMRESULT
	条件確定 = 1

;使用中はダメ
コマンド実行条件 += "対象の男性器に道具使用中は実行できない/"
SIF Ｐ使用中(TARGET)
    COMRESULT = 0
;アイテムを持っていないとダメ
コマンド実行条件 += "アイテム[貞操帯]が必要/"
SIF !ITEM:貞操帯
	COMRESULT = 0
;ペニス無いとダメ
コマンド実行条件 += "対象に男性器が無いと実行できない/"
SIF !PENIS(TARGET)
	COMRESULT = 0
;アニマルはダメ
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0

IF 条件確定
	COMRESULT = 1
	RETURNF 1
ENDIF
RETURNF COMRESULT

@COM_貞操帯
PRINTL 貞操帯
CALL KOJO_MESSAGE_COM

;着脱の処理
IF CFLAG:貞操帯
    CFLAG:貞操帯 = 0
ELSE
    CFLAG:貞操帯 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 30

SOURCE:露出 = 100
SOURCE:屈従 = 500
SOURCE:逸脱 = 300
SOURCE:苦痛 = 100
SOURCE:反感 = 3000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;ABL:メス度によって反感増減
SELECTCASE ABL:メス度
    CASE 0
        TIMES SOURCE:反感 , 3.00
    CASE 1
        TIMES SOURCE:反感 , 2.60
    CASE 2
        TIMES SOURCE:反感 , 2.20
    CASE 3
        TIMES SOURCE:反感 , 1.80
    CASE 4
        TIMES SOURCE:反感 , 1.40
    CASE 5
        TIMES SOURCE:反感 , 1.00
    CASE 6
        TIMES SOURCE:反感 , 0.80
    CASE 7
        TIMES SOURCE:反感 , 0.60
    CASE 8
        TIMES SOURCE:反感 , 0.40
    CASE 9
        TIMES SOURCE:反感 , 0.20
    CASE IS >= 10
        SOURCE:反感 = 0
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 3, 1

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_貞操帯
#DIM DYNAMIC 増加量

PRINTL ＜貞操帯装着中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 2
LOSEBASE:気力 += 20

SOURCE:屈従 += 200
SOURCE:露出 += 50
SOURCE:逸脱 += 50
SOURCE:苦痛 += 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;ABL:メス度によって反感増減
増加量 = 3000
SELECTCASE ABL:メス度
    CASE 0
        TIMES 増加量 , 3.00
    CASE 1
        TIMES 増加量 , 2.60
    CASE 2
        TIMES 増加量 , 2.20
    CASE 3
        TIMES 増加量 , 1.80
    CASE 4
        TIMES 増加量 , 1.40
    CASE 5
        TIMES 増加量 , 1.00
    CASE 6
        TIMES 増加量 , 0.80
    CASE 7
        TIMES 増加量 , 0.60
    CASE 8
        TIMES 増加量 , 0.40
    CASE 9
        TIMES 増加量 , 0.20
    CASE IS >= 10
        増加量 = 0
ENDSELECT

SOURCE:反感 += 増加量

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;貞操帯装着日数10日ごとに毎ターンの射精管理経験が1づつアップ
CALL EXPUP, "射精管理経験", 1+(CFLAG:貞操帯/10)

RETURN 1
