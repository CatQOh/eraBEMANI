;-------------------------------------------------
;乳首ローター
;-------------------------------------------------
@USERCOM_ABLE_乳首ローター
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
コマンド実行条件 += "ゲーセンではトイレじゃないと実行できない/"
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	COMRESULT = 0
;上級売春中はアイテム無いとダメ
コマンド実行条件 += "アイテム[ローター]が必要/"
IF 上級売春中
	SIF !BRITEM:ローター
		COMRESULT = 0
ELSE
	;アイテムを持っていないとダメ
	SIF ITEM:ローター <= 0
		COMRESULT = 0
ENDIF
;胸使用中は不可
コマンド実行条件 += "B道具使用中は実行できない/"
SIF Ｂ使用中(TARGET)
	COMRESULT = 0

;お風呂場中は防水じゃないとダメ
コマンド実行条件 += "ローターに防水加工が必要/"
SIF TEQUIP:お風呂場 && アイテム改造:ローター != "防水ローター"
	COMRESULT = 0

RETURNF COMRESULT

@COM_乳首ローター
PRINTL 乳首ローター
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 15
LOSEBASE:気力 += 40

DOWNBASE:MASTER:体力 += 30
DOWNBASE:MASTER:気力 += 20

SOURCE:快B = 300
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30

;------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30

;[衝動的]持ちは3分の1でアイテム破壊する（調教終了後に修復）
IF ((TALENT:衝動的 && !特質("しつけ")) || (TALENT:PLAYER:衝動的 && !特質("しつけ", PLAYER))) && RAND:3 == 0
	TFLAG:アイテム破壊 = 1
	ITEM:ローター = -1
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

RETURN 1
