;-------------------------------------------------
;ローション注入
;-------------------------------------------------
@USERCOM_ABLE_ローション注入, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
コマンド実行条件 += "ゲーセンではトイレじゃないと実行できない/"
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	COMRESULT = 0
;男じゃないとダメ
コマンド実行条件 += "対象が男性じゃないと実行できない/"
SIF TALENT:性別 == 2
	COMRESULT = 0
;上級売春中はアイテム無いとダメ
コマンド実行条件 += "アイテム[ローション]が必要/"
IF 上級売春中
	SIF !BRITEM:ローション
		COMRESULT = 0
ELSE
	;アイテムを持っていないとダメ
	SIF !ITEM:ローション
		COMRESULT = 0
ENDIF
;下半身が開いてないとダメ
コマンド実行条件 += "性器が露出していないと実行できない/"
SIF !性器露出(TARGET)
	COMRESULT = 0
;シャワー中はダメ
コマンド実行条件 += "シャワー中は実行できない/"
SIF TEQUIP:シャワー
	COMRESULT = 0
;アナルが使用中だとダメ
コマンド実行条件 += "対象がA道具使用中は実行できない/"
SIF Ａ使用中(TARGET)
	COMRESULT = 0

RETURNF COMRESULT

@COM_ローション注入
PRINTL ローション注入
CALL KOJO_MESSAGE_COM

SIF !上級売春中
	ITEM:ローション--

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 10

DOWNBASE:MASTER:体力 += 10
DOWNBASE:MASTER:気力 += 10

;一応強化値が乗る 天井があるのでそんなに効果は実感できない
IF ローション強化値
	UP:潤滑 += ローション強化値*1000
	SOURCE:液体 = ローション強化値*500
ELSE
	UP:潤滑 += 10000
	SOURCE:液体 = 5000
ENDIF
SOURCE:露出 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

RETURN 1
