	対象 = TARGET

;屍姦中は無効
SIF CFLAG:死亡
	RETURN

IF 催淫主 == -1
	SELECTCASE 対象
		CASE TARGET
			催淫主 = PLAYER
		CASE PLAYER, MASTER, ASSI
			催淫主 = TARGET
	ENDSELECT
ENDIF

