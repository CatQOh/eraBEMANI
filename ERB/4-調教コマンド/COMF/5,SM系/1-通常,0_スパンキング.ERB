;-------------------------------------------------
;スパンキング
;-------------------------------------------------
@USERCOM_ABLE_スパンキング, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がSMで客がマゾじゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がSMで客に[マゾ]が必要/"
SIF 上級売春中 && (BR:方針 != 3 || !TALENT:マゾ)
	COMRESULT = 0
;従順3未満のASSIの場合スパンキングはできない（サドならＯＫ）
コマンド実行条件 += "実行者が助手の場合、助手に[サド]or従順LV3以上必要/"
IF PLAYER == ASSI
	SIF ABL:ASSI:従順 < 3 && !TALENT:ASSI:サド
		COMRESULT = 0
ENDIF

;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0

コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0

RETURNF COMRESULT

@COM_スパンキング
PRINTL スパンキング
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 60
LOSEBASE:気力 += 20

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 40

SOURCE:苦痛 = 450
SOURCE:恐怖 = 400
SOURCE:逸脱 = 50
SOURCE:反感 = 300
SOURCE:露出 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 3

;実績:午前中から既にやる気の無いマモニスおじさんをひっぱたく
SIF CHARANAMEF(TARGET) == "マモニス" && ターン == "昼"
	CALL 実績解除, "「あ、私午後から畑行きますんで」"

RETURN 1
