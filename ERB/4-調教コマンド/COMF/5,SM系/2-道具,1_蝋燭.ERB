;-------------------------------------------------
;蝋燭
;-------------------------------------------------
@USERCOM_ABLE_蝋燭
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;アイテムを持っていないとダメ
コマンド実行条件 += "アイテム[低温蝋燭]が必要/"
SIF !ITEM:低温蝋燭
	COMRESULT = 0
;従順4未満のASSIの場合蝋燭はできない（サドならＯＫ）
コマンド実行条件 += "実行者が助手の場合、助手に[サド]or従順LV4以上必要/"
IF PLAYER != MASTER
	SIF ABL:PLAYER:従順 < 4 && !TALENT:PLAYER:サド
		COMRESULT = 0
ENDIF
;全裸でないとダメ（足元、特殊は除く）
コマンド実行条件 += "対象が服を着てると実行できない/"
SIF OVER_BUST(TARGET) != "" || OVER_GENITAL(TARGET) != ""
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;お風呂場プレイ中はダメ
コマンド実行条件 += "お風呂場では実行できない/"
SIF TEQUIP:お風呂場
	COMRESULT = 0
;新妻プレイ中はダメ
コマンド実行条件 += "エプロン使用中は実行できない/"
SIF TEQUIP:エプロン
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0


RETURNF COMRESULT

@COM_蝋燭
PRINTL 蝋燭
CALL KOJO_MESSAGE_COM

ITEM:低温蝋燭--

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 80
LOSEBASE:気力 += 30

SOURCE:苦痛 = 1000
SOURCE:恐怖 = 1500
SOURCE:逸脱 = 150
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 4

RETURN 1
