;-------------------------------------------------
;飲尿する
;-------------------------------------------------
@USERCOM_ABLE_飲尿する, ARG
#FUNCTION
コマンド実行条件 += "小スカMODが必要/"
SIF !MOD:SCAT2
	COMRESULT = 0
;ゲーセンに居る場合はトイレじゃないとできない
コマンド実行条件 += "ゲーセンではトイレじゃないと実行できない/"
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;Ｐ使用中
コマンド実行条件 += "対象の男性器に道具使用中は実行できない/"
SIF Ｐ使用中(TARGET) || 避妊具(TARGET)
	COMRESULT = 0
;尿道使用中は無理
コマンド実行条件 += "尿道にアイテム使用中は実行できない/"
SIF Ｕ使用中(TARGET)
	COMRESULT = 0
;利尿剤使用中かおもらし癖ありでないとダメ
;コマンド実行条件 += "[利尿剤]効果発動中か[おもらし癖]を持ってないと実行できない/"
;SIF !TEQUIP:利尿剤 && !TALENT:おもらし癖
;	COMRESULT = 0
コマンド実行条件 += "尿意ゲージ5000以上必要/"
SIF BASE:尿意 < 5000
	COMRESULT = 0
;従順3以上でないとダメ（お風呂場ならＯＫ）
コマンド実行条件 += "対象の従順LV5以上必要/"
コマンド実行条件 += "　[恥薄い]ならLV3以上/"
SIF (ABL:従順 < 5 && !TALENT:恥薄い) || ABL:従順 < 3
	COMRESULT = 0
;連続実行はできない
;コマンド実行条件 += "連続実行は不可/"
;SIF PREVCOMS == "放尿"
;	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_飲尿する
PRINTL 飲尿する
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 30
LOSEBASE:気力 += 250

SOURCE:恐怖 = 200
SOURCE:露出 = 1200
SOURCE:屈従 = 500
SOURCE:逸脱 = 1000
SOURCE:反感 = 1000
SOURCE:不潔 = 800

IF TALENT:アニマル
	SOURCE:恐怖 = 0
	SOURCE:露出 = 0
	SOURCE:不潔 = 0
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;放尿コマンド時は射精チェックを行わない
;-------------------------------------------------
;CALL SAMEN_CHECK_T, 0

;CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;ペニスの場合は咥えるのでキレイになる
IF PENIS(TARGET)
	STAIN:ペニス = 0
ELSEIF VAGINA(TARGET)
	SETBIT STAIN:ヴァギナ, 7
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;放尿経験
CALL EXPUP_BASE, 1, 3

CALL EXPUP, "放尿経験", 2
TEQUIP:利尿剤 -= 2
SIF TEQUIP:利尿剤 <= 0
	TEQUIP:利尿剤 = 0

CFLAG:口内放尿経験++

CALL 獣人催淫, 2, PLAYER

RETURN 1
