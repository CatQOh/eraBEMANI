;-------------------------------------------------
;首絞め
;-------------------------------------------------
@USERCOM_ABLE_首を絞める, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がSMで客がマゾじゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がSMで客に[マゾ]が必要/"
SIF 上級売春中 && (BR:方針 != 3 || !TALENT:マゾ)
	COMRESULT = 0
;サドじゃないとできない
コマンド実行条件 += "実行者に[サド]が必要/"
SIF !TALENT:PLAYER:サド
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_首を絞める
PRINTL 首を絞める
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 400

DOWNBASE:MASTER:体力 += 70
DOWNBASE:MASTER:気力 += 50

SIF CFLAG:陥落
	SOURCE:情愛 += 300
SIF TALENT:倒錯的
	SOURCE:情愛 += 100
SIF TALENT:マゾ
	SOURCE:情愛 += 100
SIF TALENT:妄信
	SOURCE:情愛 += 100

SOURCE:情愛 += CFLAG:依存度/10

SOURCE:達成 = 30
SOURCE:苦痛 = 1200
SOURCE:恐怖 = 2200
SOURCE:欲情 = 400
SOURCE:屈従 = 800
SOURCE:逸脱 = 550
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 4

RETURN 1
