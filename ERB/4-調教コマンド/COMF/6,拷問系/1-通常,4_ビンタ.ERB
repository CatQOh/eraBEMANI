@USERCOM_ABLE_ビンタ
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がSMで客がマゾじゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がSMで客に[マゾ]が必要/"
SIF 上級売春中 && (BR:方針 != 3 || !TALENT:マゾ)
	COMRESULT = 0
;サドじゃないとできない
コマンド実行条件 += "実行者に[サド]が必要/"
SIF !TALENT:PLAYER:サド
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0

RETURNF COMRESULT

@COM_ビンタ
PRINTL ビンタ
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 60
LOSEBASE:気力 += 30

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 30

SOURCE:苦痛 = 600
SOURCE:恐怖 = 700
SOURCE:中毒 = 50
SOURCE:欲情 = 50
SOURCE:屈従 = 200
SOURCE:鬱屈 = 200
SOURCE:逸脱 = 150
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 3

RETURN 1
