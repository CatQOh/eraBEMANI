@USERCOM_ABLE_臍フィスト
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
;上級売春中は方針が狂気じゃないとダメ
コマンド実行条件 += "上級売春中は経営方針が狂気じゃないと実行できない/"
SIF 上級売春中 && BR:方針 != 4
	COMRESULT = 0
;奴隷が淫乱系陥落か服従系陥落じゃないとダメ
コマンド実行条件 += "上級売春中以外は対象に[淫乱][淫魔][服従][隷属]が必要/"
SIF !上級売春中 && !GROUPMATCH(FALLTYPE(TARGET), 2, 3)
	COMRESULT = 0
;一定のＶ経験が必要 PLAYERが小柄なら手も小さいので緩和
コマンド実行条件 += "実行者が小柄以下の場合、対象の臍拡張経験200以上必要 実行者が普通体型以上の場合、対象の臍拡張経験300以上必要/"
IF TALENT:PLAYER:体格 <= 2
	SIF EXP:臍拡張経験 < 200
		COMRESULT = 0
ELSE
	SIF EXP:臍拡張経験 < 300
		COMRESULT = 0
ENDIF
;ASSIの場合、従順4以上かサドじゃないとできない。
コマンド実行条件 += "実行者が助手の場合、助手に[サド]or従順LV4以上必要/"
IF PLAYER != MASTER
	SIF ABL:PLAYER:従順 < 4 && !TALENT:PLAYER:サド
	COMRESULT = 0
ENDIF
;小柄体型なら従順が4以上かつマゾっ気が4以上じゃないと実行できない
コマンド実行条件 += "対象が小柄以下の場合、対象に従順LV4以上とマゾっ気LV4以上が必要/"
IF TALENT:体格 <= 2
	SIF ABL:従順 < 4 || ABL:マゾっ気 < 4
		COMRESULT = 0
ENDIF
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
コマンド実行条件 += "対象が[小人体型]の場合、主人に[禁断の知識]が必要/"
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	COMRESULT = 0

;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;シャワー中はダメ
コマンド実行条件 += "シャワー中は実行できない/"
SIF TEQUIP:シャワー
	COMRESULT = 0
;新妻プレイ中はダメ
コマンド実行条件 += "エプロン使用中は実行できない/"
SIF TEQUIP:エプロン
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0

RETURNF COMRESULT

@COM_臍フィスト
#DIM DYNAMIC 増加量

PRINTL 臍フィスト
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 250
LOSEBASE:気力 += 100

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 30

SOURCE:苦痛 = 1200
SOURCE:恐怖 = 700
SOURCE:露出 = 300
SOURCE:屈従 = 1000
SOURCE:逸脱 = 1500
SOURCE:反感 = 1500
SOURCE:不潔 = 500

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 5

CALL EXPUP, "臍拡張経験", 3

RETURN 1
