@実行判定_助手を犯させる
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 実効値, 2
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

実効値 = RESULT

;ABL:欲望
IF ABL:欲望
	実効値 += ABL:欲望
	PRINTFORM +欲望LV{ABL:欲望}({ABL:欲望})
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	実効値 += ABL:奉仕精神*4
	PRINTFORM +奉仕精神LV{ABL:奉仕精神}({ABL:奉仕精神*4})
ENDIF
;快楽刻印
IF MARK:快楽刻印
	実効値 += MARK:快楽刻印*2
	PRINTFORM +快楽刻印LV{MARK:快楽刻印}({MARK:快楽刻印*2})
ENDIF

CALL COM_ORDER_欲情, 0
実効値 += RESULT

FOR LCOUNT, 0, VARSIZE("TALENT")
	実効値:1 = 0
	SIF !TALENT:LCOUNT
		CONTINUE
	SELECTCASE TALENTNAME:LCOUNT
		CASE "淫魔"
			実効値:1 = 10
		CASE "淫乱"
			実効値:1 = 5
		CASE "恥じらい"
			実効値:1 = -5
		CASE "献身的"
			実効値:1 = 6
		CASE "快感の否定"
			SIF FALLTYPE(TARGET) != 2
				実効値:1 = -5
		CASE "快感に素直"
			実効値:1 = 3
		CASE "貞操観念"
			実効値:1 = -12
	ENDSELECT
	IF 実効値:1
		PRINTFORM \@SIGN(実効値:1) == 1 ? + # - \@%TALENTNAME:LCOUNT%({ABS(実効値:1)})
		実効値 += 実効値:1
	ENDIF
NEXT

;助手との相性
SELECTCASE 相性値(TARGET, ASSI)
	CASE IS < 100
		実効値 -= (100-相性値(TARGET, ASSI))/10+1
		PRINTFORM -相性悪い({(100-相性値(TARGET, ASSI))/10+1})
	CASE IS > 100
		実効値 += (相性値(TARGET, ASSI)-100)/10+1
		PRINTFORM +相性良い({(相性値(TARGET, ASSI)-100)/10+1})
ENDSELECT

;助手が処女
IF TALENT:ASSI:処女
	実効値 -= 15
	PRINTFORM -助手が処女(15)
ENDIF

;40以上で実行
CALL 実効値判定, 実効値, 40

RETURN RESULT

