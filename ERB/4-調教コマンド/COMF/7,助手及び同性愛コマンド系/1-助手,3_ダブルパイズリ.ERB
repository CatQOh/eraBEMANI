	COMRESULT = 0
;助手が奉仕精神LV3以上、技巧LV4以上じゃないとダメ
コマンド実行条件 += "助手の奉仕精神LV3以上と技巧LV4以上が必要/"
SIF PLAYER > 0 && (ABL:PLAYER:技巧 < 4 || ABL:PLAYER:奉仕精神 < 3)
	COMRESULT = 0
;縄使用中は不可
コマンド実行条件 += "縄で縛ってるときは実行できない/"
SIF TEQUIP:縄
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
コマンド実行条件 += "助手が[アニマル]だと実行できない/"
SIF PLAYER > 0 && TALENT:PLAYER:アニマル
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

