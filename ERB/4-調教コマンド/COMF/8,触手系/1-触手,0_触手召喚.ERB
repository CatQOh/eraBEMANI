;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_触手召喚
#DIM DYNAMIC 増加量
#DIM DYNAMIC 射精強度

PRINTL ＜触手召喚中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 50

SOURCE:恐怖 += 1000
SOURCE:逸脱 += 1000
SOURCE:反感 += 1000

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
SELECTCASE SELECTCOM
	CASE GETNUM(TRAINNAME, "触手召喚") TO GETNUM(TRAINNAME, "触手乳管挿入")+1
		SIF MAXBASE:MASTER:触手射精 != 0
			増加量 = 1000
	CASEELSE
		SIF MAXBASE:MASTER:触手射精 != 0
			増加量 = 200
ENDSELECT

;ABL:技巧をみる
増加量 += (増加量/10)*ABL:技巧

;ABL:従順をみる
増加量 += (増加量/10)*ABL:従順

;PALAM:欲情をみる
増加量 += GETPALAMLV(PALAM:欲情, 5)*(増加量/10)

;触手挿入
SIF TEQUIP:バイブ
	TIMES 増加量 , 1.50
;アナル触手
SIF TEQUIP:アナルバイブ
	TIMES 増加量 , 1.50
;触手クリ責め
SIF TEQUIP:クリキャップ
	TIMES 増加量 , 1.20
;触手乳首責め
SIF TEQUIP:ニプルキャップ
	TIMES 増加量 , 1.20
;触手搾乳
SIF TEQUIP:搾乳器
	TIMES 増加量 , 1.30
;触手ペニス責め
SIF TEQUIP:オナホール
	TIMES 増加量 , 1.10
;触手緊縛
SIF TEQUIP:縄
	TIMES 増加量 , 1.20
;触手浣腸
SIF TEQUIP:浣腸器
	TIMES 増加量 , 1.30
;触手口辱
SIF TEQUIP:触手口辱
	TIMES 増加量 , 1.50
SIF TEQUIP:触手臍挿入
	TIMES 増加量 , 1.50
SIF TEQUIP:触手乳管挿入
	TIMES 増加量 , 1.50

BASE:MASTER:触手射精 += 増加量

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;触手経験は先に見ておく
SELECTCASE GETEXPLV(EXP:触手経験, 5)
	CASE 0
		TIMES LOSEBASE:体力 , 1.20
		TIMES LOSEBASE:気力 , 1.20
		TIMES SOURCE:恐怖 , 1.20
		TIMES SOURCE:逸脱 , 1.20
		TIMES SOURCE:反感 , 1.20
	CASE 1
		TIMES LOSEBASE:体力 , 1.00
		TIMES LOSEBASE:気力 , 1.00
		TIMES SOURCE:恐怖 , 1.00
		TIMES SOURCE:逸脱 , 1.00
		TIMES SOURCE:反感 , 1.00
	CASE 2
		TIMES LOSEBASE:体力 , 0.80
		TIMES LOSEBASE:気力 , 0.80
		TIMES SOURCE:恐怖 , 0.80
		TIMES SOURCE:逸脱 , 0.80
		TIMES SOURCE:反感 , 0.80
	CASE 3
		TIMES LOSEBASE:体力 , 0.60
		TIMES LOSEBASE:気力 , 0.60
		TIMES SOURCE:恐怖 , 0.60
		TIMES SOURCE:逸脱 , 0.60
		TIMES SOURCE:反感 , 0.60
	CASE 4
		TIMES LOSEBASE:体力 , 0.40
		TIMES LOSEBASE:気力 , 0.40
		TIMES SOURCE:恐怖 , 0.40
		TIMES SOURCE:逸脱 , 0.40
		TIMES SOURCE:反感 , 0.40
	CASE 5
		TIMES LOSEBASE:体力 , 0.20
		TIMES LOSEBASE:気力 , 0.20
		TIMES SOURCE:恐怖 , 0.20
		TIMES SOURCE:逸脱 , 0.20
		TIMES SOURCE:反感 , 0.20
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
;CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
射精強度 = BASE:MASTER:触手射精/MAXBASE:MASTER:触手射精

;射精時に中毒充足のソースを追加、なお触手は射精の再装填は無し
SELECTCASE 射精強度
	;通常射精時
	CASE 1
		増加量 = 200
	;大量射精時
	CASE IS >= 2
		増加量 = 500
	CASEELSE
		増加量 = 0
ENDSELECT

IF 射精強度 > 0
	;精液中毒を見る
	SELECTCASE ABL:精液中毒
		CASE 0, 1
			TIMES 増加量 , 0.00
		CASE 2
			TIMES 増加量 , 0.30
		CASE 3
			TIMES 増加量 , 0.60
		CASE 4
			TIMES 増加量 , 0.90
		CASE 5
			TIMES 増加量 , 1.20
		CASE 6
			TIMES 増加量 , 1.50
		CASE 7
			TIMES 増加量 , 1.80
		CASE 8
			TIMES 増加量 , 2.30
		CASE 9
			TIMES 増加量 , 3.00
		CASE IS >= 10
			TIMES 増加量 , 5.00
	ENDSELECT
ENDIF

SOURCE:中毒 += 増加量

;射精時の処理
;大量射精
IF 射精強度 >= 2
	PRINTL 触手大量射精
	CALL EXPUP, "精液経験", 3
	TENTACLE++
	BASE:MASTER:触手射精 -= MAXBASE:MASTER:触手射精*射精強度
	NOWEX:MASTER:触手射精 = 射精強度
	EX:MASTER:触手射精++
	VIDEOBONUS:触手中出し++
	;魔力回復
	CALL 魔力回復, 20
;通常の射精
ELSEIF 射精強度 == 1
	PRINTL 触手射精
	CALL EXPUP, "精液経験", 2
	TENTACLE++
	BASE:MASTER:触手射精 -= MAXBASE:MASTER:触手射精
	NOWEX:MASTER:触手射精 = 射精強度
	EX:MASTER:触手射精++
	VIDEOBONUS:触手アナル中出し++
	;魔力回復
	CALL 魔力回復, 20
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手が射精した場合の精液汚れ
IF NOWEX:MASTER:触手射精 > 0
	;触手挿入
	SIF TEQUIP:バイブ
		SETBIT STAIN:膣内, 2
	;アナル触手、触手浣腸
	SIF TEQUIP:アナルバイブ || TEQUIP:浣腸器
		SETBIT STAIN:アナル, 2
	;触手クリ責め
	SIF TEQUIP:クリキャップ
		SETBIT STAIN:ヴァギナ, 2
	;触手乳首責め、触手搾乳
	SIF TEQUIP:ニプルキャップ || TEQUIP:搾乳器
		SETBIT STAIN:胸, 2
	;触手ペニス責め、触手搾精
	SIF TEQUIP:オナホール || TEQUIP:搾精コンドーム
		SETBIT STAIN:ペニス, 2
	;触手緊縛（全身にぶっかけるイメージ）
	IF TEQUIP:縄
		SETBIT STAIN:口, 2
		SETBIT STAIN:手, 2
		;ペニスがあればペニス、なければヴァギナへ
		IF PENIS(TARGET)
			SETBIT STAIN:ペニス, 2
		ELSEIF VAGINA(TARGET)
			SETBIT STAIN:ヴァギナ, 2
		ENDIF
		SETBIT STAIN:胸, 2
	ENDIF
	;触手口辱
	SIF TEQUIP:触手口辱
		SETBIT STAIN:口, 2
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;各触手派生コマンドから集めた触手経験を一括処理
TENTACLE++
CALL EXPUP, "触手経験", TENTACLE
TENTACLE = 0

IF TEQUIP:触手臍挿入
	SIF !CFLAG:臍に中出しされた経験
		CALL EXPUP, "異常経験", 1
	CFLAG:臍に中出しされた経験++
ENDIF
IF TEQUIP:触手乳管挿入
	SIF !CFLAG:乳管に中出しされた経験
		CALL EXPUP, "異常経験", 1
	CFLAG:乳管に中出しされた経験++
ENDIF

RETURN 1
