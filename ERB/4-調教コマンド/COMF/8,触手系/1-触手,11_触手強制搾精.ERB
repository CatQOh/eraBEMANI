;-------------------------------------------------
;触手強制搾精
;-------------------------------------------------
@USERCOM_ABLE_触手強制搾精
#FUNCTION
;触手ないとダメ
コマンド実行条件 += "触手召喚中じゃないと実行できない/"
SIF !TEQUIP:触手
	COMRESULT = 0
;対象にペニス無いとダメ
コマンド実行条件 += "対象に男性器が必要/"
SIF !PENIS(TARGET)
	COMRESULT = 0
;射精止め中はダメ
コマンド実行条件 += "射精止め中は実行できない/"
SIF TEQUIP:射精止め
	COMRESULT = 0
;貞操帯装備中はダメ
コマンド実行条件 += "対象が貞操帯装着中は実行できない/"
SIF CFLAG:貞操帯
	COMRESULT = 0

RETURNF COMRESULT

@COM_触手強制搾精
PRINTL 触手強制搾精
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 150
LOSEBASE:気力 += 300

SOURCE:屈従 = 1500
SOURCE:苦痛 = 2000
SOURCE:恐怖 = 1500
SOURCE:逸脱 = 3000
SOURCE:反感 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;強制的に射精させる
BASE:射精 += MAXBASE:射精
CALL SAMEN_CHECK_T, 8

CALL SAMEN_SHOOT_T, 8, NOWEX:射精

CALL EXPUP, "尿道経験", 3

TENTACLE++

RETURN 1

