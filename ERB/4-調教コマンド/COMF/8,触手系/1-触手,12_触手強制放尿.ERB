;-------------------------------------------------
;触手強制放尿
;-------------------------------------------------
@USERCOM_ABLE_触手強制放尿
#FUNCTION
コマンド実行条件 += "小スカMODが必要/"
SIF !MOD:SCAT2
	COMRESULT = 0
;触手ないとダメ
コマンド実行条件 += "触手召喚中じゃないと実行できない/"
SIF !TEQUIP:触手
	COMRESULT = 0
;対象にペニスあるとダメ
コマンド実行条件 += "対象に男性器があると実行できない/"
SIF PENIS(TARGET)
	COMRESULT = 0

RETURNF COMRESULT

@COM_触手強制放尿
PRINTL 触手強制放尿
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 150
LOSEBASE:気力 += 300

SOURCE:屈従 = 1500
SOURCE:苦痛 = 2000
SOURCE:恐怖 = 1500
SOURCE:逸脱 = 3000
SOURCE:反感 = 1000
SOURCE:不潔 = 500
SOURCE:露出 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;放尿コマンドでは射精チェックを行わない
;代わりにORGASM_ADDを行う
;-------------------------------------------------
;CALL SAMEN_CHECK_T, 0

;CALL SAMEN_SHOOT_T, 0, NOWEX:射精

CALL ORGASM_ADD

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
SETBIT STAIN:ヴァギナ, 7

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;放尿経験
CALL EXPUP, "放尿経験", 5
CALL EXPUP, "尿道経験", 3
TEQUIP:利尿剤 = 0

NOWEX:放尿 = 1

SIF 撮影中()
	CFLAG:放尿を撮影された経験++
SIF TEQUIP:野外プレイ
	CFLAG:野外放尿経験++
SIF TEQUIP:お風呂場
	CFLAG:風呂場放尿経験++

;獣人、獣による催淫
CALL 獣人催淫, 1, PLAYER

TENTACLE++

RETURN 1
