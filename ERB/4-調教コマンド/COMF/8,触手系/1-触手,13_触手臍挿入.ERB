@USERCOM_ABLE_触手臍挿入, ARG
#FUNCTION
;触手ないとダメ
コマンド実行条件 += "触手召喚中じゃないと実行できない/"
SIF !TEQUIP:触手
	COMRESULT = 0

RETURNF COMRESULT

@COM_触手臍挿入
PRINTL 触手臍挿入
CALL KOJO_MESSAGE_COM

INVERTBIT TEQUIP:触手臍挿入, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 80

SOURCE:苦痛 = 1500
SOURCE:中毒 = 500
SOURCE:屈従 = 300
SOURCE:逸脱 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 300

CALL 特殊ソース処理_セックス

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "臍拡張経験", 2

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_触手臍挿入
PRINTL ＜触手臍挿入中＞

LOSEBASE:体力 += 80
LOSEBASE:気力 += 50

SOURCE:苦痛 += 700
SOURCE:中毒 += 100
SOURCE:屈従 += 200
SOURCE:逸脱 += 500

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "臍拡張経験", 1

;触手経験加算
TENTACLE++

RETURN 1
