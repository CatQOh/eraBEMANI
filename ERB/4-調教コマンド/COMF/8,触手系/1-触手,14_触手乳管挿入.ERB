@USERCOM_ABLE_触手乳管挿入, ARG
#FUNCTION
;触手ないとダメ
コマンド実行条件 += "触手召喚中じゃないと実行できない/"
SIF !TEQUIP:触手
	COMRESULT = 0

RETURNF COMRESULT

@COM_触手乳管挿入
PRINTL 触手乳管挿入
CALL KOJO_MESSAGE_COM

INVERTBIT TEQUIP:触手乳管挿入, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 150
LOSEBASE:気力 += 100

SOURCE:快B = 200
SOURCE:苦痛 = 1500
SOURCE:中毒 = 300
SOURCE:屈従 = 200
SOURCE:逸脱 = 1000

;バストサイズ補正
LOSEBASE:体力 -= TALENT:バストサイズ*10
LOSEBASE:気力 -= TALENT:バストサイズ*10
SOURCE:苦痛 -= TALENT:バストサイズ*100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 300

CALL 特殊ソース処理_セックス

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "乳管拡張経験", 2

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_触手乳管挿入
PRINTL ＜触手乳管挿入中＞

LOSEBASE:体力 += 100
LOSEBASE:気力 += 50

SOURCE:快B = 100
SOURCE:苦痛 += 600
SOURCE:中毒 += 100
SOURCE:屈従 += 100
SOURCE:逸脱 += 500

;バストサイズ補正
LOSEBASE:体力 -= TALENT:バストサイズ*5
LOSEBASE:気力 -= TALENT:バストサイズ*5
SOURCE:苦痛 -= TALENT:バストサイズ*50

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "乳管拡張経験", 1

;触手経験加算
TENTACLE++

RETURN 1
