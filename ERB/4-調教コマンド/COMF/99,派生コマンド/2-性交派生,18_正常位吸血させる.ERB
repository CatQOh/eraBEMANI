;-------------------------------------------------
;正常位吸血させる
;-------------------------------------------------
@USERCOM_ABLE_正常位吸血させる, ARG
#FUNCTION
;吸血のABLE
SIF !USERCOM_ABLE_吸血させる()
	COMRESULT = 0

;正常位させるから派生可能
コマンド実行条件 += "前回と今回の実行者が同じで、/"
コマンド実行条件 += "正常位させる、正常位アナルさせるから派生可能/"
SELECTCASE PREVCOMS
	CASE "正常位させる", "正常位アナルさせる"
		RETURNF COMRESULT
ENDSELECT

COMRESULT = 0
RETURNF 0

@COM_正常位吸血させる
#DIM DYNAMIC 増加量
#DIM DYNAMIC 射精先

PRINTL 正常位吸血させる
CALL KOJO_MESSAGE_COM

;実行者が奴隷フラグ
TFLAG:奴隷実行 = 1
SELECTCASE PREVCOMS
	CASE "正常位させる"
		TFLAG:奴隷挿入箇所 = 1
	CASE "正常位アナルさせる"
		TFLAG:奴隷挿入箇所 = 2
ENDSELECT

;-------------------------------------------------
;脱衣
;-------------------------------------------------
IF OVER_GENITAL(PLAYER) != ""
	IF CFLAG:PLAYER:挿入可
		TEQUIP:PLAYER:下半身下着 = 0
	ELSE
		TEQUIP:PLAYER:下半身下着 = 0
		TEQUIP:PLAYER:下半身上着 = 0
		TEQUIP:PLAYER:全身上着 = 0
	ENDIF
ENDIF

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
IF TFLAG:奴隷挿入箇所 == 1
	増加量 = 射精ゲージ計算_実行者受け(600)
ELSEIF TFLAG:奴隷挿入箇所 == 2
	増加量 = 射精ゲージ計算_実行者受け(400)
ENDIF

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += 増加量/10*4*ABL:技巧

CALL 射精ゲージ増加, 増加量, PLAYER

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
IF TFLAG:奴隷挿入箇所 == 1
	増加量 = 射精ゲージ計算_奴隷挿入(800)
ELSEIF TFLAG:奴隷挿入箇所 == 1
	増加量 = 射精ゲージ計算_奴隷挿入(700)
ENDIF

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += 増加量/10*4*ABL:技巧

CALL 射精ゲージ増加, 増加量, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 0

SOURCE:快C = 400
SOURCE:情愛 = 1000
SOURCE:恐怖 = 50
SOURCE:性行動 = 1000
SOURCE:逸脱 = 100
SOURCE:恭順 = 1500

;体力回復
PRINTFORML %CALLNAME:TARGET%の体力+500
BASE:体力 += 500

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;射精時の処理
IF TFLAG:奴隷挿入箇所 == 1
	IF PLAYER == MASTER
		射精先 = 1
	ELSEIF PLAYER == ASSI
		射精先 = 2
	ENDIF

	CALL SAMEN_CHECK, 6
	CALL SAMEN_CHECK_T, 射精先

	CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
	CALL SAMEN_SHOOT_T, 射精先, NOWEX:射精
ELSEIF TFLAG:奴隷挿入箇所 == 2
	IF PLAYER == MASTER
		射精先 = 6
	ELSEIF PLAYER == ASSI
		射精先 = 7
	ENDIF

	CALL SAMEN_CHECK, 6
	CALL SAMEN_CHECK_T, 射精先

	CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
	CALL SAMEN_SHOOT_T, 射精先, NOWEX:射精
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 3, 2

CALL EXPUP, "性交経験", 1
CALL EXPUP, "性交経験", 1, PLAYER
IF TFLAG:奴隷挿入箇所 == 1
	CALL EXPUP, "Ｖ経験", 2, PLAYER
ELSEIF TFLAG:奴隷挿入箇所 == 2
	CALL EXPUP, "Ａ経験", 2, PLAYER
ENDIF
CALL EXPUP, "苦痛快楽経験", 1, PLAYER

;愛情経験
;恋慕or親愛なら愛情経験+ 中出しでさらに+
IF FALLTYPE(TARGET) == 1 && PLAYER == MASTER
	IF NOWEX:射精 && !GETBIT(TFLAG:避妊具射精, 2)
		CALL EXPUP, "愛情経験", 4
	ELSE
		CALL EXPUP, "愛情経験", 2
	ENDIF
ENDIF

CALL EXPUP, "吸血経験", 1

;吸血済みフラグ
TFLAG:吸血済み = 1

;魔力回復
CALL 魔力回復, 30
SIF !避妊具(TARGET)
	CALL 魔力回復, 3, PLAYER
CALL 獣人催淫, 1

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1

経験回数:PLAYER:(NO:TARGET) += 1
経験回数:TARGET:(NO:PLAYER) += 1

RETURN 1

