;-------------------------------------------------
;二本フェラ(奴隷に二本舐めさせる)
;-------------------------------------------------
@USERCOM_ABLE_二本フェラ
#FUNCTION
;二本フェラ実行判定
;主人がペニス無いとダメ
コマンド実行条件 += "助手が必要"
コマンド実行条件 += "主人に男性器が必要/"
SIF !PENIS(TMASTER)
	COMRESULT = 0
;助手がペニス無いとダメ
コマンド実行条件 += "助手に男性器が必要/"
SIF !PENIS(ASSI) && !Ｐ使用中(ASSI)
	COMRESULT = 0
;猫舌の奴隷の場合は技巧Lv2以上必要
コマンド実行条件 += "対象が[猫舌]の場合は技巧LV2以上必要/"
SIF TALENT:猫舌 && ABL:技巧 < 2
	COMRESULT = 0
;ボールギャグ使用中は不可
コマンド実行条件 += "対象がボールギャグ装着中は実行できない/"
SIF TEQUIP:ボールギャグ
	COMRESULT = 0
;縄使用中は不可
コマンド実行条件 += "縄で縛ってるときは実行できない/"
SIF TEQUIP:縄
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
コマンド実行条件 += "睡眠中は実行できない/"
SIF TEQUIP:睡眠
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF
;汎用COMABLE通らなかったらダメ
SIF !USERCOM_ABLE_Ｐ奉仕()
	COMRESULT = 0

RETURNF COMRESULT

@実行判定_二本フェラ
#DIM DYNAMIC 実効値

;すべての命令に共通の要素を考慮
CALL COM_ORDER
実効値 = RESULT

CALL COM_ORDER_フェラ
実効値 += RESULT

;32以上で実行
CALL 実効値判定, 実効値, 32

RETURN RESULT

@COM_二本フェラ
#DIM DYNAMIC 増加量

PRINTL 二本フェラ

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:奴隷実行 = 1

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
増加量 = 500

;ABL:技巧をみる
増加量 += (増加量/5)*ABL:技巧

;ABL:従順をみる
増加量 += (増加量/10)*ABL:従順 - (増加量/10)*2

;ABL:奉仕精神をみる
SELECTCASE ABL:奉仕精神
	CASE 0
		TIMES 増加量 , 0.50
	CASE 1
		TIMES 増加量 , 0.80
	CASE 2
		TIMES 増加量 , 1.20
	CASE 3
		TIMES 増加量 , 1.50
	CASE 4
		TIMES 増加量 , 1.80
	CASEELSE
		増加量 += 増加量/3*ABL:奉仕精神
ENDSELECT

;主人のABL:Ｃ感覚をみる
SELECTCASE ABL:TMASTER:Ｃ感覚
	CASE 0
		TIMES 増加量 , 1.00
	CASE 1
		TIMES 増加量 , 1.50
	CASE 2
		TIMES 増加量 , 2.00
	CASE 3
		TIMES 増加量 , 2.50
	CASE 4
		TIMES 増加量 , 3.50
	CASEELSE
		増加量 += 増加量*(ABL:TMASTER:Ｃ感覚-1)
ENDSELECT

;TALENT:舌使いをみる
SIF TALENT:舌使い
	TIMES 増加量 , 2.00

CALL 射精ゲージ増加, 増加量, TMASTER

;-------------------------------------------------
;射精ゲージチェック（助手）
;-------------------------------------------------
増加量 = 500

;ABL:技巧をみる
増加量 += (増加量/5)*ABL:技巧

;ABL:従順をみる
増加量 += (増加量/10)*ABL:従順 - (増加量/10)*2

;ABL:奉仕精神をみる
SELECTCASE ABL:奉仕精神
	CASE 0
		TIMES 増加量 , 0.50
	CASE 1
		TIMES 増加量 , 0.80
	CASE 2
		TIMES 増加量 , 1.20
	CASE 3
		TIMES 増加量 , 1.50
	CASE 4
		TIMES 増加量 , 1.80
	CASEELSE
		増加量 += 増加量/3*ABL:奉仕精神
ENDSELECT

;助手のABL:Ｃ感覚をみる
SELECTCASE ABL:ASSI:Ｃ感覚
	CASE 0
		TIMES 増加量 , 1.00
	CASE 1
		TIMES 増加量 , 1.50
	CASE 2
		TIMES 増加量 , 2.00
	CASE 3
		TIMES 増加量 , 2.50
	CASE 4
		TIMES 増加量 , 3.50
	CASEELSE
		増加量 += 増加量*(ABL:ASSI:Ｃ感覚-1)
ENDSELECT

;TALENT:舌使いをみる
SIF TALENT:舌使い
	TIMES 増加量 , 2.00

CALL 射精ゲージ増加, 増加量, ASSI

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 60
LOSEBASE:気力 += 100

SOURCE:情愛 = 150
SOURCE:性行動 = 1100
SOURCE:達成 = 300
SOURCE:屈従 = 1000
SOURCE:逸脱 = 500
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック（主人）
;-------------------------------------------------
CALL SAMEN_CHECK_M, 4
CALL SAMEN_CHECK_A, 4
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 4, NOWEX:TMASTER:射精, TMASTER
CALL SAMEN_SHOOT, 4, NOWEX:ASSI:射精, ASSI
CALL SAMEN_SHOOT_T, 0, NOWEX:射精


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奉仕精神LV2以上、技巧LV2以上なら汚れをなめ取る（ボールギャグ使用時は除く）
IF ABL:奉仕精神 >= 2 && ABL:技巧 >= 2
	STAIN:TMASTER:ペニス = 0
	STAIN:ASSI:ペニス = 0
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛経験
IF SEX(TARGET) == SEX(TMASTER) && SEX(TARGET) == SEX(ASSI)
	SELECTCASE SEX(TARGET)
		CASE 1
			CALL EXPUP, "ゲイ経験", 4
			CALL EXPUP, "ゲイ経験", 3, TMASTER
			CALL EXPUP, "ゲイ経験", 3, ASSI
		CASE 2
			CALL EXPUP, "レズ経験", 4
			CALL EXPUP, "レズ経験", 3, TMASTER
			CALL EXPUP, "レズ経験", 3, ASSI
	ENDSELECT
ELSEIF SEX(TARGET) == SEX(TMASTER) || SEX(TARGET) == SEX(ASSI)
	SELECTCASE SEX(TARGET)
		CASE 1
			CALL EXPUP, "ゲイ経験", 2
			SIF SEX(TMASTER) == 1
				CALL EXPUP, "ゲイ経験", 2, TMASTER
			SIF SEX(ASSI) == 1
				CALL EXPUP, "ゲイ経験", 2, ASSI
		CASE 2
			CALL EXPUP, "レズ経験", 3
			SIF SEX(TMASTER) == 2
				CALL EXPUP, "レズ経験", 2, TMASTER
			SIF SEX(ASSI) == 2
				CALL EXPUP, "レズ経験", 2, ASSI
	ENDSELECT
ENDIF

IF TMASTER == MASTER
	CALL EXPUP, "主人調教経験", 1
	CALL EXPUP, "助手調教経験", 1
ELSE
	CALL EXPUP, "助手調教経験", 2
ENDIF

CALL EXPUP, "フェラ経験", 2

;奴隷が猫舌持ちの場合は嗜虐快楽経験を追加
SIF TALENT:猫舌
	CALL EXPUP, "嗜虐快楽経験", 1

;魔力回復
IF !避妊具(TMASTER) && PENIS(TMASTER)
	CALL 魔力回復, 5
	CALL 獣人催淫, 1
ENDIF
IF !避妊具(ASSI) && PENIS(ASSI)
	CALL 魔力回復, 5
	CALL 獣人催淫, 1
ENDIF

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1

RETURN 1
