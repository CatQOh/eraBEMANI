;-------------------------------------------------
;アナル二輪挿し
;セックス系派生コマンド
;-------------------------------------------------
@USERCOM_ABLE_アナル二輪挿し
#FUNCTION
#DIM DYNAMIC 本数

;助手がいないとダメ
コマンド実行条件 += "助手が必要/"
SIF ASSI < 1
	COMRESULT = 0
コマンド実行条件 += @"対象が潤滑{PALAMLV:2}未満の場合、助手に[サド]or従順LV4以上が必要/"
;潤滑不足で、従順3以下のASSIの場合二輪挿しはできない（サドならＯＫ）
IF PALAM:潤滑 < PALAMLV:2
	SIF ASSI > 0 && ABL:ASSI:従順 <= 3 && !TALENT:ASSI:サド
		COMRESULT = 0
ENDIF

本数 = 0
;MASTERがペニス持ち
コマンド実行条件 += "主人に男性器が必要(ペニスバンドで代用可能)/"
SIF PENIS(MASTER) || TEQUIP:MASTER:ペニスバンド
	本数++
;ASSIがペニス持ち
コマンド実行条件 += "助手に男性器が必要(ペニスバンドで代用可能)/"
SIF ASSI > 0 && (PENIS(ASSI) || TEQUIP:ASSI:ペニスバンド) && !Ｐ使用不可(ASSI)
	本数++
;ペニスバンドとあわせて二本ないとだめ
SIF 本数 < 2
	COMRESULT = 0
;膣使用中はダメ
コマンド実行条件 += "対象がA使用中は実行できない/"
SIF Ａ使用中(TARGET)
	COMRESULT = 0
;主人、調教対象、助手のいずれかに小人体型がいる場合、主人が禁断の知識を持っていないとダメ
コマンド実行条件 += "主人、助手、対象のいずれかが[小人体型]の場合、主人に禁断の知識が必要/"
IF TALENT:MASTER:小人体型 || (ASSI > 0 && TALENT:ASSI:小人体型) || TALENT:小人体型
	SIF !TALENT:MASTER:禁断の知識
		COMRESULT = 0
ENDIF
;一定のＡ拡張経験が必要
コマンド実行条件 += @"対象のＡ拡張経験50以上が必要/"
SIF EXP:Ａ拡張経験 < 50
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
コマンド実行条件 += "助手が[アニマル]の場合は実行できない/"
SIF ASSI > 0 && TALENT:ASSI:アニマル
	COMRESULT = 0

;以下のコマンド実行時
コマンド実行条件 += "性交系コマンドから派生可能/"
SELECTCASE PREVCOMS
	CASE "正常位アナル", "後背位アナル", "騎乗位アナル", "背面座位アナル", "対面座位アナル", "下着ずらし挿入アナル"
		RETURNF COMRESULT
ENDSELECT

COMRESULT = 0
RETURNF 0

@COM_アナル二輪挿し
#DIM DYNAMIC 増加量

PRINTL アナル二輪挿し
CALL KOJO_MESSAGE_COM

;童貞喪失
IF TALENT:MASTER:童貞
	TALENT:MASTER:童貞 = 0
	IF TALENT:MASTER:性転換済
		CSTR:MASTER:性転換童貞 = %NAME:TARGET%
	ELSE
		CSTR:MASTER:童貞 = %NAME:TARGET%
	ENDIF
ENDIF

IF TALENT:ASSI:童貞
	TALENT:ASSI:童貞 = 0
	IF TALENT:ASSI:性転換済
		CSTR:ASSI:性転換童貞 = %NAME:TARGET%
	ELSE
		CSTR:ASSI:童貞 = %NAME:TARGET%
	ENDIF
ENDIF

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
増加量 = 1000

;ABL:技巧をみる
増加量 += (増加量/5)*ABL:技巧

;ABL:従順をみる
増加量 += (増加量/10)*ABL:従順 - (増加量/10)*2

;ABL:欲望をみる
増加量 += (増加量/10)*ABL:欲望

;PALAM:潤滑をみる
増加量 += (GETPALAMLV(PALAM:潤滑, 4)-2)*(増加量/5)
;子供は締まりが良いので増える
SIF TALENT:体格 <= 2
	TIMES 増加量 , 1.20

;プレイヤーのABL:Ｃ感覚をみる
SELECTCASE ABL:MASTER:Ｃ感覚
	CASE 0
		TIMES 増加量 , 1.00
	CASE 1
		TIMES 増加量 , 1.50
	CASE 2
		TIMES 増加量 , 2.00
	CASE 3
		TIMES 増加量 , 2.50
	CASE 4
		TIMES 増加量 , 3.50
	CASEELSE
		増加量 += 増加量*(ABL:MASTER:Ｃ感覚-1)
ENDSELECT

;EXP:Ａ拡張経験をみる
増加量 += 増加量/10*GETEXPLV(EXP:Ａ拡張経験, 10)

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:MASTER:賢者タイム > 0
	増加量 /= 20

BASE:MASTER:射精 += 増加量

;-------------------------------------------------
;射精ゲージチェック（助手）
;-------------------------------------------------
増加量 = 1000

;ABL:技巧をみる
増加量 += (増加量/5)*ABL:技巧

;ABL:従順をみる
増加量 += (増加量/10)*ABL:従順 - (増加量/10)*2

;ABL:欲望をみる
増加量 += (増加量/10)*ABL:欲望

;PALAM:潤滑をみる
増加量 += (GETPALAMLV(PALAM:潤滑, 4)-2)*(増加量/5)
;子供は締まりが良いので増える
SIF TALENT:体格 <= 2
	TIMES 増加量 , 1.20

;助手のABL:Ｃ感覚をみる
SELECTCASE ABL:ASSI:Ｃ感覚
	CASE 0
		TIMES 増加量 , 1.00
	CASE 1
		TIMES 増加量 , 1.50
	CASE 2
		TIMES 増加量 , 2.00
	CASE 3
		TIMES 増加量 , 2.50
	CASE 4
		TIMES 増加量 , 3.50
	CASEELSE
		増加量 += 増加量*(ABL:ASSI:Ｃ感覚-1)
ENDSELECT

;EXP:Ａ拡張経験をみる
増加量 += 増加量/10*GETEXPLV(EXP:Ａ拡張経験, 10)

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:ASSI:賢者タイム > 0
	増加量 /= 20

BASE:ASSI:射精 += 増加量

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
増加量 = 400

;ABL:主人の技巧をみる
増加量 += (増加量/5)*ABL:MASTER:技巧

;ABL:助手の技巧をみる
増加量 += (増加量/5)*ABL:ASSI:技巧

;ABL:欲望をみる
増加量 += (増加量/5)*ABL:欲望

;ABL:Ｖ感覚を見る
SELECTCASE ABL:Ａ感覚
	CASE 0
		TIMES 増加量 , 0.20
	CASE 1
		TIMES 増加量 , 0.50
	CASE 2
		TIMES 増加量 , 0.80
	CASE 3
		TIMES 増加量 , 1.20
	CASE 4
		TIMES 増加量 , 1.50
	CASEELSE
		増加量 += (増加量/2)*ABL:Ａ感覚
ENDSELECT

;PALAM:潤滑をみる
SELECTCASE GETPALAMLV(PALAM:潤滑, 4)
	CASE 0
		TIMES 増加量 , 0.20
	CASE 1
		TIMES 増加量 , 0.50
	CASE 2
		TIMES 増加量 , 1.00
	CASE 3
		TIMES 増加量 , 1.50
	CASE 4
		TIMES 増加量 , 2.50
ENDSELECT

;奴隷のABL:マゾっ気をみる
増加量 += (増加量/2)*ABL:マゾっ気

;EXP:Ａ拡張経験をみる
増加量 += 増加量/5*GETEXPLV(EXP:Ａ拡張経験, 10)

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:賢者タイム > 0
	増加量 /= 20

BASE:射精 += 増加量

