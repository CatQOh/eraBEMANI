@ABL_CHECK_自慰中毒
SELECTCASE ABL:自慰中毒
	CASE 0
		ABLUP:快Ｃ = 10000
		ABLUP:欲情 = 3000
		ABLUP:恐怖 = 1000
		ABLUPEXP:自慰経験 = 100
	CASE 1
		ABLUP:快Ｃ = 25000
		ABLUP:欲情 = 6000
		ABLUP:恐怖 = 3000
		ABLUPEXP:自慰経験 = 250
	CASE 2
		ABLUP:快Ｃ = 50000
		ABLUP:欲情 = 12000
		ABLUP:恐怖 = 6000
		ABLUPEXP:自慰経験 = 500
	CASE 3
		ABLUP:快Ｃ = 100000
		ABLUP:欲情 = 20000
		ABLUP:恐怖 = 15000
		ABLUPEXP:自慰経験 = 1000
	CASE 4
		ABLUP:快Ｃ = 300000
		ABLUP:欲情 = 40000
		ABLUP:恐怖 = 40000
		ABLUPEXP:自慰経験 = 2000
	CASE 5
		ABLUP:快Ｃ = 350000
		ABLUP:欲情 = 45000
		ABLUP:恐怖 = 45000
		ABLUPEXP:自慰経験 = 2500
	CASE 6
		ABLUP:快Ｃ = 400000
		ABLUP:欲情 = 50000
		ABLUP:恐怖 = 50000
		ABLUPEXP:自慰経験 = 3000
	CASE 7
		ABLUP:快Ｃ = 450000
		ABLUP:欲情 = 55000
		ABLUP:恐怖 = 55000
		ABLUPEXP:自慰経験 = 3000
	CASE 8
		ABLUP:快Ｃ = 500000
		ABLUP:欲情 = 60000
		ABLUP:恐怖 = 60000
		ABLUPEXP:自慰経験 = 3500
	CASE 9
		ABLUP:快Ｃ = 600000
		ABLUP:欲情 = 70000
		ABLUP:恐怖 = 70000
		ABLUPEXP:自慰経験 = 5000
	CASE IS >= 10
		ABLUP:快Ｃ = 7000 * POWER(ABL:自慰中毒, 2)
		ABLUP:欲情 = 800 * POWER(ABL:自慰中毒, 2)
		ABLUP:恐怖 = 800 * POWER(ABL:自慰中毒, 2)
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !陥落(TARGET)
		TIMES ABLUP:快Ｃ , 2.00
		TIMES ABLUP:欲情 , 2.00
		TIMES ABLUP:恐怖 , 2.00
		TIMES ABLUPEXP:自慰経験 , 2.00
	;陥落
	ELSEIF 陥落(TARGET)
		TIMES ABLUP:快Ｃ , 0.70
		TIMES ABLUP:欲情 , 0.70
		TIMES ABLUP:恐怖 , 0.70
		TIMES ABLUPEXP:自慰経験 , 0.70
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:快Ｃ , 2.00
		TIMES ABLUP:欲情 , 2.00
		TIMES ABLUP:恐怖 , 2.00
		TIMES ABLUPEXP:自慰経験 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:快Ｃ , 0.80
		TIMES ABLUP:欲情 , 0.80
		TIMES ABLUP:恐怖 , 0.80
		TIMES ABLUPEXP:自慰経験 , 0.80
	ENDIF
ENDIF

;中毒しやすい、自慰しやすい
IF TALENT:中毒しやすい || TALENT:自慰しやすい
	TIMES ABLUP:快Ｃ , 0.50
	TIMES ABLUP:欲情 , 0.50
	TIMES ABLUP:恐怖 , 0.50
	TIMES ABLUPEXP:自慰経験 , 0.50
ENDIF

;臆病
SIF TALENT:臆病
	TIMES ABLUP:恐怖 , 0.70
;濡れやすい、勃ちやすい
SIF TALENT:濡れやすい || TALENT:勃ちやすい
	TIMES ABLUPEXP:自慰経験 , 0.70
;小柄体型、抑圧、解放
IF TALENT:体格 <= 2 || TALENT:抑圧 || TALENT:解放
	TIMES ABLUP:快Ｃ , 0.70
	TIMES ABLUP:恐怖 , 0.70
	TIMES ABLUPEXP:自慰経験 , 0.70
ENDIF
;去勢済み 快Ｃを快Ｂに置き換える
IF TALENT:去勢済み
	ABLUP:快Ｂ = ABLUP:快Ｃ
	TIMES ABLUP:快Ｂ , 1.50
	ABLUP:快Ｃ = 0
	TIMES ABLUP:恐怖 , 1.50
	TIMES ABLUPEXP:自慰経験 , 1.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][淫核]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:淫核
	IF ABL:自慰中毒 >= 8
		ABLUPEXP:異常経験 = 7
	ELSEIF ABL:自慰中毒 >= 4
		ABLUPEXP:異常経験 = 3
	ELSEIF ABL:自慰中毒 >= 3
		ABLUPEXP:異常経験 = 2
	ELSEIF ABL:自慰中毒 >= 2
		ABLUPEXP:異常経験 = 1
	ENDIF
ENDIF

;@CHECK_JUEL_自慰中毒
;異常経験が規定値に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:異常経験
	RETURN 0

;自慰中毒+1の露出癖が必要
SIF ABL:露出癖 <= ABL:自慰中毒
	RETURN 0

;欲情の珠、快Ｃの珠、恐怖の珠、自慰経験で上げる
;去勢済みの場合は代わりに快Ｂで上げる
IF TALENT:去勢済み
	SIF JUEL:快Ｂ >= ABLUP:快Ｂ && JUEL:欲情 >= ABLUP:欲情 && JUEL:恐怖 >= ABLUP:恐怖 && EXP:自慰経験 >= ABLUPEXP:自慰経験
		RETURN 1
ELSE
	SIF JUEL:快Ｃ >= ABLUP:快Ｃ && JUEL:欲情 >= ABLUP:欲情 && JUEL:恐怖 >= ABLUP:恐怖 && EXP:自慰経験 >= ABLUPEXP:自慰経験
		RETURN 1
ENDIF

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_自慰中毒
SELECTCASE ABL:自慰中毒
	CASE 2, 3, 4, 8
		;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][淫核]なら無視できる）
		SIF EXP:異常経験 < ABLUPEXP:異常経験
			SETCOLORBYNAME gray
		SIF ABLUPEXP:異常経験
			PRINTFORM [異常経験{ABLUPEXP:異常経験}以上]
		RESETCOLOR
ENDSELECT

SIF ABL:露出癖 <= ABL:自慰中毒
	SETCOLORBYNAME gray
PRINTFORM [露出癖LV{ABL:自慰中毒+1}以上]
RESETCOLOR

;去勢済みなら快Ｂを代わりに使う
IF TALENT:去勢済み
	SIF JUEL:快Ｂ < ABLUP:快Ｂ
		SETCOLORBYNAME gray
	PRINTFORM [快Ｂの珠×{ABLUP:快Ｂ}]
	RESETCOLOR
ELSE
	SIF JUEL:快Ｃ < ABLUP:快Ｃ
		SETCOLORBYNAME gray
	PRINTFORM [快Ｃの珠×{ABLUP:快Ｃ}]
	RESETCOLOR
ENDIF

SIF JUEL:欲情 < ABLUP:欲情
	SETCOLORBYNAME gray
PRINTFORM [欲情の珠×{ABLUP:欲情}]
RESETCOLOR

SIF JUEL:恐怖 < ABLUP:恐怖
	SETCOLORBYNAME gray
PRINTFORM [恐怖の珠×{ABLUP:恐怖}]
RESETCOLOR

IF ABLUPEXP:自慰経験
	SIF EXP:自慰経験 < ABLUPEXP:自慰経験
		SETCOLORBYNAME gray
	PRINTFORM [自慰経験{ABLUPEXP:自慰経験}以上]
	RESETCOLOR
ENDIF
