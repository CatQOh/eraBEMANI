	SELECTCASE ABL:性交中毒
		CASE IS >= 8
			ABLUPEXP:異常経験 = 7
		CASE IS >= 4
			ABLUPEXP:異常経験 = 3
		CASE IS >= 3
			ABLUPEXP:異常経験 = 2
		CASE IS >= 2
			ABLUPEXP:異常経験 = 1
	ENDSELECT
ENDIF

