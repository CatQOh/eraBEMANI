@ABL_CHECK_料理技能
ABLUP:習得 = 0
SELECTCASE ABL:料理技能
	CASE 0
		;ABLUP:習得 = 75
		ABLUPEXP:料理経験 = 5
	CASE 1
		;ABLUP:習得 = 500
		ABLUPEXP:料理経験 = 20
	CASE 2
		;ABLUP:習得 = 3000
		ABLUPEXP:料理経験 = 50
	CASE 3
		;ABLUP:習得 = 9000
		ABLUPEXP:料理経験 = 100
	CASE 4
		;ABLUP:習得 = 24000
		ABLUPEXP:料理経験 = 300
	CASE 5
		;ABLUP:習得 = 30000
		ABLUPEXP:料理経験 = 700
	CASE 6
		;ABLUP:習得 = 35000
		ABLUPEXP:料理経験 = 1000
	CASE 7
		;ABLUP:習得 = 40000
		ABLUPEXP:料理経験 = 1500
	CASE 8
		;ABLUP:習得 = 45000
		ABLUPEXP:料理経験 = 2000
	CASE 9
		;ABLUP:習得 = 50000
		ABLUPEXP:料理経験 = 3000
	CASE IS >= 10
		ABLUP:習得 = 600 * POWER(ABL:料理技能, 2)
ENDSELECT

;習得早い、好奇心、調合知識、食欲皆伝
IF TALENT:習得早い || TALENT:好奇心 || TALENT:調合知識 || TALENT:食欲皆伝
	TIMES ABLUP:習得 , 0.80
	TIMES ABLUPEXP:料理経験 , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:習得 , 1.30
	TIMES ABLUPEXP:料理経験 , 1.30
ENDIF

;@CHECK_JUEL_料理技能
;習得の珠、料理経験で上げる
SIF JUEL:習得 >= ABLUP:習得 && EXP:料理経験 >= ABLUPEXP:料理経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_料理技能
IF ABLUP:習得
	SIF JUEL:習得 < ABLUP:習得
		SETCOLORBYNAME gray
	PRINTFORM [習得の珠×{ABLUP:習得}]
	RESETCOLOR
ENDIF

IF ABLUPEXP:料理経験
	SIF EXP:料理経験 < ABLUPEXP:料理経験
		SETCOLORBYNAME gray
	PRINTFORM [料理経験{ABLUPEXP:料理経験}以上]
	RESETCOLOR
ENDIF
