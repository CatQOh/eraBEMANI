@ABL_CHECK_工作技能
ABLUP:習得 = 0
SELECTCASE ABL:工作技能
	CASE 0
		;ABLUP:習得 = 100
		ABLUPEXP:工作経験 = 5
	CASE 1
		;ABLUP:習得 = 500
		ABLUPEXP:工作経験 = 30
	CASE 2
		;ABLUP:習得 = 1000
		ABLUPEXP:工作経験 = 100
	CASE 3
		;ABLUP:習得 = 5000
		ABLUPEXP:工作経験 = 300
	CASE 4
		;ABLUP:習得 = 10000
		ABLUPEXP:工作経験 = 500
	CASE 5
		;ABLUP:習得 = 20000
		ABLUPEXP:工作経験 = 1000
	CASE 6
		;ABLUP:習得 = 40000
		ABLUPEXP:工作経験 = 2000
	CASE 7
		;ABLUP:習得 = 70000
		ABLUPEXP:工作経験 = 4000
	CASE 8
		;ABLUP:習得 = 150000
		ABLUPEXP:工作経験 = 7000
	CASE 9
		;ABLUP:習得 = 300000
		ABLUPEXP:工作経験 = 10000
	CASE IS >= 10
		ABLUP:習得 = 3500 * POWER(ABL:工作技能, 2)
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:習得 , 0.80
	TIMES ABLUPEXP:工作経験 , 0.80
ENDIF
;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:習得 , 1.30
	TIMES ABLUPEXP:工作経験 , 1.30
ENDIF
;種族:機械、TALENT:無機物はめちゃくちゃ強い
IF CSTR:種族 == "機械" || TALENT:無機物
	TIMES ABLUP:習得 , 0.20
	TIMES ABLUPEXP:工作経験 , 0.20
ENDIF

;@CHECK_JUEL_工作技能
;習得の珠、工作経験で上げる
SIF JUEL:習得 >= ABLUP:習得 && EXP:工作経験 >= ABLUPEXP:工作経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_工作技能
IF ABLUP:習得
	SIF JUEL:習得 < ABLUP:習得
		SETCOLORBYNAME gray
	PRINTFORM [習得の珠×{ABLUP:習得}]
	RESETCOLOR
ENDIF

IF ABLUPEXP:工作経験
	SIF EXP:工作経験 < ABLUPEXP:工作経験
		SETCOLORBYNAME gray
	PRINTFORM [工作経験{ABLUPEXP:工作経験}以上]
	RESETCOLOR
ENDIF
