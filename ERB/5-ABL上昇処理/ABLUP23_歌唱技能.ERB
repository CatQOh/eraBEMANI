@ABL_CHECK_歌唱技能
ABLUP:習得 = 0
SELECTCASE ABL:歌唱技能
	CASE 0
		;ABLUP:習得 = 75
		ABLUPEXP:歌唱経験 = 5
	CASE 1
		;ABLUP:習得 = 500
		ABLUPEXP:歌唱経験 = 20
	CASE 2
		;ABLUP:習得 = 3000
		ABLUPEXP:歌唱経験 = 50
	CASE 3
		;ABLUP:習得 = 9000
		ABLUPEXP:歌唱経験 = 100
	CASE 4
		;ABLUP:習得 = 24000
		ABLUPEXP:歌唱経験 = 300
	CASE 5
		;ABLUP:習得 = 30000
		ABLUPEXP:歌唱経験 = 700
	CASE 6
		;ABLUP:習得 = 35000
		ABLUPEXP:歌唱経験 = 1000
	CASE 7
		;ABLUP:習得 = 40000
		ABLUPEXP:歌唱経験 = 1500
	CASE 8
		;ABLUP:習得 = 45000
		ABLUPEXP:歌唱経験 = 2000
	CASE 9
		;ABLUP:習得 = 50000
		ABLUPEXP:歌唱経験 = 3000
	CASE IS >= 10
		ABLUP:習得 = 600 * POWER(ABL:歌唱技能, 2)
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:習得 , 0.80
	TIMES ABLUPEXP:歌唱経験 , 0.80
ENDIF

;習得遅い、無関心、恥じらい
IF TALENT:習得遅い || TALENT:無関心 || TALENT:恥じらい
	TIMES ABLUP:習得 , 1.30
	TIMES ABLUPEXP:歌唱経験 , 1.30
ENDIF

;絶対音感なら半分
IF TALENT:絶対音感
	TIMES ABLUP:習得 , 0.50
	TIMES ABLUPEXP:歌唱経験 , 0.50
ENDIF

;@CHECK_JUEL_歌唱技能
;習得の珠、歌唱経験で上げる
SIF JUEL:習得 >= ABLUP:習得 && EXP:歌唱経験 >= ABLUPEXP:歌唱経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_歌唱技能
IF ABLUP:習得
	SIF JUEL:習得 < ABLUP:習得
		SETCOLORBYNAME gray
	PRINTFORM [習得の珠×{ABLUP:習得}]
	RESETCOLOR
ENDIF

IF ABLUPEXP:歌唱経験
	SIF EXP:歌唱経験 < ABLUPEXP:歌唱経験
		SETCOLORBYNAME gray
	PRINTFORM [歌唱経験{ABLUPEXP:歌唱経験}以上]
	RESETCOLOR
ENDIF
