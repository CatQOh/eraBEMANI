@ABL_CHECK_演奏技能
ABLUP:習得 = 0
SELECTCASE ABL:演奏技能
	CASE 0
		;ABLUP:習得 = 100
		ABLUPEXP:演奏経験 = 5
	CASE 1
		;ABLUP:習得 = 300
		ABLUPEXP:演奏経験 = 10
	CASE 2
		;ABLUP:習得 = 1000
		ABLUPEXP:演奏経験 = 20
	CASE 3
		;ABLUP:習得 = 3000
		ABLUPEXP:演奏経験 = 50
	;3までは楽 4から急に上げづらくなる
	CASE 4
		;ABLUP:習得 = 30000
		ABLUPEXP:演奏経験 = 500
	CASE 5
		;ABLUP:習得 = 70000
		ABLUPEXP:演奏経験 = 700
	CASE 6
		;ABLUP:習得 = 100000
		ABLUPEXP:演奏経験 = 1500
	CASE 7
		;ABLUP:習得 = 300000
		ABLUPEXP:演奏経験 = 3000
	CASE 8
		;ABLUP:習得 = 500000
		ABLUPEXP:演奏経験 = 5000
	CASE 9
		;ABLUP:習得 = 700000
		ABLUPEXP:演奏経験 = 7000
	CASE IS >= 10
		ABLUP:習得 = 10000 * POWER(ABL:演奏技能, 2)
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:習得 , 0.80
	TIMES ABLUPEXP:演奏経験 , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:習得 , 1.30
	TIMES ABLUPEXP:演奏経験 , 1.30
ENDIF

;こっちは絶対音感持っててもボーナス無し
;針さばき持ってるとほんの少し楽になる
IF TALENT:針さばき
	TIMES ABLUP:習得 , 0.95
	TIMES ABLUPEXP:演奏経験 , 0.95
ENDIF

;@CHECK_JUEL_演奏技能
;習得の珠、演奏経験で上げる
SIF JUEL:習得 >= ABLUP:習得 && EXP:演奏経験 >= ABLUPEXP:演奏経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_演奏技能
IF ABLUP:習得
	SIF JUEL:習得 < ABLUP:習得
		SETCOLORBYNAME gray
	PRINTFORM [習得の珠×{ABLUP:習得}]
	RESETCOLOR
ENDIF

IF ABLUPEXP:演奏経験
	SIF EXP:演奏経験 < ABLUPEXP:演奏経験
		SETCOLORBYNAME gray
	PRINTFORM [演奏経験{ABLUPEXP:演奏経験}以上]
	RESETCOLOR
ENDIF
