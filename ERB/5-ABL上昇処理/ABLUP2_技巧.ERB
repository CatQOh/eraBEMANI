@ABL_CHECK_技巧
SELECTCASE ABL:技巧
	CASE 0
		ABLUP:習得 = 1
	CASE 1
		ABLUP:習得 = 20
	CASE 2
		ABLUP:習得 = 200
	CASE 3
		ABLUP:習得 = 3000
	CASE 4
		ABLUP:習得 = 20000
	CASE 5
		ABLUP:習得 = 25000
	CASE 6
		ABLUP:習得 = 34000
	CASE 7
		ABLUP:習得 = 45000
	CASE 8
		ABLUP:習得 = 55000
	CASE 9
		ABLUP:習得 = 70000
	CASE IS >= 10
		ABLUP:習得 = 800 * POWER(ABL:技巧, 2)
ENDSELECT

;淫乱系陥落
SIF FALLTYPE(TARGET) == 2
	TIMES ABLUP:習得 , 0.80

;@CHECK_JUEL_技巧
;習得の珠で上げる
SIF JUEL:習得 >= ABLUP:習得
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_技巧
SIF JUEL:習得 < ABLUP:習得
	SETCOLORBYNAME gray
PRINTFORM [習得の珠×{ABLUP:習得}]
RESETCOLOR
