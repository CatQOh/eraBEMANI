@ABL_CHECK_Ｖ感覚
SELECTCASE ABL:Ｖ感覚
	CASE 0
		ABLUP:快Ｖ = 1
		ABLUPEXP:Ｖ経験 = 2
	CASE 1
		ABLUP:快Ｖ = 20
		ABLUPEXP:Ｖ経験 = 10
	CASE 2
		ABLUP:快Ｖ = 400
		ABLUPEXP:Ｖ経験 = 30
	CASE 3
		ABLUP:快Ｖ = 5000
		ABLUPEXP:Ｖ経験 = 75
	CASE 4
		ABLUP:快Ｖ = 15000
		ABLUPEXP:Ｖ経験 = 150
	CASE 5
		ABLUP:快Ｖ = 30000
		ABLUPEXP:Ｖ経験 = 230
	CASE 6
		ABLUP:快Ｖ = 40000
		ABLUPEXP:Ｖ経験 = 270
	CASE 7
		ABLUP:快Ｖ = 50000
		ABLUPEXP:Ｖ経験 = 360
	CASE 8
		ABLUP:快Ｖ = 60000
		ABLUPEXP:Ｖ経験 = 420
	CASE 9
		ABLUP:快Ｖ = 70000
		ABLUPEXP:Ｖ経験 = 500
	CASE IS >= 10
		ABLUP:快Ｖ = 800 * POWER(ABL:Ｖ感覚, 2)
ENDSELECT

;陥落素質での補正
;淫乱
IF TALENT:淫乱
	TIMES ABLUP:快Ｖ , 0.80
	TIMES ABLUPEXP:Ｖ経験 , 0.80
ENDIF
;淫魔
IF TALENT:淫魔
	TIMES ABLUP:快Ｖ , 0.50
	TIMES ABLUPEXP:Ｖ経験 , 0.50
ENDIF
;淫膣
IF TALENT:淫膣
	TIMES ABLUP:快Ｖ , 0.80
	TIMES ABLUPEXP:Ｖ経験 , 0.80
ENDIF

;@CHECK_JUEL_Ｖ感覚
;快Ｖの珠、Ｖ経験が必要
SIF JUEL:快Ｖ >= ABLUP:快Ｖ && EXP:Ｖ経験 >= ABLUPEXP:Ｖ経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_Ｖ感覚
SIF JUEL:快Ｖ < ABLUP:快Ｖ
	SETCOLORBYNAME gray
PRINTFORM [快Ｖの珠×{ABLUP:快Ｖ}]
RESETCOLOR

IF ABLUPEXP:Ｖ経験
	SIF EXP:Ｖ経験 < ABLUPEXP:Ｖ経験
		SETCOLORBYNAME gray
	PRINTFORM [Ｖ経験{ABLUPEXP:Ｖ経験}以上]
	RESETCOLOR
ENDIF
