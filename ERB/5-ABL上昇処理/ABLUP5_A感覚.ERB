@ABL_CHECK_Ａ感覚
SELECTCASE ABL:Ａ感覚
	CASE 0
		ABLUP:快Ａ = 1
		ABLUPEXP:Ａ経験 = 2
	CASE 1
		ABLUP:快Ａ = 20
		ABLUPEXP:Ａ経験 = 10
	CASE 2
		ABLUP:快Ａ = 400
		ABLUPEXP:Ａ経験 = 30
	CASE 3
		ABLUP:快Ａ = 5000
		ABLUPEXP:Ａ経験 = 75
	CASE 4
		ABLUP:快Ａ = 15000
		ABLUPEXP:Ａ経験 = 150
	CASE 5
		ABLUP:快Ａ = 30000
		ABLUPEXP:Ａ経験 = 230
	CASE 6
		ABLUP:快Ａ = 40000
		ABLUPEXP:Ａ経験 = 270
	CASE 7
		ABLUP:快Ａ = 50000
		ABLUPEXP:Ａ経験 = 360
	CASE 8
		ABLUP:快Ａ = 60000
		ABLUPEXP:Ａ経験 = 420
	CASE 9
		ABLUP:快Ａ = 70000
		ABLUPEXP:Ａ経験 = 500
	CASE IS >= 10
		ABLUP:快Ａ = 800 * POWER(ABL:Ａ感覚, 2)
ENDSELECT

;陥落素質での補正
;淫乱
IF TALENT:淫乱
	TIMES ABLUP:快Ａ , 0.80
	TIMES ABLUPEXP:Ａ経験 , 0.80
ENDIF
;淫魔
IF TALENT:淫魔
	TIMES ABLUP:快Ａ , 0.50
	TIMES ABLUPEXP:Ａ経験 , 0.50
ENDIF
;淫尻
IF TALENT:淫尻
	TIMES ABLUP:快Ａ , 0.80
	TIMES ABLUPEXP:Ａ経験 , 0.80
ENDIF

;去勢済みだと感じやすくなる
IF TALENT:去勢済み
	TIMES ABLUP:快Ａ , 0.30
	TIMES ABLUPEXP:Ａ経験 , 0.30
ENDIF

;@CHECK_JUEL_Ａ感覚
;快Ａの珠、Ａ経験で上げる
SIF JUEL:快Ａ >= ABLUP:快Ａ && EXP:Ａ経験 >= ABLUPEXP:Ａ経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_Ａ感覚
SIF JUEL:快Ａ < ABLUP:快Ａ
	SETCOLORBYNAME gray
PRINTFORM [快Ａの珠×{ABLUP:快Ａ}]
RESETCOLOR

IF ABLUPEXP:Ａ経験
	SIF EXP:Ａ経験 < ABLUPEXP:Ａ経験
		SETCOLORBYNAME gray
	PRINTFORM [Ａ経験{ABLUPEXP:Ａ経験}以上]
	RESETCOLOR
ENDIF
