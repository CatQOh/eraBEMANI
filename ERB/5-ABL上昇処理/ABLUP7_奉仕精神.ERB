		ABLUP:恭順 = 40000
		ABLUP:屈服 = 80000
		ABLUPEXP:絶頂経験 = 400
		ABLUPEXP:奉仕快楽経験 = 600
	CASE IS >= 10
		ABLUP:恭順 = 500 * POWER(ABL:奉仕精神, 2)
		ABLUP:屈服 = 1000 * POWER(ABL:奉仕精神, 2)
ENDSELECT

;素質での補正
;恋慕
SIF TALENT:恋慕
	TIMES ABLUP:恭順 , 0.80
;親愛
SIF TALENT:親愛
	TIMES ABLUP:恭順 , 0.60
;淫乱
IF TALENT:淫乱
	TIMES ABLUP:恭順 , 0.90
	TIMES ABLUP:屈服 , 0.90
ENDIF
;淫魔
IF TALENT:淫魔
	TIMES ABLUP:恭順 , 0.70
	TIMES ABLUP:屈服 , 0.70
ENDIF
;服従
SIF TALENT:服従
	TIMES ABLUP:屈服 , 0.70
;隷属
SIF TALENT:隷属
	TIMES ABLUP:屈服 , 0.40

;小柄体型、小人体型、幼稚
SIF TALENT:体格 == 1 || TALENT:小人体型 || TALENT:幼稚
	TIMES ABLUPEXP:絶頂経験 , 0.75

;悲観的、寂しがり屋
IF TALENT:悲観的 || TALENT:寂しがり屋
	TIMES ABLUP:恭順 , 0.80
	TIMES ABLUP:屈服 , 0.80
	TIMES ABLUPEXP:奉仕快楽経験 , 0.80
ENDIF

;陥落、妄信、献身的
IF 陥落(TARGET) || TALENT:妄信 || TALENT:献身的
	TIMES ABLUPEXP:奉仕快楽経験 , 0.50
;反抗的、プライド高い
ELSEIF TALENT:反抗的 || TALENT:プライド高い
	TIMES ABLUPEXP:奉仕快楽経験 , 1.50
ENDIF

;反抗的
SIF TALENT:反抗的
	TIMES ABLUP:屈服 , 1.20

;臆病
SIF TALENT:臆病
	TIMES ABLUP:恭順 , 1.20

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !陥落(TARGET)
		TIMES ABLUP:恭順 , 2.00
		TIMES ABLUP:屈服 , 2.00
		TIMES ABLUPEXP:絶頂経験 , 2.00
		TIMES ABLUPEXP:奉仕快楽経験 , 2.00
	;陥落
	ELSEIF 陥落(TARGET)
		TIMES ABLUP:恭順 , 0.50
		TIMES ABLUP:屈服 , 0.50
		TIMES ABLUPEXP:絶頂経験 , 0.50
		TIMES ABLUPEXP:奉仕快楽経験 , 0.50
	ENDIF
ENDIF

;LV4からは異常経験必要 LV8からは異常経験5以上必要（陥落済みなら無視できる）
IF !陥落(TARGET)
	IF ABL:奉仕精神 >= 8
		ABLUPEXP:異常経験 = 5
	ELSEIF ABL:奉仕精神 >= 4
		ABLUPEXP:異常経験 = 1
	ENDIF
ENDIF

;@CHECK_JUEL_奉仕精神
;従順が奉仕精神レベル以上でないといけない
SIF ABL:従順 < ABL:奉仕精神
	RETURN 0
;異常経験が規定値に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:異常経験
	RETURN 0

;恭順の珠、屈服の珠、絶頂経験、奉仕快楽経験が必要
SIF JUEL:恭順 >= ABLUP:恭順 && JUEL:屈服 >= ABLUP:屈服 && EXP:絶頂経験 >= ABLUPEXP:絶頂経験 && EXP:奉仕快楽経験 >= ABLUPEXP:奉仕快楽経験
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_奉仕精神
SELECTCASE ABL:奉仕精神
	CASE 4, 8
		;LV4からは異常経験必要 LV8からは異常経験5以上必要（陥落済みなら無視できる）
		SIF EXP:異常経験 < ABLUPEXP:異常経験
			SETCOLORBYNAME gray
		SIF ABLUPEXP:異常経験
			PRINTFORM [異常経験{ABLUPEXP:異常経験}以上]
		RESETCOLOR
ENDSELECT

SIF ABL:奉仕精神 > ABL:従順
	SETCOLORBYNAME gray
SIF ABL:奉仕精神
	PRINTFORM [従順LV{ABL:奉仕精神}以上]
RESETCOLOR

SIF JUEL:恭順 < ABLUP:恭順
	SETCOLORBYNAME gray
PRINTFORM [恭順の珠×{ABLUP:恭順}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:屈服
	SETCOLORBYNAME gray
PRINTFORM [屈服の珠×{ABLUP:屈服}]
RESETCOLOR

IF ABLUPEXP:絶頂経験
	SIF EXP:絶頂経験 < ABLUPEXP:絶頂経験
		SETCOLORBYNAME gray
	PRINTFORM [絶頂経験{ABLUPEXP:絶頂経験}以上]
	RESETCOLOR
ENDIF

IF ABLUPEXP:奉仕快楽経験
	SIF EXP:奉仕快楽経験 < ABLUPEXP:奉仕快楽経験
		SETCOLORBYNAME gray
	PRINTFORM [奉快経験{ABLUPEXP:奉仕快楽経験}以上]
	RESETCOLOR
ENDIF
