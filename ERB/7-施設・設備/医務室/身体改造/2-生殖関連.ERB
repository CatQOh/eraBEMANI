@体外受精
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 父親ID, 2 = -1
#DIM DYNAMIC 母親ID = -1
#DIM DYNAMIC 母体 = -1
#DIM DYNAMIC 費用, 3
#DIM DYNAMIC LRESULT

