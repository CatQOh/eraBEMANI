	SETCOLORBYNAME gray
	PRINTFORMLC 母体:----
ELSE
	PRINTFORMLC 母体:%NAME:母体%
ENDIF
RESETCOLOR
PRINTL 
DRAWLINE
PRINTPLAIN 　体外受精　
PRINT [0] - 中止する　
SIF 父親ID >= 0 && 母親ID >= 0 && 母体 >= 0
	PRINT [5] - この組み合わせで行う
PRINTL 

BINPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		DRAWLINE
		PRINTL □父親を選んでください
		FOR PAGING, 0, CHARANUM
			CALLFORM DISABLE, "EVENT_体外受精", PAGING
			CALL PAGING, !RESULT && (陥落(PAGING) || PAGING == MASTER) && 生殖機能♂(PAGING), @"\@ TALENT:PAGING:体格 == 1 ? 幼 #  \@", "父親"
		NEXT
		SELECTCASE RESULT
			CASE -1
				RESTART
			CASEELSE
				LRESULT = RESULT
				費用:0 = 50000
				;小柄体型だと費用がかさむ
				SIF TALENT:LRESULT:体格 == 1
					費用:0 += 30000
				;父親はNOで入れる
				父親ID = NOF(LRESULT)
				;子供の素質設定用
				父親ID:1 = LRESULT
				RESTART
		ENDSELECT
	CASE 2
		DRAWLINE
		PRINTL □母親を選んでください
		FOR PAGING, 0, CHARANUM
			CALLFORM DISABLE, "EVENT_体外受精", PAGING
			CALL PAGING, !RESULT && (陥落(PAGING) || PAGING == MASTER) && 生殖機能♀(PAGING) && !TALENT:PAGING:妊娠 && !TALENT:PAGING:妊娠確定, @"\@ TALENT:PAGING:体格 == 1 ? 幼 #  \@", "母親"
		NEXT
		SELECTCASE RESULT
			CASE -1
				RESTART
			CASEELSE
				費用:1 = 50000
				;小柄体型だと費用がかさむ
				SIF TALENT:RESULT:体格 == 1
					費用:1 += 30000
				母親ID = RESULT
				RESTART
		ENDSELECT
	CASE 3
		DRAWLINE
		PRINTL □母体を選んでください
		FOR PAGING, 0, CHARANUM
			CALLFORM DISABLE, "EVENT_体外受精", PAGING
			CALL PAGING, !RESULT && (陥落(PAGING) || PAGING == MASTER) && VAGINA(PAGING) && !TALENT:PAGING:妊娠 && !TALENT:PAGING:妊娠確定, @"\@ TALENT:PAGING:体格 == 1 ? 幼 #  \@", "母体"
		NEXT
		SELECTCASE RESULT
			CASE -1
				RESTART
			CASEELSE
				費用:2 = 50000
				;小柄体型だと費用がかさむ
				SIF TALENT:RESULT:体格 == 1
					費用:2 += 30000
				;初産でも費用かさむ
				SIF !EXP:RESULT:出産経験
					費用:2 += 30000
				母体 = RESULT
				RESTART
		ENDSELECT
	CASE 4
		DRAWLINE
		PRINTL □誰の精子を使いますか？
		FOR LCOUNT, 0, 20000
			IF 採取精液:LCOUNT
				CALLFORM DISABLE, "EVENT_体外受精", LCOUNT
				SIF !RESULT
					PRINTFORML 　[{LCOUNT, 5, RIGHT}] %CSVNAMEF(LCOUNT)% 残り:{採取精液:LCOUNT}回分
			ENDIF
		NEXT
		DRAWLINE
		PRINTPLAIN 　採取精子　
		PRINT [-1] 戻る
		BINPUT
		SELECTCASE RESULT
			CASE -1
				RESTART
			CASEELSE
				費用:0 = 100000
				父親ID = RESULT
				父親ID:1 = GETCHARA(父親ID)
				RESTART
		ENDSELECT
	CASE 5
		DRAWLINE
		IF MONEY < SUMARRAY(費用) && !ORIGIN
			PRINTW 費用が足りません
			RESTART
		ENDIF
		PRINTL 体外受精を始めます
		CALL PAYMENT, -SUMARRAY(費用), "体外受精費用"
		IF 母親ID != 母体
			PRINTFORMW %CALLNAME:母親ID%と%CALLNAME:母体%は準備のため休養に入ります
		ELSE
			PRINTFORMW %CALLNAME:母親ID%は準備のため休養に入ります
		ENDIF
		SIF TARGET == 母親ID || TARGET == 母体
			TARGET = -1
		SIF ASSI == 母親ID || ASSI == 母体
			ASSI = -1
		CFLAG:母親ID:使用不可 = 15
		CFLAG:母体:使用不可 = 15
		CFLAG:母親ID:使用不可状態 = 1
		CFLAG:母体:使用不可状態 = 1
		CFLAG:母親ID:ストレス値 += 5
		CFLAG:母体:ストレス値 += 10

		;妊娠は確定する
		PREG:母体:出産予定日 = DAY+60+RAND:21
		PREG:母体:父親 = 父親ID
		PREG:母体:母親 = NOF(母親ID)
		PREG:母体:体外受精 = 1
		TALENT:母体:妊娠確定 = 1
		SIF 父親ID:1 == -1 || CFLAG:(父親ID:1):キャラロスト
			採取精液:父親ID--
		CALL CHILDSET, 母親ID, 父親ID:1, 母体
		口上用患者:0 = 母親ID
		口上用患者:1 = 父親ID
		口上用患者:2 = 母体
		CALL 身体改造口上, "体外受精"
		;医療経験加算
		FOR LCOUNT, 0, CHARANUM
			SIF CSTR:LCOUNT:配属 == "医務室" && CFLAG:LCOUNT:配属完了
				EXP:LCOUNT:医療経験 += 3
		NEXT
		RETURN 1
ENDSELECT

