@STRATEGY_INCOME
#DIM DYNAMIC LCOUNT
;休業日に営業開始して収入入るのを防ぐため
;配属完了の処理だけは休業日でもやる

FOR LCOUNT, 0, CHARANUM
	SELECTCASE CSTR:LCOUNT:配属
		CASE "ゲームセンター", "ゲーセン売春", "娼館", "飲食店"
			CFLAG:LCOUNT:配属完了 = 1
	ENDSELECT
NEXT
IF INRANGE(GC:営業中, 1, DAY-1) || (GC:営業中 && DAY == 1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "ゲームセンター" || CSTR:LCOUNT:配属 == "ゲーセン売春"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_GC
	CALL INCOME_GC_BR
ENDIF
CALL CHECKDRAWLINEW

IF INRANGE(BR:営業中, 1, DAY-1) || (BR:営業中 && DAY == 1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "娼館"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_BR
ENDIF
CALL CHECKDRAWLINEW

IF INRANGE(INN:営業中, 1, DAY-1) || (INN:営業中 && DAY == 1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "飲食店"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_飲食店
ENDIF
CALL CHECKDRAWLINEW

CALL INCOME_博物館
CALL CHECKDRAWLINEW

RETURN 0

