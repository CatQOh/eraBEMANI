	PRINTL 　[1] - 素質を変更する
	PRINTL 　[2] - 素質をプリセットから選ぶ
	SIF アイテムあり
		PRINTL 　[3] - 部品を使用する
ENDIF
PRINTL 　[4] - 名前を変更する
PRINTL 　[5] - 体格を変更する
SIF TALENT:性別 == 2 || MOD:バストサイズ男性対象
	PRINTL 　[6] - バストサイズを変更する
DRAWLINE
PRINTPLAIN 　ロボットファクトリー　
PRINTL [0] - 戻る [10] - 作成する

BINPUT
SELECTCASE RESULT
	CASE 0
		CALL CLEAR_CHARA, TARGET, 0,1
		RETURN 0
	CASE 1
		VARLINE = 0
		$TALENT
		CALL LOOP_CLEARLINE
		DRAWLINE
		PRINTL □素質を選択してください 括弧内は製作コスト
		FOR LCOUNT, 0, VARSIZE("TALENT")
			SIF 素質変更可能:LCOUNT
				PRINTFORMLC [{LCOUNT, 3}] %TALENTNAME:LCOUNT%({素質変更可能:LCOUNT}) \@ TALENT:LCOUNT ? ○ # × \@
		NEXT
		CALL NEWLINE
		DRAWLINE
		PRINTPLAIN 　ロボットファクトリー　
		PRINTL [-1] - 戻る
		BINPUT
		SIF RESULT == -1
			RESTART
		LRESULT = RESULT
		IF INRANGE(LRESULT, 0, VARSIZE("TALENT")) && 素質変更可能:LRESULT
			INVERTBIT TALENT:LRESULT, 0
			GOTO TALENT
		ENDIF
		RESTART
	CASE 2
		PRINTL プリセットを選択してください
		PRINTL [1] - 従順
		PRINTL [2] - 家事手伝い
		PRINTL [3] - セクサロイド
		PRINTL [4] - ポンコツ
		PRINTL [0] - 戻る
		BINPUT
		SELECTCASE RESULT
			CASE 1
				VARSET TALENT:0, 0, 1
				TALENT:素直 = 1
				TALENT:快感に素直 = 1
				TALENT:大人しい = 1
				TALENT:献身的 = 1
				TALENT:汚れ無視 = 1
			CASE 2
				VARSET TALENT:0, 0, 1
				TALENT:世話好き = 1
				TALENT:習得早い = 1
				TALENT:買い物上手 = 1
				TALENT:潔癖症 = 1
				TALENT:鼓舞 = 1
			CASE 3
				VARSET TALENT:0, 0, 1
				TALENT:好奇心 = 1
				TALENT:汚れ無視 = 1
				TALENT:回復早い = 1
				TALENT:男好き = 1
				TALENT:女好き = 1
				TALENT:舌使い = 1
				TALENT:小悪魔 = 1
			CASE 4
				VARSET TALENT:0, 0, 1
				TALENT:反抗的 = 1
				TALENT:回復遅い = 1
				TALENT:浪費癖 = 1
				TALENT:痛みに弱い = 1
				TALENT:習得遅い = 1
				TALENT:遊び人 = 1
		ENDSELECT
		RESTART
	CASE 3
		VARLINE = 0
		$ABL
		CALL LOOP_CLEARLINE
		感覚合計 = 0
		IF リソース:性感センサー
			PRINTFORML □感覚の強化 性感センサーを使用(現在{リソース:性感センサー}個所持)
			FOR LCOUNT, 0, 100
				SELECTCASE ABLNAME:LCOUNT
					CASE "Ｖ感覚"
						SIF !VAGINA(TARGET)
							CONTINUE
					CASE "Ｃ感覚", "Ａ感覚", "Ｂ感覚"
					CASEELSE
						CONTINUE
				ENDSELECT
				感覚合計 += ABL:LCOUNT
				PRINTPLAINFORM 　%ABLNAME:LCOUNT%Lv{ABL:LCOUNT} 
				PRINTFORM [-{LCOUNT+1}] %ABLNAME:LCOUNT%-1 
				PRINTFORM [{LCOUNT+1}] %ABLNAME:LCOUNT%+1
				PRINTL 
			NEXT
		ENDIF
		交友合計 = 0
		IF リソース:交友インターフェイス
			PRINTFORML □コミュニケーション能力を強化 交友インターフェイスを使用(現在{リソース:交友インターフェイス}個所持)
			FOR LCOUNT, 0, 100
				SELECTCASE ABLNAME:LCOUNT
					CASE "従順", "欲望", "技巧", "奉仕精神"
					CASEELSE
						CONTINUE
				ENDSELECT
				交友合計 += ABL:LCOUNT
				PRINTPLAINFORM 　%ABLNAME:LCOUNT%Lv{ABL:LCOUNT} 
				PRINTFORM [-{LCOUNT+1}] %ABLNAME:LCOUNT%-1 
				PRINTFORM [{LCOUNT+1}] %ABLNAME:LCOUNT%+1
				PRINTL 
			NEXT
		ENDIF
		中毒合計 = 0
		IF リソース:制御不能基板
			PRINTFORML □不規則性プログラムを追加 制御不能基板が必要(現在{リソース:制御不能基板}個所持)
			FOR LCOUNT, 0, 100
				SELECTCASE ABLNAME:LCOUNT
					CASE "自慰中毒", "精液中毒", "レズ中毒", "ゲイ中毒", "性交中毒"
					CASEELSE
						CONTINUE
				ENDSELECT
				中毒合計 += ABL:LCOUNT
				PRINTPLAINFORM 　%ABLNAME:LCOUNT%Lv{ABL:LCOUNT} 
				PRINTFORM [-{LCOUNT+1}] %ABLNAME:LCOUNT%-1 
				PRINTFORM [{LCOUNT+1}] %ABLNAME:LCOUNT%+1
				PRINTL 
			NEXT
		ENDIF
		SIF リソース:感情再現デバイス（恋慕）
			PRINTL [100] - 恋慕を付ける
		SIF リソース:感情再現デバイス（淫乱）
			PRINTL [101] - 淫乱を付ける
		SIF リソース:感情再現デバイス（服従）
			PRINTL [102] - 服従を付ける
		SIF FALLTYPE(TARGET)
			PRINTL [103] - 陥落素質を付けない
		DRAWLINE
		PRINTPLAIN 　アイテム使用　
		PRINTL [0] - 戻る
		BINPUT
		LRESULT = RESULT
		SELECTCASE ABS(LRESULT)
			CASE 0
				IF 感覚合計 > リソース:性感センサー
					PRINTW 性感センサーが足りません
					GOTO ABL
				ENDIF
				IF 交友合計 > リソース:交友インターフェイス
					PRINTW 交友インターフェイスが足りません
					GOTO ABL
				ENDIF
				IF 中毒合計 > リソース:制御不能基板
					PRINTW 制御不能基板が足りません
					GOTO ABL
				ENDIF
				RESTART
			CASE 1 TO 99
				IF SIGN(LRESULT) == -1
					SIF ABL:(ABS(LRESULT)-1) > 0
						ABL:(ABS(LRESULT)-1)--
				ELSE
					SIF ABL:(LRESULT-1) < 10
						ABL:(LRESULT-1)++
				ENDIF
			CASE 100
				TALENT:恋慕 = 1
				TALENT:淫乱 = 0
				TALENT:服従 = 0
			CASE 101
				TALENT:恋慕 = 0
				TALENT:淫乱 = 1
				TALENT:服従 = 0
			CASE 102
				TALENT:恋慕 = 0
				TALENT:淫乱 = 0
				TALENT:服従 = 1
			CASE 103
				TALENT:恋慕 = 0
				TALENT:淫乱 = 0
				TALENT:服従 = 0
		ENDSELECT
		GOTO ABL
	CASE 4
		PRINTL [1] - ランダムで命名する
		PRINTL [2] - 名前を入力する
		SIF CFLAG:複製
			PRINTL [3] - オリジナルと同じ名前にする
		BINPUT
		SELECTCASE RESULT
			CASE 1
				NAME:TARGET = %ランダム命名(RAND(1, 4))%
				CALLNAME:TARGET = %NAME:TARGET%
				RESTART
			CASE 2
				PRINTL 名前を入力してください（何も入力しなかった場合は変更されません）
				INPUTS
				SIF RESULTS == ""
					RESTART
				NAME:TARGET = %RESULTS%
				CALLNAME:TARGET = %RESULTS%
				RESTART
			CASE 3
				NAME:TARGET = %CSVNAME(CFLAG:複製)%(クローン\@ DNAデータ:(CFLAG:複製) >= 2 ? {DNAデータ:(CFLAG:複製)} #\@)
				CALLNAME:TARGET = %CSVCALLNAME(CFLAG:複製)%(クローン\@ DNAデータ:(CFLAG:複製) >= 2 ? {DNAデータ:(CFLAG:複製)} #\@)
				RESTART
		ENDSELECT
	CASE 5
		PRINTL 体格を選んでください
		PRINTL [1] - 幼児体型
		PRINTL [2] - 小柄体型
		PRINTL [3] - 普通体型
		PRINTL [4] - 長身体型
		PRINTL [5] - 小人体型
		BINPUT
		SELECTCASE RESULT
			CASE 1 TO 4
				TALENT:体格 = RESULT
				TALENT:小人体型 = 0
			CASE 5
				TALENT:体格 = 3
				TALENT:小人体型 = 1
		ENDSELECT
		RESTART
	CASE 6
		PRINTL バストサイズを選んでください
		SIF TALENT:性別 == 1
			PRINTL [0] 無し
		PRINTL [1] - 絶壁
		PRINTL [2] - 貧乳
		PRINTL [3] - 並乳
		PRINTL [4] - 巨乳
		PRINTL [5] - 豊乳
		PRINTL [6] - 爆乳
		BINPUT
		TALENT:バストサイズ = RESULT
		RESTART
	CASE 8
		SELECTCASE TALENT:性別
			CASE 1
				TALENT:性別 = 2
				SIF !TALENT:バストサイズ
					TALENT:バストサイズ = 3
			CASE 2
				TALENT:性別 = 1
				SIF !MOD:バストサイズ男性対象
					TALENT:バストサイズ = 0
		ENDSELECT
		RESTART
	CASE -9
		SIF MAXBASE:体力 <= 1500
			CONTINUE
		MAXBASE:体力 -= 300
		MAXBASE:気力 -= 300
		RESTART
	CASE 9
		MAXBASE:体力 += 300
		MAXBASE:気力 += 300
		RESTART
	CASE 10
		IF 製作コスト*コスト基準額 > MONEY+(リソース:マテリアル*コスト基準額) && !ORIGIN
			PRINTW 所持金が足りません
			RESTART
		ENDIF
		IF ORIGIN
			PRINTL このロボットを作成します。よろしいですか？
		ELSE
			IF リソース:マテリアル >= 製作コスト
				PRINTFORML マテリアル{製作コスト}個を使用してこのロボットを作成します。よろしいですか？
			ELSEIF リソース:マテリアル
				CALL PASELIL, @"マテリアルを{リソース:マテリアル}個と{(製作コスト-リソース:マテリアル)*コスト基準額}＄を使用してこのロボットを作成します。よろしいですか？"
			ELSE
				CALL PASELIL, @"{製作コスト*コスト基準額}＄を使用してこのロボットを作成します。よろしいですか？"
			ENDIF
		ENDIF
		PRINTL [0] - はい
		PRINTL [1] - いいえ
		BINPUT
		SIF RESULT == 1
			RESTART
		IF リソース:マテリアル >= 製作コスト
			リソース:マテリアル -= 製作コスト
		ELSEIF リソース:マテリアル
			CALL PAYMENT, -(製作コスト-リソース:マテリアル)*コスト基準額, "ロボット制作"
			リソース:マテリアル = 0
		ELSE
			CALL PAYMENT, -製作コスト*コスト基準額, "ロボット制作"
		ENDIF
		;子供と同じ扱い
		FLAG:子供の数++
		CFLAG:誕生日 = MONTH*100+DAYS
		リソース:性感センサー -= 感覚合計
		リソース:交友インターフェイス -= 交友合計
		リソース:制御不能基板 -= 中毒合計
		TALENT:無機物 = 1
		CALL SETBASE, TARGET
		SELECTCASE FALLTYPE(TARGET)
			CASE 1
				リソース:感情再現デバイス（恋慕）--
			CASE 2
				リソース:感情再現デバイス（淫乱）--
			CASE 3
				リソース:感情再現デバイス（服従）--
		ENDSELECT
		IF 素質コスト > 10 && !CFLAG:複製
			;超過分だけ回して余分な素質が付く
			FOR LCOUNT, 0, 素質コスト-10
				SELECTCASE RAND:17
					CASE 0
						IF RAND:2
							TALENT:プライド高い = 1
							TALENT:プライド低い = 0
