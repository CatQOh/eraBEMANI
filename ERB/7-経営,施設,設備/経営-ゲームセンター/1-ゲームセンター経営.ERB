								PRINTPLAINFORM [{LCOUNT, 2}]
								RESETCOLOR
							ELSE
								PRINTFORM [{LCOUNT, 2}]
							ENDIF
							SIF LCOUNT%6 == 0
								PRINTL 
						NEXT
						PRINTL [-1] やめる
						BINPUT
						SELECTCASE RESULT
							CASE -1
								CONTINUE
							CASEELSE
								購入数 = RESULT
								CALL TUTORIAL, "経営_GC_3"
								PRINTFORMW ＜%ERDNAME(筐体, 購入筐体)%を{購入数}台購入しました＞
								筐体:購入筐体 += 購入数
