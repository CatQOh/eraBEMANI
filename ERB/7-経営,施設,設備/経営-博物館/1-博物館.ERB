	SIF GETCHARA(父親取得(対象)) > 0 && CSTR:GETCHARA(父親取得(対象)):配属 == "博物館"
		CALL 崩壊処理, GETCHARA(父親取得(対象)), "子供を解体"
	SIF GETCHARA(母親取得(対象)) > 0 && CSTR:GETCHARA(母親取得(対象)):配属 == "博物館"
		CALL 崩壊処理, GETCHARA(母親取得(対象)), "子供を解体"
