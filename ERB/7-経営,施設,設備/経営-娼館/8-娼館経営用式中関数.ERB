#DIM DYNAMIC アイテム番号

SELECTCASE ERDNAME(BRITEM, アイテム番号)
	CASE "ローター"
		RETURNF 300
	CASE "バイブ", "鞭", "ペニスバンド", "睡眠薬", "アナルバイブ"
		RETURNF 500
	CASE "縄", "媚薬"
		RETURNF 1000
