@IDOL_BRIBE
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 費用
#DIM DYNAMIC 知名度計算用
;ORIGINでは枕営業のみ
SIF ORIGIN
	GOTO MAKURA_LOOP
DRAWLINE
PRINTL 何をしますか？
PRINTL [1] 賄賂を送る
PRINTL [2] 枕営業をさせる
DRAWLINE
PRINTPLAIN 　BRIBE　
PRINTL [0] 戻る

BINPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		;知名度が50上昇したあと1%上昇する
		;贈賄に必要な金額は、知名度をX(ただしXが40未満のとき40にする)と置くと
		;1000*X^1.5
		費用 = IDOL:知名度
		知名度計算用 = IDOL:知名度
		SIF 費用 < 40
			費用 = 40
		費用 *= SQRT(費用*1000*1000)
		;1000の倍数に四捨五入
		費用 += 500
		費用 /= 1000
		費用 *= 1000
		CALL PASELIL, @"賄賂による裏工作をするには{費用}＄必要です"
		IF MONEY < 費用
			PRINTW お金が足りません
			RESTART
		ENDIF
		CALL PASELIL, @"支払いますか？(所持金:{MONEY}＄)"
		PRINTL [0] はい
		PRINTL [1] いいえ
		BINPUT
		IF RESULT == 0
			CALL PAYMENT, -費用, "交際費"
			IDOL:知名度 += 50
			TIMES IDOL:知名度, 1.01
			CALL PASELIW, @"{費用}＄を支払い知名度を{IDOL:知名度-知名度計算用}上昇させました"
			IF パートナー != ""
				SIF OPTION:口上表示 && !CFLAG:GETCHARANAME(パートナー):口上非表示
					TRYCALLFORM IDOL_賄賂_%CSVNAMERPS(GETNO(パートナー))%
			ENDIF
		ENDIF
		RESTART
	CASE 2
		;枕営業とレッスンの切り替えについて
		;CFLAG:レッスンの変数を次のように変換する
		;0と-1、1と-2、2と-3、3と-4……
		;負の数ならば枕営業となる
		;	Y = -X-1
		;のような式になるうえに、この逆関数は
		;	X = -Y-1
		;となるので枕営業の設定・解除のどちらの場合も
		;「-1倍して1引く」という演算で済む
		$MAKURA_LOOP
		DRAWLINE
		PRINTL □枕営業をさせるキャラを選んでください

		FOR LCOUNT, 0, CHARANUM
			CALLFORM DISABLE, "枕営業", LCOUNT
			SIF RESULT
				CONTINUE
			;体力不足だと無理
			SIF BASE:LCOUNT:体力 < 500
				CONTINUE
			IF CSTR:LCOUNT:配属 == "芸能プロダクション"
				IF CFLAG:LCOUNT:レッスン == 0
					PRINT 　　　　　
				ELSEIF CFLAG:LCOUNT:レッスン < 0
					PRINT 枕営業予定
				ELSEIF CFLAG:LCOUNT:レッスン%3 == 1
					PRINTFORM Vocal(Lv{(CFLAG:LCOUNT:レッスン+2)/3})
				ELSEIF CFLAG:LCOUNT:レッスン%3 == 2
					PRINTFORM Inst.(Lv{(CFLAG:LCOUNT:レッスン+1)/3})
				ELSE
					PRINTFORM Dance(Lv{CFLAG:LCOUNT:レッスン/3})
				ENDIF
				PRINTFORML  [{LCOUNT, 2, RIGHT}] - %NAME:LCOUNT, 26, LEFT%(従順:{ABL:LCOUNT:従順, 2, LEFT} 技巧:{ABL:LCOUNT:技巧, 2, LEFT} 奉仕精神:{ABL:LCOUNT:奉仕精神, 2, LEFT})
			ENDIF
		NEXT
		DRAWLINE
		PRINTPLAIN 　MAKURA　
		PRINTL [0] 戻る
		BINPUT
		SELECTCASE RESULT
			CASE 0
				IF ORIGIN
					RETURN 0
				ELSE
					RESTART
				ENDIF
			CASE 1 TO CHARANUM-1
				CFLAG:RESULT:レッスン *= -1
				CFLAG:RESULT:レッスン--
				GOTO MAKURA_LOOP
		ENDSELECT
ENDSELECT

