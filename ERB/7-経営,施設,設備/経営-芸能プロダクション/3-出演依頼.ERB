	IF CSTR:LCOUNT:配属 == "芸能プロダクション" && ユニット担当記録用:LCOUNT
		IF TALENT:LCOUNT:魅惑
			TIMES 技量:1, 1.02
			TIMES 技量:2, 1.02
			TIMES 技量:3, 1.02
		ENDIF
		IF TALENT:LCOUNT:魅力
			TIMES 技量:1, 1.03
			TIMES 技量:2, 1.03
			TIMES 技量:3, 1.03
		ENDIF
		IF TALENT:LCOUNT:謎の魅力
			TIMES 技量:1, 1.04
			TIMES 技量:2, 1.04
			TIMES 技量:3, 1.04
		ENDIF
		IF TALENT:LCOUNT:人気
			TIMES 技量:1, 1.05
			TIMES 技量:2, 1.05
			TIMES 技量:3, 1.05
		ENDIF
		;去勢済みの男性はボーカルにボーナス
		SIF TALENT:LCOUNT:去勢済み && SEX(LCOUNT) == 1
			TIMES 技量:1, 1.05
	ENDIF
