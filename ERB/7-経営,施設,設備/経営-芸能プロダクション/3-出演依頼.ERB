				ENDSELECT
				TALENT:LCOUNT:人気 = 1
			ENDIF
			;実績の判定
			IF 担当曲判定(LCOUNT, IDOL選曲)
				IF CHARANAMEF(LCOUNT) == "MZD"
					リミ曲実績:0 = 1
				ELSE
					リミ曲実績:1 = 1
				ENDIF
			ENDIF
			;ボーカルがいる場合のみ
			SIF GROUPMATCH(ユニット担当記録用:LCOUNT, 3, 4, 5) && IDOL選曲 == "conflict"
				CALL 実績解除, "conflict歌います"
		ENDIF
	NEXT
