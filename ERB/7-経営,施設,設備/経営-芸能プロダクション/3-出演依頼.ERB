;ユニット数を数える
ユニット数 = 0
FOR LCOUNT, 1, 11
	SIF ユニット名:LCOUNT != ""
		ユニット数++
NEXT

$MUSIC_SELECT
SIF 依頼
	GOTO MEMBER_LOOP
