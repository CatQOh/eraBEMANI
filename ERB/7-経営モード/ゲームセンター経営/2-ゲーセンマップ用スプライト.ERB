		幅:1 = 2
	CASE "クイズマジックアカデミー"
		オブジェクト名 = QMA
		幅:0 = 2
		幅:1 = 2
	CASE "オンゲキ"
		オブジェクト名 = オンゲキ
		幅:0 = 2
		幅:1 = 2
	CASE "カードコネクト"
		オブジェクト名 = カードコネクト
		幅:0 = 2
		幅:1 = 2
	CASE "カードメイカー"
		オブジェクト名 = カードメイカー
		幅:0 = 2
		幅:1 = 2
	CASE "両替機", "メダル両替機"
		オブジェクト名 = 両替機
		幅:0 = 2
		幅:1 = 2
	CASE "PASELI券売機", "PASELIチャージ機", 
		オブジェクト名 = パセリチャージ機
		幅:0 = 2
		幅:1 = 2
	CASE "ビデオポーカー", "ポーカーソリティア", "モンテカルロ", "ブラックジャック"
		オブジェクト名 = トランプゲーム
		幅:0 = 2
		幅:1 = 2
	CASE "自販機（飲み物）", "自販機（軽食）", "自販機（アイス）", "マッサージチェア", "待ち椅子", 
		オブジェクト名 = %筐体名%
		幅:0 = 2
		幅:1 = 2
ENDSELECT

RETURN
