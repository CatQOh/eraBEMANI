@博物館
#DIM DYNAMIC 改装費用

SIF 博物館広さ < 10
	博物館広さ = 10

改装費用 = POWER(博物館広さ, 3)*1000

PRINTL □博物館の運営をします
PRINTL 　博物館に展示できるオブジェは、魔法「ジュエリーストーム(レベル5)」やキャラを加工して作成できます
CALL PASELIL, @"　現在の名声:{博物館名声} 昨日の収入:{博物館収入}＄ 現在の所持金:{MONEY}＄"
PRINTL 
PRINTL 　[1] - 作品を展示する
PRINTL 　[2] - 作品を作る
IF 博物館広さ >= 30
	PRINTL 　[-] - 博物館の広さは最大です
ELSE
	CALL PASELIL, @"　[3] - 博物館を改装する（現在の広さ:{博物館広さ} 改装費用:{改装費用}＄）"
ENDIF
PRINTL 　[9] - 博物館マニュアル
DRAWLINE
PRINTPLAIN 　MUSEUM　
PRINTL [0] - 戻る

CALL INPUTF, 0, 1, 2, 3, 9

SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		CALL 博物館_MAP
		RESTART
	CASE 2
		CALL 博物館_CREATE
		;何もしないで戻ってきた場合
		SIF RESULT == 0
			RESTART
		;作品を作ったらターンエンド
		JUMP ターン終了
	CASE 3
		IF 博物館広さ >= 30
			PRINTW 博物館の広さは最大です
			RESTART
		ENDIF
		IF MONEY < 改装費用
			PRINTW 改装費用が足りません
			RESTART
		ENDIF
		MONEY -= 改装費用
		CALL 現金出納帳記録, @"博物館改築/-{改装費用}"
		博物館広さ++
		RESTART
	CASE 9
		CALL MANUAL_博物館
		RESTART
ENDSELECT

@博物館_MAP
#DIM DYNAMIC ページ数
#DIM DYNAMIC 次ページあり
#DIM DYNAMIC 処理数
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNTX
#DIM DYNAMIC LCOUNTY
#DIM DYNAMIC XRES
#DIM DYNAMIC YRES
#DIM DYNAMIC ID
#DIM DYNAMIC 設置済み, 1000
#DIMS DYNAMIC HTML用

#DIM CONST 種類 = 0
#DIM CONST 名前 = 1
#DIM CONST ナンバー = 2
#DIM CONST 価値 = 3
#DIM CONST 色 = 4
#DIM CONST 血縁 = 5
#DIM CONST クローン = 6
#DIM CONST 集客力 = 7
#DIM CONST 汚れ = 8

CALL LOOP_CLEARLINE

VARSET 設置済み
FOR LCOUNTY, 0, 博物館広さ
	HTML用 = 
	FOR LCOUNTX, 0, 博物館広さ
		ID = 博物館マップ:LCOUNTY:LCOUNTX
		IF ID > 0 && MUSEUM:ID:種類 == ""
			博物館マップ:LCOUNTY:LCOUNTX = 0
			ID = 0
		ENDIF
		IF ID > 0
			HTML用 += SET_TOOLTIPBUTTON("■", @"{LCOUNTX*100+LCOUNTY}", @"%MUSEUM:ID:名前% 価値:%MUSEUM:ID:価値% 集客力:%MUSEUM:ID:集客力%\% \@ 博物館射 ? 汚された回数:%MUSEUM:ID:汚れ% #\@", MUSEUM:ID:色)
			設置済み:ID = 1
		ELSE
			HTML用 += SET_TOOLTIPBUTTON("■", @"{LCOUNTX*100+LCOUNTY}", "未設置")
		ENDIF
	NEXT
	HTML_PRINT HTML用
NEXT
DRAWLINE
PRINTPLAIN 　MUSEUM MAP　
PRINTFORML [-1] 戻る [-2] 全て片付ける [-3] 実用の許可/不許可(現在:\@ 博物館射 ? 許可 # 不許可 \@)

INPUT

SELECTCASE RESULT
	CASE -1
		RETURN
	CASE -2
		VARSET 博物館マップ
		RESTART
	CASE -3
		INVERTBIT 博物館射, 0
		RESTART
	CASEELSE
		XRES = RESULT/100
		YRES = RESULT%100
		SIF !INRANGE(XRES, 0, 博物館広さ-1) || !INRANGE(YRES, 0, 博物館広さ-1)
			RESTART
		ID = 博物館マップ:YRES:XRES
		IF ID
			PRINTFORML %MUSEUM:ID:名前%が設置されています。どうしますか？
			PRINTL [0] - 別の物に置き換える
			PRINTL [1] - 片付ける
			PRINTL [2] - 何もしない
			CALL INPUTF, 0, 1, 2
			SELECTCASE RESULT
				CASE 0
					GOTO SELECT_OBJECT
				CASE 1
					博物館マップ:YRES:XRES = 0
					RESTART
				CASE 2
					RESTART
			ENDSELECT
		ENDIF
		$SELECT_OBJECT
		処理数 = 0
		PRINTL □何を設置しますか？
		FOR LCOUNT, 1, 1000
			IF MUSEUM:LCOUNT:種類 != "" && !設置済み:LCOUNT
				IF 処理数 >= ページ数*20+20
					次ページあり = 1
					BREAK
				ENDIF
				処理数++
				SIF ページ数*20 >= 処理数
					CONTINUE
				CALL PASELI, @"　[{LCOUNT, 2}] %MUSEUM:LCOUNT:名前% 価値:%MUSEUM:LCOUNT:価値%＄ 集客力:%MUSEUM:LCOUNT:集客力%\% "
				PRINT 色:
				SETCOLOR TOINT(MUSEUM:LCOUNT:色)
				PRINTL ■
				RESETCOLOR
			ENDIF
		NEXT
		DRAWLINE
		PRINTPLAIN 　OBJECT　
		CALL PRINTSPACE, ページ数, "[-1] 前ページ "
		PRINT [0] 戻る 
		CALL PRINTSPACE, 次ページあり, "[-9] 次ページ "
		PRINTL 
		DO
			INPUT
			SELECTCASE RESULT
				CASE 0
					RESTART
				CASE -1
					SIF ページ数
						ページ数--
					GOTO SELECT_OBJECT
				CASE -9
					SIF 次ページあり
						ページ数++
					次ページあり = 0
					GOTO SELECT_OBJECT
				CASEELSE
					ID = RESULT
					IF MUSEUM:ID:種類 != ""
						博物館マップ:YRES:XRES = ID
						RESTART
					ENDIF
					CONTINUE
			ENDSELECT
		LOOP 1
ENDSELECT

@博物館_CREATE
#DIM DYNAMIC 対象, 2
#DIM DYNAMIC 価値
