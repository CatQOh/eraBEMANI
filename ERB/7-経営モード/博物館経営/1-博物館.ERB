CALL PRINTSPACE, ページ数, "[-1] 前ページ "
PRINT [0] 戻る
CALL PRINTSPACE, ページ数, "[-9] 次ページ "
PRINTL 

DO
	INPUT
	SELECTCASE RESULT
		CASE -1
			SIF ページ数 > 0
				ページ数--
			GOTO DESTRUCT_CORPSE
		CASE 0
			RESTART
		CASE -9
			SIF 次ページあり
				ページ数++
			GOTO DESTRUCT_CORPSE
		CASEELSE
			対象 = RESULT
			SIF !GROUPMATCH(MUSEUM:対象:0, "剥製", "白骨死体")
				CONTINUE
			BREAK
