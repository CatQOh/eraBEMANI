	SIF !GROUPMATCH(MUSEUM:LCOUNT:0, "剥製", "白骨死体")
		CONTINUE
	IF 処理数 > ページ数*10+10
		次ページあり = 1
		BREAK
	ENDIF
	IF 処理数 < ページ数*10
		処理数++
		CONTINUE
	ENDIF
	PRINTFORML 　[{LCOUNT, 2}] %MUSEUM:LCOUNT:1%
	処理数++
NEXT
