@娼館方針名, ARG
#FUNCTIONS

SELECTCASE ARG
	CASE 0
		RETURNF "方針無し"
	CASE 1
		RETURNF "ソフト方針"
	CASE 2
		RETURNF "ハード方針"
	CASE 3
		RETURNF "SM方針"
	CASE 4
		RETURNF "狂気方針"
ENDSELECT

;引数で指定した曜日が定休日かどうか 省略すれば今日の曜日
;書式 BR定休日("木") みたいな
@BR定休日, ARGS
#FUNCTION
#DIMS DYNAMIC 分割用, 10

SIF ARGS == ""
	ARGS = %DOW(FLAG:曜日)%

SPLIT BRS:定休日, "・", 分割用

IF FINDELEMENT(分割用, ARGS) >= 0
	RETURNF 1
ELSE
	RETURNF 0
ENDIF

@BRアイテム価格, ARG
#FUNCTION

SELECTCASE ERDNAME(BRITEM, ARG)
	CASE "ローター"
		RETURNF 300
	CASE "バイブ", "鞭", "ペニスバンド", "睡眠薬", "アナルバイブ"
		RETURNF 500
	CASE "縄", "媚薬"
		RETURNF 1000
	CASE "コンドーム"
		RETURNF 50
	CASE "ローション", "ゴム手袋"
		RETURNF 100
	CASE "お風呂場", "隠しカメラ"
		RETURNF 500000
	CASE "高級ベッド", "換気口"
		RETURNF 300000
	CASE "ピンクライト", "防音壁", "拷問器具", "わけのわからないもの"
		RETURNF 1000000
	CASE ""
		RETURNF 0
ENDSELECT

