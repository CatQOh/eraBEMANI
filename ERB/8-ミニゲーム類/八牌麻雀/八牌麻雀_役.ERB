@CHANTA(プレイヤー, アガリ牌)
;純チャンに対して2、チャンタに対して1、それ以外には0を返す
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数
#DIM DYNAMIC SET;面子と雀頭を数える
#DIM DYNAMIC DET;純チャンかチャンタかの判定
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC プレイヤー
#DIM DYNAMIC アガリ牌
#DIM DYNAMIC 役計算用, 10
#DIM DYNAMIC ツモ

FOR LCOUNT2, 0, 25
	FOR LCOUNT, 0, 7
		SIF TEHAI:プレイヤー:LCOUNT %25 == LCOUNT2
			PAI:LCOUNT2++
	NEXT
	SIF アガリ牌 %25 == LCOUNT2
		PAI:LCOUNT2++
NEXT

FOR LCOUNT, 0, 18
	IF LCOUNT%9 == 0 || LCOUNT%9 == 6
		IF PAI:LCOUNT >= 2 && PAI:(LCOUNT+1) >= 2 && PAI:(LCOUNT+2) >= 2
			PAI:LCOUNT -= 2
			PAI:(LCOUNT+1) -= 2
			PAI:(LCOUNT+2) -= 2
			SET += 2
		ELSEIF PAI:LCOUNT && PAI:(LCOUNT+1) && PAI:(LCOUNT+2)
			PAI:LCOUNT--
			PAI:(LCOUNT+1)--
			PAI:(LCOUNT+2)--
			SET++
		ENDIF
	ENDIF
NEXT

IF SET == 0
	;123or789の順子がなければ0を返す
	RETURNF 0
ELSEIF SET == 1
	IF PAI:0 == 3;一萬
		PAI:0 -= 3
		SET++
	ENDIF
	IF PAI:8 == 3;九萬
		PAI:8 -= 3
		SET++
	ENDIF
	IF PAI:9 == 3;一筒
		PAI:9 -= 3
		SET++
	ENDIF
	IF PAI:17 == 3;九筒
		PAI:9 -= 3
		SET++
	ENDIF
	FOR LCOUNT2, 18, 25;字牌
		IF PAI:LCOUNT2 == 3
			PAI:LCOUNT2 -= 3
			SET++
			DET++
			BREAK
		ENDIF
	NEXT
	SIF SET == 1
		RETURNF 0
ENDIF

;対子の確認 この時点で必ずSET==2
SIF PAI:0 == 2;一萬
	SET++
SIF PAI:8 == 2;九萬
	SET++
SIF PAI:9 == 2;一筒
	SET++
SIF PAI:17 == 2;九筒
	SET++
FOR LCOUNT2, 18, 25;字牌
	IF PAI:LCOUNT2 == 2
		SET++
		DET++
		BREAK
	ENDIF
NEXT

SIF SET != 3
	RETURNF 0
SIF DET
	RETURNF 1
RETURNF 2

@HONTOI(プレイヤー, アガリ牌)
;対々和なら1を返す混老頭も複合しているのなら2を返す
;清老頭でも2を返すので、この関数は役満ではないときに使う
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数
#DIM DYNAMIC KOTSU;刻子の数のカウント
#DIM DYNAMIC DET;混老頭かどうかの判定に使用(0なら成立,1以上なら不成立)
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC プレイヤー
#DIM DYNAMIC アガリ牌
#DIM DYNAMIC 役計算用, 10
#DIM DYNAMIC ツモ

FOR LCOUNT2, 0, 25
	FOR LCOUNT, 0, 7
		SIF TEHAI:プレイヤー:LCOUNT %25 == LCOUNT2
			PAI:LCOUNT2++
	NEXT
	SIF アガリ牌 %25 == LCOUNT2
		PAI:LCOUNT2++
NEXT

FOR LCOUNT, 0, 25
	IF PAI:LCOUNT >= 3
		PAI:LCOUNT -= 3
		KOTSU++
		DET++
		SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
			DET--
	ENDIF
