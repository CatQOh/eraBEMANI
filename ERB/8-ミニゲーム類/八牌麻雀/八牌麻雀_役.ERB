					IF TEHAI:プレイヤー:LCOUNT %25 == 役計算用
						DORA++
						HAN++
					ENDIF
				NEXT
				IF アガリ牌 %25 == 役計算用
					DORA++
					HAN++
				ENDIF
			ENDIF
		ENDIF
		PRINTFORML 裏ドラ　　　　{DORA}翻
	ENDIF
	DORA = 0
	FOR LCOUNT, 0, 8
		IF LCOUNT == 7
			役計算用:LCOUNT = アガリ牌
		ELSE
			役計算用:LCOUNT = TEHAI:プレイヤー:LCOUNT
		ENDIF
	NEXT
	FOR LCOUNT, 0, 8
		;赤五萬
		IF (役計算用:LCOUNT == 79 && M8:赤五萬) || (役計算用:LCOUNT == 54 && M8:赤五萬 >= 2) || (役計算用:LCOUNT %25 == 4 && M8:赤五萬 >= 3)
			DORA++
			HAN++
		;赤五筒
		ELSEIF (役計算用:LCOUNT == 88 && M8:赤五筒) || (役計算用:LCOUNT == 63 && M8:赤五筒 >= 2) || (役計算用:LCOUNT %25 == 13 && M8:赤五筒 >= 3)
			DORA++
			HAN++
		;赤三筒
		ELSEIF (役計算用:LCOUNT == 86 && M8:赤三筒) || (役計算用:LCOUNT == 61 && M8:赤三筒 == 2)
			DORA++
			HAN++
		;金三筒もといスーパー赤三筒
		ELSEIF (役計算用:LCOUNT == 61 && M8:赤三筒 >= 3)
			DORA++
			HAN++
		;赤北
		ELSEIF (役計算用:LCOUNT == 96 && M8:赤北)
			DORA++
			HAN++
		ENDIF
	NEXT
	IF GARI:プレイヤー:0 && M8:赤北
		FOR LCOUNT, 1, GARI:プレイヤー:0 + 1
			IF GARI:プレイヤー:LCOUNT == 96
				DORA++
				HAN++
			ENDIF
		NEXT
	ENDIF
	SIF DORA
		PRINTFORML 赤ドラ　　　　{DORA}翻
	;抜きドラ
	IF GARI:プレイヤー:0
		HAN += GARI:プレイヤー:0
		PRINTFORML 抜きドラ　　　{GARI:プレイヤー:0}翻
	ENDIF
	;ここまでドラ計上
	IF PINFU
		IF ツモ
			FU = 20
		ELSE
			FU = 30
		ENDIF
	ELSE
		IF ツモ
			FU = 30
		ELSE
			FU = 40
		ENDIF
		FU += FUHANE(プレイヤー, アガリ牌, ツモ)
	ENDIF
	SELECTCASE HAN
		CASE IS >= 13
			SCORE = 8000
		CASE 11, 12
			SCORE = 6000
		CASE 8, 9, 10
			SCORE = 4000
		CASE 6, 7
			SCORE = 3000
		CASE 5
			SCORE = 2000
		CASEELSE
			SCORE = FU * POWER(2, 2+HAN)
			SIF SCORE > 2000
				SCORE = 2000
	ENDSELECT
	IF TONCHA == プレイヤー
		SCORE *= 6
	ELSE
		SCORE *= 4
	ENDIF
	SIF SCORE%100 != 0
		SCORE += 100-SCORE%100
	PRINTFORMW {FU}符{HAN}翻　{SCORE}点
	RETURN SCORE
ENDIF


@FUHANE(プレイヤー, アガリ牌, ツモ)
;八牌麻雀においては、
;ロン和了り50符……8符の暗刻+(2符の雀頭+両面以外 or 4符の明刻) OR 4符の暗刻*2+2符の役牌単騎待ち
;ツモ和了り40符……8符の暗刻+(2符の雀頭or両面以外) OR 4符の暗刻*2+2符の雀頭
;対象となる和了りのとき10を返す そうではないときは0
;プレイヤー…プレーヤー アガリ牌…和了り牌 ツモ…ツモフラグ
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数(最初に固定)
#DIM DYNAMIC PAI2, 25;種類別の牌の枚数(計算用 メンツ切り出しによって減っていく)
#DIM DYNAMIC FU;符の計算に使用
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC プレイヤー
#DIM DYNAMIC アガリ牌
#DIM DYNAMIC 役計算用, 10
#DIM DYNAMIC ツモ

FOR LCOUNT2, 0, 25
	FOR LCOUNT, 0, 7
		SIF TEHAI:プレイヤー:LCOUNT %25 == LCOUNT2
			PAI:LCOUNT2++
	NEXT
	SIF アガリ牌 %25 == LCOUNT2
		PAI:LCOUNT2++
NEXT

;ツモ和了りのとき
IF ツモ
	;「8符の暗刻+辺張嵌張単騎」以外すべてのケース
	ARRAYCOPY "PAI", "PAI2"
	FU = 2
	FOR LCOUNT, 0, 25
		IF PAI2:LCOUNT >= 3
			PAI2:LCOUNT -= 3
			FU += 4
			SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
				FU += 4
		ENDIF
	NEXT
	FOR LCOUNT, 18, 25
		;役牌対子
		IF LCOUNT != 19 && LCOUNT != 21
			SIF PAI2:LCOUNT == 2
				FU += 2
		ENDIF
	NEXT
	SIF FU > 10
		RETURNF 10
	;「8符の暗刻+辺張嵌張単騎」のケースのみ
	ARRAYCOPY "PAI", "PAI2"
	FU = 0
	FOR LCOUNT, 0, 25
		IF PAI2:LCOUNT >= 3
			PAI2:LCOUNT -= 3
			FU += 4
			SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
				FU += 4
			BREAK
		ENDIF
	NEXT
	SIF FU != 8
		RETURNF 0
	FOR LCOUNT, 0, 25
		IF PAI2:LCOUNT >= 2
			PAI2:LCOUNT -= 2
			SIF LCOUNT == アガリ牌 %25
				RETURNF 10
			BREAK
		ENDIF
		SIF LCOUNT == 24
			RETURNF 0
	NEXT
	FOR LCOUNT, 0, 16
		IF LCOUNT%9 < 7
			IF PAI2:LCOUNT && PAI2:(LCOUNT+1) && PAI2:(LCOUNT+2)
				IF LCOUNT+1 == アガリ牌 %25
					RETURNF 10
				ELSEIF LCOUNT%9 == 0 && LCOUNT+2 == アガリ牌 %25
					RETURNF 10
				ELSEIF LCOUNT%9 == 6 && LCOUNT == アガリ牌 %25
					RETURNF 10
				ELSE
					RETURNF 0
				ENDIF
			ENDIF
		ENDIF
	NEXT
	RETURNF 0
;ロン和了りの場合
ELSE
	;「8符の暗刻+2符の雀頭+辺張嵌張」以外すべてのケース
	ARRAYCOPY "PAI", "PAI2"
	FU = 0
	FOR LCOUNT, 0, 25
		IF PAI2:LCOUNT >= 3
			IF LCOUNT == アガリ牌 %25
				PAI2:LCOUNT -= 3
				FU += 2
				SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
					FU += 2
			ELSE
				PAI2:LCOUNT -= 3
				FU += 4
				SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
					FU += 4
			ENDIF
		ENDIF
	NEXT
	FOR LCOUNT, 18, 25
		;役牌対子
		IF LCOUNT != 19 && LCOUNT != 21
			SIF PAI2:LCOUNT == 2
				FU += 2
		ENDIF
	NEXT
	SIF FU > 10
		RETURNF 10
	;「8符の暗刻+2符の雀頭+辺張嵌張」のケースのみ
	ARRAYCOPY "PAI", "PAI2"
	FU = 0
	FOR LCOUNT, 0, 25
		IF PAI2:LCOUNT >= 3
			IF LCOUNT == アガリ牌 %25
				PAI2:LCOUNT -= 3
				FU += 2
				SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
					FU += 2
			ELSE
				PAI2:LCOUNT -= 3
				FU += 4
				SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
					FU += 4
			ENDIF
			BREAK
		ENDIF
	NEXT
	SIF FU != 8
		RETURNF 0
	FOR LCOUNT, 18, 25
		;役牌対子
		IF LCOUNT != 19 && LCOUNT != 21
			SIF PAI2:LCOUNT == 2
				FU += 2
		ENDIF
	NEXT
	SIF FU != 10
		RETURNF 0
	FOR LCOUNT, 0, 16
		IF LCOUNT%9 < 7
			IF PAI2:LCOUNT && PAI2:(LCOUNT+1) && PAI2:(LCOUNT+2)
				IF LCOUNT+1 == アガリ牌 %25
					RETURNF 10
				ELSEIF LCOUNT%9 == 0 && LCOUNT+2 == アガリ牌 %25
					RETURNF 10
				ELSEIF LCOUNT%9 == 6 && LCOUNT == アガリ牌 %25
					RETURNF 10
				ELSE
					RETURNF 0
				ENDIF
			ENDIF
		ENDIF
	NEXT
	RETURNF 0
ENDIF


