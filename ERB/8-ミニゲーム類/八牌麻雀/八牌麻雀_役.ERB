@PINFU(プレイヤー, アガリ牌)
;平和 判定が最強クラスに面倒
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数(最初に固定)
#DIM DYNAMIC PAI2, 25;種類別の牌の枚数(計算用 メンツ切り出しによって減っていく)
#DIM DYNAMIC DET;アガリ牌が面子に含まれているかどうかの判定
#DIM DYNAMIC SET;面子の数
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC LCOUNT3
#DIM DYNAMIC プレイヤー
#DIM DYNAMIC アガリ牌
#DIM DYNAMIC 役計算用, 10
#DIM DYNAMIC ツモ

FOR LCOUNT2, 0, 25
	FOR LCOUNT, 0, 7
		SIF TEHAI:プレイヤー:LCOUNT %25 == LCOUNT2
			PAI:LCOUNT2++
	NEXT
	SIF アガリ牌 %25 == LCOUNT2
		PAI:LCOUNT2++
NEXT

FOR LCOUNT2, 0, 16
	IF LCOUNT2%9 < 7
		;面子構成は順子+順子+対子のみ
		VARSET DET
		VARSET SET
		ARRAYCOPY "PAI", "PAI2"
		FOR LCOUNT, LCOUNT2, LCOUNT2+18
			IF LCOUNT%9 < 7
				DO
					IF PAI2:(LCOUNT%18) && PAI2:(LCOUNT%18+1) && PAI2:(LCOUNT%18+2)
						IF DET == 0 && (LCOUNT%18 == アガリ牌 %25 || LCOUNT%18+2 == アガリ牌 %25)
							IF (LCOUNT%9 == 0 && LCOUNT%18+2 == アガリ牌 %25) || (LCOUNT%9 == 6 && LCOUNT%18 == アガリ牌 %25)
								BREAK
							ELSE
								PAI2:(LCOUNT%18)--
								PAI2:(LCOUNT%18+1)--
								PAI2:(LCOUNT%18+2)--
								SET++
								DET++
							ENDIF
						ELSEIF DET == 0 && LCOUNT%18+1 == アガリ牌 %25
							BREAK
						ELSE
							PAI2:(LCOUNT%18)--
							PAI2:(LCOUNT%18+1)--
							PAI2:(LCOUNT%18+2)--
							SET++
						ENDIF
					ENDIF
				LOOP PAI2:(LCOUNT%18) && PAI2:(LCOUNT%18+1) && PAI2:(LCOUNT%18+2)
			ENDIF
		NEXT
		FOR LCOUNT, 0, 22
			IF PAI2:LCOUNT >= 2 && LCOUNT != 18 && LCOUNT != 20
				SET++
				BREAK
			ENDIF
		NEXT
		SIF SET == 3 && DET
			RETURNF 1
	ENDIF
NEXT
RETURNF 0

