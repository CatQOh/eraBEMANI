	IF PAI:LCOUNT == 2
		DET++
		SIF LCOUNT%9 == 0 || LCOUNT%9 == 8 || LCOUNT >= 18
			DET--
		SIF DET
			RETURNF 1
		RETURNF 2
	ENDIF
NEXT

