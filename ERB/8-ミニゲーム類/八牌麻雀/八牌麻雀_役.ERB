	IF LCOUNT == 7
		役計算用 = アガリ牌 %25
	ELSE
		役計算用 = TEHAI:プレイヤー:LCOUNT %25
	ENDIF
	SIF 役計算用 > 17 || (1 <= 役計算用%9 && 役計算用%9 <= 7)
		RETURNF 0
NEXT

RETURNF 1


