					MENTSU++
					BREAK
				ENDIF
			ENDIF
		NEXT
		FOR LCOUNT2, 0, 25
			IF PAI2:LCOUNT2 >= 3
				PAI2:LCOUNT2 -= 3
				MENTSU++
				BREAK
			ENDIF
		NEXT
		FOR LCOUNT2, 0, 25
			IF PAI2:LCOUNT2 >= 2
				PAI2:LCOUNT2 -= 2
				TOITSU++
			ENDIF
		NEXT
		FOR LCOUNT2, 0, 8
			IF PAI2:LCOUNT2 && PAI2:(LCOUNT2+1)
				PAI2:LCOUNT2--
				PAI2:(LCOUNT2+1)--
				TATSU++
			ENDIF
		NEXT
		FOR LCOUNT2, 9, 17
			IF PAI2:LCOUNT2 && PAI2:(LCOUNT2+1)
				PAI2:LCOUNT2--
				PAI2:(LCOUNT2+1)--
				TATSU++
			ENDIF
		NEXT
		FOR LCOUNT2, 0, 7
			IF PAI2:LCOUNT2 && PAI2:(LCOUNT2+2)
				PAI2:LCOUNT2--
				PAI2:(LCOUNT2+2)--
				TATSU++
			ENDIF
		NEXT
		FOR LCOUNT2, 9, 16
