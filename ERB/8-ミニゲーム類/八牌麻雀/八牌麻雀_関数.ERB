;;;待ちを文字列で返す式中関数
@MACHI(手牌:0, 手牌:1, 手牌:2, 手牌:3, 手牌:4, 手牌:5, 手牌:6)
#FUNCTIONS
#DIM DYNAMIC 手牌, 7
#DIM DYNAMIC LCOUNT
#DIMS DYNAMIC 待ち
#DIM DYNAMIC 複数

FOR LCOUNT, 0, 25
	IF SHANTEN8(手牌:0, 手牌:1, 手牌:2, 手牌:3, 手牌:4, 手牌:5, 手牌:6, LCOUNT, -1) == -1
		SIF 複数
			待ち += " "
		SELECTCASE LCOUNT
			CASE IS < 9
				待ち += @"%CONV_NO(LCOUNT+1)%萬"
			CASE 9 TO 17
				待ち += @"%CONV_NO(LCOUNT%9+1)%筒"
			CASE 18
				待ち += "東"
			CASE 19
				待ち += "南"
			CASE 20
				待ち += "西"
			CASE 21
				待ち += "北"
			CASE 22
				待ち += "白"
			CASE 23
				待ち += "發"
			CASE 24
				待ち += "中"
		ENDSELECT
		複数++
	ENDIF
NEXT

RETURNF 待ち

