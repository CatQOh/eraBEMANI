		NEXT
		MT = MENTSU
		IF MT == 0 && TATSU >= 2
			MT = 2
			KOUHO += 2
			TATSU -= 2
		ELSEIF MT < 2 && TATSU >= 1
			MT++
			KOUHO++
			TATSU--
		ENDIF
		IF MT == 0 && TOITSU >= 2
			MT = 2
