		ENDIF
		SIF TOITSU
			HEAD++
		SIF SHANTEN > 4 - 2*MENTSU - KOUHO - HEAD
			SHANTEN = 4 - 2*MENTSU - KOUHO - HEAD

		;刻子+順子
		VARSET MENTSU
		VARSET TOITSU
		VARSET TATSU
		VARSET MT
		VARSET KOUHO
		VARSET HEAD
		ARRAYCOPY "PAI", "PAI2"
		FOR LCOUNT2, 0, 25
			IF PAI2:LCOUNT2 >= 3
				PAI2:LCOUNT2 -= 3
				MENTSU++
				BREAK
			ENDIF
		NEXT
		FOR LCOUNT2, LCOUNT, LCOUNT+18
			IF LCOUNT2%9 < 7
				IF PAI2:(LCOUNT2%18) && PAI2:(LCOUNT2%18+1) && PAI2:(LCOUNT2%18+2)
					PAI2:(LCOUNT2%18)--
