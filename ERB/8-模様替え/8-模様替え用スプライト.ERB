縦幅 = 100
X座標 = 0
Y座標 = 0
GCREATEFROMFILE ID, "家具_長方形.png"
FOR LCOUNT, 0, VARSIZE("家具長方形")
	;空行に当たったら規格を変えて改行
	IF 家具長方形:LCOUNT == ""
		X座標 = 0
		Y座標 += 縦幅/100
		;最初は100*200に変形
		IF 横幅 == 200 && 縦幅 == 100
			横幅 = 100
			縦幅 = 200
		;次は300*200
		ELSEIF 横幅 == 100 && 縦幅 == 200
			横幅 = 300
			縦幅 = 200
		ENDIF
		CONTINUE
	ELSE
		IF (X座標*100)+横幅 > 1000
			X座標 = 0
			Y座標 += 縦幅/100
		ENDIF
	ENDIF
	SPRITECREATE @"%家具長方形:LCOUNT%_0", ID, X座標*100, Y座標*100, 横幅, 縦幅
	X座標 += 横幅/100
NEXT
