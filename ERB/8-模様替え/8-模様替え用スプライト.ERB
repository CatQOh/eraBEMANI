;以下、動物名を「動物.pngの上から順に」書くだけで画像が追加される
{
#DIMS DYNAMIC 動物名 = 
"鶏",
"牛",
"羊",
"豚",
"馬",
"蜂",
"ユニコーン",
"バイコーン"
}

GCREATEFROMFILE ID, "動物.png"
GCREATEFROMFILE ID+1, "特殊馬.png"
GCREATEFROMFILE ID+2, "特殊馬2.png"

;LCOUNTは高さ(動物の種類)、LCOUNT2が幅(表情)
;一律100*100
FOR LCOUNT, 0, VARSIZE("動物名")
	;鶏だけ表情差分無いので個別処理
	SELECTCASE 動物名:LCOUNT
		CASE "鶏"
			SPRITECREATE @"%動物名:LCOUNT%", ID, 0, LCOUNT*100, 100, 100
		CASE "バイコーン"
			SPRITECREATE @"%動物名:LCOUNT%1", ID+1, 0, 0, 100, 100
			SPRITECREATE @"%動物名:LCOUNT%2", ID+2, 0, 0, 300, 300
		CASE "ユニコーン"
			SPRITECREATE @"%動物名:LCOUNT%1", ID+1, 100, 0, 100, 100
			SPRITECREATE @"%動物名:LCOUNT%2", ID+2, 300, 0, 300, 300
		CASEELSE
			;表情は現在7種類
			FOR LCOUNT2, 0, 7
				SELECTCASE LCOUNT2
					;デフォルト(0)は添え字無し
					CASE 0
						SPRITECREATE @"%動物名:LCOUNT%", ID, 0, LCOUNT*100, 100, 100
					;1～3は正の数が添え字
					CASE 1 TO 3
						SPRITECREATE @"%動物名:LCOUNT%{LCOUNT2}", ID, LCOUNT2*100, LCOUNT*100, 100, 100
					;4～6は負の数が添え字(-1～-3)
					CASE 4 TO 6
						SPRITECREATE @"%動物名:LCOUNT%-{LCOUNT2-3}", ID, LCOUNT2*100, LCOUNT*100, 100, 100
				ENDSELECT
			NEXT
	ENDSELECT
NEXT

