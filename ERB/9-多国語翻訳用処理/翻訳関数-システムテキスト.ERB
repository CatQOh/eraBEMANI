#DIMS DYNAMIC WORD
#DIMS DYNAMIC FORMAT, 3
#DIMS DYNAMIC SPLITVAR, 2
#DIM DYNAMIC LCOUNT
#DIMS DYNAMIC TYPE

WORD = %SYSTXTDISP_LIB(ARGS)%

;test
IF FORMAT != ""
	FOR LCOUNT, 0, VARSIZE("FORMAT")
		SIF FORMAT:LCOUNT == "" || STRFIND(WORD, "|") == -1
			BREAK
		;REPLACEの様子がおかしいので一旦保留
		;string.Format式に{}を使うと数値型と解釈されるので||で
		SPLIT WORD, @"|{LCOUNT}|", SPLITVAR
		WORD = %SPLITVAR:0%%FORMAT:LCOUNT%%SPLITVAR:1%
	NEXT
	;REPLACE WORD, "|1|", FORMAT
ENDIF

RETURNF WORD

