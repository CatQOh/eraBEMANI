;ターンの終了時に呼ばれる
@KOJO_DAYEND_ゼルハルト
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LTARGET

SIF !OPTION:口上表示
	RETURN 0

LTARGET = TARGET
TARGET = GETCHARANAME("ゼルハルト")

IF TARGET > 0 && CFLAG:キャラロスト
	TARGET = LTARGET
	RETURN
ENDIF

;金曜夜なら土曜に備えてゼルを週末の礼装にする
IF ターン == "夜" && DOW(FLAG:曜日) == "金"
	IF TARGET > 0 && FEVE:0
		CSTR:特殊 = 
		CSTR:上半身上着 = ブラウス
		CSTR:下半身上着 = ズボン
		CSTR:全身上着 = 
		CSTR:上半身下着 = 
		CSTR:下半身下着 = ズロース
		CSTR:足元 = ソックス
		CFLAG:挿入可 = 0
		CFLAG:着衣併用 = 0
		CFLAG:上着パイズリ = 5
		CFLAG:下着パイズリ = 0
		GERHARD:0 = 1
	ENDIF
ENDIF

;日曜夜なら週末終わりなので普段着に戻す
IF ターン == "夜" && DOW(FLAG:曜日) == "日"
	IF TARGET > 0 && FEVE:0
		CSTR:特殊 = フード
		CSTR:上半身上着 = 
		CSTR:下半身上着 = 
		CSTR:全身上着 = 
		CSTR:上半身下着 = ショートパンツ
		CSTR:下半身下着 = スパッツ
		CSTR:足元 = 
		CFLAG:挿入可 = 1
		CFLAG:着衣併用 = 0
		CFLAG:上着パイズリ = 0
		CFLAG:下着パイズリ = 0
		GERHARD:0 = 0
	ENDIF
ENDIF

TARGET = LTARGET

RETURN 0
