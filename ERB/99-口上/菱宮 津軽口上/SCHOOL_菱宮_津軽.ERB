@SCHOOL_菱宮_津軽_何気ない会話
SELECTCASE TSUGARU:分岐
	CASE 1
		SELECTCASE CSTR:PLAYER:現在地
			;校内
			CASE CSTR:PLAYER:在校
				;初対面
				IF !CFLAG:面識
					SELECTCASE ターン
						CASE "朝"
							PRINT 「おはようございます。
						CASEELSE
							PRINT 「こんにちは。
					ENDSELECT
					PRINT 生徒会に関する話？ 違うの？ えーと、あなたは……
					IF 名前あり()
						PRINTFORMW %CALLNAME:PLAYER%さんっていうのね」
					ELSE
						PRINTW 同じ学年の生徒ね」
					ENDIF
					PRINTFORMW 「よろしくお願いします。一応自己紹介すると、私は生徒会長の菱宮ツガル。校内で問題があれば何でも相談してね」
				ELSE
					PRINTDATAW
						DATAFORM 「\@ ターン == "朝" ? おはよう # こんにちは \@。\@ 名前あり() ? %CALLNAME:PLAYER%さん。 #\@別に私が生徒会長だからって、すれ違うたびに挨拶しなくていいんだよ？」
						DATA 「うーん、予算のことは生徒会のみんなで話し合わないと決められないよ」
						DATA 「生徒会のプリント運んでくれるの？ ありがとう」
						DATA 「勉強どんな感じ？ 数学って難しいよね」
						DATA 「なんだか眠そうだね。もしかして、授業は苦手？」
					ENDDATA
				ENDIF
			;ゲーセン
			CASE "ゲームセンター"
				;初対面
				IF !CFLAG:面識
					IF !休日()
						PRINTW 「こんばんは。うーんと、どこかで会ったっけ？」
						PRINTW 「えっ……ち、違うよ！ 生徒会長じゃないし！ 菱宮でもないし！」
						PRINTW 「なんて、バレバレだよね。はぁ、私がこんな時間にゲーセンで遊んでるところ、先生や生徒会の人たちには内緒にしててね、お願い！」
					ELSE
						PRINTFORMW 「\@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@。もしかしてうちの生徒？ もー、外で生徒会長はやめてよ」
						PRINTW 「休みの日くらいゲームセンターで遊んでてもいいじゃない。あなたは何を遊びに来たの？ 私は音楽ゲームが好きなの」
					ENDIF
				ELSE
					SELECTCASE RAND:3
						CASE 0
							IF !休日()
								PRINTW 「こんばんは～。あはは、こんな時間にゲーセンなんて、本当は私も注意する立場なんだけど、人のこと言えないよね」
							ELSE
								PRINTFORMW 「\@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@。今日も楽しそうだね」
							ENDIF
						CASE 1
							PRINTW 「ゲーセンに行くのは風紀の乱れとか、今どき古いよね～」
						CASE 2
							PRINTW 「好きなゲームある？ 私はノスタルジアが好きかな。昔ピアノやってたんだよね」
					ENDSELECT
				ENDIF
			CASEELSE
				;初対面
				IF !CFLAG:面識
					PRINTFORMW 「\@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@。もしかしてうちの生徒？ もー、外で生徒会長はやめてよ」
					PRINTW 「ほら、外では普通の女の子だから。気兼ねなく遊びに誘ってね」
				ELSE
					PRINTDATAW
						DATAFORM 「\@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@。こんなところで会うなんて奇遇だね」
						DATA 「へぇ～、そうなんだ。面白いね」
						DATA 「ほんとに？ あはは、おかし～」
					ENDDATA
				ENDIF
		ENDSELECT
	CASE 2
		;初対面
		IF !CFLAG:面識
			PRINTFORMW 「\@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@。どこかでお会いしましたっけ？」
			PRINTW 「私、ツガルって言います。名字は……それは置いといて、何か用ですか？」
			PRINTW 「ビストローバーで？ そうなんですか。あの時は職業体験中で、今はたまにお手伝いに行くくらいなんですよ」
			PRINTFORMW 「\@ 名前あり() ? %CALLNAME:PLAYER%さんですか。#\@へぇ～、%CSTR:PLAYER:在校%の生徒なんですね。先輩って呼んでもいいですか？」
		ELSE
			PRINTDATAW
				DATAFORM 「あっ、先輩！ \@ GROUPMATCH(ターン, "朝", "昼") ? こんにちは # こんばんは \@～」
				DATA 「先輩！ 高校って楽しいですか？ 私も早く高校生になりたいな～」
				DATA 「先輩、数学の問題でちょっと分からないことがあって……教えてくれませんか？」
				DATA 「なんだか先輩とよく会うな～。嫌じゃないですよ？ 意外とこの街も狭いんだなって」
			ENDDATA
		ENDIF
ENDSELECT


