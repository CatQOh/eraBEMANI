;ABLUP:2 = 快Ａの珠必要数
;ABLUP:6 = 欲情の珠必要数
;ABLUPEXP:41 = ゲイ経験必要数
@ABLUP12
SIF ABL:ホモっ気 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL12
CALL CHECK_JUEL12
IF RESULT
	CALL NEED_JUEL12
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:ホモっ気++
ENDIF

@NEED_JUEL12
SELECTCASE ABL:ホモっ気
	CASE 0
		ABLUP:2 = 100
		ABLUP:6 = 200
		ABLUPEXP:41 = 50
	CASE 1
		ABLUP:2 = 500
		ABLUP:6 = 1000
		ABLUPEXP:41 = 200
	CASE 2
		ABLUP:2 = 1000
		ABLUP:6 = 3000
		ABLUPEXP:41 = 500
	CASE 3
		ABLUP:2 = 2000
		ABLUP:6 = 8000
		ABLUPEXP:41 = 1000
	CASE 4
		ABLUP:2 = 5000
		ABLUP:6 = 20000
		ABLUPEXP:41 = 2000
	CASE 5
		ABLUP:2 = 6000
		ABLUP:6 = 25000
		ABLUPEXP:41 = 2300
	CASE 6
		ABLUP:2 = 8000
		ABLUP:6 = 30000
		ABLUPEXP:41 = 2600
	CASE 7
		ABLUP:2 = 10000
		ABLUP:6 = 35000
		ABLUPEXP:41 = 3000
	CASE 8
		ABLUP:2 = 15000
		ABLUP:6 = 40000
		ABLUPEXP:41 = 3500
	CASE 9
		ABLUP:2 = 20000
		ABLUP:6 = 45000
		ABLUPEXP:41 = 4000
	CASE IS >= 10
		LOCAL = ABL:ホモっ気*ABL:ホモっ気
		ABLUP:2 = 250 * LOCAL
		ABLUP:6 = 500 * LOCAL
		ABLUPEXP:41 = 50 * LOCAL
ENDSELECT

;恋慕かつMASTERが男
SIF TALENT:恋慕 && SEX(MASTER) == 1
	TIMES ABLUPEXP:41 , 0.50
;親愛かつMASTERが男
SIF TALENT:親愛 && SEX(MASTER) == 1
	TIMES ABLUPEXP:41 , 0.30
;淫乱
IF TALENT:淫乱
	TIMES ABLUP:2 , 0.80
	TIMES ABLUP:6 , 0.80
ENDIF
;娼婦
IF TALENT:娼婦
	TIMES ABLUP:2 , 0.50
	TIMES ABLUP:6 , 0.50
ENDIF
;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:2 , 2.00
		TIMES ABLUP:6 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:2 , 0.70
		TIMES ABLUP:6 , 0.70
	ENDIF
ENDIF

;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[両刀]なら無視できる）
IF !TALENT:両刀
	IF ABL:ホモっ気 >= 8
		ABLUPEXP:50 = 5
	ELSEIF ABL:ホモっ気 >= 4
		ABLUPEXP:50 = 3
	ELSEIF ABL:ホモっ気 >= 3
		ABLUPEXP:50 = 1
	ENDIF
ENDIF

@CHECK_JUEL12
;異常経験が規定値(ABLUPEXP:50)に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;快Ａの珠(ABLUP:2)、欲情の珠(ABLUP:6)、ゲイ経験(ABLUPEXP:41)が必要
SIF JUEL:快Ａ >= ABLUP:2 && JUEL:欲情 >= ABLUP:6 && EXP:ゲイ経験 >= ABLUPEXP:41
	RETURN 1

;上記の条件を満たしていないと上げられない
RETURN 0

@ABLUP_MESSAGE12
;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[両刀]なら無視できる）
SIF EXP:異常経験 < ABLUPEXP:50
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:50
	PRINTFORM [異常経験{ABLUPEXP:50}以上]
RESETCOLOR

