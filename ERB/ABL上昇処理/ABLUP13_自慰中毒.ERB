;ABLUP:0 = 快Ｃの珠必要数
;ABLUP:6 = 欲情の珠必要数
;ABLUP:11 = 恐怖の珠必要数
;ABLUPEXP:32 = 自慰経験必要数
@ABLUP13
SIF ABL:自慰中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL13
CALL CHECK_JUEL13
IF RESULT
	CALL NEED_JUEL13
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:自慰中毒++
ENDIF

@NEED_JUEL13
SELECTCASE ABL:自慰中毒
	CASE 0
		ABLUP:0 = 10000
		ABLUP:6 = 3000
		ABLUP:11 = 1000
		ABLUPEXP:32 = 100
	CASE 1
		ABLUP:0 = 25000
		ABLUP:6 = 6000
		ABLUP:11 = 3000
		ABLUPEXP:32 = 250
	CASE 2
		ABLUP:0 = 50000
		ABLUP:6 = 12000
		ABLUP:11 = 6000
		ABLUPEXP:32 = 500
	CASE 3
		ABLUP:0 = 100000
		ABLUP:6 = 20000
		ABLUP:11 = 15000
		ABLUPEXP:32 = 1000
	CASE 4
		ABLUP:0 = 300000
		ABLUP:6 = 40000
		ABLUP:11 = 40000
		ABLUPEXP:32 = 2000
	CASE 5
		ABLUP:0 = 350000
		ABLUP:6 = 45000
		ABLUP:11 = 45000
		ABLUPEXP:32 = 2500
	CASE 6
		ABLUP:0 = 400000
		ABLUP:6 = 50000
		ABLUP:11 = 50000
		ABLUPEXP:32 = 3000
	CASE 7
		ABLUP:0 = 450000
		ABLUP:6 = 55000
		ABLUP:11 = 55000
		ABLUPEXP:32 = 3000
	CASE 8
		ABLUP:0 = 500000
		ABLUP:6 = 60000
		ABLUP:11 = 60000
		ABLUPEXP:32 = 3500
	CASE 9
		ABLUP:0 = 600000
		ABLUP:6 = 70000
		ABLUP:11 = 70000
		ABLUPEXP:32 = 5000
	CASE IS >= 10
		LOCAL = ABL:自慰中毒*ABL:自慰中毒
		ABLUP:0 = 7000 * LOCAL
		ABLUP:6 = 800 * LOCAL
		ABLUP:11 = 800 * LOCAL
		ABLUPEXP:32 = 60 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:0 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:11 , 2.00
		TIMES ABLUPEXP:32 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:0 , 0.70
		TIMES ABLUP:6 , 0.70
		TIMES ABLUP:11 , 0.70
		TIMES ABLUPEXP:32 , 0.70
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:0 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:11 , 2.00
		TIMES ABLUPEXP:32 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:0 , 0.80
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:11 , 0.80
		TIMES ABLUPEXP:32 , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:0 , 0.50
	TIMES ABLUP:6 , 0.50
	TIMES ABLUP:11 , 0.50
	TIMES ABLUPEXP:32 , 0.50
ENDIF

;臆病、濡れやすい、小柄体型
SIF TALENT:臆病 || TALENT:濡れやすい || TALENT:小柄体型
	TIMES ABLUP:11 , 0.70


;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][自慰狂い]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:自慰狂い
	IF ABL:自慰中毒 >= 8
		ABLUPEXP:50 = 7
	ELSEIF ABL:自慰中毒 >= 4
		ABLUPEXP:50 = 3
	ELSEIF ABL:自慰中毒 >= 3
		ABLUPEXP:50 = 2
	ELSEIF ABL:自慰中毒 >= 2
		ABLUPEXP:50 = 1
	ENDIF
ENDIF

@CHECK_JUEL13
;異常経験が規定値に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;自慰中毒+1の露出癖が必要
SIF ABL:露出癖 <= ABL:自慰中毒
	RETURN 0

;欲情の珠、快Ｃの珠、恐怖の珠、自慰経験で上げる
SIF JUEL:快Ｃ >= ABLUP:0 && JUEL:欲情 >= ABLUP:6 && JUEL:恐怖 >= ABLUP:11 && EXP:自慰経験 >= ABLUPEXP:32
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

