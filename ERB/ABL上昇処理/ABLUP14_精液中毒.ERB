@ABLUP14
#DIM DYNAMIC LCOUNT
SIF ABL:精液中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
SIF ABL:精液中毒 < 0
	RETURN 0
CALL NEED_JUEL_精液中毒
CALL CHECK_JUEL_精液中毒
IF RESULT
	CALL NEED_JUEL_精液中毒
	FOR LCOUNT, 0, 15
		JUEL:LCOUNT -= ABLUP:LCOUNT
	NEXT
	ABL:精液中毒++
ENDIF

@NEED_JUEL_精液中毒
SELECTCASE ABL:精液中毒
	CASE 0
		ABLUP:GETPALAM("欲情") = 3000
		ABLUP:GETPALAM("屈服") = 10000
		ABLUPEXP:GETEXP("精液経験") = 10
	CASE 1
		ABLUP:GETPALAM("欲情") = 8000
		ABLUP:GETPALAM("屈服") = 25000
		ABLUPEXP:GETEXP("精液経験") = 25
	CASE 2
		ABLUP:GETPALAM("欲情") = 15000
		ABLUP:GETPALAM("屈服") = 50000
		ABLUPEXP:GETEXP("精液経験") = 40
	CASE 3
		ABLUP:GETPALAM("欲情") = 30000
		ABLUP:GETPALAM("屈服") = 100000
		ABLUPEXP:GETEXP("精液経験") = 80
	CASE 4
		ABLUP:GETPALAM("欲情") = 55000
		ABLUP:GETPALAM("屈服") = 300000
		ABLUPEXP:GETEXP("精液経験") = 200
	CASE 5
		ABLUP:GETPALAM("欲情") = 60000
		ABLUP:GETPALAM("屈服") = 350000
		ABLUPEXP:GETEXP("精液経験") = 250
	CASE 6
		ABLUP:GETPALAM("欲情") = 65000
		ABLUP:GETPALAM("屈服") = 400000
		ABLUPEXP:GETEXP("精液経験") = 300
	CASE 7
		ABLUP:GETPALAM("欲情") = 70000
		ABLUP:GETPALAM("屈服") = 450000
		ABLUPEXP:GETEXP("精液経験") = 350
	CASE 8
		ABLUP:GETPALAM("欲情") = 75000
		ABLUP:GETPALAM("屈服") = 500000
		ABLUPEXP:GETEXP("精液経験") = 400
	CASE 9
		ABLUP:GETPALAM("欲情") = 90000
		ABLUP:GETPALAM("屈服") = 650000
		ABLUPEXP:GETEXP("精液経験") = 500
	CASE IS >= 10
		ABLUP:GETPALAM("欲情") = 1000 * POWER(ABL:精液中毒, 2)
		ABLUP:GETPALAM("屈服") = 7000 * POWER(ABL:精液中毒, 2)
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:GETPALAM("欲情") , 2.00
		TIMES ABLUP:GETPALAM("屈服") , 2.00
		TIMES ABLUPEXP:GETEXP("精液経験") , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:GETPALAM("欲情") , 0.80
		TIMES ABLUP:GETPALAM("屈服") , 0.80
		TIMES ABLUPEXP:GETEXP("精液経験") , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:GETPALAM("欲情") , 2.00
		TIMES ABLUP:GETPALAM("屈服") , 2.00
		TIMES ABLUPEXP:GETEXP("精液経験") , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:GETPALAM("欲情") , 0.80
		TIMES ABLUP:GETPALAM("屈服") , 0.80
		TIMES ABLUPEXP:GETEXP("精液経験") , 0.80
	ENDIF
ENDIF

;汚臭敏感、汚れ無視、男好き
IF TALENT:汚臭敏感 || TALENT:汚れ無視 || TALENT:男好き
	TIMES ABLUP:GETPALAM("欲情") , 0.80
	TIMES ABLUP:GETPALAM("屈服") , 0.80
	TIMES ABLUPEXP:GETEXP("精液経験") , 0.50
ENDIF

;男嫌い
IF TALENT:男嫌い
	TIMES ABLUP:GETPALAM("欲情") , 1.50
	TIMES ABLUP:GETPALAM("屈服") , 1.50
	TIMES ABLUPEXP:GETEXP("精液経験") , 2.00
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:GETPALAM("欲情") , 0.50
	TIMES ABLUP:GETPALAM("屈服") , 0.50
	TIMES ABLUPEXP:GETEXP("精液経験") , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい]、もしくは淫乱系陥落なら無視できる）
IF !TALENT:中毒しやすい && FALLTYPE(TARGET) != 2
	SELECTCASE ABL:精液中毒
		CASE IS >= 8
			ABLUPEXP:GETEXP("異常経験") = 7
		CASE IS >= 4
			ABLUPEXP:GETEXP("異常経験") = 3
		CASE IS >= 3
			ABLUPEXP:GETEXP("異常経験") = 2
		CASE IS >= 2
			ABLUPEXP:GETEXP("異常経験") = 1
	ENDSELECT
ENDIF

@CHECK_JUEL_精液中毒
;異常経験が規定値に満たないとry
SIF EXP:異常経験 < ABLUPEXP:GETEXP("異常経験")
	RETURN 0
;奉仕精神必要
SIF ABL:精液中毒 >= ABL:奉仕精神
	RETURN 0

;欲情の珠、屈服の珠、精液経験
SIF JUEL:欲情 >= ABLUP:GETPALAM("欲情") && JUEL:屈服 >= ABLUP:GETPALAM("屈服") && EXP:精液経験 >= ABLUPEXP:GETEXP("精液経験")
	RETURN 1

;上記の条件を満たさないと上げられない
RETURN 0

@ABLUP_MESSAGE_精液中毒
SELECTCASE ABL:精液中毒
	CASE 2, 3, 4, 8
		;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][汚臭鈍感]、もしくは淫乱系陥落なら無視できる）
		SIF EXP:異常経験 < ABLUPEXP:GETEXP("異常経験")
			SETCOLORBYNAME gray
		SIF ABLUPEXP:GETEXP("異常経験")
			PRINTFORM [異常経験{ABLUPEXP:GETEXP("異常経験")}以上]
		RESETCOLOR
ENDSELECT

SIF ABL:奉仕精神 <= ABL:精液中毒
	SETCOLORBYNAME gray
PRINTFORM [奉仕精神LV{ABL:精液中毒+1}以上]
RESETCOLOR

SIF JUEL:欲情 < ABLUP:GETPALAM("欲情")
	SETCOLORBYNAME gray
PRINTFORM [欲情の珠×{ABLUP:GETPALAM("欲情")}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:GETPALAM("屈服")
	SETCOLORBYNAME gray
PRINTFORM [屈服の珠×{ABLUP:GETPALAM("屈服")}]
RESETCOLOR

IF ABLUPEXP:GETEXP("精液経験")
	SIF EXP:精液経験 < ABLUPEXP:GETEXP("精液経験")
		SETCOLORBYNAME gray
	PRINTFORM [精液経験{ABLUPEXP:GETEXP("精液経験")}以上]
	RESETCOLOR
ENDIF
