@ABLUP15
SIF ABL:レズ中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL15
CALL CHECK_JUEL15
IF RESULT
	CALL NEED_JUEL15
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:レズ中毒++
ENDIF

@NEED_JUEL15
SELECTCASE ABL:レズ中毒
	CASE 0
		ABLUP:GETNUM(PALAM, "快Ｃ") = 10000
		ABLUP:GETNUM(PALAM, "屈服") = 3000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 1000
	CASE 1
		ABLUP:GETNUM(PALAM, "快Ｃ") = 25000
		ABLUP:GETNUM(PALAM, "屈服") = 8000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 1500
	CASE 2
		ABLUP:GETNUM(PALAM, "快Ｃ") = 50000
		ABLUP:GETNUM(PALAM, "屈服") = 15000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 2000
	CASE 3
		ABLUP:GETNUM(PALAM, "快Ｃ") = 100000
		ABLUP:GETNUM(PALAM, "屈服") = 30000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 4500
	CASE 4
		ABLUP:GETNUM(PALAM, "快Ｃ") = 300000
		ABLUP:GETNUM(PALAM, "屈服") = 55000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 6000
	CASE 5
		ABLUP:GETNUM(PALAM, "快Ｃ") = 350000
		ABLUP:GETNUM(PALAM, "屈服") = 60000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 6500
	CASE 6
		ABLUP:GETNUM(PALAM, "快Ｃ") = 400000
		ABLUP:GETNUM(PALAM, "屈服") = 65000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 7000
	CASE 7
		ABLUP:GETNUM(PALAM, "快Ｃ") = 450000
		ABLUP:GETNUM(PALAM, "屈服") = 70000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 7500
	CASE 8
		ABLUP:GETNUM(PALAM, "快Ｃ") = 500000
		ABLUP:GETNUM(PALAM, "屈服") = 75000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 8000
	CASE 9
		ABLUP:GETNUM(PALAM, "快Ｃ") = 550000
		ABLUP:GETNUM(PALAM, "屈服") = 80000
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 9000
	CASE IS >= 10
		LOCAL = ABL:レズ中毒*ABL:レズ中毒
		ABLUP:GETNUM(PALAM, "快Ｃ") = 6000 * LOCAL
		ABLUP:GETNUM(PALAM, "屈服") = 900 * LOCAL
		ABLUPEXP:GETNUM(EXP, "レズ経験") = 100 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:GETNUM(PALAM, "快Ｃ") , 2.00
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 2.00
		TIMES ABLUPEXP:GETNUM(EXP, "レズ経験") , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:GETNUM(PALAM, "快Ｃ") , 0.80
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.80
		TIMES ABLUPEXP:GETNUM(EXP, "レズ経験") , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:GETNUM(PALAM, "快Ｃ") , 2.00
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 2.00
		TIMES ABLUPEXP:GETNUM(EXP, "レズ経験") , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:GETNUM(PALAM, "快Ｃ") , 0.80
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.80
		TIMES ABLUPEXP:GETNUM(EXP, "レズ経験") , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:GETNUM(PALAM, "快Ｃ") , 0.50
	TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.50
	TIMES ABLUPEXP:GETNUM(EXP, "レズ経験") , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:両刀
	SELECTCASE ABL:レズ中毒
		CASE IS >= 8
			ABLUPEXP:GETNUM(EXP, "異常経験") = 7
		CASE IS >= 4
			ABLUPEXP:GETNUM(EXP, "異常経験") = 3
		CASE IS >= 3
			ABLUPEXP:GETNUM(EXP, "異常経験") = 2
		CASE IS >= 2
			ABLUPEXP:GETNUM(EXP, "異常経験") = 1
	ENDSELECT
ENDIF

@CHECK_JUEL15
;以上経験が必要な場合
SIF EXP:異常経験 < ABLUPEXP:GETNUM(EXP, "異常経験")
	RETURN 0

;奉仕精神が必要
SIF ABL:奉仕精神 <= ABL:レズ中毒
	RETURN 0

;快Cの珠、欲情の珠、屈服の珠、レズ経験で上げる
SIF JUEL:快Ｃ >= ABLUP:GETNUM(PALAM, "快Ｃ") && JUEL:屈服 >= ABLUP:GETNUM(PALAM, "屈服") && EXP:レズ経験 >= ABLUPEXP:GETNUM(EXP, "レズ経験")
	RETURN 1

RETURN 0

@ABLUP_MESSAGE15
;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
SIF EXP:異常経験 < ABLUPEXP:GETNUM(EXP, "異常経験")
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:GETNUM(EXP, "異常経験")
	PRINTFORM [異常経験{ABLUPEXP:GETNUM(EXP, "異常経験")}以上]
RESETCOLOR

SIF ABL:レズ中毒+1 > ABL:奉仕精神
	SETCOLOR 120, 120, 120
PRINTFORM [奉仕精神LV{ABL:レズ中毒+1}以上]
RESETCOLOR

SIF JUEL:快Ｃ < ABLUP:GETNUM(PALAM, "快Ｃ")
	SETCOLOR 120, 120, 120
PRINTFORM [快Ｃの珠×{ABLUP:GETNUM(PALAM, "快Ｃ")}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:GETNUM(PALAM, "屈服")
	SETCOLOR 120, 120, 120
PRINTFORM [屈服の珠×{ABLUP:GETNUM(PALAM, "屈服")}]
RESETCOLOR

SIF EXP:レズ経験 < ABLUPEXP:GETNUM(EXP, "レズ経験")
	SETCOLOR 120, 120, 120
PRINTFORM [レズ経験{ABLUPEXP:GETNUM(EXP, "レズ経験")}以上]
RESETCOLOR

