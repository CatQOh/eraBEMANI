@ABLUP16
SIF ABL:ゲイ中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL16
CALL CHECK_JUEL16
IF RESULT
	CALL NEED_JUEL16
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:ゲイ中毒++
ENDIF

@NEED_JUEL16
SELECTCASE ABL:ゲイ中毒
	CASE 0
		ABLUP:GETNUM(PALAM, "快Ａ") = 10000
		ABLUP:GETNUM(PALAM, "屈服") = 3000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 1000
	CASE 1
		ABLUP:GETNUM(PALAM, "快Ａ") = 25000
		ABLUP:GETNUM(PALAM, "屈服") = 8000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 1500
	CASE 2
		ABLUP:GETNUM(PALAM, "快Ａ") = 50000
		ABLUP:GETNUM(PALAM, "屈服") = 15000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 2000
	CASE 3
		ABLUP:GETNUM(PALAM, "快Ａ") = 100000
		ABLUP:GETNUM(PALAM, "屈服") = 30000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 4500
	CASE 4
		ABLUP:GETNUM(PALAM, "快Ａ") = 300000
		ABLUP:GETNUM(PALAM, "屈服") = 55000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 6000
	CASE 5
		ABLUP:GETNUM(PALAM, "快Ａ") = 350000
		ABLUP:GETNUM(PALAM, "屈服") = 60000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 6500
	CASE 6
		ABLUP:GETNUM(PALAM, "快Ａ") = 400000
		ABLUP:GETNUM(PALAM, "屈服") = 65000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 7000
	CASE 7
		ABLUP:GETNUM(PALAM, "快Ａ") = 450000
		ABLUP:GETNUM(PALAM, "屈服") = 70000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 7500
	CASE 8
		ABLUP:GETNUM(PALAM, "快Ａ") = 500000
		ABLUP:GETNUM(PALAM, "屈服") = 75000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 8000
	CASE 9
		ABLUP:GETNUM(PALAM, "快Ａ") = 550000
		ABLUP:GETNUM(PALAM, "屈服") = 80000
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 9000
	CASE IS >= 10
		LOCAL = ABL:ゲイ中毒*ABL:ゲイ中毒
		ABLUP:GETNUM(PALAM, "快Ａ") = 6000 * LOCAL
		ABLUP:GETNUM(PALAM, "屈服") = 900 * LOCAL
		ABLUPEXP:GETNUM(EXP, "ゲイ経験") = 100 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 2.00
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 2.00 
		TIMES ABLUPEXP:GETNUM(EXP, "ゲイ経験") , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 0.80
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.80 
		TIMES ABLUPEXP:GETNUM(EXP, "ゲイ経験") , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 2.00
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 2.00
		TIMES ABLUPEXP:GETNUM(EXP, "ゲイ経験") , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 0.80
		TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.80
		TIMES ABLUPEXP:GETNUM(EXP, "ゲイ経験") , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 0.50
	TIMES ABLUP:GETNUM(PALAM, "屈服") , 0.50
	TIMES ABLUPEXP:GETNUM(EXP, "ゲイ経験") , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:両刀
	SELECTCASE ABL:ゲイ中毒
		CASE IS >= 8
			ABLUPEXP:GETNUM(EXP, "異常経験") = 7
		CASE IS >= 4
			ABLUPEXP:GETNUM(EXP, "異常経験") = 3
		CASE IS >= 3
			ABLUPEXP:GETNUM(EXP, "異常経験") = 2
		CASE IS >= 2
			ABLUPEXP:GETNUM(EXP, "異常経験") = 1
	ENDSELECT
ENDIF

@CHECK_JUEL16
;異常経験が必要
SIF EXP:異常経験 < ABLUPEXP:GETNUM(EXP, "異常経験")
	RETURN 0

;奉仕精神が必要
SIF ABL:ゲイ中毒 >= ABL:奉仕精神
	RETURN 0

;快A、欲情、屈服の珠、ゲイ経験で上げる
SIF JUEL:快Ａ >= ABLUP:GETNUM(PALAM, "快Ａ") && JUEL:屈服 >= ABLUP:GETNUM(PALAM, "屈服") && EXP:ゲイ経験 >= ABLUPEXP:GETNUM(EXP, "ゲイ経験")
	RETURN 1

;上記の条件を満たせないと上げられない
RETURN 0

@ABLUP_MESSAGE16
;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
SIF EXP:異常経験 <= ABLUPEXP:GETNUM(EXP, "異常経験")
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:GETNUM(EXP, "異常経験")
	PRINTFORM [異常経験{ABLUPEXP:GETNUM(EXP, "異常経験")}以上]
RESETCOLOR

SIF ABL:奉仕精神 <= ABL:ゲイ中毒
	SETCOLOR 120, 120, 120
PRINTFORM [奉仕精神LV{ABL:ゲイ中毒+1}以上]
RESETCOLOR

SIF JUEL:快Ａ < ABLUP:GETNUM(PALAM, "快Ａ")
	SETCOLOR 120, 120, 120
PRINTFORM [快Ａの珠×{ABLUP:GETNUM(PALAM, "快Ａ")}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:GETNUM(PALAM, "屈服")
	SETCOLOR 120, 120, 120
PRINTFORM [屈服の珠×{ABLUP:GETNUM(PALAM, "屈服")}]
RESETCOLOR

SIF EXP:ゲイ経験 < ABLUPEXP:GETNUM(EXP, "ゲイ経験")
	SETCOLOR 120, 120, 120
PRINTFORM [ゲイ経験{ABLUPEXP:GETNUM(EXP, "ゲイ経験")}以上]
RESETCOLOR

