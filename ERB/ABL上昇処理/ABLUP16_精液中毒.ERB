;ABLUP:6 = 欲情の珠必要数
;ABLUP:7 = 屈服の珠必要数
;ABLUPEXP:20 = 精液経験必要数
;ABLUPEXP:50 = 異常経験必要数
@ABLUP16
SIF ABL:精液中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL16
CALL CHECK_JUEL16
IF RESULT
	CALL NEED_JUEL16
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:精液中毒++
ENDIF

@NEED_JUEL16
SELECTCASE ABL:精液中毒
	CASE 0
		ABLUP:6 = 3000
		ABLUP:7 = 10000
		ABLUPEXP:20 = 10
	CASE 1
		ABLUP:6 = 8000
		ABLUP:7 = 25000
		ABLUPEXP:20 = 25
	CASE 2
		ABLUP:6 = 15000
		ABLUP:7 = 50000
		ABLUPEXP:20 = 40
	CASE 3
		ABLUP:6 = 30000
		ABLUP:7 = 100000
		ABLUPEXP:20 = 80
	CASE 4
		ABLUP:6 = 55000
		ABLUP:7 = 300000
		ABLUPEXP:20 = 200
	CASE 5
		ABLUP:6 = 60000
		ABLUP:7 = 350000
		ABLUPEXP:20 = 250
	CASE 6
		ABLUP:6 = 65000
		ABLUP:7 = 400000
		ABLUPEXP:20 = 300
	CASE 7
		ABLUP:6 = 70000
		ABLUP:7 = 450000
		ABLUPEXP:20 = 350
	CASE 8
		ABLUP:6 = 75000
		ABLUP:7 = 500000
		ABLUPEXP:20 = 400
	CASE 9
		ABLUP:6 = 90000
		ABLUP:7 = 650000
		ABLUPEXP:20 = 500
	CASE IS >= 10
		LOCAL = ABL:精液中毒*ABL:精液中毒
		ABLUP:6 = 1000 * LOCAL
		ABLUP:7 = 7000 * LOCAL
		ABLUPEXP:20 = 6 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:20 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:20 , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:20 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:20 , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:6 , 0.50
	TIMES ABLUP:7 , 0.50
	TIMES ABLUPEXP:20 , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][汚臭鈍感]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:汚臭鈍感
	SELECTCASE ABL:精液中毒
		CASE IS >= 8
			ABLUPEXP:50 = 7
		CASE IS >= 4
			ABLUPEXP:50 = 3
		CASE IS >= 3
			ABLUPEXP:50 = 2
		CASE IS >= 2
			ABLUPEXP:50 = 1
	ENDSELECT
ENDIF

@CHECK_JUEL16
;異常経験が規定値に満たないとry
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0
;奉仕精神必要
SIF ABL:精液中毒 >= ABL:奉仕精神
	RETURN 0

;欲情の珠、屈服の珠、精液経験
SIF JUEL:欲情 >= ABLUP:6 && JUEL:屈服 >= ABLUP:7 && EXP:精液経験 >= ABLUPEXP:20
	RETURN 1

;上記の条件を満たさないと上げられない
RETURN 0

@ABLUP_MESSAGE16
;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][汚臭鈍感]なら無視できる）
SIF EXP:異常経験 < ABLUPEXP:50
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:50
	PRINTFORM [異常経験{ABLUPEXP:50}以上]
RESETCOLOR

SIF ABL:奉仕精神 <= ABL:精液中毒
	SETCOLOR 120, 120, 120
PRINTFORM [奉仕精神LV{ABL:精液中毒+1}以上]
RESETCOLOR

SIF JUEL:欲情 < ABLUP:6
	SETCOLOR 120, 120, 120
PRINTFORM [欲情の珠×{ABLUP:6}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:7
	SETCOLOR 120, 120, 120
PRINTFORM [屈服の珠×{ABLUP:7}]
RESETCOLOR

SIF EXP:精液経験 < ABLUPEXP:20
	SETCOLOR 120, 120, 120
PRINTFORM [精液経験{ABLUPEXP:20}以上]
RESETCOLOR

