;ABLUP:2 = 快Ａの珠必要数
;ABLUP:7 = 屈服の珠必要数
;ABLUPEXP:41 = ゲイ経験必要数
@ABLUP18
SIF ABL:ゲイ中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL18
CALL CHECK_JUEL18
IF RESULT
	CALL NEED_JUEL18
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:ゲイ中毒++
ENDIF

@NEED_JUEL18
SELECTCASE ABL:ゲイ中毒
	CASE 0
		ABLUP:2 = 10000
		ABLUP:7 = 3000
		ABLUPEXP:41 = 1000
	CASE 1
		ABLUP:2 = 25000
		ABLUP:7 = 8000
		ABLUPEXP:41 = 1500
	CASE 2
		ABLUP:2 = 50000
		ABLUP:7 = 15000
		ABLUPEXP:41 = 2000
	CASE 3
		ABLUP:2 = 100000
		ABLUP:7 = 30000
		ABLUPEXP:41 = 4500
	CASE 4
		ABLUP:2 = 300000
		ABLUP:7 = 55000
		ABLUPEXP:41 = 6000
	CASE 5
		ABLUP:2 = 350000
		ABLUP:7 = 60000
		ABLUPEXP:41 = 6500
	CASE 6
		ABLUP:2 = 400000
		ABLUP:7 = 65000
		ABLUPEXP:41 = 7000
	CASE 7
		ABLUP:2 = 450000
		ABLUP:7 = 70000
		ABLUPEXP:41 = 7500
	CASE 8
		ABLUP:2 = 500000
		ABLUP:7 = 75000
		ABLUPEXP:41 = 8000
	CASE 9
		ABLUP:2 = 550000
		ABLUP:7 = 80000
		ABLUPEXP:41 = 9000
	CASE IS >= 10
		LOCAL = ABL:ゲイ中毒*ABL:ゲイ中毒
		ABLUP:2 = 6000 * LOCAL
		ABLUP:7 = 900 * LOCAL
		ABLUPEXP:41 = 100 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:2 , 2.00
		TIMES ABLUP:7 , 2.00 
		TIMES ABLUPEXP:41 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:2 , 0.80
		TIMES ABLUP:7 , 0.80 
		TIMES ABLUPEXP:41 , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:2 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:41 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:2 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:41 , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:2 , 0.50
	TIMES ABLUP:7 , 0.50
	TIMES ABLUPEXP:41 , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:両刀
	SELECTCASE ABL:ゲイ中毒
		CASE IS >= 8
			ABLUPEXP:50 = 7
		CASE IS >= 4
			ABLUPEXP:50 = 3
		CASE IS >= 3
			ABLUPEXP:50 = 2
		CASE IS >= 2
			ABLUPEXP:50 = 1
	ENDSELECT
ENDIF

@CHECK_JUEL18
;異常経験が必要
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;奉仕精神が必要
SIF ABL:ゲイ中毒 >= ABL:奉仕精神
	RETURN 0

;快A、欲情、屈服の珠、ゲイ経験で上げる
SIF JUEL:快Ａ >= ABLUP:2 && JUEL:屈服 >= ABLUP:7 && EXP:ゲイ経験 >= ABLUPEXP:41
	RETURN 1

;上記の条件を満たせないと上げられない
RETURN 0

@ABLUP_MESSAGE18
;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][両刀]なら無視できる）
SIF EXP:異常経験 <= ABLUPEXP:50
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:50
	PRINTFORM [異常経験{ABLUPEXP:50}以上]
RESETCOLOR

SIF ABL:奉仕精神 <= ABL:ゲイ中毒
	SETCOLOR 120, 120, 120
PRINTFORM [奉仕精神LV{ABL:ゲイ中毒+1}以上]
RESETCOLOR

SIF JUEL:快Ａ < ABLUP:2
	SETCOLOR 120, 120, 120
PRINTFORM [快Ａの珠×{ABLUP:2}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:7
	SETCOLOR 120, 120, 120
PRINTFORM [屈服の珠×{ABLUP:7}]
RESETCOLOR

SIF EXP:ゲイ経験 < ABLUPEXP:41
	SETCOLOR 120, 120, 120
PRINTFORM [ゲイ経験{ABLUPEXP:41}以上]
RESETCOLOR

