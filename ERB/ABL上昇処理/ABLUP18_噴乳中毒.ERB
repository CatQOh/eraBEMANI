;ABLUP:3 = 快Ｂの珠必要数
;ABLUP:6 = 欲情の珠必要数
;ABLUP:7 = 屈服の珠必要数
;ABLUPEXP:50 = 異常経験必要数
;ABLUPEXP:8 = 噴乳経験必要数
@ABLUP18
SIF ABL:噴乳中毒 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL20
CALL CHECK_JUEL20
IF RESULT
	CALL NEED_JUEL20
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:噴乳中毒++
ENDIF

@NEED_JUEL18
SELECTCASE ABL:噴乳中毒
	CASE 0
		ABLUP:3 = 6000
		ABLUP:6 = 2500
		ABLUP:7 = 1000
		ABLUPEXP:8 = 10
	CASE 1
		ABLUP:3 = 14000
		ABLUP:6 = 5000
		ABLUP:7 = 2500
		ABLUPEXP:8 = 25
	CASE 2
		ABLUP:3 = 27000
		ABLUP:6 = 9000
		ABLUP:7 = 4800
		ABLUPEXP:8 = 80
	CASE 3
		ABLUP:3 = 65000
		ABLUP:6 = 17000
		ABLUP:7 = 10000
		ABLUPEXP:8 = 150
	CASE 4
		ABLUP:3 = 80000
		ABLUP:6 = 30000
		ABLUP:7 = 25000
		ABLUPEXP:8 = 250
	CASE 5
		ABLUP:3 = 100000
		ABLUP:6 = 35000
		ABLUP:7 = 30000
		ABLUPEXP:8 = 350
	CASE 6
		ABLUP:3 = 120000
		ABLUP:6 = 40000
		ABLUP:7 = 35000
		ABLUPEXP:8 = 500
	CASE 7
		ABLUP:3 = 140000
		ABLUP:6 = 45000
		ABLUP:7 = 40000
		ABLUPEXP:8 = 600
	CASE 8
		ABLUP:3 = 160000
		ABLUP:6 = 50000
		ABLUP:7 = 45000
		ABLUPEXP:8 = 700
	CASE 9
		ABLUP:3 = 200000
		ABLUP:6 = 60000
		ABLUP:7 = 50000
		ABLUPEXP:8 = 800
	CASE IS >= 10
		LOCAL = ABL:噴乳中毒*ABL:噴乳中毒
		ABLUP:3 = 2500 * LOCAL
		ABLUP:6 = 700 * LOCAL
		ABLUP:7 = 600 * LOCAL
		ABLUPEXP:8 = 9 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:3 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:8 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:3 , 0.80
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:8 , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:3 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:8 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:3 , 0.80
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:8 , 0.80
	ENDIF
ENDIF

;中毒しやすい
IF TALENT:中毒しやすい
	TIMES ABLUP:3 , 0.50
	TIMES ABLUP:6 , 0.50
	TIMES ABLUP:7 , 0.50
	TIMES ABLUPEXP:8 , 0.50
ENDIF

;LV2からは異常経験必要 LV3からは異常経験2以上必要 LV4からは異常経験3以上必要 LV8からは異常経験7以上必要（素質：[中毒しやすい][淫乳]なら無視できる）
IF !TALENT:中毒しやすい && !TALENT:淫乳
	SELECTCASE ABL:噴乳中毒
		CASE IS >= 8
			ABLUPEXP:50 = 7
		CASE IS >= 4
			ABLUPEXP:50 = 3
		CASE IS >= 3
			ABLUPEXP:50 = 2
		CASE IS >= 2
			ABLUPEXP:50 = 1
	ENDSELECT
ENDIF

@CHECK_JUEL18
;異常経験が必要
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;B感覚が必要
SIF ABL:Ｂ感覚 <= ABL:噴乳中毒
	RETURN 0

;欲情、快Ｂ、屈服の珠、噴乳経験で上げる
SIF JUEL:快Ｂ >= ABLUP:3 && JUEL:欲情 >= ABLUP:6 && JUEL:屈服 >= ABLUP:7 && EXP:噴乳経験 >= ABLUPEXP:8
	RETURN 1

;上記の条件を満たさないと上げられない
RETURN 0

