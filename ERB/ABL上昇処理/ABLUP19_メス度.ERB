@ABLUP19
SIF ABL:メス度 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL_メス度
CALL CHECK_JUEL_メス度
IF RESULT
	CALL NEED_JUEL_メス度
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:メス度++
ENDIF

