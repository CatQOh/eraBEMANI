;性転換済み
IF TALENT:性転換済
	TIMES ABLUP:GETPALAM("快Ａ") , 0.70
	TIMES ABLUP:GETPALAM("屈服") , 0.70
	TIMES ABLUPEXP:GETEXP("Ａ経験") , 0.70
	TIMES ABLUPEXP:GETEXP("射精管理経験") , 0.70
ENDIF
;去勢済み
IF TALENT:去勢済み
	TIMES ABLUP:GETPALAM("快Ａ") , 0.50
	TIMES ABLUP:GETPALAM("屈服") , 0.50
	TIMES ABLUPEXP:GETEXP("Ａ経験") , 0.50
	ABLUPEXP:GETEXP("射精管理経験") = 0
ENDIF

@CHECK_JUEL_メス度
;快Ａ、屈服の珠、Ａ経験、射精管理経験で上げる
SIF JUEL:快Ａ >= ABLUP:GETPALAM("快Ａ") && JUEL:屈服 >= ABLUP:GETPALAM("屈服") && EXP:Ａ経験 >= ABLUPEXP:GETEXP("Ａ経験") && EXP:射精管理経験 >= ABLUPEXP:GETEXP("射精管理経験")
	RETURN 1

;上記の条件を満たさないと上げられない
RETURN 0

@ABLUP_MESSAGE_メス度
SIF JUEL:快Ａ < ABLUP:GETPALAM("快Ａ")
	SETCOLORBYNAME gray
PRINTFORM [快Ａの珠×{ABLUP:GETPALAM("快Ａ")}]
RESETCOLOR

SIF JUEL:屈服 < ABLUP:GETPALAM("屈服")
	SETCOLORBYNAME gray
PRINTFORM [屈服の珠×{ABLUP:GETPALAM("屈服")}]
RESETCOLOR

IF ABLUPEXP:GETEXP("Ａ経験")
	SIF EXP:Ａ経験 < ABLUPEXP:GETEXP("Ａ経験")
		SETCOLORBYNAME gray
	PRINTFORM [Ａ経験{ABLUPEXP:GETEXP("Ａ経験")}以上]
