@ABLUP19
#DIM DYNAMIC LCOUNT
SIF ABL:メス度 == 10 && !TALENT:リミットバースト
	RETURN 0
SIF ABL:メス度 < 0
	RETURN 0
CALL NEED_JUEL_メス度
CALL CHECK_JUEL_メス度
IF RESULT
	CALL NEED_JUEL_メス度
	FOR LCOUNT, 0, 15
		JUEL:LCOUNT -= ABLUP:LCOUNT
	NEXT
	ABL:メス度++
ENDIF

