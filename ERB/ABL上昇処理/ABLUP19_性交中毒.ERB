	RETURN 0
CALL NEED_JUEL19
CALL CHECK_JUEL19
IF RESULT
	CALL NEED_JUEL19
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:性交中毒++
ENDIF

@NEED_JUEL19
SELECTCASE ABL:性交中毒
	CASE 0
		ABLUP:5 = 1000
		ABLUP:6 = 2500
		ABLUP:7 = 1000
		ABLUPEXP:4 = 10
	CASE 1
		ABLUP:5 = 2500
		ABLUP:6 = 5000
		ABLUP:7 = 2500
		ABLUPEXP:4 = 25
	CASE 2
		ABLUP:5 = 4800
		ABLUP:6 = 9000
		ABLUP:7 = 4800
		ABLUPEXP:4 = 80
	CASE 3
		ABLUP:5 = 10000
		ABLUP:6 = 17000
		ABLUP:7 = 10000
		ABLUPEXP:4 = 150
	CASE 4
		ABLUP:5 = 25000
		ABLUP:6 = 30000
		ABLUP:7 = 25000
		ABLUPEXP:4 = 250
	CASE 5
		ABLUP:5 = 30000
		ABLUP:6 = 35000
		ABLUP:7 = 30000
		ABLUPEXP:4 = 350
	CASE 6
		ABLUP:5 = 35000
