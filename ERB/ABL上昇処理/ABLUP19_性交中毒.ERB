IF !TALENT:中毒しやすい && !TALENT:セックス狂 && !TALENT:尻穴狂い
	SELECTCASE ABL:性交中毒
		CASE IS >= 8
			ABLUPEXP:50 = 7
		CASE IS >= 4
			ABLUPEXP:50 = 3
		CASE IS >= 3
			ABLUPEXP:50 = 2
		CASE IS >= 2
			ABLUPEXP:50 = 1
	ENDSELECT
ENDIF

@CHECK_JUEL19
;異常経験が必要
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;恭順、欲情、屈服の珠及び性交経験で上げる
SIF JUEL:恭順 >= ABLUP:5 && JUEL:欲情 >= ABLUP:6 && JUEL:屈服 >= ABLUP:7 && EXP:性交経験 >= ABLUPEXP:4
	RETURN 1

;上記の条件を満たせないと上げられない
RETURN 0

