		ABLUP:5 = 600 * LOCAL
		ABLUP:6 = 700 * LOCAL
		ABLUP:7 = 600 * LOCAL
		ABLUPEXP:4 = 9 * LOCAL
ENDSELECT

;一線越えない
IF TALENT:一線越えない
	;未陥落
	IF !CFLAG:陥落
		TIMES ABLUP:5 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:4 , 2.00
	;陥落
	ELSEIF CFLAG:陥落
		TIMES ABLUP:5 , 0.80
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:4 , 0.80
	ENDIF
ENDIF

;自制心
IF TALENT:自制心
	;欲望LV4以下
	IF ABL:欲望 <= 4
		TIMES ABLUP:5 , 2.00
		TIMES ABLUP:6 , 2.00
		TIMES ABLUP:7 , 2.00
		TIMES ABLUPEXP:4 , 2.00
	;欲望LV5以上
	ELSEIF ABL:欲望 >= 5
		TIMES ABLUP:5 , 0.80
		TIMES ABLUP:6 , 0.80
		TIMES ABLUP:7 , 0.80
		TIMES ABLUPEXP:4 , 0.80
	ENDIF
ENDIF

