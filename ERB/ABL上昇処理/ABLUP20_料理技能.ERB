;ABLUP:8 = 習得の珠必要数
;ABLUPEXP:100 = 料理経験必要数
@ABLUP20
SIF ABL:料理技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL20
CALL CHECK_JUEL20
IF RESULT
	CALL NEED_JUEL20
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:料理技能++
ENDIF

@NEED_JUEL20
SELECTCASE ABL:料理技能
	CASE 0
		ABLUP:8 = 75
		ABLUPEXP:100 = 5
	CASE 1
		ABLUP:8 = 500
		ABLUPEXP:100 = 30
	CASE 2
		ABLUP:8 = 3000
		ABLUPEXP:100 = 100
	CASE 3
		ABLUP:8 = 9000
		ABLUPEXP:100 = 300
	CASE 4
		ABLUP:8 = 24000
		ABLUPEXP:100 = 500
	CASE 5
		ABLUP:8 = 30000
		ABLUPEXP:100 = 1000
	CASE 6
		ABLUP:8 = 35000
		ABLUPEXP:100 = 2000
	CASE 7
		ABLUP:8 = 40000
		ABLUPEXP:100 = 4000
	CASE 8
		ABLUP:8 = 45000
		ABLUPEXP:100 = 7000
	CASE 9
		ABLUP:8 = 50000
		ABLUPEXP:100 = 10000
	CASE IS >= 10
		LOCAL = ABL:料理技能*ABL:料理技能
		ABLUP:8 = 600 * LOCAL
		ABLUPEXP:100 = 100 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:8 , 0.80
	TIMES ABLUPEXP:100 , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:8 , 1.30
	TIMES ABLUPEXP:100 , 1.30
ENDIF

@CHECK_JUEL20
;習得の珠(ABLUP:8)、料理経験(ABLUPEXP:100)で上げる
SIF JUEL:習得 >= ABLUP:8 && EXP:料理経験 >= ABLUPEXP:100
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE20
SIF JUEL:習得 < ABLUP:8
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:8}]
RESETCOLOR

SIF EXP:料理経験 < ABLUPEXP:100
	SETCOLOR 120, 120, 120
PRINTFORM [料理経験{ABLUPEXP:100}以上]
RESETCOLOR

