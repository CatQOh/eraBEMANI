@ABLUP21
SIF ABL:家事技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL21
CALL CHECK_JUEL21
IF RESULT
	CALL NEED_JUEL21
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:家事技能++
ENDIF

@NEED_JUEL21
SELECTCASE ABL:家事技能
	CASE 0
		ABLUP:GETNUM(PALAM, "習得") = 100
		ABLUPEXP:GETNUM(EXP, "家事経験") = 5
	CASE 1
		ABLUP:GETNUM(PALAM, "習得") = 500
		ABLUPEXP:GETNUM(EXP, "家事経験") = 20
	CASE 2
		ABLUP:GETNUM(PALAM, "習得") = 1000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 50
	CASE 3
		ABLUP:GETNUM(PALAM, "習得") = 5000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 100
	CASE 4
		ABLUP:GETNUM(PALAM, "習得") = 10000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 200
	CASE 5
		ABLUP:GETNUM(PALAM, "習得") = 20000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 300
	CASE 6
		ABLUP:GETNUM(PALAM, "習得") = 40000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 500
	CASE 7
		ABLUP:GETNUM(PALAM, "習得") = 70000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 1000
	CASE 8
		ABLUP:GETNUM(PALAM, "習得") = 150000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 1500
	CASE 9
		ABLUP:GETNUM(PALAM, "習得") = 300000
		ABLUPEXP:GETNUM(EXP, "家事経験") = 2000
	CASE IS >= 10
		LOCAL = ABL:家事技能*ABL:家事技能
		ABLUP:GETNUM(PALAM, "習得") = 3500 * LOCAL
		ABLUPEXP:GETNUM(EXP, "家事経験") = 30 * LOCAL
ENDSELECT

;習得早い、好奇心、潔癖症
IF TALENT:習得早い || TALENT:好奇心 || TALENT:潔癖症
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.80
	TIMES ABLUPEXP:GETNUM(EXP, "家事経験") , 0.80
ENDIF

;習得遅い、無関心、汚れ無視
IF TALENT:習得遅い || TALENT:無関心 || TALENT:汚れ無視
	TIMES ABLUP:GETNUM(PALAM, "習得") , 1.30
	TIMES ABLUPEXP:GETNUM(EXP, "家事経験") , 1.30
ENDIF

;母性もしくは恋慕、親愛
IF TALENT:母性 || TALENT:恋慕 || TALENT:親愛
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.50
	TIMES ABLUPEXP:GETNUM(EXP, "家事経験") , 0.50
ENDIF

@CHECK_JUEL21
;習得の珠、家事経験で上げる
SIF JUEL:習得 >= ABLUP:GETNUM(PALAM, "習得") && EXP:家事経験 >= ABLUPEXP:GETNUM(EXP, "家事経験")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE21
SIF JUEL:習得 < ABLUP:GETNUM(PALAM, "習得")
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:GETNUM(PALAM, "習得")}]
RESETCOLOR

SIF EXP:家事経験 < ABLUPEXP:GETNUM(EXP, "家事経験")
	SETCOLOR 120, 120, 120
PRINTFORM [家事経験{ABLUPEXP:GETNUM(EXP, "家事経験")}以上]
RESETCOLOR

