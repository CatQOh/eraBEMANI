@ABLUP24
SIF ABL:演奏技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL24
CALL CHECK_JUEL24
IF RESULT
	CALL NEED_JUEL24
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:演奏技能++
ENDIF

@NEED_JUEL24
SELECTCASE ABL:演奏技能
	CASE 0
		ABLUP:GETNUM(PALAM, "習得") = 100
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 5
	CASE 1
		ABLUP:GETNUM(PALAM, "習得") = 300
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 10
	CASE 2
		ABLUP:GETNUM(PALAM, "習得") = 1000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 20
	CASE 3
		ABLUP:GETNUM(PALAM, "習得") = 3000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 50
	;3までは楽 4から急に上げづらくなる
	CASE 4
		ABLUP:GETNUM(PALAM, "習得") = 30000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 500
	CASE 5
		ABLUP:GETNUM(PALAM, "習得") = 70000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 700
	CASE 6
		ABLUP:GETNUM(PALAM, "習得") = 100000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 1500
	CASE 7
		ABLUP:GETNUM(PALAM, "習得") = 300000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 3000
	CASE 8
		ABLUP:GETNUM(PALAM, "習得") = 500000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 5000
	CASE 9
		ABLUP:GETNUM(PALAM, "習得") = 700000
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 7000
	CASE IS >= 10
		LOCAL = ABL:歌唱技能*ABL:歌唱技能
		ABLUP:GETNUM(PALAM, "習得") = 10000 * LOCAL
		ABLUPEXP:GETNUM(EXP, "演奏経験") = 100 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.80
	TIMES ABLUPEXP:GETNUM(EXP, "演奏経験") , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:GETNUM(PALAM, "習得") , 1.30
	TIMES ABLUPEXP:GETNUM(EXP, "演奏経験") , 1.30
ENDIF

;こっちは絶対音感持っててもボーナス無し
;針さばき持ってるとほんの少し楽になる
IF TALENT:針さばき
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.95
	TIMES ABLUPEXP:GETNUM(EXP, "演奏経験") , 0.95
ENDIF

@CHECK_JUEL24
;習得の珠、演奏経験で上げる
SIF JUEL:習得 >= ABLUP:GETNUM(PALAM, "習得") && EXP:演奏経験 >= ABLUPEXP:GETNUM(EXP, "演奏経験")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE24
SIF JUEL:習得 < ABLUP:GETNUM(PALAM, "習得")
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:GETNUM(PALAM, "習得")}]
RESETCOLOR

SIF EXP:演奏経験 < ABLUPEXP:GETNUM(EXP, "演奏経験")
	SETCOLOR 120, 120, 120
PRINTFORM [演奏経験{ABLUPEXP:GETNUM(EXP, "演奏経験")}以上]
RESETCOLOR

