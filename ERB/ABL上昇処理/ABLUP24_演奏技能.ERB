;ABLUP:8 = 習得の珠必要数
;ABLUPEXP:104 = 演奏経験必要数
@ABLUP24
SIF ABL:演奏技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL24
CALL CHECK_JUEL24
IF RESULT
	CALL NEED_JUEL24
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:演奏技能++
ENDIF

@NEED_JUEL24
SELECTCASE ABL:演奏技能
	CASE 0
		ABLUP:8 = 100
		ABLUPEXP:104 = 5
	CASE 1
		ABLUP:8 = 300
		ABLUPEXP:104 = 10
	CASE 2
		ABLUP:8 = 1000
		ABLUPEXP:104 = 20
	CASE 3
		ABLUP:8 = 3000
		ABLUPEXP:104 = 50
	;3までは楽 4から急に上げづらくなる
	CASE 4
		ABLUP:8 = 30000
		ABLUPEXP:104 = 500
	CASE 5
		ABLUP:8 = 70000
		ABLUPEXP:104 = 700
	CASE 6
		ABLUP:8 = 100000
		ABLUPEXP:104 = 1500
	CASE 7
		ABLUP:8 = 300000
		ABLUPEXP:104 = 3000
	CASE 8
		ABLUP:8 = 500000
		ABLUPEXP:104 = 5000
	CASE 9
		ABLUP:8 = 700000
		ABLUPEXP:104 = 7000
	CASE IS >= 10
		LOCAL = ABL:歌唱技能*ABL:歌唱技能
		ABLUP:8 = 10000 * LOCAL
		ABLUPEXP:104 = 100 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:8 , 0.80
	TIMES ABLUPEXP:104 , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:8 , 1.30
	TIMES ABLUPEXP:104 , 1.30
ENDIF

;こっちは絶対音感持っててもボーナス無し
;針さばき持ってるとほんの少し楽になる
IF TALENT:針さばき
	TIMES ABLUP:8 , 0.95
	TIMES ABLUPEXP:104 , 0.95
ENDIF

@CHECK_JUEL24
;習得の珠(ABLUP:8)、演奏経験(ABLUPEXP:104)で上げる
SIF JUEL:習得 >= ABLUP:8 && EXP:演奏経験 >= ABLUPEXP:104
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE24
SIF JUEL:習得 < ABLUP:8
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:8}]
RESETCOLOR

SIF EXP:演奏経験 < ABLUPEXP:104
	SETCOLOR 120, 120, 120
PRINTFORM [演奏経験{ABLUPEXP:104}以上]
RESETCOLOR

