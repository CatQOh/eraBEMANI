@ABLUP25
SIF ABL:撮影技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL_撮影技能
CALL CHECK_JUEL_撮影技能
IF RESULT
	CALL NEED_JUEL_撮影技能
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:撮影技能++
ENDIF

@NEED_JUEL_撮影技能
SELECTCASE ABL:撮影技能
	CASE 0
		ABLUP:GETPALAM("習得") = 75
		ABLUPEXP:GETEXP("撮影経験") = 5
	CASE 1
		ABLUP:GETPALAM("習得") = 500
		ABLUPEXP:GETEXP("撮影経験") = 10
	CASE 2
		ABLUP:GETPALAM("習得") = 3000
		ABLUPEXP:GETEXP("撮影経験") = 30
	CASE 3
		ABLUP:GETPALAM("習得") = 9000
		ABLUPEXP:GETEXP("撮影経験") = 50
	CASE 4
		ABLUP:GETPALAM("習得") = 24000
		ABLUPEXP:GETEXP("撮影経験") = 100
	CASE 5
		ABLUP:GETPALAM("習得") = 30000
		ABLUPEXP:GETEXP("撮影経験") = 200
	CASE 6
		ABLUP:GETPALAM("習得") = 35000
		ABLUPEXP:GETEXP("撮影経験") = 300
	CASE 7
		ABLUP:GETPALAM("習得") = 40000
		ABLUPEXP:GETEXP("撮影経験") = 400
	CASE 8
		ABLUP:GETPALAM("習得") = 45000
		ABLUPEXP:GETEXP("撮影経験") = 500
	CASE 9
		ABLUP:GETPALAM("習得") = 50000
		ABLUPEXP:GETEXP("撮影経験") = 600
	CASE IS >= 10
		LOCAL = ABL:撮影技能*ABL:撮影技能
		ABLUP:GETPALAM("習得") = 600 * LOCAL
		ABLUPEXP:GETEXP("撮影経験") = 7 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:GETPALAM("習得") , 0.80
	TIMES ABLUPEXP:GETEXP("撮影経験") , 0.80
ENDIF
;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:GETPALAM("習得") , 1.30
	TIMES ABLUPEXP:GETEXP("撮影経験") , 1.30
ENDIF

@CHECK_JUEL_撮影技能
;習得の珠、撮影経験が必要
SIF JUEL:習得 >= ABLUP:GETPALAM("習得") && EXP:撮影経験 >= ABLUPEXP:GETEXP("撮影経験")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_撮影技能
SIF JUEL:習得 < ABLUP:GETPALAM("習得")
	SETCOLORBYNAME gray
PRINTFORM [習得の珠×{ABLUP:GETPALAM("習得")}]
RESETCOLOR

SIF EXP:撮影経験 < ABLUPEXP:GETEXP("撮影経験")
	SETCOLORBYNAME gray
PRINTFORM [撮影経験{ABLUPEXP:GETEXP("撮影経験")}以上]
RESETCOLOR

