;ABLUP:8 = 習得の珠必要数
;ABLUPEXP:105 = 撮影経験必要数
@ABLUP25
SIF ABL:撮影技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL25
CALL CHECK_JUEL25
IF RESULT
	CALL NEED_JUEL25
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:撮影技能++
ENDIF

@NEED_JUEL25
SELECTCASE ABL:撮影技能
	CASE 0
		ABLUP:8 = 75
		ABLUPEXP:105 = 5
	CASE 1
		ABLUP:8 = 500
		ABLUPEXP:105 = 10
	CASE 2
		ABLUP:8 = 3000
		ABLUPEXP:105 = 30
	CASE 3
		ABLUP:8 = 9000
		ABLUPEXP:105 = 50
	CASE 4
		ABLUP:8 = 24000
		ABLUPEXP:105 = 100
	CASE 5
		ABLUP:8 = 30000
		ABLUPEXP:105 = 200
	CASE 6
		ABLUP:8 = 35000
		ABLUPEXP:105 = 300
	CASE 7
		ABLUP:8 = 40000
		ABLUPEXP:105 = 400
	CASE 8
		ABLUP:8 = 45000
		ABLUPEXP:105 = 500
	CASE 9
		ABLUP:8 = 50000
		ABLUPEXP:105 = 600
	CASE IS >= 10
		LOCAL = ABL:撮影技能*ABL:撮影技能
		ABLUP:8 = 600 * LOCAL
		ABLUPEXP:105 = 7 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:8 , 0.80
	TIMES ABLUPEXP:105 , 0.80
ENDIF

;習得遅いもしくは無関心
IF TALENT:習得遅い || TALENT:無関心
	TIMES ABLUP:8 , 1.30
	TIMES ABLUPEXP:105 , 1.30
ENDIF

@CHECK_JUEL25
;習得の珠(ABLUP:8)、撮影経験(ABLUPEXP:105)が必要
SIF JUEL:習得 >= ABLUP:8 && EXP:撮影経験 >= ABLUPEXP:105
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE25
SIF JUEL:習得 < ABLUP:8
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:8}]
RESETCOLOR

SIF EXP:撮影経験 < ABLUPEXP:105
	SETCOLOR 120, 120, 120
PRINTFORM [撮影経験{ABLUPEXP:105}以上]
RESETCOLOR

