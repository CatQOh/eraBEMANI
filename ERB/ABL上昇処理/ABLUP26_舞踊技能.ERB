@ABLUP26
SIF ABL:舞踊技能 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL26
CALL CHECK_JUEL26
IF RESULT
	CALL NEED_JUEL26
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:舞踊技能++
ENDIF

@NEED_JUEL26
SELECTCASE ABL:舞踊技能
	CASE 0
		ABLUP:GETNUM(PALAM, "習得") = 75
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 5
	CASE 1
		ABLUP:GETNUM(PALAM, "習得") = 500
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 20
	CASE 2
		ABLUP:GETNUM(PALAM, "習得") = 3000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 50
	CASE 3
		ABLUP:GETNUM(PALAM, "習得") = 9000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 100
	CASE 4
		ABLUP:GETNUM(PALAM, "習得") = 24000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 300
	CASE 5
		ABLUP:GETNUM(PALAM, "習得") = 30000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 700
	CASE 6
		ABLUP:GETNUM(PALAM, "習得") = 35000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 1000
	CASE 7
		ABLUP:GETNUM(PALAM, "習得") = 40000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 1500
	CASE 8
		ABLUP:GETNUM(PALAM, "習得") = 45000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 2000
	CASE 9
		ABLUP:GETNUM(PALAM, "習得") = 50000
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 3000
	CASE IS >= 10
		LOCAL = ABL:舞踊技能*ABL:舞踊技能
		ABLUP:GETNUM(PALAM, "習得") = 600 * LOCAL
		ABLUPEXP:GETNUM(EXP, "ダンス経験") = 50 * LOCAL
ENDSELECT

;習得早いもしくは好奇心
IF TALENT:習得早い || TALENT:好奇心
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.80
	TIMES ABLUPEXP:GETNUM(EXP, "ダンス経験") , 0.80
ENDIF

;ハイテンション
IF TALENT:ハイテンション
	TIMES ABLUP:GETNUM(PALAM, "習得") , 0.95
	TIMES ABLUPEXP:GETNUM(EXP, "ダンス経験") , 0.95
ENDIF
;大人しい
IF TALENT:大人しい
	TIMES ABLUP:GETNUM(PALAM, "習得") , 1.05
	TIMES ABLUPEXP:GETNUM(EXP, "ダンス経験") , 1.05
ENDIF

;習得遅い、無関心、恥じらい
IF TALENT:習得遅い || TALENT:無関心 || TALENT:恥じらい
	TIMES ABLUP:GETNUM(PALAM, "習得") , 1.30
	TIMES ABLUPEXP:GETNUM(EXP, "ダンス経験") , 1.30
ENDIF

@CHECK_JUEL26
;習得の珠、ダンス経験で上げる
SIF JUEL:習得 >= ABLUP:GETNUM(PALAM, "習得") && EXP:ダンス経験 >= ABLUPEXP:GETNUM(EXP, "ダンス経験")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE26
SIF JUEL:習得 < ABLUP:GETNUM(PALAM, "習得")
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:GETNUM(PALAM, "習得")}]
RESETCOLOR

SIF EXP:ダンス経験 < ABLUPEXP:GETNUM(EXP, "ダンス経験")
	SETCOLOR 120, 120, 120
PRINTFORM [ダンス経験{ABLUPEXP:GETNUM(EXP, "ダンス経験")}以上]
RESETCOLOR

