;ABLUP:8 = 習得の珠必要数
@ABLUP2
SIF ABL:技巧 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL2
CALL CHECK_JUEL2
IF RESULT
	CALL NEED_JUEL2
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:技巧++
ENDIF

@NEED_JUEL2
SELECTCASE ABL:技巧
	CASE 0
		ABLUP:8 = 1
	CASE 1
		ABLUP:8 = 20
	CASE 2
		ABLUP:8 = 200
	CASE 3
		ABLUP:8 = 3000
	CASE 4
		ABLUP:8 = 20000
	CASE 5
		ABLUP:8 = 25000
	CASE 6
		ABLUP:8 = 34000
	CASE 7
		ABLUP:8 = 45000
	CASE 8
		ABLUP:8 = 55000
	CASE 9
		ABLUP:8 = 70000
	CASE IS >= 10
		LOCAL = ABL:技巧*ABL:技巧
		ABLUP:8 = 800 * LOCAL
ENDSELECT

@CHECK_JUEL2
;習得の珠(ABLUP:8)で上げる
SIF JUEL:習得 >= ABLUP:8
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE2
SIF JUEL:習得 < ABLUP:8
	SETCOLOR 120, 120, 120
PRINTFORM [習得の珠×{ABLUP:8}]
RESETCOLOR

