;ABLUP:0 = 快Ｃの珠必要数
@ABLUP3
SIF ABL:Ｃ感覚 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL3
CALL CHECK_JUEL3
IF RESULT
	CALL NEED_JUEL3
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:Ｃ感覚++
ENDIF

@NEED_JUEL3
SELECTCASE ABL:Ｃ感覚
	CASE 0
		ABLUP:0 = 1
	CASE 1
		ABLUP:0 = 20
	CASE 2
		ABLUP:0 = 400
	CASE 3
		ABLUP:0 = 5000
	CASE 4
		ABLUP:0 = 15000
	CASE 5
		ABLUP:0 = 30000
	CASE 6
		ABLUP:0 = 40000
	CASE 7
		ABLUP:0 = 50000
	CASE 8
		ABLUP:0 = 60000
	CASE 9
		ABLUP:0 = 70000
	CASE IS >= 10
		LOCAL = ABL:Ｃ感覚*ABL:Ｃ感覚
		ABLUP:0 = 800 * LOCAL
ENDSELECT

;淫乱
SIF TALENT:淫乱
	TIMES ABLUP:0 , 0.80
;娼婦
SIF TALENT:娼婦
	TIMES ABLUP:0 , 0.50

@CHECK_JUEL3
;快Ｃの珠(ABLUP:0)で上げる
SIF JUEL:快Ｃ >= ABLUP:0
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE3
SIF JUEL:快Ｃ < ABLUP:0
	SETCOLOR 120, 120, 120
PRINTFORM [快Ｃの珠×{ABLUP:0}]
RESETCOLOR

