@ABLUP5
SIF ABL:Ａ感覚 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL5
CALL CHECK_JUEL5
IF RESULT
	CALL NEED_JUEL5
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:Ａ感覚++
ENDIF

@NEED_JUEL5
SELECTCASE ABL:Ａ感覚
	CASE 0
		ABLUP:GETNUM(PALAM, "快Ａ") = 1
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 2
	CASE 1
		ABLUP:GETNUM(PALAM, "快Ａ") = 20
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 10
	CASE 2
		ABLUP:GETNUM(PALAM, "快Ａ") = 400
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 30
	CASE 3
		ABLUP:GETNUM(PALAM, "快Ａ") = 5000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 75
	CASE 4
		ABLUP:GETNUM(PALAM, "快Ａ") = 15000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 150
	CASE 5
		ABLUP:GETNUM(PALAM, "快Ａ") = 30000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 230
	CASE 6
		ABLUP:GETNUM(PALAM, "快Ａ") = 40000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 270
	CASE 7
		ABLUP:GETNUM(PALAM, "快Ａ") = 50000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 360
	CASE 8
		ABLUP:GETNUM(PALAM, "快Ａ") = 60000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 420
	CASE 9
		ABLUP:GETNUM(PALAM, "快Ａ") = 70000
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 500
	CASE IS >= 10
		LOCAL = ABL:Ａ感覚*ABL:Ａ感覚
		ABLUP:GETNUM(PALAM, "快Ａ") = 800 * LOCAL
		ABLUPEXP:GETNUM(EXP, "Ａ経験") = 6 * LOCAL
ENDSELECT

;陥落素質での補正
;淫乱
IF TALENT:淫乱
	TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 0.80
	TIMES ABLUPEXP:GETNUM(EXP, "Ａ経験") , 0.80
ENDIF
;娼婦
IF TALENT:娼婦
	TIMES ABLUP:GETNUM(PALAM, "快Ａ") , 0.50
	TIMES ABLUPEXP:GETNUM(EXP, "Ａ経験") , 0.50
ENDIF

@CHECK_JUEL5
;快Ａの珠、Ａ経験で上げる
SIF JUEL:快Ａ >= ABLUP:GETNUM(PALAM, "快Ａ") && EXP:Ａ経験 >= ABLUPEXP:GETNUM(EXP, "Ａ経験")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE5
SIF JUEL:快Ａ < ABLUP:GETNUM(PALAM, "快Ａ")
	SETCOLOR 120, 120, 120
PRINTFORM [快Ａの珠×{ABLUP:GETNUM(PALAM, "快Ａ")}]
RESETCOLOR

SIF EXP:Ａ経験 < ABLUPEXP:GETNUM(EXP, "Ａ経験")
	SETCOLOR 120, 120, 120
PRINTFORM [Ａ経験{ABLUPEXP:GETNUM(EXP, "Ａ経験")}以上]
RESETCOLOR

