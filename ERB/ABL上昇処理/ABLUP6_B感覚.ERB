;ABLUP:3 = 快Ｂの珠必要数
@ABLUP6
SIF ABL:Ｂ感覚 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL6
CALL CHECK_JUEL6
IF RESULT
	CALL NEED_JUEL6
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:Ｂ感覚++
ENDIF

@NEED_JUEL6
SELECTCASE ABL:Ｂ感覚
	CASE 0
		ABLUP:3 = 1
	CASE 1
		ABLUP:3 = 20
	CASE 2
		ABLUP:3 = 400
	CASE 3
		ABLUP:3 = 5000
	CASE 4
		ABLUP:3 = 15000
	CASE 5
		ABLUP:3 = 30000
	CASE 6
		ABLUP:3 = 40000
	CASE 7
		ABLUP:3 = 50000
	CASE 8
		ABLUP:3 = 60000
	CASE 9
		ABLUP:3 = 70000
	CASE IS >= 10
		LOCAL = ABL:Ｂ感覚*ABL:Ｂ感覚
		ABLUP:3 = 800 * LOCAL
ENDSELECT

;陥落素質、バストサイズでの補正
;淫乱
SIF TALENT:淫乱
	TIMES ABLUP:3 , 0.80
;娼婦
SIF TALENT:娼婦
	TIMES ABLUP:3 , 0.50
SELECTCASE TALENT:バストサイズ
	;絶壁
	CASE 1
		TIMES ABLUP:3 , 0.65
	;貧乳
	CASE 2
		TIMES ABLUP:3 , 0.80
	;普乳
	CASE 3
		TIMES ABLUP:3 , 1.00
	;巨乳
	CASE 4
		TIMES ABLUP:3 , 1.10
	;爆乳
	CASE 5
		TIMES ABLUP:3 , 1.15
ENDSELECT

@CHECK_JUEL6
;快Ｂの珠(ABLUP:3)で上げる
SIF JUEL:快Ｂ >= ABLUP:3
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE6
SIF JUEL:快Ｂ < ABLUP:3
	SETCOLOR 120, 120, 120
PRINTFORM [快Ｂの珠×{ABLUP:3}]
RESETCOLOR

