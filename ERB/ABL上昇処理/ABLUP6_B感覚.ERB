@ABLUP6
#DIM DYNAMIC LCOUNT
SIF ABL:Ｂ感覚 == 10 && !TALENT:リミットバースト
	RETURN 0
SIF ABL:Ｂ感覚 < 0
	RETURN 0
CALL NEED_JUEL_Ｂ感覚
CALL CHECK_JUEL_Ｂ感覚
IF RESULT
	CALL NEED_JUEL_Ｂ感覚
	FOR LCOUNT, 0, 15
		JUEL:LCOUNT -= ABLUP:LCOUNT
	NEXT
	ABL:Ｂ感覚++
ENDIF

@NEED_JUEL_Ｂ感覚
SELECTCASE ABL:Ｂ感覚
	CASE 0
		ABLUP:GETPALAM("快Ｂ") = 1
	CASE 1
		ABLUP:GETPALAM("快Ｂ") = 20
	CASE 2
		ABLUP:GETPALAM("快Ｂ") = 400
	CASE 3
		ABLUP:GETPALAM("快Ｂ") = 5000
	CASE 4
		ABLUP:GETPALAM("快Ｂ") = 15000
	CASE 5
		ABLUP:GETPALAM("快Ｂ") = 30000
	CASE 6
		ABLUP:GETPALAM("快Ｂ") = 40000
	CASE 7
		ABLUP:GETPALAM("快Ｂ") = 50000
	CASE 8
		ABLUP:GETPALAM("快Ｂ") = 60000
	CASE 9
		ABLUP:GETPALAM("快Ｂ") = 70000
	CASE IS >= 10
		ABLUP:GETPALAM("快Ｂ") = 800 * POWER(ABL:Ｂ感覚, 2)
ENDSELECT

;陥落素質、バストサイズでの補正
;淫乱
SIF TALENT:淫乱
	TIMES ABLUP:GETPALAM("快Ｂ") , 0.80
;娼婦
SIF TALENT:娼婦
	TIMES ABLUP:GETPALAM("快Ｂ") , 0.50
;淫乳
SIF TALENT:淫乳
	TIMES ABLUP:GETPALAM("快Ｂ") , 0.80
SELECTCASE TALENT:バストサイズ
	;絶壁
	CASE 1
		TIMES ABLUP:GETPALAM("快Ｂ") , 0.65
	;貧乳
	CASE 2
		TIMES ABLUP:GETPALAM("快Ｂ") , 0.80
	;普乳
	CASE 3
		TIMES ABLUP:GETPALAM("快Ｂ") , 1.00
	;巨乳、豊乳
	CASE 4, 5
		TIMES ABLUP:GETPALAM("快Ｂ") , 1.10
	;爆乳
	CASE 6
		TIMES ABLUP:GETPALAM("快Ｂ") , 1.15
ENDSELECT

@CHECK_JUEL_Ｂ感覚
;快Ｂの珠で上げる
SIF JUEL:快Ｂ >= ABLUP:GETPALAM("快Ｂ")
	RETURN 1

;上記の条件を満たせなかったら上げられない
RETURN 0

@ABLUP_MESSAGE_Ｂ感覚
SIF JUEL:快Ｂ < ABLUP:GETPALAM("快Ｂ")
	SETCOLORBYNAME gray
PRINTFORM [快Ｂの珠×{ABLUP:GETPALAM("快Ｂ")}]
RESETCOLOR

