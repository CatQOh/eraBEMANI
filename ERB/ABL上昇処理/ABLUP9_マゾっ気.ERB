;ABLUP:6  = 欲情の珠必要数
;ABLUP:10 = 苦痛の珠必要数
;ABLUPEXP:30 = 苦痛快楽経験必要数
;ABLUPEXP:50 = 異常経験必要数
@ABLUP9
SIF ABL:マゾっ気 == 10 && !TALENT:リミットバースト
	RETURN 0
CALL NEED_JUEL9
CALL CHECK_JUEL9
IF RESULT
	CALL NEED_JUEL9
	REPEAT 15
		JUEL:COUNT -= ABLUP:COUNT
	REND
	ABL:マゾっ気++
ENDIF

@NEED_JUEL9
SELECTCASE ABL:マゾっ気
	CASE 0
		ABLUP:6 = 100
		ABLUP:10 = 100
	CASE 1
		ABLUP:6 = 500
		ABLUP:10 = 500
	CASE 2
		ABLUP:6 = 1000
		ABLUP:10 = 1200
	CASE 3
		ABLUP:6 = 6000
		ABLUP:10 = 3000
		ABLUPEXP:30 = 10
	CASE 4
		ABLUP:6 = 12000
		ABLUP:10 = 5000
		ABLUPEXP:30 = 50
	CASE 5
		ABLUP:6 = 15000
		ABLUP:10 = 8000
		ABLUPEXP:30 = 100
	CASE 6
		ABLUP:6 = 20000
		ABLUP:10 = 12000
		ABLUPEXP:30 = 150
	CASE 7
		ABLUP:6 = 25000
		ABLUP:10 = 15000
		ABLUPEXP:30 = 200
	CASE 8
		ABLUP:6 = 35000
		ABLUP:10 = 25000
		ABLUPEXP:30 = 250
	CASE 9
		ABLUP:6 = 40000
		ABLUP:10 = 30000
		ABLUPEXP:30 = 350
	CASE IS >= 10
		LOCAL = ABL:マゾっ気*ABL:マゾっ気
		ABLUP:6 = 500 * LOCAL
		ABLUP:10 = 400 * LOCAL
		ABLUPEXP:30 = 4 * LOCAL
ENDSELECT

;一線越えない及び未陥落
IF TALENT:一線越えない && CFLAG:陥落
	TIMES ABLUP:6 , 1.50
	TIMES ABLUP:10 , 1.50
	TIMES ABLUPEXP:30 , 1.50
ENDIF
;マゾ
IF TALENT:マゾ
	TIMES ABLUP:6 , 0.50
	TIMES ABLUP:10 , 0.50
	TIMES ABLUPEXP:30 , 0.50
ENDIF
;痛みに強い
IF TALENT:痛みに強い
	TIMES ABLUP:6 , 0.70
	TIMES ABLUP:10 , 0.70
	TIMES ABLUPEXP:30 , 0.70
ENDIF

;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[解放]なら無視できる）
IF TALENT:解放 == 0
	IF ABL:マゾっ気 >= 8
		ABLUPEXP:50 = 5
	ELSEIF ABL:マゾっ気 >= 4
		ABLUPEXP:50 = 3
	ELSEIF ABL:マゾっ気 >= 3
		ABLUPEXP:50 = 1
	ENDIF
ENDIF

@CHECK_JUEL9
;異常経験が規定値(ABLUPEXP:50)に満たないと上昇できない
SIF EXP:異常経験 < ABLUPEXP:50
	RETURN 0

;苦痛、欲情の珠、苦痛快楽経験が必要
SIF JUEL:苦痛 >= ABLUP:10 && JUEL:欲情 >= ABLUP:6 && EXP:苦痛快楽経験 >= ABLUPEXP:30
	RETURN 1

;上記の条件を満たせないと上げられない
RETURN 0

@ABLUP_MESSAGE9
;LV3からは異常経験必要 LV4からは異常経験3以上必要 LV8からは異常経験5以上必要（素質：[解放]なら無視できる）
SIF EXP:異常経験 < ABLUPEXP:50
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:50
	PRINTFORM [異常経験{ABLUPEXP:50}以上]
RESETCOLOR

SIF JUEL:欲情 < ABLUP:6
	SETCOLOR 120, 120, 120
PRINTFORM [欲情の珠×{ABLUP:6}]
RESETCOLOR

SIF JUEL:苦痛 < ABLUP:10
	SETCOLOR 120, 120, 120
PRINTFORM [苦痛の珠×{ABLUP:10}]
RESETCOLOR

SIF EXP:苦痛快楽経験 < ABLUPEXP:30
	SETCOLOR 120, 120, 120
SIF ABLUPEXP:30
	PRINTFORM [苦痛快楽経験{ABLUPEXP:30}以上]
RESETCOLOR

