@USERABLUP
;SHOP画面から入ってきたときはターン終わらないようにBEGIN SHOPする
SELECTCASE RESULT
	CASE 100
		CALL ERASE_TALENT
		VARLINE = 0
		IF FLAG:能力上昇 != 0
			TARGET = FLAG:能力上昇
			FLAG:能力上昇 = 0
			BEGIN SHOP
		ELSE
			BEGIN TURNEND
		ENDIF
	CASE 101
		SIF TARGET > 1
			TARGET--
		BEGIN ABLUP
	CASE 109
		SIF CHARANUM > TARGET+1
			TARGET++
		BEGIN ABLUP
ENDSELECT

@SHOP_ABLUP
#DIM DYNAMIC 次ページあり
#DIM 表示上限 = 10

DRAWLINE
PRINTL 能力を上昇させたいキャラを選んでください

;見た目を整えるためのCLEARLINE処理
CALL LOOP_CLEARLINE

CALL LIFE_LIST, "通常表示", 0, 表示上限
;RESULTにはまだ表示されてないキャラが居るかどうか
次ページあり = RESULT
DRAWLINE
PRINTPLAIN 　ABLUP　

CALL PRINTSPACE, TFLAG:ページ数 > 0, "[999] 前ページ "
PRINTFORM [1000] 戻る 
CALL PRINTSPACE, 次ページあり, "[1001] 次ページ "
PRINTL 

INPUT
SELECTCASE RESULT
	CASE -1
		SIF 表示上限 > 10
			表示上限 -= 10
		RESTART
	CASE -9
		表示上限 += 10
		RESTART
	CASE 0
		PRINTW 主人の能力は上げられません
	CASE 999
		SIF TFLAG:ページ数 > 0
			TFLAG:ページ数--
	CASE 1000
		RETURN 0
	CASE 1001
		SIF 次ページあり
			TFLAG:ページ数++
	CASE 0 TO CHARANUM-1
		FLAG:能力上昇 = TARGET
		TARGET = RESULT
		BEGIN ABLUP
ENDSELECT

RESTART

