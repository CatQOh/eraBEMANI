			PRINTL □ 一覧表示
			CALL CHARA_LIST, 1
		ELSEIF RESULT == 10001
			VARSET RELATION:TARGET:0, 100
			GOTO RESTART
		ELSEIF !EXISTCSV(RESULT)
			PRINTFORMW {RESULT}にはキャラが登録されていません
			GOTO RESTART
		ENDIF
		LOCAL = RESULT
		PRINTFORML %CSVNAME(LOCAL)%との相性値を入力してください
		INPUT
		RELATION:LOCAL = RESULT
		GOTO RESTART
	CASE "マニュアルを変更する"
		$MANUAL
		PRINTL 変更する行を選んでください
		REPEAT 100
			IF CSTR:COUNT == ""
				LOCAL = COUNT
				BREAK
			ENDIF
			PRINTFORML [{COUNT}]%CSTR:COUNT%
		REND
		DRAWLINE
		PRINT  [100] 完了 
		PRINTL [101] 行を追加
		INPUT
		DO
			SELECTCASE RESULT
				CASE 100
					GOTO RESTART
				CASE 101
					PRINTL 追加する行のマニュアルを入力してください
					INPUTS
					CSTR:LOCAL = %RESULTS%
					GOTO MANUAL
				CASEELSE
					IF CSTR:RESULT != ""
						PRINTFORML {RESULT}行目のマニュアルを入力してください
						PRINTBUTTON "[この行を削除]", "この行を削除"
						PRINTL 
						INPUTS %CSTR:RESULT%
						IF RESULTS == "この行を削除"
							FOR COUNT, RESULT, LOCAL
								CSTR:COUNT = %CSTR:(COUNT+1)%
							NEXT
							GOTO MANUAL
						ENDIF
						CSTR:RESULT = %RESULTS%
						GOTO MANUAL
					ENDIF
			ENDSELECT
		LOOP 1
	CASEELSE
		RESULTS = %REPLACE(RESULTS, " ", "")%
		SIF RESULTS == "舞踊経験"
			RESULTS = ダンス経験
		SIF RESULTS == "音ゲ経験"
			RESULTS = 音ゲー経験
		SIF RESULTS == "Ｖ拡経験"
			RESULTS = Ｖ拡張経験
		SIF RESULTS == "Ａ拡経験"
			RESULTS = Ａ拡張経験
		SIF RESULTS == "口淫経験"
