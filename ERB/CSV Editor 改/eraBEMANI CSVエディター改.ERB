			ENDIF
		REND
		REPEAT VARSIZE("ABL")
			IF ABLNAME:COUNT == RESULTS
				PRINTFORML %ABLNAME:COUNT%の数値を入力してください
				INPUT
				ABL:COUNT = RESULT
			ENDIF
		REND
		GOTO RESTART
ENDSELECT

