FOR LCOUNT, 0, VARSIZE("LNK")
	SIF LNK:LCOUNT != ""
		PRINTFORMLC 　[{LCOUNT}] - %LNKCOM(LNK:LCOUNT)%
NEXT
IF MATCH(LNK, "") == VARSIZE("LNK")
	PRINTL 
	PRINTL 　ショートカットはありません
	PRINTL 
ENDIF
