@SHOPITEM_BUY
#DIMS DYNAMIC アイテム分類
DRAWLINE
CALL PASELIL, @"所持金:{MONEY}＄"
CALL ITEMPRINT
DRAWLINE

PRINTL 　[0] 調教道具
PRINTL 　[1] 消耗品・お酒
PRINTL 　[2] 素質アイテム
PRINTL 　[3] 薬品類
PRINTL 　[4] 施設・設備
PRINTL 　[5] 本・特殊技能
PRINTL 　[6] すべて
DRAWLINE
PRINTPLAIN 　ITEM　
PRINTL [9] 戻る

DO
	INPUT
	SELECTCASE RESULT
		CASE 0 TO 6
			SELECTCASE RESULT
				CASE 0
					アイテム分類 = 調教道具
				CASE 1
					アイテム分類 = 消耗品
				CASE 2
					アイテム分類 = 素質アイテム
				CASE 3
					アイテム分類 = 薬品類
				CASE 4
					アイテム分類 = 施設
				CASE 5
					アイテム分類 = 本
				CASE 6
					アイテム分類 = すべて
			ENDSELECT
			CALL SHOPITEM_LIST, アイテム分類
			BREAK
		CASE 9
			RETURN 0
	ENDSELECT
LOOP 1

RESTART

