	CASE "皆伝", "魔王", "アルパカ", "倉吉", "スペリオール", "ビーフィーター", "アブソルート", "カルーア"
		購入上限 = (99-ITEM:アイテム名)/10
	CASEELSE
		購入上限 = 99-ITEM:アイテム名
ENDSELECT

