		PRINTFORMLC [{LCOUNT}] - %EXPNAME:LCOUNT%
NEXT

SIF !LINEISEMPTY()
	PRINTL

DRAWLINE
PRINTFORML [{VARSIZE("EXP")}] - 戻る

DO
	INPUT
	SELECTCASE RESULT
		CASE VARSIZE("EXP")
			RETURN
		CASE 0 TO VARSIZE("EXP")
			参照経験 = RESULT
			;ダミーのTARGET、ASSI、保持用のMASTERを追加する
			LTARGET = TARGET
			LASSI = ASSI
			ADDVOIDCHARA
			TARGET = CHARANUM-1
			ADDVOIDCHARA
			ASSI = CHARANUM-1
			;性別は両者女ふたなりで見る
			TALENT:性別 = 2
			TALENT:ふたなり = 1
			MAXBASE:体力 = __INT_MAX__
			MAXBASE:気力 = __INT_MAX__
			MAXBASE:射精 = __INT_MAX__
			TALENT:ASSI:性別 = 2
			TALENT:ASSI:ふたなり = 1
			MAXBASE:ASSI:射精 = __INT_MAX__

			ADDCOPYCHARA MASTER
			MAXBASE:MASTER:射精 = __INT_MAX__

			表示数 = 0

			PRINTFORML □%EXPNAME:参照経験%が上昇するコマンド一覧 ()内は上昇値
			FOR LCOUNT, 0, VARSIZE("TRAINNAME")
				IF TRAINNAME:LCOUNT != ""
					;表示を飛ばす
					SKIPDISP 1
					SELECTCOM = LCOUNT
					SELECTCOMS = %TRAINNAME:LCOUNT%
					VARSET TEQUIP
					VARSET TFLAG
					VARSET EXP:0
					VARSET EX:0
					VARSET PALAM:0
					TFLAG:実行判定無視 = 1
					TRYCALLFORM COM_%TRAINNAME:LCOUNT%
					SKIPDISP 0
					IF EXP:参照経験 > 0
						PRINTFORMLC 　%TRAINNAME:LCOUNT%({EXP:参照経験})
						;SKIPDISPが絡むとPRINTC系がうまく動かないので変数使う
						表示数++
					ENDIF
					SIF 表示数 != 0 && 表示数%4 == 0 && !LINEISEMPTY()
						PRINTL 
				ENDIF
			NEXT
			;保持用MASTERで元に戻す
			SWAPCHARA MASTER, CHARANUM-1
			;用済みになった3人を消す
			DELCHARA CHARANUM-1
			DELCHARA ASSI
			DELCHARA TARGET
			TARGET = LTARGET
			ASSI = LASSI
			VARSET SELECTCOM
			VARSET SELECTCOMS

			TFLAG:実行判定無視 = 0

			SIF !LINEISEMPTY()
				PRINTL
			DRAWLINE
			WAIT
			RESTART
	ENDSELECT
