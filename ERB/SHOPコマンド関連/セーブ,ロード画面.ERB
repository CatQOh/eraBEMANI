@SYSTEM_AUTOSAVE
#DIM DYNAMIC データ番号
IF ゲームモード() == "学園モード"
	データ番号 = 94+((DAY-1)*3%6)
	SELECTCASE ターン
		CASE "昼"
			データ番号 += 1
		CASE "夜"
			データ番号 += 2
	ENDSELECT
ELSE
	データ番号 = 94+((DAY-1)*2%6+TIME)
ENDIF

SAVEDATA データ番号, セーブデータ情報()

@セーブデータ情報, ARG
#FUNCTIONS
#DIMS DYNAMIC REALTIMENOW
#DIM DYNAMIC 年
#DIM DYNAMIC 月
#DIM DYNAMIC 日
#DIMS DYNAMIC DETAIL, 2

;リアルタイムの計算
年 = TOINT(SUBSTRING(GETTIMES(), 0, 4))
月 = TOINT(SUBSTRING(GETTIMES(), 5, 2))
日 = TOINT(SUBSTRING(GETTIMES(), 8, 2))

REALTIMENOW = %GETTIMES()%
;曜日挟むために一度分割する
SPLIT REALTIMENOW, " ", DETAIL
;現実の時間を入れる
DETAIL = %DETAIL%(%DOW(ZELLER(年, 月, 日))%) %DETAIL:1%
;ここからゲーム内の時間や情報
DETAIL = %DETAIL% | {YEAR}/%TOSTR(MONTH, "D2")%/%TOSTR(DAYS, "D2")%(%DOW(FLAG:曜日)%)

IF ゲームモード() == "学園モード"
	DETAIL += @" {DAY}日目(%ターン%)"
ELSE
	SELECTCASE TIME
		CASE 0
			DETAIL += @" {DAY, 4}日目昼 "
		CASE 1
			DETAIL += @" {DAY, 4}日目夜 "
	ENDSELECT
ENDIF

SELECTCASE ゲームモード()
	CASE "新婚モード"
	CASE "段位認定"
		DETAIL += "段位認定 "
	CASE "学園モード"
		DETAIL += "学園モード "
	CASEELSE
		SIF ゲームモード() == "経営モード"
			DETAIL += "KA "
		DETAIL += "難易度:"
		SELECTCASE FLAG:難易度
			CASE 1
				DETAIL += "(N) "
			CASE 2
				DETAIL += "(H) "
			CASE 3
				DETAIL += "(A) "
		ENDSELECT
ENDSELECT

SIF GROUPMATCH(ゲームモード(), "新婚モード", "フリーモード")
	DETAIL += "∞ "

SELECTCASE ゲームモード()
	CASE "新婚モード"
		DETAIL += @"%CALLNAME:MASTER%と%CALLNAME:(FINDCHARA(CFLAG:嫁, 1))%が新婚生活中"
	CASE "学園モード"
		DETAIL += @"PLAYER:%NAME:MASTER%"
	CASEELSE
		IF TARGET > 0
			DETAIL += @"%NAME:TARGET%調教中 "
			SIF TALENT:恋慕
				DETAIL += "恋,"
			SIF TALENT:淫乱
				DETAIL += "淫,"
			SIF TALENT:服従
				DETAIL += "服,"
			SIF TALENT:親愛
				DETAIL += "愛,"
			SIF TALENT:娼婦
				DETAIL += "娼,"
			SIF TALENT:隷属
				DETAIL += "隷,"
			SIF TALENT:崩壊
				DETAIL += "崩,"
			DETAIL += @"従{ABL:従順},欲{ABL:欲望},技{ABL:技巧}"
		ENDIF
ENDSELECT

LASTSAVEMODE = %ゲームモード()%
SAVEGLOBAL

RETURNF DETAIL

