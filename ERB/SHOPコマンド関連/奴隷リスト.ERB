CALL KOJO_MESSAGE_EVENT, "助手指定", 助手
;配属してたら自動的に外す
CALL 配属解除, ASSI
;監禁も解除
SIF CFLAG:助手:監禁
	CALL 監禁解除, 助手
;助手にした際の素質変化用関数
CALL ASSI_CHANGE
ISASSI:ASSI = 1
SIF ASSI == TARGET
	TARGET = -1
;実績:マタン主人で陥落済みのノクスを助手にする
SIF CHARANAMEF(MASTER) == "マタン・カトルセ" && CHARANAMEF(ASSI) == "ノクス・カトルセ" && CFLAG:ASSI:陥落
	CALL 実績解除, "「姉さんは僕が守る」"

@LIFE_LIST, 表示情報, 表示切り替え
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 表示数
#DIM DYNAMIC カウント数
#DIM DYNAMIC 未表示キャラ
#DIM DYNAMIC LTARGET
#DIM 表示切り替え
#DIMS DYNAMIC 表示情報

DRAWLINE
IF ゲームモード() == "新婚モード"
	PRINTL □キャラ一覧
ELSE
	SELECTCASE 表示情報
		CASE "調教対象選択"
			PRINTL □調教対象変更
		CASE "助手選択"
			PRINTL □助手変更
		CASEELSE
			PRINTL □キャラ一覧
	ENDSELECT
ENDIF
FOR LCOUNT, 0, CHARANUM
	RESETCOLOR
	;1巡目はMASTERとTARGET及びASSIの能力表示
	IF LCOUNT == 0
		IF 表示情報 == "助手選択"
			PRINTL 　[ 0] 助手無し
		ELSE
			PRINTFORM 　[ 0] %CALLNAME:MASTER%(主人) \@ SEX(MASTER) == 1 ? ♂ # ♀ \@ 
			SIF TALENT:MASTER:ふたなり
				PRINT 双
			PRINTL 
		ENDIF
		;TARGETとASSIはMASTERの下に表示する
		IF TARGET > 0
			;助手の指定なら助手不可能なキャラは除外
			SIF 表示情報 == "助手選択" && CFLAG:状態 < 2 && !TALENT:アニマル
				CONTINUE
			CALL STATUS_BAR, TARGET, 表示情報, 表示切り替え
		ENDIF
		SIF ASSI > 0
			CALL STATUS_BAR, ASSI, 表示情報, 表示切り替え
		DRAWLINE
		CONTINUE
	ENDIF

	;2巡目以降は通常のキャラ表示なので条件を指定
	;助手の指定なら助手不可能なキャラは除外
	SIF 表示情報 == "助手選択" && CFLAG:LCOUNT:状態 < 2 && !TALENT:LCOUNT:アニマル
		CONTINUE
	;キャラを10人表示したら終了
	IF 表示数 >= 10
		未表示キャラ = 1
		BREAK
	ENDIF
	;対象と助手は主人の下に表示されるので除外
	SIF GROUPMATCH(LCOUNT, TARGET, ASSI)
		CONTINUE
	カウント数++
	;ページ数×10まで表示を飛ばす
	SIF TFLAG:ページ数*10 >= カウント数
		CONTINUE
	CALL STATUS_BAR, LCOUNT, 表示情報, 表示切り替え
	表示数++
NEXT
DRAWLINE
PRINTL 　☆：調教中　★：助手　○：助手可　●：元助手
PRINTL 　KA：経営モードに配属中　不：使用不可　妊：妊娠育児中　獣：ペット候補　を表しています

;条件を満たしているにも関わらずまだリスト表示されてないキャラが居れば未表示キャラフラグは1になる
RETURN 未表示キャラ

