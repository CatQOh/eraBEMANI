@CHARA_SORT
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 番号
#DIM DYNAMIC 表示数
DRAWLINE
PRINTL □どの要素でソートしますか？
PRINTL 　[1] - 刻印
PRINTL 　[2] - 能力
PRINTL 　[3] - 経験
PRINTL 　[4] - 名前
PRINTL 　[5] - キャラ番号
PRINTL 　[6] - 体力
PRINTL 　[7] - 気力
PRINTL 　[8] - 解禁日
DRAWLINE
PRINTPLAIN 　CHARA SORT　
PRINTL [0] - 戻る

DO
	INPUT
	SELECTCASE RESULT
		CASE 0
			RETURN 0
		CASE 1
			DRAWLINE
			PRINTL □刻印
			FOR LCOUNT, 0, 4
				SIF MARKNAME:LCOUNT != ""
					PRINTFORML 　[{LCOUNT}] - %MARKNAME:LCOUNT%
			NEXT
			DRAWLINE
			PRINTPLAIN 　MARK　
			PRINTL [100] - 戻る
			CALL INPUTF, 0, 1, 2, 3, 100
			番号 = RESULT
			SIF RESULT == 100
				RETURN 0
			PRINTL □並べ替え
			PRINTL 　[0] - 昇順
			PRINTL 　[1] - 降順
			DRAWLINE
			PRINTPLAIN 　MARK　
			PRINTL [10] - 戻る
			CALL INPUTF, 0, 1, 10
			SELECTCASE RESULT
				CASE 0
					PRINTFORMW %MARKNAME:番号%で昇順にソートしました
					SORTCHARA MARK:番号
				CASE 1
					PRINTFORMW %MARKNAME:番号%で降順にソートしました
					SORTCHARA MARK:番号, BACK
			ENDSELECT
			RETURN
		CASE 2
			DRAWLINE
			PRINTL □能力
			FOR LCOUNT, 0, 50
				SIF ABLNAME:LCOUNT == ""
					CONTINUE
				PRINTFORMLC 　[{LCOUNT, 2}] - %ABLNAME:LCOUNT%
			NEXT
			SIF LINEISEMPTY() == 0
				PRINTL 
			DRAWLINE
			PRINTPLAIN 　ABL　
			PRINTL [100] - 戻る
			DO
				INPUT
				番号 = RESULT
				SELECTCASE RESULT
					CASE 0 TO 50
						SIF ABLNAME:RESULT == ""
							CONTINUE
						PRINTL □並べ替え
						PRINTL 　[0] - 昇順
						PRINTL 　[1] - 降順
						DRAWLINE
						PRINTPLAIN 　ABL　
						PRINTL [10] - 戻る
						CALL INPUTF, 0, 1, 10
						SELECTCASE RESULT
							CASE 0
								PRINTFORMW %ABLNAME:番号%で昇順にソートしました
								SORTCHARA ABL:番号
							CASE 1
								PRINTFORMW %ABLNAME:番号%で降順にソートしました
								SORTCHARA ABL:番号, BACK
						ENDSELECT
						RETURN
				ENDSELECT
			LOOP LOOPRES(100)
			RETURN
		CASE 3
			DRAWLINE
			PRINTL □経験
			FOR LCOUNT, 0, 100
				SIF EXPNAME:LCOUNT == ""
					CONTINUE
				PRINTFORMLC 　[{LCOUNT, 2}] - %EXPNAME:LCOUNT%
			NEXT
			SIF LINEISEMPTY() == 0
				PRINTL 
			DRAWLINE
			PRINTPLAIN 　EXP　
			PRINTL [100] - 戻る
			DO
				INPUT
				番号 = RESULT
				SELECTCASE RESULT
					CASE 0 TO 99
						PRINTL □並べ替え
						SIF EXPNAME:番号 == ""
							CONTINUE
						PRINTL 　[0] - 昇順
						PRINTL 　[1] - 降順
						DRAWLINE
						PRINTPLAIN 　ABL　
						PRINTL [10] - 戻る
						CALL INPUTF, 0, 1, 10
						SELECTCASE RESULT
							CASE 0
								PRINTFORMW %EXPNAME:番号%で昇順にソートしました
								SORTCHARA EXP:番号
							CASE 1
								PRINTFORMW %EXPNAME:番号%で降順にソートしました
								SORTCHARA EXP:番号, BACK
						ENDSELECT
						RETURN
				ENDSELECT
			LOOP LOOPRES(100)
			RETURN
		CASE 4
