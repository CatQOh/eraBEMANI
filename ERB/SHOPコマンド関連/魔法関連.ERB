		INT_B = 0x00
	CASE "ルビー"
		INT_R = 0xC7
		INT_G = 0x00
		INT_B = 0x67
	CASE "サファイア"
		INT_R = 0x00
		INT_G = 0x54
		INT_B = 0xA6
	CASE "エメラルド"
		INT_R = 0x00
		INT_G = 0xA9
		INT_B = 0x68
	CASE "アメジスト"
		INT_R = 0x9E
