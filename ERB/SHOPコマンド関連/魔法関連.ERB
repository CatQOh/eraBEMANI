		RETURN 0
	CASE "1"
		GDISPOSE 0
		GDISPOSE 1
		GDISPOSE 2
		GDISPOSE 3
		RETURN COLOR_FROMRGB(INT_R, INT_G, INT_B)
	CASE "E"
		INT_R--
	CASE "R"
		INT_R++
	CASE "F"
		INT_G--
	CASE "G"
		INT_G++
	CASE "V"
		INT_B--
	CASE "B"
		INT_B++
	CASE "SET_R", "SET_G", "SET_B"
		PRINTL 数値を入力してください（0～255）
		INPUT
		SELECTCASE RESULTS
			CASE "SET_R"
				INT_R = RESULT
			CASE "SET_G"
				INT_G = RESULT
			CASE "SET_B"
				INT_B = RESULT
		ENDSELECT
	CASE "ゴールド"
		INT_R = 0xFF
