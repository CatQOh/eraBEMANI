;着衣設定
@EVENTTRAIN
#PRI
;初期着衣設定に応じて、服の設定をする
REPEAT 7
	SIF CSTR:(COUNT+100) != ""
		TEQUIP:COUNT = 1
	SIF CSTR:MASTER:(COUNT+100) != ""
		TEQUIP:MASTER:COUNT = 1
	IF ASSI > 0
		SIF CSTR:ASSI:(COUNT+100) != ""
			TEQUIP:ASSI:COUNT = 1
	ENDIF
REND

SELECTCASE FLAG:着衣設定
	;下着無し
	CASE 1
		TEQUIP:上半身下着 = 0
		TEQUIP:下半身下着 = 0
	;下着姿
	CASE 2
		TEQUIP:上半身上着 = 0
		TEQUIP:下半身上着 = 0
		TEQUIP:全身上着 = 0
	;全裸
	CASE 3
		REPEAT 7
			TEQUIP:COUNT = 0
			TEQUIP:MASTER:COUNT = 0
			SIF ASSI > 0
				TEQUIP:ASSI:COUNT = 0
		REND
ENDSELECT

