;着衣変更 きせかえ
@CLOTHES_SETTING_USUALLY
#DIM DYNAMIC PAGE
DRAWLINE
LOCAL = PAGE*10
PRINTL □着衣の設定をするキャラを選択してください
FOR COUNT, LOCAL, LOCAL+10
	SIF COUNT == CHARANUM
		BREAK
	PRINTFORML 　[{COUNT}] %NAME:COUNT%
NEXT
DRAWLINE
PRINTPLAINFORM 　PAGE.{LOCAL+1}　
SIF PAGE != 0
	PRINT [999] 前ページ 
PRINT [1000] 戻る
SIF (LOCAL+10) < CHARANUM
	PRINT  [1001] 次ページ
PRINTL 
DO
	INPUT
	SELECTCASE RESULT
		CASE 999
			PAGE--
			RESTART
		CASE 1000
			RETURN 0
		CASE 1001
			PAGE++
			RESTART
		CASE 0 TO CHARANUM-1
			BREAK
	ENDSELECT
LOOP LOOPRES(999, 1000, 1001)

LOCAL:1 = TARGET
TARGET = RESULT
CALL CHARA_CLOTHES_SETTING
TARGET = LOCAL:1

