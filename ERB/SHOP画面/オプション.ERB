PRINTL 　[8] 着衣設定の初期化
DRAWLINE
PRINTPLAIN 　COORDINATE　
PRINTL [9] 戻る
DO
	INPUT
	SELECTCASE RESULT
		CASE 0 TO 6
			CALL CHARA_CLOTHES_SETTINGNEXT, RESULT
			BREAK
		CASE 8
			;対象が「あなた」
			IF NO:TARGET == 0
				;「あなた」が男の場合
				SELECTCASE SEX(TARGET)
					CASE 1
						FOR COUNT, 100, 107
							CSTR:COUNT = 0
						NEXT
						CSTR:MASTER:上半身上着 = シャツ
						CSTR:MASTER:下半身上着 = ズボン
						CSTR:MASTER:下半身下着 = トランクス
					;「あなた」が女の場合
					CASE 2
						FOR COUNT, 100, 107
							CSTR:COUNT = 0
						NEXT
						CSTR:MASTER:全身上着 = ワンピース
						CSTR:MASTER:上半身下着 = ブラジャー
						CSTR:MASTER:下半身下着 = パンティ
						CFLAG:MASTER:挿入可 = 1
				ENDSELECT
			ELSE
				FOR LCOUNT, 100, 107
					CSTR:LCOUNT = %CSVCSTR(NO:TARGET, LCOUNT, 0)%
				NEXT
				CFLAG:挿入可 = CSVCFLAG(NO:TARGET, 47)
				CFLAG:着衣併用 = CSVCFLAG(NO:TARGET, 48)
			ENDIF
			PRINTFORMW ＜%NAME:TARGET%の服装を初期化しました＞
			RESTART
		CASE 9
			RETURN 0
	ENDSELECT
LOOP LOOPRES(8, 9)

RESTART

