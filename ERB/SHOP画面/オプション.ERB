				CASE "和服", "ローブ", "ワンピース", "チュチュ", "ドレス", "チャイナドレス", "修道服", "ゴシックロリータ"
					CFLAG:挿入可 = 1
				CASEELSE
					CFLAG:挿入可 = 0
			ENDSELECT
			SELECTCASE ARG
				CASE 1, 2
					SIF CFLAG:着衣併用 != 1
						CSTR:全身上着 = 
				CASE 4, 5
					SIF CFLAG:着衣併用 == 2
						CSTR:全身上着 = 
				CASE 3
					IF CFLAG:着衣併用 != 1
						CSTR:上半身上着 = 
						CSTR:下半身上着 = 
					ENDIF
					IF CFLAG:着衣併用 == 2
						CSTR:上半身下着 = 
						CSTR:下半身下着 = 
					ENDIF
			ENDSELECT
			BREAK
		CASE 1000
