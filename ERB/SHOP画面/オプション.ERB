FOR COUNT, (ARG*100), (ARG*100+100)
	SIF STR:COUNT == ""
		CONTINUE
	PRINTFORML 　[{COUNT}] %STR:COUNT%
NEXT
DRAWLINE
PRINTPLAIN 　COORDINATE　
PRINTL [1000] 戻る
DO
	INPUT
	SELECTCASE RESULT
		CASE 0 TO 999
			CSTR:(ARG+100) = %STR:RESULT%
			SELECTCASE CSTR:全身上着
				CASE "コート", "エプロン", "ローブ"
