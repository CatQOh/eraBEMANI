SELECTCASE PREG:竿役:4
	CASE IS >= 15
		LOCAL:2 = 1
	CASE IS >= 12
		LOCAL:2 = 2
	CASE IS >= 9
		LOCAL:2 = 3
	CASE IS >= 6
		LOCAL:2 = 4
	CASE IS >= 3
		LOCAL:2 = 5
	CASEELSE
		LOCAL:2 = 6
ENDSELECT

SIF TALENT:MASTER:小柄体型
	LOCAL:2 += 2
SIF TALENT:MASTER:小人体型
	LOCAL:2 += 3

;獣人と獣は孕みやすい
SELECTCASE CSTR:MASTER:種族
	CASE "獣人", "獣"
