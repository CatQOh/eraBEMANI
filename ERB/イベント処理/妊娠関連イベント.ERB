IF ARG == MASTER
	LOCAL = FINDCHARA(NO, PREG:MASTER:21)
	IF LOCAL >= 0
		PRINTFORML %CALLNAME:LOCAL%に妊娠したことを伝えますか？
		PRINTL [0] - そっとしておこう
