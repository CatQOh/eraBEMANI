	IF !CFLAG:COUNT:使用不可
		;休憩フラグが立っていて配属中じゃない
		IF (FLAG:休憩フラグ && CSTR:COUNT:配属 == "") || CFLAG:COUNT:休憩
			LOCAL += 200
			SELECTCASE FLAG:難易度
				;NORMALなら休憩でストレス値-15
				CASE 1
					CFLAG:COUNT:ストレス値 -= 15
				;HYPERは-10
				CASE 2
					CFLAG:COUNT:ストレス値 -= 10
				;ANOTHERは-5
				CASE 3
					CFLAG:COUNT:ストレス値 -= 5
			ENDSELECT
		ENDIF

		;休憩コマンドで休んだ場合
		;IF FLAG:休憩フラグ == 2
		;	TIMES LOCAL , 2.00
		;	CFLAG:COUNT:ストレス値 -= 2
		;	SIF TALENT:COUNT:ハイテンション
		;		CFLAG:COUNT:ストレス値--
		;ENDIF
	ENDIF

