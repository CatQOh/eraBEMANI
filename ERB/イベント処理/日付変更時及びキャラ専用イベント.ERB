	SIF CSTR:COUNT:種族 == "宇宙人"
		TIMES LOCAL , 3.00

	;回復早い、回復遅い
	IF TALENT:COUNT:回復早い
		TIMES LOCAL , 1.50
	ELSEIF TALENT:COUNT:回復遅い
		TIMES LOCAL , 0.75
	ENDIF
	
