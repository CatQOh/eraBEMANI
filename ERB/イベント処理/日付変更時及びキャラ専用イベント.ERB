REPEAT CHARANUM
	;種族妖精ならランダムで消費アイテム取得
	IF CSTR:COUNT:種族 == "妖精" && CFLAG:COUNT:陥落 && !CFLAG:MASTER:使用不可
		LOCAL = RAND:8+100
		LOCAL:1 = RAND:3+1
		PRINTFORMW %CALLNAME:COUNT%が{LOCAL:1}個の%ITEMNAME:LOCAL%を拾ってきました
		ITEM:LOCAL += LOCAL:1
	ENDIF

	LOCAL = 0
	;ヤンデレのストレス処理
	IF TALENT:COUNT:ヤンデレ
		IF TARGET != COUNT
			;陥落済み
			IF CFLAG:COUNT:陥落
				;MASTERとの相性が良いほど待機中のストレス増加
				LOCAL = (RELATION:COUNT:(NO:MASTER)-100)/10+1
				;しかしTARGETとの相性が良いと緩和 悪いと増加
				SIF TARGET > 0
					LOCAL -= (RELATION:COUNT:(NO:TARGET)-100)/10
				;ASSIとの相性が悪いと増加
				SIF ASSI > 0 && RELATION:COUNT:(NO:ASSI) < 100
					LOCAL += ABS(RELATION:COUNT:(NO:ASSI)-100)/10+1
			;未陥落
			ELSE
				;TARGETとの相性が良いと待機中のストレス増加
				SIF TARGET > 0 && RELATION:COUNT:(NO:TARGET) > 0
					LOCAL += (RELATION:COUNT:(NO:TARGET))/10+1
				;ASSIとの相性が良くても待機中のストレスが増加
				SIF ASSI > 0 && RELATION:COUNT:(NO:ASSI) > 0
					LOCAL += (RELATION:COUNT:(NO:ASSI))/10+1
			ENDIF
			SIF LOCAL > 0
				CFLAG:COUNT:ストレス値 += LOCAL
		;逆に調教対象の場合は相性に応じて大幅にストレス値減少
		ELSEIF TARGET == COUNT
			;(MASTERとの相性-100)/5 つまり200%(恋慕時)だと20減少 上がることはない
			LOCAL = MAX((RELATION:COUNT:(NO:MASTER)-100)/5, 0)
			;(ASSIとの相性-100)/10 こちらもストレス値上がることはない
			SIF ASSI > 0
				LOCAL += MAX((RELATION:COUNT:(NO:ASSI)-100)/10, 0)
		ENDIF
	ENDIF
	
	;その他ストレス処理
	;調教対象の場合
	IF COUNT == TARGET
		;未陥落 +5
		SIF !CFLAG:陥落
			CFLAG:ストレス値 += 5
		;反発刻印*2
		CFLAG:ストレス値 += MARK:反発刻印*2
		;主人との相性 100-相性値/10(50%なら+5、70%なら+3 低下はしない)
		CFLAG:ストレス値 += MAX(100-RELATION:(NO:MASTER), 0)/10
		;助手が居る場合も上と同じ式で計算
		SIF ASSI > 0
			CFLAG:ストレス値 += MAX(100-RELATION:(NO:ASSI), 0)/10
	ENDIF
	;助手の場合
	SIF COUNT == ASSI
		CFLAG:ASSI:ストレス値 += 3
	;反発刻印
	CFLAG:COUNT:ストレス値 += MARK:COUNT:反発刻印
	LOCAL = 0
	LOCAL:1 = 0
	;素質の計算
	FOR LCOUNT, 0, VARSIZE("TALENT")
		SIF !TALENT:COUNT:LCOUNT
			CONTINUE
		SELECTCASE TALENTNAME:LCOUNT
			;ツンデレ 陥落済みかどうかでストレス±2
			CASE "ツンデレ"
				IF CFLAG:COUNT:陥落
					LOCAL:1 -= 2
				ELSE
					LOCAL:1 += 2
				ENDIF
			;寂しがり屋 未配属でTARGETでもASSIでもない場合は+3
			CASE "寂しがり屋"
				SIF CSTR:COUNT:配属 == "" && COUNT != TARGET && COUNT != ASSI
					LOCAL += 3
			;抑圧 +ABL:欲望
			CASE "抑圧"
				LOCAL += ABL:COUNT:欲望
			;男好き、男嫌い、女好き、女嫌い 配属中は同じ配属先の男女キャラ数に応じてストレス増減 最大5
			CASE "男好き", "男嫌い"
				人数 = 0
				IF CSTR:COUNT:配属 != ""
					FOR LCOUNT2, 0, CHARANUM
						SIF TALENT:LCOUNT2:性別 == 1 && CSTR:LCOUNT2:配属 == CSTR:COUNT:配属
							人数++
					NEXT
				ENDIF
				IF TALENTNAME:LCOUNT == "男好き"
					LOCAL -= MIN(人数, 5)
				ELSEIF TALENTNAME:LCOUNT == "男嫌い"
					LOCAL += MIN(人数, 5)
				ENDIF
			CASE "女好き", "女嫌い"
				人数 = 0
				IF CSTR:COUNT:配属 != ""
					FOR LCOUNT2, 0, CHARANUM
						SIF TALENT:LCOUNT2:性別 == 2 && CSTR:LCOUNT2:配属 == CSTR:COUNT:配属
							人数++
					NEXT
				ENDIF
				IF TALENTNAME:LCOUNT == "女好き"
					LOCAL -= MIN(人数, 5)
				ELSEIF TALENTNAME:LCOUNT == "女嫌い"
					LOCAL += MIN(人数, 5)
				ENDIF
			;同族嫌悪 配属中は同じ種族のキャラに応じてストレス増加 最大5
			CASE "同族嫌悪"
				人数 = 0
				IF CSTR:COUNT:配属 != ""
					FOR LCOUNT2, 0, CHARANUM
						SIF CSTR:LCOUNT2:種族 == CSTR:COUNT:種族 && CSTR:LCOUNT2:配属 == CSTR:COUNT:配属
							人数++
					NEXT
				ENDIF
				LOCAL += MIN(人数, 5)
			;バストサイズ 巨乳以上だと+1
			CASE "バストサイズ"
				SIF TALENT:COUNT:バストサイズ >= 4
					LOCAL:1 += 1
			;日光浴 昼なら-1
			CASE "日光浴"
				SIF TIME == 0
					LOCAL -= 1
			;月光浴 夜なら-1
			CASE "月光浴"
				SIF TIME == 1
					LOCAL -= 1
			;-3
			CASE "ハイテンション", "解放", "無機物"
				LOCAL:1 -= 3
			;-2
			CASE "好奇心", "楽観的", "自慰しやすい", "幼稚"
				LOCAL:1 -= 2
			;-1
			CASE "衝動的", "冷静", "無関心", "感情乏しい", "食欲皆伝"
				LOCAL:1 -= 1
			;+1
			CASE "臆病", "強気", "弱気", "潔癖症"
				LOCAL:1 += 1
			;+2
			CASE "生意気","反抗的", "自制心", "悲観的"
				LOCAL:1 += 2
			;+3
			CASE "性器破損", "育児中"
				LOCAL:1 += 3
			;+4
			CASE "プライド高い", "弱味"
				LOCAL:1 += 4
			;+5
			CASE "妊娠"
				LOCAL:1 += 5
		ENDSELECT
	NEXT
	
	;LOCALは毎ターン計算
	;LOCAL:1は配属されてなく休憩フラグが立っていれば無視できるが、LOCAL:1の結果でストレスが低下することはない
	CFLAG:COUNT:ストレス値 += LOCAL
	SIF !FLAG:休憩フラグ || CSTR:COUNT:配属 != ""
		CFLAG:COUNT:ストレス値 += MAX(LOCAL:1, 0)
	
	
	;魔剤フラグ消去
	CFLAG:COUNT:魔剤 = 0
	;魔剤耐性減少
	IF TALENT:COUNT:小人体型
		CFLAG:COUNT:魔剤耐性 -= 5
	ELSEIF TALENT:COUNT:小柄体型
		CFLAG:COUNT:魔剤耐性 -= 6
	ELSE
		CFLAG:COUNT:魔剤耐性 -= 7
	ENDIF
	;魔剤耐性は1000～2000の間で変動する
	SIF CFLAG:COUNT:魔剤耐性 < 1000
		CFLAG:COUNT:魔剤耐性 = 1000

	;気力の回復
	;基本的に昼なら1/3回復、夜なら2/3回復
		SELECTCASE TIME
		CASE 0
			LOCAL = MAXBASE:COUNT:気力/3
		CASE 1
			LOCAL = MAXBASE:COUNT:気力/3*2
	ENDSELECT
	;まずストレス値だけ引く 割合じゃないので気力が低いキャラほどストレスの影響が大きい
	LOCAL -= CFLAG:COUNT:ストレス値
	
	;素質の計算
	FOR LCOUNT, 0, VARSIZE("TALENT")
		SIF !TALENT:COUNT:LCOUNT
			CONTINUE
		SELECTCASE TALENTNAME:LCOUNT
			;臆病 未陥落なら苦痛刻印と屈服刻印に応じて減少(50～150)
			CASE "臆病"
				SIF !CFLAG:COUNT:陥落
					LOCAL -= 50*LIMIT(MARK:COUNT:苦痛刻印-MARK:COUNT:屈服刻印, 1, 3)
			;+10%
			CASE "気丈", "冷静", "楽観的", "目立ちたがり"
				LOCAL += MAXBASE:COUNT:気力/10
			;+5%
			CASE "サボり魔", "貞操無頓着", "恥薄い"
				LOCAL += MAXBASE:COUNT:気力/20
			;-5%
			CASE "抵抗", "恥じらい"
				LOCAL -= MAXBASE:COUNT:気力/20
			;-10%
			CASE "弱気", "悲観的", "貞操観念"
				LOCAL -= MAXBASE:COUNT:気力/10
		ENDSELECT
	NEXT
	BASE:COUNT:気力 += MAX(LOCAL, 1)
	
	;体力の回復（午後の調教後は夜の休みが入るので回復大きい）
	SELECTCASE TIME
		CASE 0
			SELECTCASE FLAG:難易度
				;NORMAL
				CASE 1
					LOCAL = MAXBASE:COUNT:体力 / 8
				;HYPER
				CASE 2
					LOCAL = MAXBASE:COUNT:体力 / 10
				;ANOTHER
				CASE 3
					LOCAL = MAXBASE:COUNT:体力 / 15
			ENDSELECT
		CASE 1
			SELECTCASE FLAG:難易度
				;NORMAL
				CASE 1
					LOCAL = MAXBASE:COUNT:体力 / 3
				;HYPER
				CASE 2
					LOCAL = MAXBASE:COUNT:体力 / 4
				;ANOTHER
				CASE 3
					LOCAL = MAXBASE:COUNT:体力 / 5
			ENDSELECT
	ENDSELECT

	;日光浴、月光浴（吸血鬼）、夢喰い
	SELECTCASE TIME
		CASE 0
			SIF TALENT:COUNT:日光浴
				LOCAL += 100
		CASE 1
			IF TALENT:COUNT:月光浴 || TALENT:COUNT:吸血鬼
				SELECTCASE 月齢
					CASE 0 TO 1500
						LOCAL += 月齢/10
					CASE 1500 TO 3000
						LOCAL += (3000-月齢)/10
				ENDSELECT
			ENDIF
			;主人と当人引いて-2
			SIF TALENT:COUNT:夢喰い && CHARANUM-2 > 0
				LOCAL += (CHARANUM-2)*30
			;こちらも医務室配属での効果にしたい
			;SIF TALENT:MASTER:夢喰い || (ASSI > 0 && TALENT:ASSI:夢喰い)
			;	LOCAL += 50
	ENDSELECT

