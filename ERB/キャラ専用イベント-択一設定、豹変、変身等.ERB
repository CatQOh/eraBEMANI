			ENDSELECT
		NEXT
	CASE "シュープリス"
		FOR LCOUNT, 0, VARSIZE("TALENT")
			SELECTCASE TALENTNAME:LCOUNT
				;消滅する素質
				CASE "臆病", "プライド低い", "弱気", "寂しがり屋", "自制心", "保守的", "悲観的", "抑圧", "恥じらい", "痛みに弱い", "回復遅い", "習得遅い"
