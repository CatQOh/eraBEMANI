		ENDIF
	ENDIF

	SIF 表示数%6 == 0
		文字列表示用 = 　

	;アイテムで付与できる素質は青くする
	IF !CFLAG:ARG:複製
		SELECTCASE TALENTNAME:LCOUNT
			CASE "動物耳", "羽", "足使用不可", "尻尾"
				文字色 = deepskyblue
			CASEELSE
				文字色 = 
		ENDSELECT
	ENDIF
	IF HIDE_TALENT:LCOUNT
		文字列表示用:(表示数%6) += @"%SET_TOOLTIP(素質名, "不明な素質です", 0, "gray")%"
	ELSE
		文字列表示用:(表示数%6) += @"%SET_TOOLTIP(素質名, TALENT_COMMENT(TALENTNAME:LCOUNT, ARG), 0, 文字色)%"
	ENDIF

	表示数++

	;改行するのか？ 続けて出力するのか？
	IF 表示数%6 == 0 && 表示数 != 0
		HTML_PRINT STRJOIN(文字列表示用, "")
		VARSET 文字列表示用
	ENDIF
