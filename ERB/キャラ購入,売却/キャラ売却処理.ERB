				CASE 0
					LOCAL = 0
				CASE 1
					LOCAL = 800
				CASE 2
					LOCAL = 1100
				CASE 3
					LOCAL = 1700
				CASE 4
					LOCAL = 2600
				CASE 5
					LOCAL = 3800
				CASE 6
