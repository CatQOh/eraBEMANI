CALL PASELIL, @"価格:{PRICE}＄＋元の価格:{CFLAG:価格}＄ = {PRICE+CFLAG:価格}＄"
RESETCOLOR
PRICE += CFLAG:価格

;元助手
IF ISASSI:TARGET == 1
	PRINTFORML 助手経験あり -50\%
	TIMES PRICE , 0.50
ENDIF


DO
	;売却確認
	PRINTFORM %NAME:TARGET%は
	SETCOLOR 50, 150, 250
	CALL PASELI, @"{PRICE}＄"
	RESETCOLOR
	PRINTL で売れそうです
	PRINTL 売却しますか？
	PRINTL [0] はい
	PRINTL [1] いいえ
	CFLAG:売却寸止め = 1
	INPUT
LOOP LOOPRES(0, 1)

SELECTCASE RESULT
	CASE 0
		SELECTCASE 月齢
			CASE 2300 TO 2599
				SIF FALLTYPE(TARGET) == 1
					CALL 実績解除, "下弦の月に願うは君への罰"
		ENDSELECT
		IF NO:TARGET != 0
			SELECTCASE CHARANAMEF(TARGET)
				;実績「Σかリアンを素数価格で売却する」
				CASE "Σ", "リアン"
					SIF ISPRIME(PRICE)
						CALL 実績解除, "I only Divide Me"
				;実績「緋浮美を140,000パセリ以上で売却する」
				CASE "梅桐 緋浮美"
					SIF PRICE >= 140000
						CALL 実績解除, "GOLD RUSH"
				;実績:オトベアを売り飛ばす
				CASE "オトベア"
					CALL 実績解除, "お前よりくまモンの方がいい！"
			ENDSELECT
		ENDIF
		;売却時のイベント口上
		CALL KOJO_MESSAGE_EVENT, "売却時"
		;売却額
		CALL PASELIW, @"結果、%NAME:TARGET%は{PRICE}＄で売れました"
		バンめし = 0
		MONEY += PRICE
		LOCAL = TARGET
		;アイドルユニットに属していた場合、そのユニットは解散
		SIF CFLAG:LOCAL:ユニット番号
			CALL BREAKUP, CFLAG:LOCAL:ユニット番号
		TARGET = LOCALTARGET
		ASSI = LOCALASSI
		DELCHARA LOCAL
		SIF LOCAL == LOCALTARGET
			TARGET = -1
		SIF LOCAL == LOCALASSI
			ASSI = -1
		SIF LOCAL < LOCALTARGET
			TARGET--
		SIF LOCAL < LOCALASSI
			ASSI--
	CASE 1
		TARGET = LOCALTARGET
		RESTART
ENDSELECT
