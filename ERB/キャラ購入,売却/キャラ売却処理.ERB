	PRINTL 隷属 +200%
	LOCAL += 200
ENDIF

IF SEX(TARGET) == 1
	PRINTL 男 +30%
	LOCAL += 30
ENDIF

;その他素質
FOR LCOUNT, 0 ,VARSIZE("TALENT")
	SIF !TALENT:LCOUNT
		CONTINUE
	SELECTCASE TALENTNAME:LCOUNT
		;バストサイズ
		CASE "バストサイズ"
			SELECTCASE TALENT:バストサイズ
				;絶壁
				CASE 1
					PRINTL 絶壁 -20%
					LOCAL -= 20
				;貧乳
				CASE 2
					PRINTL 貧乳 -10%
					LOCAL -= 10
				;巨乳
				CASE 4
					PRINTL 巨乳 +20%
					LOCAL += 20
				;爆乳
				CASE 5
					PRINTL 爆乳 +30%
					LOCAL += 30
			ENDSELECT
		;長いのは見づらいから数行に分ける
		;[素直]及び[解放]は[抵抗][抑圧]消滅時に付いたものならマイナス補正無効
		CASE "素直"
			IF !(NO:TARGET < 10000 && CSVTALENT(NO:TARGET, GETNUM(TALENT, "抵抗")))
				PRINTL 素直 -20%
				LOCAL -= 20
			ENDIF
		CASE "解放"
			IF !(NO:TARGET < 10000 && CSVTALENT(NO:TARGET, GETNUM(TALENT, "抑圧")))
				PRINTL 解放 -20%
				LOCAL -= 20
			ENDIF
		;-20%
		CASE "好奇心", "解放", "習得早い", "献身的", "快感に素直", "倒錯的", "回復早い", "弱気"
			PRINTFORML %TALENTNAME:LCOUNT% -20\%
			LOCAL -= 20
		;-10%
		CASE "臆病", "大人しい", "プライド低い", "目立ちたがり", "貞操無頓着", "恥薄い", "濡れやすい", "自慰しやすい"
			PRINTFORML %TALENTNAME:LCOUNT% -10\%
			LOCAL -= 10
		;-10%
		CASE "汚臭鈍感", "汚れ無視", "Ｃ敏感", "Ｖ敏感", "Ａ敏感", "Ｂ敏感", "日光浴", "月光浴", "幼稚", "寂しがり屋"
			PRINTFORML %TALENTNAME:LCOUNT% -10\%
			LOCAL -= 10
		;-10%
		CASE "ナルシスト", "男好き", "女好き", "ハイテンション", "衝動的", "買い物上手", "夢喰い", "サボり魔"
			PRINTFORML %TALENTNAME:LCOUNT% -10\%
			LOCAL -= 10
		;+10%
		CASE "舌使い", "針さばき", "猫舌", "おもらし癖", "小悪魔", "妖狐", "羽", "尻尾", "ネクロマンサー", "冷静"
			PRINTFORML %TALENTNAME:LCOUNT% +10\%
			LOCAL += 10
		;+20%
		CASE "恥じらい", "濡れにくい", "調合知識", "汚臭敏感", "男嫌い", "女嫌い", "小柄体型", "ふたなり", "母乳体質", "絶倫"
			PRINTFORML %TALENTNAME:LCOUNT% +20\%
			LOCAL += 20
		;+20%
		CASE "ファーリー", "潔癖症", "ドラゴン使い", "暑さに弱い", "寒さに弱い", "魔術師", "ヤンデレ"
			PRINTFORML %TALENTNAME:LCOUNT% +20\%
			LOCAL += 20
		;+30%
		CASE "ツンデレ", "貞操観念", "習得遅い", "薬毒耐性", "サド", "魅力", "Ｃ鈍感", "Ｖ鈍感", "Ａ鈍感", "Ｂ鈍感", "母性"
			PRINTFORML %TALENTNAME:LCOUNT% +30\%
			LOCAL += 30
		;+30%
		CASE "同族嫌悪", "料理人", "専業主婦", "絶対音感", "工学博士", "カメラマン"
			PRINTFORML %TALENTNAME:LCOUNT% +30\%
			LOCAL += 30
		;+40%
		CASE "保守的", "妄信", "回復遅い", "恋心", "強気"
			PRINTFORML %TALENTNAME:LCOUNT% +40\%
			LOCAL += 40
		;+50%
		CASE "反抗的", "気丈", "プライド高い", "生意気", "自制心", "無関心", "淫核", "淫膣", "淫尻", "淫乳"
			PRINTFORML %TALENTNAME:LCOUNT% +50\%
			LOCAL += 50
		;+50%
		CASE "謎の魅力", "戦士", "抑圧", "抵抗"
			PRINTFORML %TALENTNAME:LCOUNT% +50\%
			LOCAL += 50
		;+60%
		CASE "感情乏しい", "一線越えない"
			PRINTFORML %TALENTNAME:LCOUNT% +60\%
			LOCAL += 60
		;+70%
		CASE "快感の否定", "小人体型", "無機物", "既婚者"
			PRINTFORML %TALENTNAME:LCOUNT% +70\%
			LOCAL += 70
		;+300%
		CASE "リミットバースト"
			PRINTFORML %TALENTNAME:LCOUNT% +300\%
			LOCAL += 300
	ENDSELECT
NEXT

;調教が進むと消えるマイナス素質（抑圧、抵抗）
IF NO:TARGET < 10000
	IF CSVTALENT(NO:TARGET, GETNUM(TALENT, "抑圧")) && !TALENT:抑圧
		LOCAL += 50
		PRINTL 抑圧消滅済み +50%
	ENDIF
	IF CSVTALENT(NO:TARGET, GETNUM(TALENT, "抵抗")) && !TALENT:抵抗
		LOCAL += 50
		PRINTL 抵抗消滅済み +50%
	ENDIF
ENDIF

;娼館で働かせた日数だけ倍率減
IF TALENT:傷物
	LOCAL -= TALENT:傷物
	PRINTFORML 傷物 -{TALENT:傷物}\%
ENDIF

PRINTFORML 素質倍率 = {LOCAL}\%
;補正値はどんなに低くても最低30%
IF LOCAL < 30
	PRINTL 最低保証 30%
	LOCAL = 30
ENDIF 
;補正値の適用
PRICE *= LOCAL
PRICE /= 100

SETCOLOR 100, 150, 250
PRINTFORML 能力価格×素質補正 = {PRICE}
RESETCOLOR

PRINTL 
