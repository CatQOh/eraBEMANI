IF TALENT:崩壊
	PRINTL 崩壊 -20%
	LOCAL -= 20
ENDIF
IF TALENT:妊娠
	PRINTL 妊娠 -30%
	LOCAL -= 30
ENDIF
IF TALENT:狂気
	PRINTL 狂気 -30%
	LOCAL -= 30
ENDIF
IF TALENT:即落ち
	PRINTL 即落ち -80%
	LOCAL -= 80
ENDIF

IF CSTR:眷属主 != "" && CSTR:種族 != "ヴァンパイア"
	PRINTL 眷属化 -20%
	LOCAL -= 20
ENDIF

IF CFLAG:眷属化した人数 && CSTR:種族 != "ヴァンパイア"
	PRINTFORML 眷属主 -{20*CFLAG:眷属化した人数}\%
	LOCAL -= 20*CFLAG:眷属化した人数
