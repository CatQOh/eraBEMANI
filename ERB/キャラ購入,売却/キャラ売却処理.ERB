SELECTCASE FLAG:難易度
	;NORMAL
	CASE 1
		PRINTFORML 難易度:NORMAL ×100\%
		TIMES PRICE , 1.00
	;HYPER
	CASE 2
		PRINTFORML 難易度:HYPER ×80\%
