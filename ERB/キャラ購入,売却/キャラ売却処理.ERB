;奴隷売却の処理
@CHARA_SELL
#DIM DYNAMIC LOCALTARGET
#DIM DYNAMIC LOCALASSI
#DIM DYNAMIC PRICE
#DIM DYNAMIC LCOUNT

VARSET LOCAL, 0

DRAWLINE
PRINTL □誰を売りますか？
FOR PAGING, 0, CHARANUM
	LOCALS = 
	LOCAL = 1
	;主人は除外
	SIF PAGING == MASTER
		LOCAL = 0
	;育児部屋に移動しているキャラは除外
	SIF CHECK_CHILD_CARE(PAGING)
		LOCAL = 0
	;売却不可フラグが立ってるキャラは除外
	SIF CFLAG:PAGING:売却不可
		LOCAL = 0
	;魔法の効果発動中のキャラは除外
	SIF CFLAG:PAGING:憑依中
		LOCAL = 0
	;アニマルは売却できない
	SIF TALENT:PAGING:アニマル
		LOCAL = 0
	SIF ビーストモード:PAGING:0
		LOCAL = 0
	SIF ティルナノーグ:PAGING:0
		LOCAL = 0
	IF ASSI == PAGING
		LOCALS = (助手)
	ELSEIF ISASSI:PAGING
		LOCALS = (元助手)
	ELSEIF CFLAG:PAGING:状態 == 2
		LOCALS = (助手可)
	ENDIF
	CALL PAGING, CFLAG:PAGING:状態 >= 1 && LOCAL, @"%LOCALS%", "SELL SLAVE"
NEXT

SELECTCASE RESULT
	CASE -1
		RETURN 0
	CASE 0 TO CHARANUM
		;売却処理
		LOCALTARGET = TARGET
		LOCALASSI = ASSI
		TARGET = RESULT
ENDSELECT

SIF TARGET == MASTER
	RESTART

PRICE = 0

