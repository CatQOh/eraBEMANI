IF ISNUMERIC(ARGS)
	COLUMN:ARG:BGCOLOR = TOINT(ARGS)
ELSE
	COLUMN:ARG:BGCOLOR = COLOR_FROMNAME(ARGS)
ENDIF

@COLUMNPRINT, ARG, ARGS, ARGS:1
