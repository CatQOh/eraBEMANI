	RETURN 0

COLUMN:ARG:CREATED = 1
RETURN 1

@COLUMNDISPOSE, ARG
SIF !COLUMN:ARG:CREATED
	RETURN 0

COLUMN:ARG:CREATED = 0
RETURN 1

@COLUMNRESIZE, ARG, ARG:1, ARG:2

