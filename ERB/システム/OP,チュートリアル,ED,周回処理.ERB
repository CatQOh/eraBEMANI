	LOCAL = FLAG:周回数
SIF LOCAL > 10
	LOCAL = 10

LOCAL:1 = LOCAL

;引き継げるキャラが居なければ引き継ぎ処理は飛ばす
SIF LOCAL == 0
	JUMP SUCCESSION_CONTINUE

DO
	IF LOCAL
		PRINTFORML 陥落済みの奴隷を、あと{LOCAL}人引き継ぐことができます
		PRINTFORML 誰を引き継ぎますか？
		DRAWLINE
		PRINTL □引き継ぐキャラ
		REPEAT CHARANUM
			SIF CFLAG:COUNT:引き継ぎフラグ
				PRINTFORML 　No.{COUNT, 2, LEFT} %NAME:COUNT%
		REND
		DRAWLINE
		PRINTL □引き継ぎ候補
		REPEAT CHARANUM
			SIF COUNT == MASTER
				CONTINUE
			SIF CFLAG:COUNT:引き継ぎフラグ
				CONTINUE
			SIF !CFLAG:COUNT:陥落
				CONTINUE
			PRINTFORML 　[{COUNT, 2}] %NAME:COUNT%
		REND
		DRAWLINE
		PRINTPLAIN 　NEXT GAME　
		PRINT [10000] 引き継ぎ手続きを終了する
		PRINTPLAIN 　
		PRINTL [10001] 選びなおす
	ELSEIF LOCAL == 0
		DRAWLINE
		PRINTL □引き継ぐキャラ
		REPEAT CHARANUM
			SIF CFLAG:COUNT:引き継ぎフラグ
				PRINTFORML 　No.{COUNT, 2, LEFT} %NAME:COUNT%
		REND
		DRAWLINE
		PRINTL 　以上のキャラを引き継ぎます。よろしいですか？
		DRAWLINE
		PRINTPLAIN 　NEXT GAME　
		PRINT [10000] これでいい
		PRINTPLAIN 　
		PRINTL [10001] 選びなおす
	ENDIF

	INPUT
	SELECTCASE RESULT
		CASE 10000
			JUMP SUCCESSION_CONTINUE, LOCAL:1-LOCAL
		CASE 10001
