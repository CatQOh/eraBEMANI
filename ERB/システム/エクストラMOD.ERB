@APPLY_性転換MOD, 対象
#DIM DYNAMIC 対象
#DIM DYNAMIC LTARGET

LTARGET = TARGET
TARGET = 対象

SELECTCASE TALENT:性別
	CASE 1
		CALL APPLY_女性化MOD, TARGET
	CASE 2
		CALL APPLY_男性化MOD, TARGET
ENDSELECT

CSTR:適用MOD += "[性転換MOD]"

TARGET = LTARGET

@APPLY_ふたなりMOD, 対象
#DIM DYNAMIC 対象

IF !TALENT:対象:ふたなり
	TALENT:対象:ふたなり = 1
	SELECTCASE SEX(対象)
		CASE 1
			TALENT:対象:処女 = 1
		CASE 2
			TALENT:対象:童貞 = 1
	ENDSELECT
	CSTR:対象:適用MOD += "[ふたなりMOD]"
ENDIF

@APPLY_爆乳MOD, 対象
#DIM DYNAMIC 対象

IF SEX(対象) == 2 && TALENT:対象:バストサイズ < 6
	TALENT:対象:バストサイズ = 6
	CSTR:対象:適用MOD += "[爆乳MOD]"
ENDIF

@APPLY_絶壁MOD, 対象
#DIM DYNAMIC 対象

IF SEX(対象) == 2 && TALENT:対象:バストサイズ > 1
	TALENT:対象:バストサイズ = 1
	CSTR:対象:適用MOD += "[絶壁MOD]"
ENDIF

@APPLY_おもらしMOD, 対象
#DIM DYNAMIC 対象

IF !TALENT:対象:おもらし癖
	TALENT:対象:おもらし癖 = 1
	CSTR:対象:適用MOD += "[おもらしMOD]"
ENDIF

@APPLY_ロリショタMOD, 対象
#DIM DYNAMIC 対象

IF !TALENT:対象:小柄体型
	TALENT:対象:小柄体型 = 1
	CSTR:対象:適用MOD += "[ロリショタMOD]"
ENDIF

@APPLY_大人化MOD, 対象
