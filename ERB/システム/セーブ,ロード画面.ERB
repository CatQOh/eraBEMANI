REPEAT 20
	SELECTCASE CHKDATA(COUNT)
		CASE 0
			PRINTFORML 　[{COUNT, 2}] %RESULTS%
		CASE 1
			SETCOLOR 120, 120, 120
			;表示テンプレ
			;PRINTFORML 　[ 5] 2016/01/10(曜) 00:10:15 | 2016/3/28(曜) 197日目夜 難易度:(N) ∞ 
			PRINTFORML 　[{COUNT, 2}] ----　　　　　　　　　　|
			RESETCOLOR
		CASE 2
			SETCOLOR 120, 120, 120
			PRINTFORML 　[{COUNT, 2}] 別バリアントのセーブデータです 上書きは可能です
			RESETCOLOR
		CASE 3
			SETCOLOR 120, 120, 120
			PRINTFORML 　[{COUNT, 2}] 互換性の無いセーブデータです 上書きは可能です
			RESETCOLOR
		CASE 4
			SETCOLOR 120, 120, 120
			PRINTFORML 　[{COUNT, 2}] ロードできないセーブデータです 上書きは可能です
	ENDSELECT
REND
DRAWLINE
PRINTPLAIN 　SAVE　
PRINTL [100] 戻る
DO
	INPUT
	LOCAL = RESULT
	SELECTCASE LOCAL
		CASE 0 TO 19
			SELECTCASE CHKDATA(LOCAL)
				CASE 0, 2, 3, 4
					PRINTL 既にセーブデータが存在します。上書きしますか？
					PRINTL [0] はい
					PRINTL [1] いいえ
					DO
						INPUT
						SELECTCASE RESULT
							CASE 0
								BREAK
							CASE 1
								RESTART
						ENDSELECT
					LOOP 1
					BREAK
				CASE 1
					BREAK
			ENDSELECT
		CASE 100
			RETURN 0
	ENDSELECT
LOOP 1

;リアルタイムの計算
年 = TOINT(SUBSTRING(GETTIMES(), 0, 4))
月 = TOINT(SUBSTRING(GETTIMES(), 5, 2))
日 = TOINT(SUBSTRING(GETTIMES(), 8, 2))

REALTIMENOW = %GETTIMES()%
SPLIT REALTIMENOW, " ", LOCALS
LOCALS = %LOCALS%(%DOW(ZELLER(年, 月, 日))%) %LOCALS:1%
LOCALS = %LOCALS% | {YEAR}/%TOSTR(MONTH, "D2")%/%TOSTR(DAYS, "D2")%(%DOW(FLAG:曜日)%)

SELECTCASE TIME
	CASE 0
		LOCALS += @" {DAY}日目昼 "
	CASE 1
		LOCALS += @" {DAY}日目夜 "
ENDSELECT

SELECTCASE FLAG:ゲームモード
	CASE 7
	CASE 8
		LOCALS += "段位認定 "
	CASEELSE
		LOCALS += "難易度:"
		SELECTCASE FLAG:難易度
			CASE 1
				LOCALS += "(N) "
			CASE 2
				LOCALS += "(H) "
			CASE 3
				LOCALS += "(A) "
		ENDSELECT
ENDSELECT

SELECTCASE FLAG:ゲームモード
	CASE 7, 9
		LOCALS += "∞ "
ENDSELECT

SELECTCASE FLAG:ゲームモード
	CASE 7
		LOCALS += @"%CALLNAME:MASTER%と%CALLNAME:1%が新婚生活中"
	CASEELSE
		IF TARGET >= 0
			LOCALS += @"%NAME:TARGET%調教中 "
			SIF TALENT:恋慕
				LOCALS +=  "恋,"
			SIF TALENT:淫乱
				LOCALS += "淫,"
			SIF TALENT:服従
				LOCALS += "服,"
			SIF TALENT:親愛
				LOCALS += "愛,"
			SIF TALENT:娼婦
				LOCALS += "娼,"
			SIF TALENT:隷属
				LOCALS += "隷,"
			SIF TALENT:崩壊
				LOCALS += "崩,"
			LOCALS += @"従{ABL:従順},欲{ABL:欲望},技{ABL:技巧}"
		ENDIF
ENDSELECT

SAVEDATA LOCAL, LOCALS

LOCAL = 0

REPEAT 20
	SIF CHKDATA(COUNT) == 1
		LOCAL++
REND

SIF LOCAL == 20
	CALL 実績解除, "メモリーカードの容量が足りません"

SAVEGLOBAL

RETURN 0

