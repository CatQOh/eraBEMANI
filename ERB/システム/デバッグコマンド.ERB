@DEBUG

SIF TARGET == -1
	TARGET = 0

$LOOP_DEBUG
PRINTFORML なにをしますか？　　対象：%NAME:TARGET%
PRINTLC [0] - 対象変更
PRINTLC [1] - 素質操作
PRINTLC [2] - ABL操作
PRINTLC [3] - 経験操作
PRINTLC [4] - 刻印操作
PRINTLC [5] - ITEM操作
PRINTLC [6] - その他
PRINTL 
PRINTL [-1] 戻る

INPUT

SELECTCASE RESULT
	CASE -1
		SIF TARGET == 0
			TARGET = -1
		RETURN
	CASE 0
		CALL TARGET_CHANGE
	CASE 1
		CALL TALENT_CHANGE
	CASE 2
		CALL ABL_CHANGE
	CASE 3
		CALL EXP_CHANGE
	CASE 4
		CALL MARK_CHANGE
	CASE 5
		CALL ITEM_CHANGE
	CASE 6
		CALL EXTRA_CHANGE
ENDSELECT

GOTO LOOP_DEBUG

