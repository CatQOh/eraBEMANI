@TALENT_CHANGE
DRAWLINE
REPEAT VARSIZE("TALENT")
	SIF TALENTNAME:COUNT == ""
		CONTINUE
	PRINTFORMLC [{COUNT}] %TALENTNAME:COUNT%
	IF !TALENT:TARGET:COUNT
		PRINT ×
	ELSE
		PRINT ◯
	ENDIF
	PRINT 　
REND
PRINTL
DRAWLINE

PRINTL [-1] - 戻る

INPUT

SIF RESULT == -1
	RETURN

LOCAL = RESULT
IF LOCAL == 0
	PRINTL [1] - 男にする
	PRINTL [2] - 女にする
	PRINTL [-1] - 戻る

	INPUT
	
	SIF RESULT == -1
		RETURN
	
	SELECTCASE RESULT
		CASE 1, 2
			TALENT:TARGET:性別 = RESULT
	ENDSELECT
	
	RESTART
ELSE
	PRINTFORML [0] - %TALENTNAME:LOCAL%を付加
	PRINTFORML [1] - %TALENTNAME:LOCAL%を削除
	PRINTL [-1] - 戻る

	INPUT

	SIF RESULT == -1
		RETURN

	PRINTFORML %NAME:TARGET%の%TALENTNAME:LOCAL%を\@RESULT ? 削除 # 付加 \@します

	IF RESULT == 0
		TALENT:TARGET:LOCAL = 1
	ELSEIF RESULT == 1
		TALENT:TARGET:LOCAL = 0
	ENDIF

	RESTART
ENDIF

