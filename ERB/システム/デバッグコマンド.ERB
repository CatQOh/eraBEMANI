@EXTRA_CHANGE
DRAWLINE
PRINTLC [0] - 所持金
PRINTLC [1] - 日数
PRINTLC [2] - 時間帯
PRINTL [-1] - 戻る

INPUT

DRAWLINE
SIF RESULT == -1
	RETURN
IF RESULT == 0
	PRINTFORML いくらにしますか？　　現在の所持金：{MONEY}
	PRINTLC [0] 無一文
	PRINTLC [10000] 1万
	PRINTLC [100000000] 1億
	PRINTLC [1000000000000] 1兆
	PRINTLC [999999999999999999] 限界
	PRINTL [-1] 戻る
	INPUT
	SIF RESULT == -1
		RESTART
	MONEY = RESULT
	PRINTFORMW 所持金を{MONEY}に変更しました
ELSEIF RESULT == 1
	PRINTFORML 何日にしますか？　　現在の日数：{DAY + 1}
	PRINTFORML [1][9][99][999][9999][99999][999999]
	PRINTFORML [-1] 戻る
	INPUT
	SIF RESULT == -1
		RESTART
	DAY = RESULT - 1
ELSEIF RESULT == 2
	PRINTFORM いつにしますか？　　現在の時間帯：
	IF TIME == 0
		PRINTL 昼
	ELSE
		PRINTL 夜
	ENDIF
	PRINTL [0] - 昼
	PRINTL [1] - 夜
	PRINTL [-1] - 戻る
	INPUT
	SIF RESULT == -1
		RESTART
	TIME = RESULT
	PRINT 現在の時間帯を
	IF TIME == 0
		PRINTL 昼
	ELSE
		PRINTL 夜
	ENDIF
	PRINTL に変更しました
ENDIF

RESTART
