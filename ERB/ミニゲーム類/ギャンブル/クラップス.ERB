		IF LOCAL:27 > 0
			IF LANGUAGE == "ENG"
				PRINTW Forfeiture the Any 7 bets.
			ELSE
				PRINTW 「エニーセブンへの賭け金は没収です。」
			ENDIF
			LOCAL:27 = 0
		ENDIF
		MONEY += GET_MONEY
		IF GET_MONEY > 0
			;PLAYSOUND カジノコイン
			IF LANGUAGE == "ENG"
				CALL PASELIW, @"You got {GET_MONEY}＄"
			ELSE
				CALL PASELIW, @"{GET_MONEY}＄を受け取った。"
			ENDIF
