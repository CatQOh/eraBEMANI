				ELSE
					PRINTFORMW 「ハード{DICE_SUM}への賭け金は没収です。」
				ENDIF
			ENDIF
			LOCAL:(10 + DICE_SUM / 2) = 0
		ENDIF
		;[21]フィールドベット
		;2,3,4,9,10,11,12が出たら勝ち それ以外は負け
		;12なら4倍 2なら3倍 それ以外なら2倍
		IF LOCAL:21 > 0
			IF DICE_SUM <= 4 || 9 <= DICE_SUM
				IF LANGUAGE == "ENG"
					PRINT Those who have bet on Field will receive 
				ELSE
					PRINT 「フィールドベットに賭けていた方には
				ENDIF
