@PINFU(ARG:0, ARG:1)
;平和 判定が最強クラスに面倒
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数(最初に固定)
#DIM DYNAMIC PAI2, 25;種類別の牌の枚数(計算用 メンツ切り出しによって減っていく)
#DIM DYNAMIC DET;アガリ牌が面子に含まれているかどうかの判定
#DIM DYNAMIC SET;面子の数

FOR M, 0, 25
	FOR N, 0, 7
		SIF TEHAI:(ARG:0):N %25 == M
			PAI:M++
	NEXT
	SIF ARG:1 %25 == M
		PAI:M++
NEXT

FOR L, 0, 16
	IF L%9 < 7
		;面子構成は順子+順子+対子のみ
		VARSET DET
		VARSET SET
		FOR M, 0, 25
			PAI2:M = PAI:M
		NEXT
		FOR N, L, L+18
			IF N%9 < 7
				DO
					IF PAI2:(N%18) && PAI2:(N%18+1) && PAI2:(N%18+2)
						IF DET == 0 && (N%18 == ARG:1 %25 || N%18+2 == ARG:1 %25)
							IF (N%9 == 0 && N%18+2 == ARG:1 %25) || (N%9 == 6 && N%18 == ARG:1 %25)
								BREAK
							ELSE
								PAI2:(N%18)--
								PAI2:(N%18+1)--
								PAI2:(N%18+2)--
								SET++
								DET++
							ENDIF
						ELSEIF DET == 0 && N%18+1 == ARG:1 %25
							BREAK
						ELSE
							PAI2:(N%18)--
							PAI2:(N%18+1)--
							PAI2:(N%18+2)--
							SET++
						ENDIF
					ENDIF
				LOOP PAI2:(N%18) && PAI2:(N%18+1) && PAI2:(N%18+2)
			ENDIF
		NEXT
		FOR N, 0, 22
			IF PAI2:N >= 2 && N != 18 && N != 20
				SET++
				BREAK
			ENDIF
		NEXT
		SIF SET == 3 && DET
			RETURNF 1
	ENDIF
NEXT
RETURNF 0

