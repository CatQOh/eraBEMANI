	SIF SHANTEN8(TEHAI:(ARG:0):0, TEHAI:(ARG:0):1, TEHAI:(ARG:0):2, TEHAI:(ARG:0):3, TEHAI:(ARG:0):4, TEHAI:(ARG:0):5, TEHAI:(ARG:0):6, KAWA:(ARG:0):LOCAL, -1) == -1
		RETURNF 0
NEXT
