@SOME(ARG:0, ARG:1)
;↑サムじゃなくて染め
;清一色に対して2、混一色に対して1、それ以外には0を返す
#FUNCTION
#DIM DYNAMIC PAI, 3;牌の色ごとの枚数

FOR N, 0, 7
	IF TEHAI:(ARG:0):N %25 /9 == 0
	;萬子
		PAI:0++
	ELSEIF TEHAI:(ARG:0):N %25 /9 == 1
	;筒子
		PAI:1++
	ELSE
	;字牌
		PAI:2++
	ENDIF
NEXT
IF ARG:1 %25 /9 == 0
	PAI:0++
ELSEIF ARG:1 %25 /9 == 1
	PAI:1++
ELSE
	PAI:2++
ENDIF
 
IF PAI:0 && PAI:1
	RETURNF 0
ELSEIF PAI:0 || PAI:1
	IF PAI:2
		RETURNF 1
	ELSE
		RETURNF 2
	ENDIF
ELSE
;字一色
	RETURNF 0
ENDIF


@CHANTA(ARG:0, ARG:1)
;純チャンに対して2、チャンタに対して1、それ以外には0を返す
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数
#DIM DYNAMIC SET;面子と雀頭を数える
#DIM DYNAMIC DET;純チャンかチャンタかの判定

FOR M, 0, 25
	FOR N, 0, 7
		SIF TEHAI:(ARG:0):N %25 == M
			PAI:M++
	NEXT
	SIF ARG:1 %25 == M
		PAI:M++
NEXT

FOR N, 0, 18
	IF N%9 == 0 || N%9 == 6
		IF PAI:N >= 2 && PAI:(N+1) >= 2 && PAI:(N+2) >= 2
			PAI:N -= 2
			PAI:(N+1) -= 2
			PAI:(N+2) -= 2
			SET += 2
		ELSEIF PAI:N && PAI:(N+1) && PAI:(N+2)
			PAI:N--
			PAI:(N+1)--
			PAI:(N+2)--
			SET++
		ENDIF
	ENDIF
NEXT

IF SET == 0
	;123or789の順子がなければ0を返す
	RETURNF 0
ELSEIF SET == 1
	IF PAI:0 == 3;一萬
		PAI:0 -= 3
		SET++
	ENDIF
	IF PAI:8 == 3;九萬
		PAI:8 -= 3
		SET++
	ENDIF
	IF PAI:9 == 3;一筒
		PAI:9 -= 3
		SET++
	ENDIF
	IF PAI:17 == 3;九筒
		PAI:9 -= 3
		SET++
	ENDIF
	FOR M, 18, 25;字牌
		IF PAI:M == 3
			PAI:M -= 3
			SET++
			DET++
			BREAK
		ENDIF
	NEXT
	SIF SET == 1
		RETURNF 0
ENDIF

;対子の確認 この時点で必ずSET==2
SIF PAI:0 == 2;一萬
	SET++
SIF PAI:8 == 2;九萬
	SET++
SIF PAI:9 == 2;一筒
	SET++
SIF PAI:17 == 2;九筒
	SET++
FOR M, 18, 25;字牌
	IF PAI:M == 2
		SET++
		DET++
		BREAK
	ENDIF
NEXT

SIF SET != 3
	RETURNF 0
SIF DET
	RETURNF 1
RETURNF 2

@HONTOI(ARG:0, ARG:1)
;対々和なら1を返す混老頭も複合しているのなら2を返す
;清老頭でも2を返すので、この関数は役満ではないときに使う
#FUNCTION
#DIM DYNAMIC PAI, 25;種類別の牌の枚数
#DIM DYNAMIC KOTSU;刻子の数のカウント
#DIM DYNAMIC DET;混老頭かどうかの判定に使用(0なら成立,1以上なら不成立)

FOR M, 0, 25
	FOR N, 0, 7
		SIF TEHAI:(ARG:0):N %25 == M
			PAI:M++
	NEXT
	SIF ARG:1 %25 == M
		PAI:M++
NEXT

FOR N, 0, 25
	IF PAI:N >= 3
		PAI:N -= 3
		KOTSU++
		DET++
		SIF N%9 == 0 || N%9 == 8 || N >= 18
			DET--
	ENDIF
NEXT

SIF KOTSU != 2
	RETURNF 0

;刻子で2メンツがある状態でヘッドがあれば1を返す
FOR N, 0, 25
	IF PAI:N == 2
		DET++
		SIF N%9 == 0 || N%9 == 8 || N >= 18
			DET--
		SIF DET
			RETURNF 1
		RETURNF 2
	ENDIF
NEXT

RETURNF 0

