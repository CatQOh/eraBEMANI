#DIM DYNAMIC FU;符の計算に使用

FOR M, 0, 25
	FOR N, 0, 7
		SIF TEHAI:(ARG:0):N %25 == M
			PAI:M++
	NEXT
	SIF ARG:1 %25 == M
		PAI:M++
NEXT

