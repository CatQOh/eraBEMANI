;本体側と重複した関数 ターンの終了時に呼ばれる
@EVENTTURNEND
#PRI
SIF TARGET < 0
	RETURN 0

IF NAME:MASTER == "梅桐 天土"
	SIF FEVE26:3 == 2
		FEVE26:3 = 3

	;夜
	IF TIME == 1
		;あーちゃんの下着の柄をランダムで決定 「パンティ」の場合は4種類の中からランダムで
		FEVE26:2 = RAND:4
		FEVE26:3 = 0
	ENDIF
ENDIF

RETURN 0

;本体側と重複したイベント関数 主人が天土で確定した時のゲームスタート時に呼び出される
@EVENTFIRST
#LATER
;弦士購入不可フラグ
SIF NAME:MASTER == "梅桐 天土"
	CCB:28 = 1
;あーちゃんの下着はパンティでよろしく
SIF NAME:MASTER == "梅桐 天土"
	CSTR:MASTER:下半身下着 = パンティ

;キャラ購入時に呼ばれる
@MASTER_K26_CHARABUY, ARG
;士朗と紗矢はどちらかだけ
SIF CSVNAMEF(ARG) == "神崎 士朗"
	CCB:27 = 1
SIF CSVNAMEF(ARG) == "神崎 紗矢"
	CCB:4 = 1

RETURN 0

