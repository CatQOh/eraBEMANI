			CALL TWO_DIGIT, 30, "回"
			LOCAL:1 = RESULT
			PRINTL
			PRINT 「えーと、利率
			SELECTCASE ABS(LOCAL)
				CASE IS < 10
					IF LOCAL < 0
						PRINT -
					ENDIF
					PRINTFORM 0.{ABS(LOCAL)}\%
				CASE IS < 100
					PRINTFORM {LOCAL/10}\%
				CASEELSE
					PRINTFORM {LOCAL/100*10}\%
			ENDSELECT
			LOCAL:2 = COMP_INTEREST(LOCAL, LOCAL:1)
			;0.01単位に四捨五入
