;--------------------------------------------------
;パートナーに話しかけたときの口上
;※パートナー専用
;--------------------------------------------------
@TALK_PARTNER_K5000
#DIM DYNAMIC L_FLAG
L_FLAG = 0

PRINTL
PRINTL 「どうしたの？」
$TALK_LOOP
IF L_FLAG
	PRINTL [0] 特にない
ELSE
	PRINTL [0] なんでもない
ENDIF
PRINTL [7] 電卓を使いたい
PRINTL [8] 複利計算をしたい
PRINTL [9] 組み合わせを計算したい
DO
	INPUT
	SELECTCASE RESULT
		CASE 0
			PRINTL
			PRINTW 「わかった～(^▽^ *)」
			RETURN 0
		CASE 7
			PRINTL
			PRINTW 「電卓だね！準備ができたよ～( ´ ▽ ` )ﾉ」
			CALL CALCULATOR
			L_FLAG = 1
			PRINTL
			PRINTL 「おつかれさま～(*´∀｀*) 他には何かある？」
			GOTO TALK_LOOP
		CASE 8
			PRINTL
			PRINTL 「複利計算だね！利率は？」
			PRINTL [  1]0.1% [  2]0.2% [  3]0.3% [  4]0.4% [  5]0.5%
			PRINTL [  6]0.6% [  7]0.7% [  8]0.8% [  9]0.9%
			PRINTL [ 10]1%   [ 20]2%   [ 30]3%   [ 40]4%   [ 50]5%
			PRINTL [ 60]6%   [ 70]7%   [ 80]8%   [ 90]9%
			PRINTL [100]10%
			$RATE_LOOP
			INPUT
			SIF ABS(RESULT) >= 1000
				GOTO RATE_LOOP
			LOCAL = RESULT
			SELECTCASE ABS(RESULT)
				CASE 0
					PRINTL 「オッケー！0%ね！……って計算するまでもないよ∑(￣ﾛ￣)」
					GOTO RATE_LOOP
				CASE IS < 10
					PRINT 「オッケー！
					IF RESULT < 0
						PRINT -
					ENDIF
					PRINTFORML 0.{ABS(RESULT)}\%ね！これが何回？」
				CASE IS < 100
					PRINTFORML 「オッケー！{RESULT/10}\%ね！これが何回？」
				CASEELSE
					PRINTFORML 「オッケー！{RESULT/100*10}\%ね！これが何回？」
			ENDSELECT
			PRINTL
			PRINTL 回数を入力してください
			CALL TWO_DIGIT, 30, "回"
			LOCAL:1 = RESULT
			PRINTL
			PRINT 「えーと、利率
			SELECTCASE ABS(LOCAL)
				CASE IS < 10
					IF LOCAL < 0
						PRINT -
					ENDIF
					PRINTFORM 0.{ABS(LOCAL)}\%
				CASE IS < 100
					PRINTFORM {LOCAL/10}\%
				CASEELSE
					PRINTFORM {LOCAL/100*10}\%
			ENDSELECT
			LOCAL:2 = COMP_INTEREST(LOCAL, LOCAL:1)
			;0.01単位に四捨五入
			SIF LOCAL:2%10 >= 5
				LOCAL:2 += 10
			LOCAL:2 /= 10
			PRINTFORM の{LOCAL:1}回複利だと……大体{LOCAL:2/100}.
			SIF LOCAL:2 < 10
				PRINT 0
			PRINTFORMW {LOCAL:2%100}倍になるみたいだよ( ＞▽＜)」
			L_FLAG = 1
			PRINTL
			PRINTL 「他には何かある？」
			GOTO TALK_LOOP
		CASE 9
			PRINTL
			PRINTL 「組み合わせ計算だね！まず、全体の個数はいくら？」
			PRINTL
			CALL TWO_DIGIT, 61, "個"
			LOCAL = RESULT
			PRINTFORML 「じゃあ、{LOCAL}個のものからいくつを選ぶつもり？」
			PRINTL
			CALL TWO_DIGIT, 61, "個"
			LOCAL:1 = RESULT
			PRINTL
			PRINTFORML 「えーと、異なる{LOCAL}個のものから{LOCAL:1}個を選んだときの組み合わせは、
			PRINTFORML {BINOM(LOCAL, LOCAL:1)}通りになるみたいだよ(｀･ω･´)ゞ」
			L_FLAG = 1
			PRINTL
			PRINTL 「他には何かある？」
			GOTO TALK_LOOP
	ENDSELECT
LOOP LOOPRES(7, 8, 9)
