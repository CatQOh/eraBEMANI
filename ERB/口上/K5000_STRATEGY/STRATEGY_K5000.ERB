			CALL TWO_DIGIT, 61, "個"
			LOCAL:1 = RESULT
			PRINTL
			PRINTFORML 「えーと、異なる{LOCAL}個のものから{LOCAL:1}個を選んだときの組み合わせは、
			PRINTFORML {BINOM(LOCAL, LOCAL:1)}通りになるみたいだよ(｀･ω･´)ゞ」
			L_FLAG = 1
			PRINTL
			PRINTL 「他には何かある？」
			GOTO TALK_LOOP
	ENDSELECT
