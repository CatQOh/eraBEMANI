;@KOJO_MESSAGE_EVENT
;イベント時の口上、イベント開始時に出力します
;-------------------------------------------------
@KOJO_MESSAGE_EVENT, ARGS, ARG = -1
#DIMS DYNAMIC 地の文関数
#DIM DYNAMIC LTARGET

SIF ARG == -1
	ARG = TARGET
SIF ARG == -1
	RETURN

;口上呼び出す時のみ、対象をTARGETにする
LTARGET = TARGET
TARGET = ARG

;上記の仕様上JUMPは使えないので工夫
SIF FLAG:地の文表示
	地の文関数 = EVENT_MESSAGE_%ARGS%

