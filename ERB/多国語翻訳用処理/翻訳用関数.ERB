;曜日の英語関数
@DOWDISP(ARG)
#FUNCTIONS
;DOWはday of week(曜日)の略
;「1:日,2:月,3:火,4:水,5:木,6:金,0:土」を出力する
SELECTCASE ARG
	CASE 1
		RETURNF "Sun"
	CASE 2
		RETURNF "Mon"
	CASE 3
		RETURNF "Tue"
	CASE 4
		RETURNF "Wed"
	CASE 5
		RETURNF "Thu"
	CASE 6
		RETURNF "Fri"
	CASE 0
		RETURNF "Sat"
ENDSELECT

