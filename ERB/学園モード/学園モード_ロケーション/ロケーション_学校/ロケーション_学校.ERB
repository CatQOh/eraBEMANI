@ロケーション_保健室
CALL ロケーション_学校

@ロケーション_学校
#DIM DYNAMIC LRESULT

;日数表示
CALL CHECKDRAWLINE
PRINT □
CALL 日付表示
CALL ゲームモード表示
PRINTL 

PRINTFORML 　天気:%天気()% 気温:%DIV10(FLAG:気温)%℃ %月齢()%(月齢:%DIV100(月齢)%)

DRAWLINE
PRINTL 　[アイテム][を表示][したり]
DRAWLINE
PRINTFORML □時間:%ターン%
SELECTCASE ターン
	CASE "朝"
		;朝に学校に居ることはまず無い
	CASE "昼"
		PRINTL 　[200] - 校内を散策する
		PRINTL 　[201] - 校外を散策する
		PRINTL 　[202] - 午後の授業をサボる
		SIF CSTR:PLAYER:現在地 == "保健室"
			PRINTL [203] - 保健室でくつろぐ
	CASE "夜"
		;夜に学校に居ることもないんじゃないかなぁ
ENDSELECT
DRAWLINE
PRINTPLAIN 　SCHOOL MODE

DO
	INPUT
	LRESULT = RESULT
	SELECTCASE LRESULT
		CASE 200 TO 299
			SIF ターン != "昼"
				CONTINUE
			SELECTCASE LRESULT
				CASE 200
			ENDSELECT
			CALL TURNEND_学園
			BREAK
	ENDSELECT
LOOP 1

RESTART
