@ロケーション条件_Roots26
#DIM DYNAMIC LCOUNT
{
#DIMS DYNAMIC 条件用キャラ = 
"水城 セリカ",
"北見 エリカ",
"雛月 聖奈",
"雛月 理々奈"
}

;セリカ、エリカ、セム、リリスのいずれかの相性が120以上
FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SELECTCASE RELATION:GETCHARANAME(条件用キャラ:LCOUNT):(NO:PLAYER)
			CASE IS >= 120
				RETURN 1
		ENDSELECT
	ENDIF
NEXT

RETURN 0

@出現キャラ_Roots26
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;セムさんは必ず居る
		CASE "雛月 聖奈"
			出現率:LCOUNT = 100
		;セリカ、エリカ、リリスは50%の確率で居る
		CASE "水城 セリカ", "北見 エリカ", "雛月 理々奈"
			出現率:LCOUNT = 50
		;低確率で他のRoots26キャラが居る 25%
		CASE "ユーズ", "神崎 士朗", "孔雀", "神崎 慧靂", "菱宮 津軽", "刃雪 達磨", "梅桐 彩葉", "シア"
			出現率:LCOUNT = 25
	ENDSELECT
NEXT

	
