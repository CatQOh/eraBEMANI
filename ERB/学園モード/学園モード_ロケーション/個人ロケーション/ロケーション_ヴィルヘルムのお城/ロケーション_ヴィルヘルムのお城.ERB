@ロケーション条件_ヴィルヘルムのお城
#DIM DYNAMIC LCOUNT
{
#DIMS DYNAMIC 条件用キャラ = 
"ヴィルヘルム",
"ジャック"
}

;ヴィルヘルム、ジャックの相性が120以上
FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SELECTCASE RELATION:GETCHARANAME(条件用キャラ:LCOUNT):(NO:PLAYER)
			CASE IS >= 120
				RETURN 1
		ENDSELECT
	ENDIF
NEXT

RETURN 0

@出現キャラ_ヴィルヘルムのお城
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;ヴィルヘルムとジャックは必ず居る
		CASE "ヴィルヘルム", "ジャック"
			出現率:LCOUNT = 100
		;ラジェたちは学校に行ってなければ50%の確率で居る
		CASE "ラジェ", "ガレト", "ヴァロ", "タルタ"
			出現率:LCOUNT = 50
		;パラド、トリフォリ、ガユカ、サタヌ、マモニスが極稀に居る 10%
		CASE "パラド", "ガレト", "ガユカ", "サタヌ", "マモニス"
			出現率:LCOUNT = 10
	ENDSELECT
NEXT
