@ロケーション条件_星龍華
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"ナイア",
"シア"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SIF 好感度合計(GETCHARANAME(条件用キャラ:LCOUNT)) >= 100
			RETURN GETCHARANAME(条件用キャラ:LCOUNT)
	ENDIF
NEXT

RETURN 0

@バイト条件_星龍華
バイト要項 = 昼、夜の時間帯で募集中
SIF GROUPMATCH(ターン, "昼", "夜")
	バイト可能 = 1
;ロケーション解禁済みで可能
SIF FINDELEMENTF(解禁済みロケーション, "星龍華") >= 0
	RETURN GETCHARANAME("ナイア")

RETURN 0

@出現キャラ_星龍華
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;ナイアとシアが確定
		CASE "ナイア", "シア"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 100
		;高確率で冬夜も居る
		CASE "菱宮 春一"
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 50
		;チャイナなキャラたちなど
		{
		CASE "ヒメル", "虎 大和", "鳳凰 鈴火", "おいわちゃん", "椿", "福龍", "パンデス", "ハラ＝ヘッタ",
			 "サン", "鈴花", "大牙", "アリス・イップ", "ヤンヤン", "グリム・ヤンヤン"
		}
			SIF 出現率:LCOUNT >= 0
				出現率:LCOUNT = 30
		;休日や放課後に集団で来ているグループとかがある
		CASEELSE
			IF RANDPER(2) && グループ数 < 10
				;相性の良いキャラと2～4人で行動している
				CALL グループキャラ選出, LCOUNT, "相性"
				;2人以上揃わなかったら無かったことにする
				SIF RESULT:0 == 0
					CONTINUE
				;2～4人のグループ
				集団行動:グループ数:0 = LCOUNT
				集団行動:グループ数:1 = RESULT:0
				IF RANDPER(30)
					集団行動:グループ数:2 = RESULT:1
					SIF RANDPER(30)
						集団行動:グループ数:3 = RESULT:2
				ENDIF
				グループ数++
			ENDIF
	ENDSELECT
NEXT

	
