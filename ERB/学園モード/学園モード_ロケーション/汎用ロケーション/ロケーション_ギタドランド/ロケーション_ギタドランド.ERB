@ロケーション条件_ギタドランド
;汎用ロケーション 条件無し
RETURN 1

@出現キャラ_ギタドランド
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;ギタドラキャラが中確率で居る
	SELECTCASE CHARANAMEF(LCOUNT)
		;50%
		{
		CASE "正論", "コスモ", "プラム", "パフェ", "トルテ", "ローズ",
			 "心音", "陽夏", "涼", "オトベア", "たまき", "璃音", "響香", "弦"
		}
			出現率:LCOUNT = 50
		;ボーナスキャラ 10%
		CASE "ミミ", "ニャミ", "HOT.D", 
			出現率:LCOUNT = 10
		;日曜なら集団で来ているグループとかがある
		CASEELSE
			IF DOW(FLAG:曜日) == "日" && CSTR:LCOUNT:在校 != "" && RANDPER(3) && グループ数 < 10
				;相性の良いキャラと3人で行動している
				CALL クラスメイト選出, LCOUNT, "相性"
				;2人以上揃わなかったら無かったことにする
				SIF RESULT:0 == 0
					CONTINUE
				集団行動:グループ数:0 = LCOUNT
				集団行動:グループ数:1 = RESULT:0
				集団行動:グループ数:2 = RESULT:1
				グループ数++
			ENDIF
	ENDSELECT
NEXT
