@ロケーション条件_ドッグラン
#DIM DYNAMIC LCOUNT

;無条件
RETURN 1

@出現キャラ_ドッグラン
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;犬がいる
		{
		CASE "茶倉", "レーヴァスレーター", "大犬のお姉さん", "牡丹", "雪翔くん",
			 "アッシュ", "エス・エイト・タロウ", "おコン", "HOT.D", "セルゲイ",
			 "ホワイトメリー", "イナリ", "山吹", "ワン", "ポチコ", "ヴォルフガング",
		}
			出現率:LCOUNT = 30
	ENDSELECT
NEXT

	


