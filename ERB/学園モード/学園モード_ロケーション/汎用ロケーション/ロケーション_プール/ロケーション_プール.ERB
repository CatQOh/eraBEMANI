@ロケーション条件_プール
;汎用ロケーション
;主に夏季期間中の朝、昼のみ
SELECTCASE MONTH
	CASE 7 TO 9
		SELECTCASE ターン
			CASE "朝", "昼"
				RETURN 1
		ENDSELECT
ENDSELECT

RETURN 0

@出現キャラ_プール
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC グループ数

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;水が好きそうなキャラたちがいる
		{
		CASE "レーヴァスレーター", "パール", "Aegis", "マーメイドガール", "ジュリア", 
			 "テトラ", "ベンベン", "クアトロ", "ティア", "グリム・ミュー"
		}
			出現率:LCOUNT = 50
		;集団で来る人が多い
		CASEELSE
			IF CSTR:LCOUNT:在校 != "" && RANDPER(5) && グループ数 < 10
				;相性の良いキャラと3人以上で行動している
				CALL クラスメイト選出, LCOUNT, "相性"
				;2人以上揃わなかったら無かったことにする
				SIF RESULT:0 == 0
					CONTINUE
				集団行動:グループ数:0 = LCOUNT
				集団行動:グループ数:1 = RESULT:0
				集団行動:グループ数:2 = RESULT:1
				SIF RANDPER(30)
					集団行動:グループ数:3 = RESULT:2
				グループ数++
			ENDIF
	ENDSELECT
NEXT
