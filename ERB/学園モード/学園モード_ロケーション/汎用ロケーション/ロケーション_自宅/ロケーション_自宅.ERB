@ロケーション_自宅
#DIM DYNAMIC LRESULT
#DIM DYNAMIC 滞在者, 2

;日数表示
CALL CHECKDRAWLINE
PRINT □
CALL 日付表示
CALL ゲームモード表示
PRINTL 

PRINTFORML 　天気:%天気()% 気温:%DIV10(FLAG:気温)%℃ %月齢()%(月齢:%DIV100(月齢)%)

DRAWLINE
PRINTL 　[アイテム][を表示][したり]
DRAWLINE
PRINTFORML □時間:%ターン%
SELECTCASE ターン
	CASE "朝"
		SELECTCASE DOW(FLAG:曜日)
			CASE "土", "日"
				PRINTL 　[100] - 遊びに行く
				PRINTL 　[101] - 友人と遊びに行く
				PRINTL 　[102] - 家に友人を呼ぶ
				PRINTL 　[103] - 家で過ごす
			CASEELSE
				PRINTL 　[100] - 学校へ行く 
				PRINTL 　[101] - クラスメイトと一緒に登校する
				PRINTL 　[102] - 学校の保健室へ行く
				PRINTL 　[103] - 他の学校に行く
				PRINTL 　[104] - 何もせずサボる
		ENDSELECT
	CASE "昼"
		滞在者 = FINDCHARA(CSTR:現在地, @"%CALLNAME:PLAYER%の家", 1)
		IF 滞在者 > 0
			SELECTCASE CSTR:滞在者:目的
				CASE "遊び"
					PRINTFORML 　[200] - %CALLNAME:滞在者%と家でくつろぐ
					PRINTFORML 　[201] - %CALLNAME:滞在者%とアダルトサイトを見る
					PRINTFORML 　[202] - %CALLNAME:滞在者%に思い切った提案をする
					PRINTFORML 　[203] - %CALLNAME:滞在者%と遊びに行く
				CASE "看病"
					PRINTFORML 　[200] - %CALLNAME:滞在者%に面倒を見てもらう
					PRINTFORML 　[201] - %CALLNAME:滞在者%と遊びに行く
					PRINTFORML 　[202] - %CALLNAME:滞在者%に過度に甘えてみる
				CASE "セックス"
					PRINTFORML 　[200] - %CALLNAME:滞在者%と（性的に）遊ぶ
					PRINTFORML 　[201] - %CALLNAME:滞在者%と（性的な）遊びに行く
					PRINTFORML 　[202] - %CALLNAME:滞在者%と健全に過ごす
			ENDSELECT
		ELSE
			PRINTL 　[200] - 遊びに行く
			PRINTL 　[201] - 友人と遊びに行く
			PRINTL 　[202] - 家に友人を呼ぶ
			PRINTL 　[203] - 家で過ごす
		ENDIF
	CASE "夜"
		PRINTL 　[300] - 遊びに行く
		PRINTL 　[301] - 寝る
ENDSELECT
PRINTL 　[500] - データベース
DRAWLINE
PRINTPLAIN 　SCHOOL MODE

DO
	INPUT
	LRESULT = RESULT
	SELECTCASE LRESULT
		CASE 100 TO 199
			SIF ターン != "朝"
				CONTINUE
			SELECTCASE LRESULT
				CASE 100
					CALL 朝_学校へ行く
				CASE 101
					CALL 朝_クラスメイトと一緒に登校する
				CASE 102
					CALL 朝_学校の保健室に行く
				CASE 103
					CALL 朝_他の学校に行く
				CASE 104
					CALL 朝_何もせずサボる
				CASEELSE
					CONTINUE
			ENDSELECT
			CALL TURNEND_学園
			BREAK
		CASE 200 TO 299
			SIF ターン != "昼"
				CONTINUE
			IF 滞在者 > 0
				SELECTCASE CSTR:滞在者:目的
					CASE "遊び"
						SELECTCASE LRESULT
							CASE 200
							CASE 201
							CASE 202
							CASE 203
						ENDSELECT
				ENDSELECT
			ELSE
				SELECTCASE LRESULT
					CASE 200
						CALL ロケーション選択
					CASE 201
					CASE 202
					CASE 203
				ENDSELECT
			ENDIF
			CALL TURNEND_学園
			BREAK
		CASE 300 TO 301
			SIF ターン != "夜"
				CONTINUE
			SELECTCASE LRESULT 
				CASE 300
					CALL ロケーション選択
				CASE 301
			ENDSELECT
			CALL TURNEND_学園
			BREAK
		CASE 500
			CALL 学園データベース
			RESTART
	ENDSELECT
LOOP 1

RESTART

@TURNEND_学園

;ターンを進める
SELECTCASE ターン
	CASE "朝"
		PRINTW 昼になった……
		ターン = 昼
	CASE "昼"
		PRINTW 夜になった……
		ターン = 夜
	CASE "夜"
		PRINTW 一日が終わった……
		ターン = 朝
		DAY++
		CALL NEXTDAY
ENDSELECT

CALL SYSTEM_AUTOSAVE

RETURN

