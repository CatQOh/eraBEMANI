@ロケーション条件_ミラクル☆4
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"ウーノ",
"ツースト",
"若さん",
"フォース"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SELECTCASE RELATION:GETCHARANAME(条件用キャラ:LCOUNT):(NO:PLAYER)
			;相性120%以上が条件
			CASE IS >= 120
				RETURN 1
		ENDSELECT
	ENDIF
NEXT

RETURN 0

@出現キャラ_ミラクル☆4の事務所
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		CASE "ウーノ", "ツースト", "若さん", "フォース"
			出現率:LCOUNT = 100
	ENDSELECT
NEXT

	


