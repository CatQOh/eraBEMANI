@ロケーション条件_北極
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"おゆき",
"スノーフェアリー",
"氷雪ちゃん",
"雪翔くん",
"しおん",
"オーリー"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SELECTCASE RELATION:GETCHARANAME(条件用キャラ:LCOUNT):(NO:PLAYER)
			;相性120%以上が条件
			CASE IS >= 120
				RETURN 1
		ENDSELECT
	ENDIF
NEXT

RETURN 0

@出現キャラ_北極
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	;出現率:LCOUNT = {出現率(100分率)} で指定できる
	SELECTCASE CHARANAMEF(LCOUNT)
		;氷属性っぽいキャラたち
		{
		CASE "おゆき", "スノーフェアリー", "氷雪ちゃん", "雪翔くん", "ミミ", "ニャミ",
			 "つらら", "エッダ", "しおん", "氷海", "オーリー", "パステルくん", "アシディア",
			 "フローレス", "クーザー"
		}
			出現率:LCOUNT = 30
	ENDSELECT
NEXT

	


