@ロケーション条件_地獄超特急ステーション
#DIM DYNAMIC LCOUNT
;出現条件のキャラをフルネーム(NAME)で入れる
{
#DIMS DYNAMIC 条件用キャラ = 
"ラジェ",
"タルタ",
"ガレト",
"ヴァロ"
}

FOR LCOUNT, 0, VARSIZE("条件用キャラ")
	IF GETCHARANAME(条件用キャラ:LCOUNT) > 0
		SELECTCASE RELATION:GETCHARANAME(条件用キャラ:LCOUNT):(NO:PLAYER)
			;相性120%以上が条件
			CASE IS >= 120
				RETURN 1
		ENDSELECT
	ENDIF
NEXT

RETURN 0

@出現キャラ_地獄超特急ステーション
#DIM DYNAMIC LCOUNT

;NOではなく登録番号で指定する

FOR LCOUNT, 1, CHARANUM
	;学校などに行ってるキャラは居ない
	SIF CSTR:LCOUNT:現在地 != ""
		CONTINUE
	SELECTCASE CHARANAMEF(LCOUNT)
		;お菓子組は確定で居る
		CASE "ラジェ", "タルタ", "ガレト", "ヴァロ"
			出現率:LCOUNT = 100
		;ダイクロ組と撮り鉄がたまにいる
		CASE "ものか", "エクス", "ねむ", "青のレピカ"
			出現率:LCOUNT = 30
	ENDSELECT
NEXT

	


