@TURNEND_医務室
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC LCOUNT2
#DIM DYNAMIC 男性医師
#DIM DYNAMIC 女性医師
#DIM DYNAMIC 医師魅力
#DIM DYNAMIC 利用確率
#DIM DYNAMIC 利用人数
#DIM DYNAMIC 調合知識持ち
#DIM DYNAMIC 利用確率補正
#DIM DYNAMIC モチベ計算用
#DIM DYNAMIC 世話好き人数

医務室体力補正 = 0
医務室気力補正 = 0
医務室ストレス補正 = 0

;ターン終了時の口上呼び出し
FOR LCOUNT, 0, CHARANUM
	SIF CSTR:LCOUNT:配属 == "医務室" && !CFLAG:LCOUNT:口上非表示
		TRYCALLFORM TURNEND_医務室_K{NO:LCOUNT}
NEXT

;以下の処理は日付終了時のみ
SIF TIME == 0
	RETURN

;配属中のキャラを調べる
FOR LCOUNT, 0, CHARANUM
	IF CSTR:LCOUNT:配属 == "医務室"
		IF CFLAG:LCOUNT:配属完了
			医務室体力補正 += 30
			医務室気力補正 += 30
			医務室ストレス補正++
			;奉仕精神を見る
			IF 統率者("調理室") && !TALENT:LCOUNT:統率
				医務室体力補正 += LIMIT(ABL:LCOUNT:奉仕精神+1, 0, 10)/2*10
				医務室気力補正 += LIMIT(ABL:LCOUNT:奉仕精神+1, 0, 10)/2*10
				医務室ストレス補正 += LIMIT(ABL:LCOUNT:奉仕精神+1, 0, 10)/3
			ELSE
				医務室体力補正 += LIMIT(ABL:LCOUNT:奉仕精神, 0, 10)/2*10
				医務室気力補正 += LIMIT(ABL:LCOUNT:奉仕精神, 0, 10)/2*10
				医務室ストレス補正 += LIMIT(ABL:LCOUNT:奉仕精神, 0, 10)/3
			ENDIF
			SELECTCASE SEX(LCOUNT)
				CASE 1
					男性医師++
				CASE 2
					女性医師++
			ENDSELECT
			;医師の素質を見る
			FOR LCOUNT2, 0, VARSIZE("TALENT")
				SIF !TALENT:LCOUNT:LCOUNT2
					CONTINUE
				SELECTCASE TALENTNAME:LCOUNT2
					CASE "生意気", "倒錯的"
						医務室ストレス補正--
					CASE "気丈", "冷静", "自制心"
						医務室体力補正 += 10
						医務室気力補正 += 10
					CASE "衝動的"
						医務室体力補正 -= 10
						医務室気力補正 -= 10
					CASE "プライド高い"
						医務室体力補正 += 20
						医務室気力補正 += 20
						医務室ストレス補正--
					CASE "ハイテンション", "解放", "鼓舞"
						医務室気力補正 += 10
						医務室ストレス補正++
					;サボり魔は25%の確率で上記の基礎補正を打ち消す
					CASE "サボり魔"
						IF RAND:4 == 0
							医務室体力補正 -= 50
							医務室気力補正 -= 50
							医務室ストレス補正--
						ENDIF
					CASE "無関心"
						医務室体力補正 += 10
					CASE "楽観的"
						医務室体力補正 -= 10
						医務室気力補正 += 10
						医務室ストレス補正++
					CASE "悲観的"
						医務室体力補正 += 20
						医務室気力補正 -= 10
						医務室ストレス補正--
					CASE "針さばき", "潔癖症"
						医務室体力補正 += 20
						医務室気力補正 += 20
					CASE "汚れ無視"
						医務室体力補正 -= 20
						医務室気力補正 -= 20
					CASE "魅惑", "魅力", "人気"
						医務室気力補正 += 10
						利用確率補正 += 3
					CASE "謎の魅力"
						医務室気力補正 += 20
						医務室ストレス補正++
						利用確率補正 += 5
					CASE "治療"
						医務室体力補正 += 50
						医務室気力補正 += 50
						医務室ストレス補正 += 2
						利用確率補正 += 10
					CASE "母性"
						医務室体力補正 += 10
						医務室気力補正 += 10
						医務室ストレス補正++
						利用確率補正 += 3
					CASE "調合知識"
						調合知識持ち++
					CASE "世話好き"
						医務室体力補正 += 10
						医務室気力補正 += 20
						医務室ストレス補正++
						利用確率補正 += 3
						世話好き人数++
				ENDSELECT
			NEXT
			
			;モチベ計算用にもう一度見る
			モチベ計算用 = 0
			FOR LCOUNT2, 0, VARSIZE("TALENT")
				SIF !TALENT:LCOUNT:LCOUNT2
					CONTINUE
				SELECTCASE TALENTNAME:LCOUNT2
					CASE "プライド高い", "冷静", "世話好き", "自制心", "楽観的", "調合知識", "潔癖症", "サド", "母性", "治療"
						モチベ計算用++
					CASE "衝動的", "弱気", "無関心", "悲観的", "痛みに弱い", "男嫌い", "女嫌い", "同族嫌悪"
						モチベ計算用--
				ENDSELECT
			NEXT

			LOCAL = CFLAG:LCOUNT:モチベーション+モチベ計算用+世話好き人数+(ABL:LCOUNT:奉仕精神/3)
			SIF TALENT:LCOUNT:世話好き
				LOCAL -= 世話好き人数
			;配属先のキャラの相性で計算
			LOCAL += 相性モチベ補正(LCOUNT)
			CFLAG:LCOUNT:モチベーション = LIMIT(LOCAL, 1, 100)

			IF ABL:LCOUNT:奉仕精神 >= 5
				医務室体力補正 += 20
				医務室気力補正 += 20
				医務室ストレス補正++
			ENDIF
			;実務経験加算
			EXP:LCOUNT:実務経験 += 2
			;習得早ければ+1
			SIF TALENT:LCOUNT:習得早い
				EXP:LCOUNT:実務経験++
		ENDIF
		;配属完了にする
		CFLAG:LCOUNT:配属完了 = 1
	ENDIF
NEXT

医務室体力補正 = MAX(医務室体力補正, 0)
医務室気力補正 = MAX(医務室気力補正, 0)
医務室ストレス補正 = MAX(医務室ストレス補正, 0)

;医薬品が足りてない場合はそれぞれ/10
IF FLAG:医薬品 <= 0
	医務室体力補正 /= 10
	医務室気力補正 /= 10
	医務室ストレス補正 /= 10
ENDIF

;医務室利用履歴の変数を後ろに詰める 2次元配列ではARRAYSHIFTできないので力技
FOR LCOUNT, 3, -1, -1
	FOR LCOUNT2, 0, 1000
		医務室利用履歴:(LCOUNT+1):LCOUNT2 = %医務室利用履歴:LCOUNT:LCOUNT2%
		SIF LCOUNT == 0
			医務室利用履歴:LCOUNT:LCOUNT2 = 
	NEXT
NEXT

;利用者の判定
FOR LCOUNT, 0, CHARANUM
	;MASTERは除外
	SIF LCOUNT == MASTER
		CONTINUE
	;配属中の医師も除外
	SIF CSTR:LCOUNT:配属 == "医務室"
		CONTINUE
	;残り体力と気力とストレス値から確率を割り出す
	;各値それぞれ最大100%(ストレス値は99%)で、合計を利用確率にする
	利用確率 = 100-(100*BASE:LCOUNT:体力)/MAXBASE:LCOUNT:体力
	利用確率 += 100-(100*BASE:LCOUNT:気力)/MAXBASE:LCOUNT:気力
	利用確率 += CFLAG:LCOUNT:ストレス値/10
	
	;利用確率があるなら素質での補正
	IF 利用確率
		利用確率 += 利用確率補正
		FOR LCOUNT2, 0, VARSIZE("TALENT")
			SIF !TALENT:LCOUNT:LCOUNT2
				CONTINUE
			SELECTCASE TALENTNAME:LCOUNT2
				CASE "気丈", "プライド高い", "強気", "痛みに強い"
					利用確率 -= 5
				CASE "生意気", "反抗的", "楽観的", "恥じらい", "薬毒耐性", "マゾ", "戦士"
					利用確率 -= 3
				CASE "臆病", "素直", "冷静", "悲観的", "寂しがり屋", "中毒しやすい", "暑さに弱い", "寒さに弱い"
					利用確率 += 3
				CASE "弱気", "痛みに弱い", "治療", "妊娠", "育児中"
					利用確率 += 5
			ENDSELECT
		NEXT
		;苦痛刻印*3
		利用確率 += MARK:LCOUNT:苦痛刻印*3
		;二日酔い +5
		SIF CFLAG:LCOUNT:二日酔い
			利用確率 += 5
	ENDIF
	;0以下だったら0に合わせる
	利用確率 = MAX(0, 利用確率)
	
	;男好き、女好きは元気でも来訪して薬を使いやがる
	SIF TALENT:LCOUNT:男好き
		利用確率 += 男性医師*10
	SIF TALENT:LCOUNT:女好き
		利用確率 += 女性医師*10
	
	;利用確率を0～100に合わせる
	利用確率 = LIMIT(利用確率, 0, 100)
	
	;利用するなら利用フラグを立てる
	IF 利用確率 >= RAND(1, 101)
		CFLAG:LCOUNT:医務室利用 = 1
		;利用履歴変数に名前を入れる
		医務室利用履歴:0:利用人数 = %NAME:LCOUNT%
		利用人数++
	ENDIF
NEXT

;最後に利用者の割合に応じて医薬品を減らす 1ターンで最大10
;調合知識持ちだけ医薬品の消費を抑える
SIF 利用人数
	FLAG:医薬品 -= MAX((利用人数*10)/CHARANUM-調合知識持ち, 1)

FLAG:医薬品 = LIMIT(FLAG:医薬品, 0, 100)

PRINTFORML {利用人数}人が医務室を利用しました

RETURN

@医務室利用者
#DIM DYNAMIC 年
#DIM DYNAMIC 月
#DIM DYNAMIC 日
