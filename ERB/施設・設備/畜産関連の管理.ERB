			CALL SETMIN, 馬の状態, 60
		CASE IS < 20
			CALL SETMIN, 馬の状態, 70
		CASE IS < 30
			CALL SETMIN, 馬の状態, 80
		CASE IS < 40
			CALL SETMIN, 馬の状態, 90
		CASEELSE
			CALL SETMIN, 馬の状態, 100
	ENDSELECT
