#DIM REF 調理器具ボーナス

ホット = 0
コールド = 0
脱水 = 0
水分 = 0
酒あり = 0
鎮静 = 0
滋養強壮 = 0
愛情 = 0
狂気度計算用 = 0
酔い覚まし = 0
カフェイン = 0
調理器具ボーナス = 0

ARRAYCOPY ARGS, "献立"

FOR LCOUNT, 0, 9
	SIF 献立:LCOUNT == ""
		CONTINUE
	SELECTCASE 料理分類:FINDELEMENT(料理メニュー, 献立:LCOUNT)
		CASE "汁物", "飲み物"
			水分 = 1
	ENDSELECT
	CALLF レシピ判定(献立:LCOUNT)
	FOR LCOUNT2, 0, 3
		SELECTCASE 料理効果:LCOUNT2
			CASE "ALC"
				酒あり = 1
			CASE IS != ""
				SPLIT 料理効果:LCOUNT2, "/", 分割用
				SELECTCASE 分割用
					CASE "モチベ"
						モチベ計算用 += TOINT(分割用:1)
					CASE "ホット"
						ホット += TOINT(分割用:1)
					CASE "コールド"
						コールド += TOINT(分割用:1)
					CASE "鎮静"
						鎮静 += TOINT(分割用:1)
					CASE "脱水"
						脱水 += TOINT(分割用:1)
					CASE "滋養強壮"
						滋養強壮 += TOINT(分割用:1)
					CASE "愛情"
						愛情 += TOINT(分割用:1)
					CASE "狂気"
						狂気度計算用 += TOINT(分割用:1)
					CASE "酔い覚まし"
						酔い覚まし += TOINT(分割用:1)
					CASE "カフェイン"
						カフェイン += TOINT(分割用:1)
				ENDSELECT
		ENDSELECT
	NEXT
	;対応する調理器具を所持していればモチベ上昇
	;表示用に設定するのみで実際の効果は[モチベ計算用]に加算してる
	SELECTCASE 調理器具
		CASE "窯"
			IF ITEM:フラッシュドール窯
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "醸造設備"
			IF ITEM:醸造蒸留設備
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "製麺機"
			IF ITEM:高級製麺機『麺です』
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "コーヒーメーカー"
			IF ITEM:ドリップマシーンエボリューション
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "フライヤー"
			IF ITEM:レインボーフライヤー
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "フライパン"
			IF ITEM:フライパン・アバーブ
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
		CASE "鍋"
			IF ITEM:大地の土鍋
				モチベ計算用 += 3
				調理器具ボーナス += 3
			ENDIF
	ENDSELECT
NEXT

