	SIF !同行者:LCOUNT
		CONTINUE
	IF 乱交参加(同行者:LCOUNT)
		参加人数++
		参加者:(参加人数) = 同行者:LCOUNT
		SIF PENIS(同行者:LCOUNT)
			竿あり++
		SIF (VAGINA(参加者:LCOUNT) && !処女膜(参加者:LCOUNT)) || ABL:(参加者:LCOUNT):Ａ感覚 >= 2
			穴あり++
		SELECTCASE SEX(同行者:LCOUNT)
			CASE 1
				男性数++
			CASE 2
				女性数++
		ENDSELECT
	ENDIF
NEXT

