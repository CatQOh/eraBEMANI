"薔薇",
"嘆きの樹",
"",
"苗",
"大根",
"玉ねぎ",
"さつまいも",
"長ねぎ",
"ごぼう",
"ほうれん草",
"スイカ",
"メロン",
"人参",
"とうもろこし",
"レタス",
"白菜",
"かぼちゃ",
"キャベツ",
"じゃがいも",
"",
"稲",
"トマト",
"きゅうり",
