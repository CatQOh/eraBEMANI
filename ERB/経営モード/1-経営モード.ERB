@STRATEGY_INCOME
#DIM DYNAMIC LCOUNT
;休業日に営業開始して収入入るのを防ぐため
IF INRANGE(FLAG:ゲーセン営業中, 1, DAY-1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "ゲームセンター" || CSTR:LCOUNT:配属 == "ゲーセン売春"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_GC
	CALL INCOME_GC_BR
ENDIF
CALL CHECKDRAWLINEW

IF INRANGE(FLAG:娼館営業中, 1, DAY-1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "娼館"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_BR
ENDIF
CALL CHECKDRAWLINEW

IF INRANGE(FLAG:飲食店営業中, 1, DAY-1)
	FOR LCOUNT, 0, CHARANUM
		SIF CSTR:LCOUNT:配属 == "飲食店"
			CFLAG:LCOUNT:休憩 = 0
	NEXT
	CALL INCOME_飲食店
ENDIF
CALL CHECKDRAWLINEW

CALL INCOME_博物館
CALL CHECKDRAWLINEW

RETURN 0

