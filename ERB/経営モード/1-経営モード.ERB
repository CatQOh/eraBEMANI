PRINTL 　[100] 各モードの説明

DO
	INPUT
	SELECTCASE RESULT
		CASE 0
			RETURN
		CASE 1
			CALL プレイ称号計算, "ゲーセン経営"
			CALL STRATEGY_GC
			RESTART
		CASE 2
			CALL プレイ称号計算, "娼館経営"
			CALL STRATEGY_BROTHEL
			RESTART
		;CASE 3
		;	CALL STRATEGY_DEVELOP
		;	RETURN 0
		CASE 4
			CALL プレイ称号計算, "芸プロ運営"
			CALL STRATEGY_IDOL
			;返り値が1ならTURNENDする
			IF RESULT == 1
				BEGIN TURNEND
				RETURN
			ENDIF
			RESTART
		CASE 5
			CALL 飲食店経営
			RESTART
		CASE 6
			IF ITEM:博物館 && STSMOD
				CALL プレイ称号計算, "芸プロ運営"
				CALL 博物館
				;返り値が1ならTURNENDする
				IF RESULT == 1
					BEGIN TURNEND
					RETURN
				ENDIF
			ENDIF
			RESTART
		CASE 7
			SIF !ITEM:事業開発オフィス
				CONTINUE
			CALL 出版社経営
			RESTART
		CASE 100
			CALL STRATEGY_TUTORIAL
			RESTART
	ENDSELECT
LOOP 1

