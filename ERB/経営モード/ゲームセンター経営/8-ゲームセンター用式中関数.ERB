			CASE "音ゲーマー"
				基準値 += 3
			CASE "バストサイズ"
				SELECTCASE TALENT:LCOUNT:バストサイズ
					CASE 4, 5
						基準値 += 1
					CASE 6
						基準値 += 2
				ENDSELECT
		ENDSELECT
	NEXT
	SIF CFLAG:LCOUNT:ゲーセン店長
		基準値 *= 2
	SIF 基準値 < 0
		基準値 = 0
	合計値 += 基準値
