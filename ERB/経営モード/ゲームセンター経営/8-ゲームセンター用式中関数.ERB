@名声計算（筐体）, ARG
#FUNCTION
#DIM DYNAMIC 合計値
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 加算値

FOR LCOUNT, 1100, 1500
	加算値 = 0
	SIF !設置筐体:ARG:LCOUNT
		CONTINUE
	SELECTCASE ITEMNAME:LCOUNT
		CASE "beatmaniaIIDX", "beatmaniaIIDX（LM）", "pop'n music"
			加算値 = 2
		CASE "Dance Dance Revolution", "Dance Dance Revolution（白）", "Dance Dance Revolution（金）", "GITADORA", "Dance Evolution", "クイズマジックアカデミー"
			加算値 = 3
		CASE "jubeat", "REFLEC BEAT", "SOUND VOLTEX", "maimai", "CHUNITHM"
			加算値 = 1
		CASE "ビデオポーカー", "ポーカーソリティア", "モンテカルロ", "ブラックジャック"
			加算値 = 1
	ENDSELECT
	合計値 += 設置筐体:ARG:LCOUNT*加算値
NEXT

RETURNF 合計値

@階層収入期待値, 階層
#FUNCTION
#DIM DYNAMIC 階層
#DIM DYNAMIC LCOUNT, 2
#DIM DYNAMIC 計算用名声
#DIM DYNAMIC 計算用評判
#DIM DYNAMIC 階層筐体計算, 400
#DIM DYNAMIC X座標
#DIM DYNAMIC Y座標
#DIM DYNAMIC 筐体NO
#DIM DYNAMIC 加算値
#DIM DYNAMIC 合計額

;オブジェクトナンバーはそれぞれ上下左右の向きで4つ分ある
;それと1からカウントしてるので式は (オブジェクトナンバー-1)/4
FOR X座標, 0, 10+GC広さ
	FOR Y座標, 0, 10+GC広さ
		IF GCオブジェクト:階層:X座標:Y座標
			筐体NO = (GCオブジェクト:階層:X座標:Y座標-1)/4
			階層筐体計算:筐体NO++
		ENDIF
	NEXT
NEXT

計算用名声 = GC名声
計算用評判 = GC評判

;天候
SELECTCASE FLAG:天気
	;晴れと曇り 特に問題ない
	CASE 1, 2
	;雨と雪 評判と名声が2割減で計算される
	CASE 3, 6
		TIMES 計算用名声 , 0.80
		TIMES 計算用評判 , 0.80
	;大雨と雷雨 評判と名声が4割減だが、「台風だからゲーセン空いてるやろｗ」の法則でたまに2割増になる
	CASE 4, 5
		SELECTCASE RAND:10
			CASE 0
				TIMES 計算用名声 , 1.20
				TIMES 計算用評判 , 1.20
			CASEELSE
				TIMES 計算用名声 , 0.60
				TIMES 計算用評判 , 0.60
		ENDSELECT
	;大雪 交通がマヒするので半減する
	CASE 7
		TIMES 計算用名声 , 0.50
		TIMES 計算用評判 , 0.50
ENDSELECT

FOR LCOUNT, 0, 400
	SIF !階層筐体計算:LCOUNT
		CONTINUE
	SELECTCASE ITEMNAME:(LCOUNT+1100)
		CASE "beatmaniaIIDX", "beatmaniaIIDX（LM）"
			;IIDXは最高で名声+20000 メンテでだいぶ左右される
			;メンテ次第で名声×5の収入になるので最終的には一番の収入源になる……はず
			加算値 = (計算用名声/20+200)*GCメンテ
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "pop'n music"
			;ポップンは最高で評判+10000 こっちはIIDXほどメンテの影響は大きくない
			加算値 = 計算用評判+2000+(GCメンテ*80)
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "Dance Dance Revolution", "Dance Dance Revolution（白）", "Dance Dance Revolution（金）"
			;DDRは立地の差が大きい メンテ次第で最低2000、最高28000
			加算値 = GC物件*2000+(GC物件*20*GCメンテ)
			加算値 += GC物件*(計算用名声/10)+GC物件*(計算用評判/10)
			;待ち椅子ボーナスが大きい
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*200
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*50
		CASE "GITADORA"
			;ギタドラは評判、名声、メンテの総合型 最高で名声+評判がそのまま収入になる ギタとドラで2倍
			;逆に言えば評判も名声もメンテもダメだとインカムが悲惨なことになる
			加算値 = ((計算用評判/100+1)*GCメンテ+(計算用名声/100+1)*GCメンテ)*2
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "jubeat"
			;指は名声に左右され最高で3000 名声50000で最高額に達し、メンテスキルの必要性は皆無 一番安定感ある
			加算値 = 500
			IF 計算用名声 >= 50000
				加算値 += 2500
			ELSE
				加算値 += 計算用名声/20
			ENDIF
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "REFLEC BEAT"
			;リフレクは指より少しシビアだが最高額が5000 最高額には名声100000必要
			IF 計算用名声 >= 100000
				加算値 = 2500+(GCメンテ*25)
			ELSE
				加算値 = 計算用名声/1000*25+(GCメンテ*25)
			ENDIF
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "SOUND VOLTEX"
			;ボルテは評判寄り メンテも必要だが名声はあまり関係無い 最高7000
			加算値 += GCメンテ*20
			IF 計算用評判+計算用名声/100 >= 50000
				加算値 = 5000
			ELSE
				加算値 = (計算用評判+計算用名声/100)/10
			ENDIF
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "Dance Evolution"
			;ダンエボは名声と立地次第で評判とメンテの必要性は皆無 最大で1400+名声×1.4
			加算値 = (1000+計算用名声/5)*GC物件
			;DDRほどではないが待ち椅子ボーナスが大きい
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*100
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*30
		CASE "クイズマジックアカデミー"
			;マジアカはそこまで収入には貢献しないが、名声上昇量が割と大きい メンテの必要性は無し 最大2000
			加算値 = 500
			IF 計算用名声+計算用評判 >= 30000
				加算値 += 1500
			ELSE
				加算値 += (計算用名声+計算用評判)/20
			ENDIF
			;座ってやるゲームなので待ち椅子ボーナスは無い
		CASE "maimai"
			;洗濯機 指と同じ計算式だが最大4000
			加算値 = 500
			IF 計算用名声 >= 70000
				加算値 += 3500
			ELSE
				加算値 += 計算用名声/20
			ENDIF
			;待ち椅子ボーナス
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*70
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		CASE "CHUNITHM"
			;簡単に稼げるが評判に悪影響（ひどい） 名声のみ影響するが他店と取り合いになるのでそれなりに名声が必要 最大5000
			加算値 = 1000
			IF 計算用名声 >= 160000
				加算値 += 4000
			ELSE
				加算値 += 計算用名声/40
			ENDIF
			加算値 += 階層筐体計算:(GETNUM(ITEM, "マッサージチェア")-1100)*50
			加算値 += 階層筐体計算:(GETNUM(ITEM, "待ち椅子")-1100)*10
		;ギャンブル系（コインゲーム） 腕と運次第でいくらでも続けられるので正直収入に期待してはいけない
		;ただし下記自販機とのシナジーは筐体コストの割には大きい
		;メダル両替機が無いと収入にならない
		CASE "ビデオポーカー", "ポーカーソリティア", "モンテカルロ"
			SIF EXISTGAMES("メダル両替機")
				加算値 = 200
		CASE "自販機（飲み物）"
			FOR LCOUNT:1, 0, 100
				SIF !階層筐体計算:(LCOUNT:1)
					CONTINUE
				;筐体ごとにシナジーがある
				SELECTCASE ITEMNAME:(LCOUNT:1+1100)
					CASE "beatmaniaIIDX", "beatmaniaIIDX（LM）"
						加算値 = 300
					CASE "pop'n music"
						加算値 = 300
					CASE "Dance Dance Revolution", "Dance Dance Revolution（白）", "Dance Dance Revolution（金）"
						加算値 = 1000
					CASE "GITADORA"
						加算値 = 500
					CASE "jubeat"
