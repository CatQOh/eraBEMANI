@GC収入人事補正
#FUNCTION
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 素質
#DIM DYNAMIC 基準値
#DIM DYNAMIC 倍率
#DIM DYNAMIC 合計値

FOR LCOUNT, 1, CHARANUM
	基準値 = 0
	SIF CSTR:LCOUNT:配属 != "ゲームセンター" || !CFLAG:LCOUNT:配属完了
		CONTINUE
	;サボり魔はモチベに応じてサボる
	IF サボり判定(LCOUNT)
		CFLAG:LCOUNT:サボり = 1
		CONTINUE
	ENDIF
	基準値 += ABL:LCOUNT:従順*30
	基準値 += ABL:LCOUNT:技巧*10
	基準値 += ABL:LCOUNT:奉仕精神*20
	基準値 += ABL:LCOUNT:工作技能*30
	基準値 += ABL:LCOUNT:家事技能*30
	;統率持ちが入れば上の各能力を1づつ加算
	;店長が統率持ちなら効果2倍
	IF FINDCHARA(CFLAG:ゲーセン店長, 1) >= 0 && TALENT:FINDCHARA(CFLAG:ゲーセン店長, 1):統率 && !TALENT:LCOUNT:統率
		基準値 += 240
	ELSEIF 統率者("ゲームセンター") && !TALENT:LCOUNT:統率
		基準値 += 120
	ENDIF
	;ワーカホリックレベルに応じても上がる
	基準値 += ワーカホリックレベル(LCOUNT)*120
	SIF TALENT:LCOUNT:音ゲーマー
		基準値 += 100
	
	倍率 = 100
	FOR 素質, 0, VARSIZE("TALENT")
		SIF !TALENT:LCOUNT:素質
			CONTINUE
		SELECTCASE TALENTNAME:素質
			CASE "生意気", "反抗的", "衝動的", "同族嫌悪"
				倍率 -= 20
			CASE "臆病", "プライド高い", "無関心", "男嫌い", "女嫌い", "幼稚", "ツンデレ", "汚れ無視"
				倍率 -= 10
			CASE "気丈", "ハイテンション", "好奇心", "潔癖症", "ファーリー", "尻尾", "動物耳", "羽"
				倍率 += 10
			CASE "素直", "自制心", "献身的", "魅力", "魅惑"
				倍率 += 20
			CASE "人気", "謎の魅力"
				倍率 += 30
			CASE "バストサイズ"
				SELECTCASE TALENT:LCOUNT:バストサイズ
					CASE 4, 5
						倍率 += 10
					CASE 6
						倍率 += 20
				ENDSELECT
		ENDSELECT
	NEXT
	SIF CFLAG:LCOUNT:ゲーセン店長
		基準値 *= 2
	SIF 倍率 < 10
		倍率 = 10
	合計値 += 基準値*倍率/100
NEXT

RETURNF 合計値

@フードコートレベル
#FUNCTION
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 基準値
#DIM DYNAMIC 料理人数
#DIM DYNAMIC レベル
#DIM DYNAMIC 合計値

SIF !GCフードコート
	RETURNF 0

FOR LCOUNT, 1, CHARANUM
	基準値 = 0
	SIF CSTR:LCOUNT:配属 != "ゲームセンター" || !CFLAG:LCOUNT:配属完了
		CONTINUE
	SIF CFLAG:LCOUNT:サボり
		CONTINUE
	;リミットバースト分は計上しない
	IF ABL:LCOUNT:料理技能 >= 10
		基準値 = 10
	ELSE
		基準値 = ABL:LCOUNT:料理技能
		IF FINDCHARA(CFLAG:ゲーセン店長, 1) >= 0 && TALENT:FINDCHARA(CFLAG:ゲーセン店長, 1):統率 && !TALENT:LCOUNT:統率
			基準値 += 2
		ELSEIF 統率者("ゲームセンター") && !TALENT:LCOUNT:統率
			基準値++
		ENDIF
		基準値 += ワーカホリックレベル(LCOUNT)
		SIF 基準値 > 10
			基準値 = 10
	ENDIF
	合計値 += 基準値
	SIF TALENT:LCOUNT:料理人
		料理人数++
NEXT

;配属してるキャラの料理技能合計でレベルが決まる 最大20
;配属できるのは10人まで
SELECTCASE 合計値
	CASE IS >= 100
		レベル = 20
	CASE 97 TO 99
		レベル = 19
	CASE 92 TO 96
		レベル = 18
	CASE 85 TO 91
		レベル = 17
	CASE 35 TO 84
		レベル = 合計値/5
	CASE 25 TO 34
		レベル = 6
	CASE 16 TO 24
		レベル = 5
	CASE 9 TO 15
		レベル = 4
	CASE 4 TO 8
		レベル = 3
	CASE 1 TO 3
		レベル = 2
	CASE 0
		レベル = 1
ENDSELECT

;料理人の数だけレベルが上がる
レベル += 料理人数

RETURNF レベル

