					CASE "Dance Evolution"
						加算値 = 150
					CASE "maimai"
						加算値 = 300
					CASE "CHUNITHM"
						加算値 = 300
					CASE "クイズマジックアカデミー"
						加算値 = 300
					CASE "ビデオポーカー", "ポーカーソリティア", "モンテカルロ", "ブラックジャック"
						加算値 = 500
				ENDSELECT
			NEXT
		CASE "自販機（アイス）"
			FOR LCOUNT:1, 0, 100
				SIF !階層筐体計算:(LCOUNT:1)
					CONTINUE
				;筐体ごとにシナジーがある
