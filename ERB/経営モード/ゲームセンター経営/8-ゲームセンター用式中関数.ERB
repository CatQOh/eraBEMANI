					CASE "REFLEC BEAT"
						加算値 = 150
					CASE "SOUND VOLTEX"
						加算値 = 150
					CASE "Dance Evolution"
						加算値 = 700
					CASE "maimai"
						加算値 = 300
					CASE "CHUNITHM"
						加算値 = 150
					CASE "クイズマジックアカデミー"
						加算値 = 150
					CASE "ビデオポーカー", "ポーカーソリティア", "モンテカルロ", "ブラックジャック"
						加算値 = 300
				ENDSELECT
			NEXT
		CASE "自販機（軽食）"
			FOR LCOUNT:1, 0, 100
				SIF !階層筐体計算:(LCOUNT:1)
					CONTINUE
				;筐体ごとにシナジーがある
				SELECTCASE ITEMNAME:(LCOUNT:1+1100)
					CASE "beatmaniaIIDX", "beatmaniaIIDX（LM）"
						加算値 = 500
					CASE "pop'n music"
						加算値 = 150
					CASE "Dance Dance Revolution", "Dance Dance Revolution（白）", "Dance Dance Revolution（金）"
						加算値 = 300
					CASE "GITADORA"
						加算値 = 500
					CASE "jubeat"
						加算値 = 300
					CASE "REFLEC BEAT"
						加算値 = 300
					CASE "SOUND VOLTEX"
