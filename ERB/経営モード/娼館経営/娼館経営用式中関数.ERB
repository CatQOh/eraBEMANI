@娼館方針名, ARG
#FUNCTIONS

SELECTCASE ARG
	CASE 0
		RETURNF "方針無し"
	CASE 1
		RETURNF "ソフト方針"
	CASE 2
		RETURNF "ハード方針"
	CASE 3
		RETURNF "SM方針"
	CASE 4
		RETURNF "狂気方針"
ENDSELECT

;引数で指定した曜日が定休日かどうか 省略すれば今日の曜日
;書式 BR定休日("木") みたいな
@BR定休日, ARGS
#FUNCTION
VARSET LOCALS

SIF ARGS == ""
	ARGS = %DOW(FLAG:曜日)%

SPLIT 娼館定休日, "・", LOCALS

IF FINDELEMENT(LOCALS, ARGS) >= 0
	RETURNF 1
ELSE
	RETURNF 0
ENDIF

