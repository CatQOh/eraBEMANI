PRINTPLAIN 　LIVE　
PRINT [ 0] - ライブを始める　
PRINT [-1] - 選曲画面に戻る　
PRINTL [-2] - 戻る
SIF ユニット数
	PRINTL 　　　　[-3] - ユニットで選出する
DO
	INPUT
	IF RESULT == -3
		SIF !ユニット数
			CONTINUE
