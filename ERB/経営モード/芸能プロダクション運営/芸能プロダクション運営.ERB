@IDOL_EVENT
#DIM DYNAMIC 分野
#DIM DYNAMIC 技量, 4
#DIM DYNAMIC 難度, 4
#DIM DYNAMIC 難度合計
#DIM DYNAMIC 人数, 4
#DIM DYNAMIC LMEMORY
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 収入, 2
#DIM DYNAMIC ユニット数
#DIM DYNAMIC 選出可能, 11

ユニット数 = 0

REPEAT 11
	SIF ユニット名:COUNT != ""
		ユニット数++
REND

DRAWLINE
PRINTL □何のイベントを開催しますか？
PRINTL 　[1] ライブ
DRAWLINE
PRINTPLAIN 　EVENT　
PRINTL [0] 戻る

DO
	INPUT
	SELECTCASE RESULT
		CASE 0
			RETURN 0
		CASE 1
			VARSET LOCAL
			$MUSIC_SELECT
			CALL MUSIC_LIST
			SIF IDOL選曲 == ""
				RESTART
			IF IDOL選曲:1 == "0"
				REPEAT CHARANUM
					SIF LOCAL:COUNT >= 3
						LOCAL:COUNT -= 3
				REND
			ENDIF
			$MEMBER_LOOP
			;◆◆◆技量の計算◆◆◆
			;	技量 = 技能LVの合計値 / √(担当人数)
			;D&VやI&Vの場合は、それぞれで1人として数えるが技能LVを0.75倍で計算する
			;技量は10000倍にして計算する(表記上は小数第4位まで計算する)
			VARSET 技量
			VARSET 人数
			REPEAT CHARANUM
				IF CFLAG:COUNT:配属 == 4
					SELECTCASE LOCAL:COUNT
						CASE 1
							技量:3 += 10000*ABL:COUNT:舞踊技能
							人数:3++
						CASE 2
							技量:2 += 10000*ABL:COUNT:演奏技能
							人数:2++
						CASE 3
							技量:1 += 10000*ABL:COUNT:歌唱技能
							人数:1++
						CASE 4
							技量:3 += 7500*ABL:COUNT:舞踊技能
							人数:3++
							技量:1 += 7500*ABL:COUNT:歌唱技能
							人数:1++
						CASE 5
							技量:2 += 7500*ABL:COUNT:演奏技能
							人数:2++
							技量:1 += 7500*ABL:COUNT:歌唱技能
							人数:1++
					ENDSELECT
				ENDIF
			REND
			FOR 分野, 1, 4
				SIF 人数:分野 <= 0
					CONTINUE
				技量:分野 *= 10000
				技量:分野 /= SQRT(人数:分野*10000*10000)
			NEXT
			DRAWLINE
			PRINTL □ライブに出すメンバーと担当するパートを選んでください
			PRINTL 　(ボーカル曲の場合、最低でも1人はボーカルを担当する必要があります)
			PRINTL 
			PRINTFORML 　選曲　　　　%IDOL選曲%
			PRINT 　楽曲難易度　
			FOR 分野, 1, 4
				SELECTCASE 分野
					CASE 1
						PRINT Vocal:
					CASE 2
						PRINT Inst.:
					CASE 3
						PRINT Dance:
				ENDSELECT
				SELECTCASE TOINT(IDOL選曲:分野)
					CASE 0
						PRINT ‐ 
					CASE IS < 10
						PRINTFORM %TOFULL(IDOL選曲:分野)% 
					CASEELSE
						PRINTFORM %IDOL選曲:分野% 
				ENDSELECT
			NEXT
			PRINTL 
			PRINT 　現在の技量　
			FOR 分野, 1, 4
				PRINTFORM {技量:分野/10000, 3, RIGHT}.
				FOR LCOUNT, 0, 4-STRLENS(TOSTR(技量:分野%10000))
					PRINT 0
				NEXT
				PRINTFORM {技量:分野%10000} 
			NEXT
			PRINTL 
			PRINTL 
			REPEAT CHARANUM
				;体力不足だと無理
				SIF BASE:COUNT:体力 < 500
					CONTINUE
				IF CFLAG:COUNT:配属 == 4
					PRINT 　
					SELECTCASE LOCAL:COUNT
						CASE 0
							PRINT 　　
						CASE 1
							PRINT Da. 
						CASE 2
							PRINT In. 
						CASE 3
							PRINT Vo. 
						CASE 4
							PRINT D&V 
						CASE 5
							PRINT I&V 
					ENDSELECT
					PRINTFORM [{COUNT, 2, RIGHT}] - %NAME:COUNT, 26, LEFT%(歌唱技能:{ABL:COUNT:歌唱技能, 2, LEFT} 演奏技能:{ABL:COUNT:演奏技能, 2, LEFT} 舞踊技能:{ABL:COUNT:舞踊技能, 2, LEFT}
					SIF TALENT:COUNT:魅力
						PRINT  魅力
					SIF TALENT:COUNT:魅惑
						PRINT  魅惑
					SIF TALENT:COUNT:謎の魅力
						PRINT  謎の魅力
					SIF TALENT:COUNT:人気
						PRINT  人気
					SIF TALENT:COUNT:絶対音感
						PRINT  絶対音感
					PRINTL )
				ENDIF
			REND
			DRAWLINE
			PRINTPLAIN 　LIVE　
			PRINT [ 0] - ライブを始める　
			PRINT [-1] - 選曲画面に戻る　
			PRINTL [-2] - 戻る
			SIF ユニット数
				PRINTL 　　　　[-3] - ユニットで選出する
			DO
				INPUT
				IF RESULT == -3
					SIF !ユニット数
						CONTINUE
					DRAWLINE
					PRINTL □ユニットを選択してください
					FOR COUNT, 1, ユニット数+1
						;ユニット全部表示したらBREAK
						SIF ユニット名:COUNT == ""
							BREAK
						;選出可能フラグは予め立てておく
						選出可能:COUNT = 1
						FOR LCOUNT, 1, CHARANUM
							;ユニットのメンバーが芸能プロダクションに配属されてるか確認する
							IF CFLAG:LCOUNT:ユニット番号 == COUNT
								;配属されてないメンバーが居れば選出可能フラグを折って灰色表示してBREAK
								IF CFLAG:LCOUNT:配属 != 4
									LOCALS = <font color='gray'><nonbutton title='一部メンバーが不在です'>　[-] %ユニット名:COUNT%</nonbutton></font>
									HTML_PRINT LOCALS
									選出可能:COUNT = 0
									BREAK
								ENDIF
							ENDIF
						NEXT
						;上記のチェックを抜けてきたら選出可能
						SIF 選出可能:COUNT
							PRINTFORML 　[{COUNT}] %ユニット名:COUNT%
					NEXT
					DRAWLINE
					PRINTPLAIN 　UNIT　
					PRINTL [0] - メンバー選定に戻る
					DO
						INPUT
						SELECTCASE RESULT
							CASE 1 TO 10
								SIF !選出可能:RESULT
									CONTINUE
								;ユニットメンバーだけにするのでLOCALにVARSETかけておく
								VARSET LOCAL, 0
								REPEAT CHARANUM
									IF CFLAG:COUNT:ユニット番号 == RESULT
										;ユニット結成時にあらかじめ決めておいた担当に分担する
										;ボーカル担当の場合内部数値は2桁 2桁目がメイン、1桁目がサブ
										SELECTCASE CFLAG:COUNT:ユニット担当
											CASE IS < 10
												;ダンス、楽器演奏はそのまま代入
												LOCAL:COUNT = CFLAG:COUNT:ユニット担当
											CASEELSE
												;ボーカル必要無い選曲の場合、予備の担当に切り替える(1桁目)
												IF IDOL選曲:1 == "0"
													LOCAL:COUNT = CFLAG:COUNT:ユニット担当%10
												;オンボーカルならメインの担当(2桁目)
												ELSE
													LOCAL:COUNT = CFLAG:COUNT:ユニット担当/10
												ENDIF
										ENDSELECT
									ENDIF
								REND
								GOTO MEMBER_LOOP
							CASE 0
								GOTO MEMBER_LOOP
						ENDSELECT
					LOOP 1
				ENDIF
				SIF RESULT == -2
					RESTART
				SIF RESULT == -1
					GOTO MUSIC_SELECT
				IF RESULT == 0
					IF 人数:1 == 0  && 人数:2 == 0 && 人数:3 == 0
						PRINTW メンバーを1人以上選び出してください
						GOTO MEMBER_LOOP
					ENDIF
					IF IDOL選曲:1 != "0" && 人数:1 == 0
						PRINTW ボーカルを1人以上選び出してください
						GOTO MEMBER_LOOP
					ENDIF
					BREAK
				ENDIF
				IF BASE:RESULT:体力 >= 500 && CFLAG:RESULT:配属 == 4
					LMEMORY = RESULT
					PRINTL
					PRINTL どのパートを担当しますか？
					PRINTL [0] 担当しない
					PRINTL [1] ダンス
					PRINTL [2] 楽器演奏
					IF IDOL選曲:1 != "0"
						PRINTL [3] ボーカル
						PRINTL [4] ダンス&ボーカル
						PRINTL [5] 楽器演奏&ボーカル
					ENDIF
					$PART_INPUT
					INPUT
					SELECTCASE RESULT
						CASE 0, 1, 2
							LOCAL:LMEMORY = RESULT
						CASE 3, 4, 5
							SIF IDOL選曲:1 == "0"
								GOTO PART_INPUT
							LOCAL:LMEMORY = RESULT
						CASEELSE
							GOTO PART_INPUT
					ENDSELECT
					GOTO MEMBER_LOOP
				ENDIF
			LOOP 1
			;上記のループを超えるとライブ開始
			難度:1 = 10000*TOINT(IDOL選曲:1)
			難度:2 = 10000*TOINT(IDOL選曲:2)
			難度:3 = 10000*TOINT(IDOL選曲:3)
			難度合計 = (難度:1 + 難度:2 + 難度:3) / 10000
			;魅惑で2%、魅力で3%、謎の魅力で4%、人気で5%技量が上がる(乗算で重複する)
			;ビジュアルによって難度が下がる(※かわいいは正義)ことを表現したいのだが
			;難度を下げると収入も下がってしまうので相対的に技量を上げる
			REPEAT CHARANUM
				IF CFLAG:COUNT:配属 == 4 && LOCAL:COUNT
					CFLAG:COUNT:レッスン = 0
					BASE:COUNT:体力 -= 50*(難度合計)
					IF BASE:COUNT:体力 < 1
						BASE:COUNT:体力 = 1
						CFLAG:COUNT:回復量低下 += 2
					ENDIF
					IF TALENT:COUNT:魅惑
						TIMES 技量:1, 1.02
						TIMES 技量:2, 1.02
						TIMES 技量:3, 1.02
					ENDIF
					IF TALENT:COUNT:魅力
						TIMES 技量:1, 1.03
						TIMES 技量:2, 1.03
						TIMES 技量:3, 1.03
					ENDIF
					IF TALENT:COUNT:謎の魅力
						TIMES 技量:1, 1.04
						TIMES 技量:2, 1.04
						TIMES 技量:3, 1.04
					ENDIF
					IF TALENT:COUNT:人気
						TIMES 技量:1, 1.05
						TIMES 技量:2, 1.05
						TIMES 技量:3, 1.05
					ENDIF
				ENDIF
			REND
			;GAMBOL・nine seconds・SPICY PIECEの場合は判定が厳しくなる
			SELECTCASE IDOL選曲
				CASE "GAMBOL", "nine seconds", "SPICY PIECE"
				TIMES 技量:1, 0.33
				TIMES 技量:2, 0.33
				TIMES 技量:3, 0.33
			ENDSELECT
			収入 = 0
			;それぞれの分野についての基本収入を出す
			;収入は難度Xに対して技量が同じだとX*10000となり、
			;不足分1あたり25000ずつ減り、超過分1あたり4000ずつ増える
			FOR 分野, 1, 4
				収入 += 難度:分野
				IF 技量:分野 >= 難度:分野
					収入 += (技量:分野 - 難度:分野)*2/5
				ELSE
					収入 += (技量:分野 - 難度:分野)*5/2
				ENDIF
			NEXT
			;2乗して10万で割る
			収入 *= ABS(収入)
			収入 /= 100000
			収入:1 = 収入
			;最後に知名度による補正
			;マイナスも増幅するので、知名度が高いときにしくじると大惨事
			収入:1 *= (100+IDOL知名度)
			収入:1 /= 100
			MONEY += 収入:1
			;最終的な収益の計算の後に知名度の増減を行う
			IDOL知名度 += 収入/1000
			PRINTL
			PRINTL ライブが終了しました
			IF 収入:1 >= 0
				CALL PASELI, @"{収入:1}＄の利益を出し、"
			ELSE
				CALL PASELI, @"{ABS(収入:1)}＄の損失を出し、"
			ENDIF
			PRINT 知名度が
			IF 収入 >= 0
				PRINTFORMW {収入/1000}増えました
			ELSE
				PRINTFORMW {ABS(収入/1000)}減りました
			ENDIF
			SIF IDOL知名度 < 0
				IDOL知名度 = 0
			;収入がプラスなら楽曲難易度合計の人気度を加算する
			IF 収入:1 > 0
				FOR LCOUNT, 0, CHARANUM
					IF CFLAG:LCOUNT:配属 == 4 && LOCAL:LCOUNT
						人気度:LCOUNT:0 += TOINT(IDOL選曲:1)
						人気度:LCOUNT:0 += TOINT(IDOL選曲:2)
						人気度:LCOUNT:0 += TOINT(IDOL選曲:3)
					ENDIF
