満足度 = 3*ABL:ARG:従順 + ABL:ARG:技巧 + 3*ABL:ARG:奉仕精神

;陥落素質
SIF TALENT:ARG:淫乱
	満足度 += 6
SIF TALENT:ARG:娼婦
	満足度 += 9
SIF TALENT:ARG:服従
	満足度 += 20
SIF TALENT:ARG:隷属
	満足度 += 30

;性格
SIF TALENT:ARG:生意気
	満足度 -= 10
SIF TALENT:ARG:臆病
	満足度 += 10
SIF TALENT:ARG:素直
	満足度 += 15
SIF TALENT:ARG:反抗的
	満足度 -= 15
SIF TALENT:ARG:プライド高い
	満足度 -= 10
SIF TALENT:ARG:プライド低い
	満足度 += 10
SIF TALENT:ARG:ツンデレ
	満足度 -= 5

;性への関心
SIF TALENT:ARG:自制心
	満足度 -= 7
SIF TALENT:ARG:保守的
	満足度 -= 10
SIF TALENT:ARG:一線越えない
	満足度 -= 10
SIF TALENT:ARG:目立ちたがり
	満足度 += 2

;乙女心
SIF TALENT:ARG:貞操観念
	満足度 -= 20
SIF TALENT:ARG:貞操無頓着
	満足度 += 5
SIF TALENT:ARG:恥じらい
	満足度 -= 2

;体質
SIF TALENT:ARG:濡れにくい
	満足度 -= 1

;技術
SIF TALENT:ARG:舌使い
	満足度 += 5
SIF TALENT:ARG:献身的
	満足度 += 15
SIF TALENT:ARG:潔癖症
	満足度 -= 8

;正直度
SIF TALENT:ARG:淫核 || TALENT:ARG:淫膣 || TALENT:ARG:淫尻 || TALENT:ARG:淫乳
	満足度 += 4

;先天的身体特徴
SIF TALENT:ARG:小柄体型 || TALENT:ARG:小人体型
	満足度 += 13
SELECTCASE TALENT:ARG:バストサイズ
	CASE 1
		満足度 += 1
	CASE 2
		満足度 += 2
	CASE 3
		満足度 += 3
	CASE 4
		満足度 += 5
	CASE 5
		満足度 += 8
ENDSELECT

;後天的身体特徴
SIF TALENT:ARG:母乳体質
	満足度 += 3
SIF TALENT:ARG:絶倫
	満足度 += 5

;満足度1を保証
SIF 満足度 < 1
	満足度 = 1

;特別ボーナス
SIF TALENT:ARG:処女
	TIMES 満足度, 1.80
SIF TALENT:ARG:謎の魅力
	TIMES 満足度, 1.10
SIF TALENT:ARG:魅力
	TIMES 満足度, 1.05

;回数のロール
IF VAGINA(ARG)
	ヴァギナ = 5+RAND:3
	中出し = RAND:(1+ヴァギナ)
ENDIF
アナル = 1+RAND:7
アナル中出し = RAND:(1+アナル)

絶頂 = RAND:(1+ヴァギナ+アナル)/3
射精 = RAND:(1+ヴァギナ+アナル)/3

フェラ += 1+RAND:4
SELECTCASE TALENT:ARG:バストサイズ
	CASE 1
		奉仕 += 1
	CASE 2
		奉仕 += 1
	CASE 3
		奉仕 += 2
	CASE 4
		奉仕 += 3
	CASE 5
		奉仕 += 5
ENDSELECT
奉仕 += RAND:( 1+LIMIT(ABL:ARG:奉仕精神, 0, 10) )
奉仕で射精 = (フェラ+奉仕)/3

BASE:ARG:体力 -= 40*(ヴァギナ+アナル+絶頂+射精)
BASE:ARG:体力 -= 20*(フェラ+奉仕)
IF BASE:ARG:体力 < 1
	BASE:ARG:体力 = 1
	CFLAG:ARG:回復量低下 += 2
ENDIF

IF IDOL報告/4 == 0
	PRINTL 今日は営業先の重役を相手した。
	PRINT フェラ
	SIF 奉仕
		PRINT や奉仕
	PRINT でペニスを刺激させ
	SIF 奉仕で射精
		PRINT て射精させ
	PRINT た後、
	SIF VAGINA(ARG)
		PRINTFORM 膣を{ヴァギナ}回
	PRINTFORM アナルを{アナル}回犯され
	SIF 中出し || アナル中出し
		PRINTL 、
	SIF 中出し
		PRINTFORM 膣に{中出し}回
	SIF アナル中出し
		PRINTFORM アナルに{アナル中出し}回
	SIF 中出し || アナル中出し
		PRINT 中出しされ
	PRINTW た……
ENDIF

IF VAGINA(ARG)
	SIF IDOL報告/4 < 2
		PRINTFORML Ｖ経験+{ヴァギナ}
	EXP:ARG:Ｖ経験 += ヴァギナ
	IF TALENT:ARG:処女
		TALENT:ARG:処女 = 0
		IF TALENT:ARG:性転換済
			VIRGIN:ARG:11 = 営業先の重役
		ELSE
			VIRGIN:ARG:1 = 営業先の重役
		ENDIF
	ENDIF
ENDIF

IF IDOL報告/4 < 2
	PRINTFORML Ａ経験+{アナル}
	SIF 絶頂
		PRINTFORML 絶頂経験+{絶頂}
	SIF 射精
		PRINTFORML 射精経験+{射精}
	SIF 中出し
		PRINTFORML 膣射経験+{中出し}
	PRINTFORML フェラ経験+{フェラ}
	SIF 中出し+アナル中出し+奉仕で射精
		PRINTFORML 精液経験+{中出し+アナル中出し+奉仕で射精}
ENDIF

EXP:ARG:Ａ経験 += アナル
EXP:ARG:膣射経験 += 中出し
EXP:ARG:フェラ経験 += フェラ
EXP:ARG:絶頂経験 += 絶頂
EXP:ARG:射精経験 += 射精
IF TALENT:ARG:性別 == 1
	SIF IDOL報告/4 < 2
		PRINTFORML ゲイ経験+{2*(ヴァギナ+アナル+フェラ+奉仕)}
	EXP:ARG:ゲイ経験 += 2*(ヴァギナ+アナル+フェラ+奉仕)
ENDIF
WAIT

SIF IDOL報告 < 3
	PRINTFORMW %CALLNAME:ARG%のおかげで知名度が{満足度}上がった
