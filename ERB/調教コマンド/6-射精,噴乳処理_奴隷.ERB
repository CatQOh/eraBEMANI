;-------------------------------------------------
;調教対象の噴乳チェック
;-------------------------------------------------
@TARGET_MILK_CHECK
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 増加量
#DIM DYNAMIC 噴乳強度
#DIM DYNAMIC 魔力回復量
#DIM DYNAMIC 人数

SIF !TALENT:母乳体質
	RETURN 0

増加量 = UP:快Ｃ/5 + UP:快Ｖ/5 + UP:快Ａ/5 + UP:快Ｂ*3

;自制心
SIF TALENT:自制心
	増加量 /= 2

;快感に素直
SIF TALENT:快感に素直
	TIMES 増加量 , 1.20

;快感の否定（淫乱、娼婦で無効）
SIF TALENT:快感の否定 && (!TALENT:淫乱 && !TALENT:娼婦)
	TIMES 増加量 , 0.80

;B敏感
SIF TALENT:Ｂ敏感
	TIMES 増加量 , 1.20

;媚薬
SIF CFLAG:媚薬
	増加量 += 増加量/10*CFLAG:媚薬

;調教者が幼児退行
SIF TALENT:PLAYER:幼児／幼児退行
	TIMES 増加量 , 1.20

;調教者が幼稚
SIF TALENT:PLAYER:幼稚
	TIMES 増加量 , 1.20

SELECTCASE TALENT:バストサイズ
	;爆乳
	CASE 6
		TIMES 増加量 , 1.40
	;巨乳、豊乳
	CASE 4, 5
		TIMES 増加量 , 1.20
	;普通
	CASE 3
		TIMES 増加量 , 1.00
	;貧乳
	CASE 2
		TIMES 増加量 , 0.80
	;絶壁
	CASE 1
		TIMES 増加量 , 0.60
ENDSELECT

;噴乳中毒のレベルを見る
SELECTCASE ABL:噴乳中毒
	CASE 0
		TIMES 増加量 , 1.00
	CASE 1
		TIMES 増加量 , 1.05
	CASE 2
		TIMES 増加量 , 1.10
	CASE 3
		TIMES 増加量 , 1.20
	CASE 4
		TIMES 増加量 , 1.30
	CASE IS >= 5
		増加量 += (増加量/10) * (ABL:噴乳中毒/2+1)
ENDSELECT

増加量 = 500 + 増加量/2
BASE:母乳 += 増加量

噴乳強度 = BASE:母乳/MAXBASE:母乳

;噴乳
IF 噴乳強度
	LOSEBASE:体力 += 10*LIMIT(噴乳強度, 1, 3)
	LOSEBASE:気力 += 50*LIMIT(噴乳強度, 1, 3)
	SELECTCASE GETEXPLV(EXP:噴乳経験, 5)
		CASE 0
			SOURCE:露出 += 300 * 噴乳強度
			SOURCE:屈従 += 150 * 噴乳強度
		CASE 1
			SOURCE:露出 += 500 * 噴乳強度
			SOURCE:屈従 += 300 * 噴乳強度
			SOURCE:不潔 += 100 * 噴乳強度
		CASE 2
			SOURCE:露出 += 700 * 噴乳強度
			SOURCE:屈従 += 400 * 噴乳強度
			SOURCE:不潔 += 150 * 噴乳強度
		CASE 3
			SOURCE:露出 += 1500 * 噴乳強度
			SOURCE:屈従 += 700 * 噴乳強度
			SOURCE:不潔 += 200 * 噴乳強度
		CASE 4
			SOURCE:露出 += 2500 * 噴乳強度
			SOURCE:屈従 += 1500 * 噴乳強度
			SOURCE:不潔 += 250 * 噴乳強度
		CASE 5
			SOURCE:露出 += 5000 * 噴乳強度
			SOURCE:屈従 += 2500 * 噴乳強度
			SOURCE:不潔 += 300 * 噴乳強度
	ENDSELECT

	IF 噴乳強度 >= 2
		PRINTFORML %CALLNAME:TARGET%大量噴乳
	ELSE
		PRINTFORML %CALLNAME:TARGET%噴乳
	ENDIF
;	PRINTFORML 噴乳経験+{噴乳強度}
	IF !EXP:噴乳経験
		EXP:異常経験++
		PRINTL 異常経験+1
	ENDIF
	EXP:噴乳経験 += 噴乳強度
	EXP:絶頂経験 += 噴乳強度
	;Ｂに母乳汚れ
	SETBIT STAIN:胸, 4

	NOWEX:噴乳 = 噴乳強度
	EX:噴乳++

	BASE:母乳 -= MAXBASE:母乳*噴乳強度
	SIF BASE:母乳 >= MAXBASE:母乳
		BASE:母乳 = MAXBASE:母乳-1

	;ビデオ撮影中はボーナスカウント
	IF TEQUIP:ビデオカメラ
		VIDEOBONUS:6++
		CFLAG:噴乳を撮影された経験++
	ENDIF

	;搾乳器で母乳が集められているかチェック
	IF TEQUIP:搾乳器
		TFLAG:搾乳量 += 噴乳強度
		CFLAG:搾乳された経験++
	ELSE
		;獣人、獣による催淫
		SELECTCASE CSTR:種族
			CASE "獣人", "獣"
				CFLAG:PLAYER:残数 += ((CFLAG:PLAYER:媚薬%5)+LIMIT(噴乳強度, 1, 5))/5
				CFLAG:PLAYER:媚薬 += LIMIT(噴乳強度, 1, 5)
		ENDSELECT
	ENDIF

	SELECTCASE SELECTCOMS
		CASE "母乳飲み", "授乳手コキ"
			IF TALENT:PLAYER:魔術師
				魔力回復量 = MAXBASE:PLAYER:魔力/40
				SELECTCASE CSTR:種族
					CASE "悪魔", "神", "天使"
						TIMES 魔力回復量, 1.10
				ENDSELECT
				SIF TALENT:魔術師
					TIMES 魔力回復量, 1.10
				BASE:PLAYER:魔力 = LIMIT(BASE:PLAYER:魔力+魔力回復量, 0, MAXBASE:PLAYER:魔力)
			ENDIF
	ENDSELECT
	
	人数 = 0
	;飲んでる場合
	IF PLAYER == MASTER
		SELECTCASE SELECTCOMS
			CASE "母乳飲み", "授乳手コキ"
				;不要なループを避けるための処理 CFLAGでやったほうがいいかもしれない
				SIF !母乳飲んだ人数:(NO:TARGET)
					人数 = 1
				母乳飲んだ人数:(NO:TARGET)++
		ENDSELECT
	ENDIF
	IF 人数
		人数 = 0
		FOR LCOUNT, 0, 10000
			SIF 母乳飲んだ人数:LCOUNT
				人数++
		NEXT
		SIF 人数 >= 10
			CALL 実績解除, "母乳ソムリエ"
	ENDIF
ENDIF

