	CASE IS >= 7
		放尿量 += 3
	CASE IS >= 5
		放尿量 += 2
	CASE IS >= 3
		放尿量 += 1
ENDSELECT

IF TEQUIP:利尿剤
	;利尿剤強化を行っている場合は強化値*10%の効果
	IF 利尿剤強化値
		放尿量 += 利尿剤強化値/10
	ELSE
		放尿量++
	ENDIF
ENDIF
SIF TALENT:おもらし癖
	放尿量++

