	;首絞めプレイでは漏らす
	;尿道挿入でも漏らす
	{
	CASE "正常位首絞め", "後背位首絞め", "正常位アナル首絞め", "後背位アナル首絞め",
		 "尿道挿入"
	}

		IF (TEQUIP:利尿剤 ||  TALENT:おもらし癖) && !PENIS(TARGET)
			放尿量 = 1
		ELSE
			GOTO ELSE
		ENDIF
	CASEELSE
		$ELSE
		SIF TFLAG:絶頂強度 == 0 || (!TEQUIP:利尿剤 && !TALENT:おもらし癖) || PENIS(TARGET)
			RETURN 0
ENDSELECT
