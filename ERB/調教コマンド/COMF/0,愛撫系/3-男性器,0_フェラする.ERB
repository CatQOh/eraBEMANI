;-------------------------------------------------
;フェラする
;-------------------------------------------------
@USERCOM_ABLE_フェラする, ARG
#FUNCTION
#DIM LCOUNT
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;性器が汚れている場合（精液、アナル、粘液、血、尿）
FOR LCOUNT, 0, 8
	IF GETBIT(STAIN:ペニス, LCOUNT)
		SELECTCASE LCOUNT
			CASE 2, 3, 5, 6, 7
				;実行者
				SELECTCASE PLAYER
					;主人
					CASE MASTER
						;汚れ無視じゃないと実行できない
						SIF !TALENT:MASTER:汚れ無視 && ABL:MASTER:技巧 <= 2
							RETURNF 0
					;助手
					CASE ASSI
						;汚臭敏感で従順3以下の場合フェラはできない（汚れ無視なら可能）
						SIF ABL:ASSI:従順 <= 3 && TALENT:ASSI:汚臭敏感 && !TALENT:ASSI:汚れ無視
							RETURNF 0
				ENDSELECT
				BREAK
		ENDSELECT
	ENDIF
NEXT
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURNF 0
;対象がペニス無いとダメ
SIF !PENIS(TARGET)
	RETURNF 0
;オナホール使用中はダメ
SIF TEQUIP:オナホール
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_フェラする
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回と今回の調教者が同じで縄、ボールギャグ使用中でない場合
IF PLAYER == TFLAG:前コマンド実行者 && !TEQUIP:縄 && !TEQUIP:ボールギャグ
	;前回のコマンド
	SELECTCASE PREVCOMS
		;フェラチオ、クンニさせる、シックスナインだとシックスナインに
		CASE "フェラチオ", "クンニさせる", "シックスナイン"
			SIF USERCOM_ABLE_シックスナイン()
				JUMP COM_シックスナイン
	ENDSELECT
ENDIF

PRINTL フェラする
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
LOCAL = 300

;ABL:調教者の技巧をみる
LOCAL += LOCAL*ABL:PLAYER:技巧/2

;ABL:従順をみる
LOCAL += (LOCAL/10)*ABL:従順 - (LOCAL/10)*2

;ABL:欲望をみる
LOCAL += (LOCAL/10)*ABL:欲望

;奴隷のABL:Ｃ感覚をみる
SELECTCASE ABL:Ｃ感覚
	CASE 0
		TIMES LOCAL , 0.50
	CASE 1
		TIMES LOCAL , 0.80
	CASE 2
		TIMES LOCAL , 1.00
	CASE 3
		TIMES LOCAL , 1.50
	CASE 4
		TIMES LOCAL , 2.00
	CASEELSE
		LOCAL += LOCAL*(ABL:Ｃ感覚-3)
ENDSELECT

CALL 射精ゲージ増加, LOCAL, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 30

SOURCE:快C = 200
SOURCE:液体 = 50
SOURCE:露出 = 30
SOURCE:不潔 = 10
SOURCE:反感 = 25

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 20

;調教者のTALENT:舌使いをみる
SIF TALENT:PLAYER:舌使い
	TIMES SOURCE:快C , 1.50

;調教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:猫舌
	TIMES SOURCE:快C , 0.75

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 3

CALL SAMEN_SHOOT_T, 3, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のペニス汚れは舐め取る
STAIN:ペニス = 0

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 3, 1

PRINTFORML フェラ経験+1(%CALLNAME:PLAYER%)
EXP:PLAYER:フェラ経験++

;調教者が猫舌持ちの場合は、調教者に嗜虐快楽経験を追加
IF TALENT:PLAYER:猫舌
	PRINTFORML 嗜虐快楽経験+1(%CALLNAME:PLAYER%)
	EXP:PLAYER:嗜虐快楽経験++
ENDIF

;魔力回復
IF TALENT:PLAYER:魔術師 && !TEQUIP:コンドーム && !TEQUIP:搾精コンドーム
	LOCAL = MAXBASE:PLAYER:魔力/200
	BASE:PLAYER:魔力 = LIMIT(BASE:PLAYER:魔力+LOCAL, 0, MAXBASE:PLAYER:魔力)
ENDIF

;獣人、獣による催淫
SELECTCASE CSTR:種族
	CASE "獣人", "獣"
		CFLAG:PLAYER:媚薬++
		SIF CFLAG:PLAYER:媚薬%5 == 0
			CFLAG:PLAYER:残数++
ENDSELECT

;実績:山吹でフェラさせる。もしくは山吹でフェラをする
SIF CHARANAMEF(PLAYER) == "山吹"
	CALL 実績解除, "殿方の笛を鳴らすのもお得意で？"

RETURN 1

