;-------------------------------------------------
;射精寸止め
;-------------------------------------------------
@USERCOM_ABLE_射精寸止め, ARG
#FUNCTION
;寸止め可能フラグが立ってないとダメ
SIF TFLAG:寸止め != 1
    RETURNF 0
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;対象がペニス無いとダメ
SIF !PENIS(TARGET)
	RETURNF 0
;対象が賢者タイム中はダメ
SIF CFLAG:賢者タイム
    RETURNF 0
;触手射精止め中はダメ
SIF TEQUIP:射精止め
    RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_射精寸止め
PRINTL 射精寸止め
CALL KOJO_MESSAGE_COM

;道具は全て外す
TEQUIP:オナホール = 0
TEQUIP:搾精器 = 0
;SELECTCOMSは寸止め(%コマンド名%)にする
SELECTCOMS = 寸止め(%PREVCOMS%)
;甘出し可能フラグを立てる
TFLAG:寸止め = 2


;-------------------------------------------------
;射精ゲージチェック（奴隷）
;寸止めなので強制的にMAXBASE:射精-1にする
;-------------------------------------------------
BASE:射精 = MAXBASE:射精-1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 80

DOWNBASE:MASTER:体力 += 5
DOWNBASE:MASTER:気力 += 10

SOURCE:液体 = 10
SOURCE:欲情 = 100
SOURCE:露出 = 200
SOURCE:屈従 = 300
SOURCE:逸脱 = 300
SOURCE:反感 = 700
SOURCE:不潔 = 30

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 3

RETURN 1

