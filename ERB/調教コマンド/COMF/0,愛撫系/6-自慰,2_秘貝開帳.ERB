	PRINTFORM +奉仕精神LV{ABL:奉仕精神}({ABL:奉仕精神*4})
	実効値 += ABL:奉仕精神*4
ENDIF
IF ABL:露出癖
	PRINTFORM +露出癖LV{ABL:露出癖}({ABL:露出癖*3})
	実効値 += ABL:露出癖*3
ENDIF
IF ABL:自慰中毒
	PRINTFORM +自慰中毒LV{ABL:自慰中毒}({ABL:自慰中毒*3})
	実効値 += ABL:自慰中毒*3
ENDIF
IF MARK:快楽刻印
	PRINTFORM +快楽刻印LV{MARK:快楽刻印}({MARK:快楽刻印*3})
	実効値 += MARK:快楽刻印*3
ENDIF
;PALAM:潤滑（の不足）
IF PALAM:潤滑 < PALAMLV:3
	PRINTFORM -潤滑不足(5)
	実効値 -= 5
ENDIF

CALL COM_ORDER_欲情, 0
実効値 += RESULT

IF TALENT:恥じらい
	PRINTFORM  -恥じらい(2)
	実効値 -= 2
ENDIF
IF TALENT:快感の否定 && FALLTYPE(TARGET) != 2
	PRINTFORM  -快感の否定(5)
	実効値 -= 5
ENDIF
IF TALENT:男嫌い && SEX(PLAYER) == 1 && (FALLTYPE(TARGET) != 1 || PLAYER != MASTER)
	PRINTFORM  -男嫌い(12)
	実効値 -= 12
ENDIF

;処女
IF TALENT:処女
	PRINTFORM  -処女(20)
	実効値 -= 20
ELSEIF EXP:Ｖ経験 < EXPLV:2
	PRINTFORM  -Ｖ経験不足(5)
	実効値 -= 5
ENDIF

;調教者がペニス持ち
IF PENIS(PLAYER)
	PRINTFORM  -%CALLNAME:PLAYER%がペニス有(4)
	実効値 -= 4
ENDIF

;媚薬
IF TEQUIP:媚薬
	PRINTFORM +媚薬(6)
	実効値 += 6
ENDIF

;18以上で実行
CALL 実効値判定, 実効値, 18

RETURN RESULT

