;秘貝開帳見せつけ
;-------------------------------------------------
@USERCOM_ABLE_秘貝開帳見せつけ, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;実行者に膣無いとダメ
SIF !VAGINA(PLAYER)
	RETURNF 0
;性器が露出してないとダメ
SIF !性器露出(PLAYER)
	RETURNF 0
;助手だと露出癖2以上必要 恥じらいだと3以上
IF PLAYER == ASSI
	LOCAL = 2
	SIF TALENT:ASSI:恥じらい
		LOCAL++
	SIF ABL:ASSI:露出癖 < LOCAL
		RETURNF 0
ENDIF

COMRESULT = 1
RETURNF 1

@COM_秘貝開帳見せつけ
PRINTL 秘貝開帳見せつけ
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 70

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 40

SOURCE:性行動 = 40
SOURCE:欲情 = 20
SOURCE:恭順 = 20
SOURCE:露出 = 5
SOURCE:不潔 = 50
SOURCE:反感 = 30

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK, 0
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 0, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;調教者の手⇔調教者のヴァギナの汚れが移動
STAIN:PLAYER:手 |= STAIN:PLAYER:ヴァギナ
STAIN:PLAYER:ヴァギナ |= STAIN:PLAYER:手

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

