;-------------------------------------------------
;情欲を煽る
;-------------------------------------------------
@USERCOM_ABLE_情欲を煽る, ARG
#FUNCTION
;上級売春中はソフトかSM方針じゃないとダメ
SIF 上級売春中 && !GROUPMATCH(1, 3)
	RETURNF 0
;連続実行はできない
SIF PREVCOMS == "情欲を煽る"
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_情欲を煽る
PRINTL 情欲を煽る
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 30

DOWNBASE:MASTER:体力 += 10
DOWNBASE:MASTER:気力 += 50

SOURCE:欲情 = ABL:PLAYER:技巧*100
SOURCE:逸脱 = 200
SOURCE:反感 = 300

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

RETURN 1

