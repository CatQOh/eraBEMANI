;-------------------------------------------------
;ビデオ鑑賞
;-------------------------------------------------
@USERCOM_ABLE_ビデオ鑑賞, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;事前に奴隷を撮影したビデオが無いとダメ
コマンド実行条件 += "事前に撮影したビデオが必要/"
SIF !CFLAG:所持ビデオ数
	COMRESULT = 0
;陥落済みじゃないとダメ
コマンド実行条件 += "対象が陥落済みじゃないと実行できない/"
SIF !CFLAG:陥落
	COMRESULT = 0
;野外プレイ中はダメ
コマンド実行条件 += "野外プレイ中は実行できない/"
SIF TEQUIP:野外プレイ
	COMRESULT = 0
;お風呂場プレイ中はダメ
コマンド実行条件 += "お風呂場では実行できない/"
SIF TEQUIP:お風呂場
	COMRESULT = 0
;アイマスク装備中はダメ
コマンド実行条件 += "アイマスク装着中は実行できない/"
SIF TEQUIP:アイマスク
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0

RETURNF COMRESULT

@COM_ビデオ鑑賞
PRINTL ビデオ鑑賞
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 30
LOSEBASE:気力 += 80

SOURCE:恐怖 = 1000
SOURCE:恭順 = 1000
SOURCE:性行動 = 100
SOURCE:欲情 = 500
SOURCE:中毒 = 100
SOURCE:屈従 = 500
SOURCE:逸脱 = 200
SOURCE:反感 = 200

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;依存度補正値
TFLAG:依存度補正 += 2

RETURN 1

