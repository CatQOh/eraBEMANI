;-------------------------------------------------
;吸血する
;-------------------------------------------------
@USERCOM_ABLE_吸血する, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;奴隷が陥落済みじゃないとダメ
SIF !CFLAG:陥落
	RETURNF 0
;実行者が主人でない場合は、相性が良くないとダメ
SIF PLAYER != MASTER && RELATION:PLAYER <= 100
	RETURNF 0
;対象が無機物、もしくは種族:機械だとダメ
SIF TALENT:無機物 || CSTR:種族 == "機械"
	RETURNF 0
;対象がゾンビだとダメ
SIF TALENT:ゾンビ
	RETURNF 0
;実行者が吸血鬼じゃないとダメ
SIF !TALENT:PLAYER:吸血鬼
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;アニマルは無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_吸血する
PRINTL 吸血する
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 150
LOSEBASE:気力 += 50

SOURCE:情愛 = 1000
SOURCE:恭順 = 2000
SOURCE:屈従 = 1000
SOURCE:恐怖 = 500
SOURCE:逸脱 = 10

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;愛情経験
SIF PLAYER == MASTER
	CALL EXPUP, "愛情経験", 2
SIF !CFLAG:被吸血経験
	CALL EXPUP, "異常経験", 1

CFLAG:被吸血経験++
CALL EXPUP, "吸血経験", 1, PLAYER

;魔力2.0%回復 処女の血なら3倍の6.0%回復
IF TALENT:処女
	LOCAL = 60
ELSE
	LOCAL = 20
ENDIF
CALL 魔力回復, LOCAL, PLAYER
CALL 獣人催淫, 1, PLAYER

RETURN 1

