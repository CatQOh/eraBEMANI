;-------------------------------------------------
;母乳飲み
;-------------------------------------------------
@USERCOM_ABLE_母乳飲み, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;母乳体質じゃなきゃダメ
コマンド実行条件 += "対象に[母乳体質]が必要/"
SIF !TALENT:母乳体質
	COMRESULT = 0
;陥落済みじゃないとダメ
コマンド実行条件 += "対象が陥落済みじゃないと実行できない/"
SIF !CFLAG:陥落
	COMRESULT = 0
;乳房が露出してないとダメ
コマンド実行条件 += "乳房が露出していないと実行できない/"
SIF OVER_BUST(TARGET) != ""
	COMRESULT = 0
;胸使用中は不可
コマンド実行条件 += "B道具使用中は実行できない/"
SIF Ｂ使用中(TARGET)
	COMRESULT = 0
;縄使用中は不可
コマンド実行条件 += "縄で縛ってるときは実行できない/"
SIF TEQUIP:縄
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;アニマルは無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
IF MOD:STS
	コマンド実行条件 += "屍姦中は実行できない/"
	SIF CFLAG:死亡
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_母乳飲み
PRINTL 母乳飲み
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 50

SOURCE:情愛 = 1000
SOURCE:達成 = 1000
SOURCE:恭順 = 2000
SOURCE:屈従 = 1000
SOURCE:逸脱 = 100
SOURCE:反感 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の胸の汚れは舐め取る
STAIN:胸 = 0

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

;愛情経験
SIF (TALENT:恋慕 || TALENT:親愛) && PLAYER == MASTER
	CALL EXPUP, "愛情経験", 2

;魔力回復
CALL 魔力回復, 10, PLAYER
CALL 獣人催淫, 1, PLAYER

RETURN 1
