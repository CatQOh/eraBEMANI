;-------------------------------------------------
;排卵マッサージ
;-------------------------------------------------
@USERCOM_ABLE_排卵マッサージ, ARG
#FUNCTION
;一回の調教で一回まで
SIF TFLAG:排卵マッサージ
	RETURNF 0
;既に妊娠してるとできない
SIF TALENT:妊娠 || TALENT:妊娠確定
	RETURNF 0
;奴隷が恋慕か親愛で実行者が主人でないとダメ
SIF FALLTYPE(TARGET) != 1 || PLAYER != MASTER
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:アイマスク || TEQUIP:縄 || TEQUIP:ボールギャグ || TEQUIP:触手
	RETURNF 0
;生殖機能が無いとダメ
SIF !生殖機能♀(TARGET)
	RETURNF 0
;アニマルはダメ
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_排卵マッサージ
PRINTL 排卵マッサージ
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 10

SOURCE:情愛 = 1000
SOURCE:性行動 = 100
SOURCE:達成 = 300

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "愛情経験", 3

;排卵マッサージフラグ お風呂だと上がりやすい
IF TEQUIP:お風呂場
	SIF CFLAG:排卵マッサージ <= 8
		CFLAG:排卵マッサージ += 2
ELSE
	SIF CFLAG:排卵マッサージ <= 6
		CFLAG:排卵マッサージ++
ENDIF

TFLAG:排卵マッサージ = 1

RETURN 1

