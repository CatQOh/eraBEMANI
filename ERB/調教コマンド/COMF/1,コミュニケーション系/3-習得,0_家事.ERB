;-------------------------------------------------
;家事
;-------------------------------------------------
@USERCOM_ABLE_家事, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;助手可能もしくは陥落済みじゃないとダメ
コマンド実行条件 += "対象が陥落済みか、助手可能でないと実行できない/"
SIF !CFLAG:陥落 && CFLAG:状態 != 2
	COMRESULT = 0
;拘束中はダメ
コマンド実行条件 += "拘束中は実行できない/"
SIF TEQUIP:アイマスク || TEQUIP:縄 || TEQUIP:ボールギャグ || TEQUIP:触手
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0

RETURNF COMRESULT

@COM_家事
PRINTL 家事
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 70
LOSEBASE:気力 += 100

SOURCE:情愛 = 100
SOURCE:性行動 = 500
SOURCE:達成 = 500
SOURCE:反感 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "家事経験", ABL:家事技能+1
CALL EXPUP, "家事経験", ABL:PLAYER:家事技能+1, PLAYER

SIF PLAYER == MASTER && FALLTYPE(TARGET) == 1
	CALL EXPUP, "愛情経験", 1

RETURN 1
