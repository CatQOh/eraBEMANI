;-------------------------------------------------
;お菓子を作る
;-------------------------------------------------
@USERCOM_ABLE_お菓子を作る, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;助手可能もしくは陥落済みじゃないとダメ
SIF !CFLAG:陥落 && CFLAG:状態 != 2
	RETURNF 0
;材料費が無いとダメ
SIF MONEY < 200
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:アイマスク || TEQUIP:縄 || TEQUIP:ボールギャグ || TEQUIP:触手
	RETURNF 0
;お風呂場でもダメ
SIF TEQUIP:お風呂場
	RETURNF 0
;屋外でもダメ
SIF TEQUIP:野外プレイ
	RETURNF 0
;一回の調教で一回まで
SIF TFLAG:お菓子
	RETURNF 0
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_お菓子を作る
PRINTL お菓子を作る
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:奴隷実行 = 1

;料理レベルを入れる 調教後にお菓子を振る舞う際に使う
TFLAG:お菓子 = ABL:料理技能
SIF TFLAG:お菓子 == 0
	TFLAG:お菓子 = -1

;材料費
MONEY -= 200

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 200

SOURCE:習得 = 1000
SOURCE:恭順 = 200
SOURCE:屈従 = 50
SOURCE:逸脱 = 50
SOURCE:反感 = 50
SOURCE:達成 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;経験に応じてボーナス 低いと上がりやすい
SOURCE:習得 += (SOURCE:習得/100)*(100-EXP:料理経験/10)

;歌唱技能は先に処理しておく
SELECTCASE ABL:歌唱技能
	CASE 0
		TIMES SOURCE:達成 , 0.50
	CASE 1
		TIMES SOURCE:達成 , 0.70
	CASE 2
		TIMES SOURCE:達成 , 0.90
	CASE 3
		TIMES SOURCE:達成 , 1.10
	CASE 4
		TIMES SOURCE:達成 , 1.30
	CASE 5
		TIMES SOURCE:達成 , 1.50
	CASE 6
		TIMES SOURCE:達成 , 1.70
	CASE 7
		TIMES SOURCE:達成 , 1.90
	CASE 8
		TIMES SOURCE:達成 , 2.30
	CASE 9
		TIMES SOURCE:達成 , 2.70
	CASE IS >= 10
		TIMES SOURCE:達成 , 4.00
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;歌唱経験
PRINTFORML 料理経験+5
EXP:料理経験 += 5

;実績:ゾンビに料理を作らせる
SIF CSTR:種族 == "ゾンビ"
	CALL 実績解除, "ポイズンクッキング"

RETURN 1

