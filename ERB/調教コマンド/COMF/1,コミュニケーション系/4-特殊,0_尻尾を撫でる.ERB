;-------------------------------------------------
;尻尾を撫でる
;-------------------------------------------------
@USERCOM_ABLE_尻尾を撫でる, ARG
#FUNCTION
;尻尾無いとダメ
SIF !TALENT:尻尾
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_尻尾を撫でる
PRINTL 尻尾を撫でる
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 15

SIF CFLAG:陥落
	SOURCE:情愛 = 200
SOURCE:恭順 = 50
SOURCE:屈従 = 30
SOURCE:恐怖 = 10
SOURCE:不潔 = 30
SOURCE:露出 = 10

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

