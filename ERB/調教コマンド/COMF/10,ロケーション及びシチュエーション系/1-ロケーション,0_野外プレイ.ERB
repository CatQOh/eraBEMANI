SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
増加量 = 2000

;種族で補正
SELECTCASE CSTR:種族
	CASE "獣人", "獣"
		増加量 -= 1000
	;人魚で雨だと消費を抑えられる
	CASE "人魚"
		SELECTCASE FLAG:天気
			CASE 3, 4, 5
				LOSEBASE:体力 -= 20
				LOSEBASE:気力 -= 50
				SOURCE:恐怖 -= 400
				SOURCE:逸脱 -= 700
				SOURCE:反感 -= 700
		ENDSELECT
ENDSELECT

SELECTCASE ABL:マゾっ気
	CASE 0
		TIMES 増加量 , 0.80
		SOURCE:液体 += 0
		SOURCE:欲情 += 0
	CASE 1
		TIMES 増加量 , 1.00
		SOURCE:液体 += 20
		SOURCE:欲情 += 30
	CASE 2
		TIMES 増加量 , 1.20
		SOURCE:液体 += 40
		SOURCE:欲情 += 70
	CASE 3
		TIMES 増加量 , 1.40
		SOURCE:液体 += 70
		SOURCE:欲情 += 120
	CASE 4
		TIMES 増加量 , 1.50
		SOURCE:液体 += 110
		SOURCE:欲情 += 180
	CASE 5
		TIMES 増加量 , 1.70
		SOURCE:液体 += 150
		SOURCE:欲情 += 250
	CASE 6
		TIMES 増加量 , 1.90
		SOURCE:液体 += 200
		SOURCE:欲情 += 300
	CASE 7
		TIMES 増加量 , 2.10
		SOURCE:液体 += 250
		SOURCE:欲情 += 350
	CASE 8
		TIMES 増加量 , 2.30
		SOURCE:液体 += 300
		SOURCE:欲情 += 400
	CASE 9
		TIMES 増加量 , 2.50
		SOURCE:液体 += 350
		SOURCE:欲情 += 450
	CASE IS >= 10
		TIMES 増加量 , 3.00
		SOURCE:液体 += 500
		SOURCE:欲情 += 500
ENDSELECT
SOURCE:露出 += 増加量

SIF SAVESTR:首輪 == "尻尾プラグ付き首輪"
	CALL EXPUP, "Ａ経験", 1

RETURN 1

