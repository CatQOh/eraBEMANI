;-------------------------------------------------
;腸洗浄
;-------------------------------------------------
@USERCOM_ABLE_腸洗浄, ARG
#FUNCTION
;その調教で既に排便済みなら出来ない
コマンド実行条件 += "対象が既に腸洗浄を行っていた場合は実行できない/"
SIF TFLAG:腸洗浄済み
	COMRESULT = 0
;お風呂場じゃないとダメ
コマンド実行条件 += "お風呂場でのみ実行可能/"
SIF !TEQUIP:お風呂場
	COMRESULT = 0
;アナル使用中はダメ
コマンド実行条件 += "対象がA道具使用中は実行できない/"
SIF Ａ使用中(TARGET)
	COMRESULT = 0

RETURNF COMRESULT

@COM_腸洗浄
PRINTL 腸洗浄
CALL KOJO_MESSAGE_COM

TFLAG:腸洗浄済み = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

SOURCE:快A = 100
SOURCE:苦痛 = 300
SOURCE:露出 = 1500
SOURCE:屈従 = 300
SOURCE:不潔 = 300
SOURCE:逸脱 = 500
SOURCE:反感 = 3000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

CALL 特殊ソース処理_Ａ

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 3

RETURN 1

