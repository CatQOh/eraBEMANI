;-------------------------------------------------
;腸洗浄
;-------------------------------------------------
@USERCOM_ABLE_腸洗浄, ARG
#FUNCTION
;その調教で既に排便済みなら出来ない
SIF TFLAG:腸洗浄済み
	RETURNF 0
;お風呂場じゃないとダメ
SIF !TEQUIP:お風呂場
	RETURNF 0
;アナル使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_腸洗浄
PRINTL 腸洗浄
CALL KOJO_MESSAGE_COM

TFLAG:腸洗浄済み = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

SOURCE:快A = 100
SOURCE:苦痛 = 300
SOURCE:露出 = 1500
SOURCE:屈従 = 300
SOURCE:不潔 = 300
SOURCE:逸脱 = 500
SOURCE:反感 = 3000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

CALL 特殊ソース処理_Ａ

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

