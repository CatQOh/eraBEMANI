@USERCOM_ABLE_トイレに行く, ARG
#FUNCTION
;ゲームセンターに居ないとダメ
コマンド実行条件 += "ゲームセンターでのみ実行可能/"
コマンド実行条件 += "ゲームセンターでのみ実行可能/"
SIF !TEQUIP:ゲームセンター
	COMRESULT = 0

RETURNF COMRESULT

@COM_トイレに行く
#DIM DYNAMIC LCOUNT
IF TEQUIP:トイレ
	PRINTL トイレを出る
ELSE
	PRINTL トイレに行く
ENDIF
CALL KOJO_MESSAGE_COM

INVERTBIT TEQUIP:トイレ, 0

IF !TEQUIP:トイレ
	TFLAG:トイレ使用時間 = 0
	FOR LCOUNT, 0, 7
		SIF CSTR:(LCOUNT+100) != ""
			TEQUIP:LCOUNT = 1
		SIF CSTR:MASTER:(LCOUNT+100) != ""
			TEQUIP:MASTER:LCOUNT = 1
		SIF ASSI > 0 && CSTR:ASSI:(LCOUNT+100) != ""
			TEQUIP:ASSI:LCOUNT = 1
	NEXT
	RESET_STAIN MASTER
	RESET_STAIN TARGET
	SIF ASSI > 0
		RESET_STAIN ASSI
	RETURN 1
ENDIF

