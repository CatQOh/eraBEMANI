;-------------------------------------------------
;ビデオポーカーで遊ぶ
;-------------------------------------------------
@USERCOM_ABLE_ビデオポーカーで遊ぶ, ARG
#FUNCTION
;ゲーセンに居ないとダメ
コマンド実行条件 += "ゲームセンターでのみ実行可能/"
SIF !TEQUIP:ゲームセンター
	COMRESULT = 0
;トイレに居るとダメ
コマンド実行条件 += "トイレに居る場合は実行できない/"
SIF TEQUIP:トイレ
	COMRESULT = 0
;筐体あるか確認
コマンド実行条件 += "ゲーセンにビデオポーカー筐体を置いてないと実行できない/"
SIF !EXISTGAMES("ビデオポーカー")
	COMRESULT = 0

RETURNF COMRESULT

@COM_ビデオポーカーで遊ぶ
#DIM DYNAMIC LMONEY
#DIM DYNAMIC パセリ表示記録用
#DIMS DYNAMIC 通貨単位記録用

IF メダル == 0
	PRINTW ビデオポーカーをプレイするにはメダルが必要です
	RETURN 0
ENDIF

PRINTL ビデオポーカーで遊ぶ
CALL KOJO_MESSAGE_COM

LMONEY = MONEY
パセリ表示記録用 = FLAG:パセリ表示
通貨単位記録用 = %通貨単位%

MONEY = メダル
FLAG:パセリ表示 = 0
通貨単位 = 枚

CALL ビデオポーカー, 3

メダル = MONEY

MONEY = LMONEY
FLAG:パセリ表示 = パセリ表示記録用
通貨単位 = %通貨単位記録用%

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 20

SOURCE:恭順 = 100
SOURCE:中毒 = 100
SOURCE:習得 = 100
SOURCE:露出 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

RETURN 1

