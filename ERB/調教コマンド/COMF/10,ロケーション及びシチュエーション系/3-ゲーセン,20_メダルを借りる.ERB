;-------------------------------------------------
;メダルを借りる
;-------------------------------------------------
@USERCOM_ABLE_メダルを借りる, ARG
#FUNCTION
;ゲーセンに居ないとダメ
SIF !TEQUIP:ゲームセンター
	RETURNF 0
;トイレに居るとダメ
SIF TEQUIP:トイレ
	RETURNF 0
;筐体あるか確認
SIF !EXISTGAMES("メダル両替機")
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_メダルを借りる

PRINTL メダルを何枚借りますか？
CALL PASELIL, @"[10] - 10枚(100＄)"
CALL PASELIL, @"[35] - 35枚(300＄)"
CALL PASELIL, @"[70] - 70枚(500＄)"
CALL PASELIL, @"[200] - 200枚(1000＄)"
PRINTL [0] - 借りない

DO
	INPUT
	SELECTCASE RESULT
		CASE 0
			RETURN 0
		CASE 10
			IF MONEY < 100
				PRINTW 所持金が足りません
				RESTART
			ENDIF
			PRINTW メダルを10枚借りました
			メダル += 10
			MONEY -= 100
			RETURN 0
		CASE 35
			IF MONEY < 300
				PRINTW 所持金が足りません
				RESTART
			ENDIF
			PRINTW メダルを35枚借りました
			メダル += 35
			MONEY -= 300
			RETURN 0
		CASE 70
			IF MONEY < 500
				PRINTW 所持金が足りません
				RESTART
			ENDIF
			PRINTW メダルを70枚借りました
			メダル += 70
			MONEY -= 500
			RETURN 0
		CASE 200
			IF MONEY < 1000
				PRINTW 所持金が足りません
				RESTART
			ENDIF
			PRINTW メダルを200枚借りました
			メダル += 200
			MONEY -= 1000
			RETURN 0
	ENDSELECT
LOOP 1

