;-------------------------------------------------
;クリキャップ
;-------------------------------------------------
@USERCOM_ABLE_クリキャップ, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;上級売春中は不可
SIF 上級売春中
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;性器が露出してないとダメ
SIF !性器露出(TARGET)
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:クリキャップ
	COMRESULT = 1
	RETURNF 1
ENDIF
;小人体型持ちは、実行者と対象双方が小人体型ならOK
;それ以外の場合は主人が禁断の知識持ちじゃないとダメ
IF TALENT:小人体型
	SIF !TALENT:MASTER:禁断の知識 && !TALENT:PLAYER:小人体型
		RETURNF 0
ENDIF
;アイテムを持っていないとダメ
SIF ITEM:クリキャップ <= 0
	RETURNF 0

;ペニス持ちはダメ
SIF PENIS(TARGET)
	RETURNF 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURNF 0
ENDIF
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURNF 0
;ペニスバンド装着中はダメ
SIF TEQUIP:ペニスバンド
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_クリキャップ
IF TEQUIP:触手
	PRINTL 触手クリ責め
	SELECTCOM = 163
ELSE
	PRINTL 電動クリキャップ
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:クリキャップ, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 80

SOURCE:快C = 150
SOURCE:露出 = 20
SOURCE:不潔 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30

;[衝動的]持ちは3分の1でアイテム破壊する（調教終了後に修復）
IF (TALENT:衝動的 || TALENT:PLAYER:衝動的) && RAND:3 == 0
	TFLAG:アイテム破壊 = 1
	ITEM:クリキャップ = -1
	TEQUIP:クリキャップ = 0
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_クリキャップ
IF TEQUIP:触手
	PRINTL ＜触手クリ責め中＞
ELSE
	PRINTL ＜クリキャップ装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 5
LOSEBASE:気力 += 20

SOURCE:快C += 100
SOURCE:露出 += 10
SOURCE:不潔 += 10
SOURCE:逸脱 += 15
SOURCE:反感 += 15

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:触手
	TENTACLE++

RETURN 1

