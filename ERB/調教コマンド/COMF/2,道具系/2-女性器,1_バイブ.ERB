	CASE 4
		TIMES LOCAL , 2.00
	CASEELSE
		TIMES LOCAL , 4.00
ENDSELECT

;再装填処理中は射精ゲージは20分の1に
SIF CFLAG:賢者タイム > 0
	LOCAL /= 20

BASE:射精 += LOCAL

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 20

;Vへの苦痛は先に処理しておく
;EXP:Ｖ経験をみる（処女はありえない）
LOCAL = 25
LOCAL:1 = 20
SELECTCASE EXP:Ｖ経験
	CASE IS < EXPLV:2
		TIMES LOCAL , 0.80
		TIMES LOCAL:1 , 1.20
	CASE IS < EXPLV:3
		TIMES LOCAL , 0.40
	CASE IS < EXPLV:4
		TIMES LOCAL , 0.10
	CASE IS >= EXPLV:4
		TIMES LOCAL , 0.00
ENDSELECT

;PALAM:潤滑をみる
SELECTCASE PALAM:潤滑
	CASE IS < PALAMLV:1
		TIMES LOCAL , 1.20
		TIMES LOCAL:1 , 1.50
	CASE IS < PALAMLV:2
		TIMES LOCAL , 0.70
		TIMES LOCAL:1 , 1.20
	CASE IS < PALAMLV:3
		TIMES LOCAL , 0.40
	CASE IS < PALAMLV:4
		TIMES LOCAL , 0.10
	CASE IS >= PALAMLV:4
		TIMES LOCAL , 0.05
ENDSELECT
SOURCE:苦痛 += LOCAL
SOURCE:反感 += LOCAL:1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;自慰実行時は経験+1
SELECTCASE SELECTCOMS
	CASE "自慰", "指挿入れ", "バイブ", "触手挿入"
		PRINTL Ｖ経験+2
		EXP:Ｖ経験 += 2
	CASEELSE
		PRINTL Ｖ経験+1
		EXP:Ｖ経験++
ENDSELECT

;触手経験加算
SIF TEQUIP:触手
	TENTACLE++

RETURN 1

