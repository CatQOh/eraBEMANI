;-------------------------------------------------
;搾精コンドーム
;-------------------------------------------------
@USERCOM_ABLE_搾精コンドーム, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:搾精コンドーム
	COMRESULT = 1
	RETURNF 1
ENDIF
;上級売春中は不可
SIF 上級売春中
	RETURNF 0
;アイテムを持っていないとダメ
SIF !ITEM:搾精コンドーム
	RETURNF 0

;性器が露出してないとダメ
SIF !性器露出(TARGET)
	RETURNF 0

;触手使用中は不可
SIF TEQUIP:触手
	RETURNF 0

;オナホール及びコンドーム使用中は不可
SIF TEQUIP:オナホール || TEQUIP:コンドーム
	RETURNF 0
;ペニス無いとダメ
SIF !PENIS(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_搾精コンドーム
IF TEQUIP:触手
	JUMP COM_オナホール
	SELECTCOM = 170
ELSE
	PRINTL 搾精コンドーム
ENDIF

CALL KOJO_MESSAGE_COM

;着脱の処理
SIF !TEQUIP:触手 && !TEQUIP:搾精コンドーム
	ITEM:搾精コンドーム--
INVERTBIT TEQUIP:搾精コンドーム, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 10

SOURCE:快C = 10
SOURCE:中毒 = 5
SOURCE:液体 = 5
SOURCE:欲情 = 10
SOURCE:屈従 = 5
SOURCE:反感 = 10

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 10

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 0

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_搾精コンドーム
IF TEQUIP:触手
	RETURN 1
ELSE
	PRINTL ＜搾精コンドーム装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 0
LOSEBASE:気力 += 2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF TEQUIP:触手
	TENTACLE++

RETURN 1

