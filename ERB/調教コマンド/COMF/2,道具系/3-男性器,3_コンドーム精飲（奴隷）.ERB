;-------------------------------------------------
;コンドーム精飲（奴隷）
;-------------------------------------------------
@USERCOM_ABLE_コンドーム精飲（奴隷）, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は不可
SIF 上級売春中
	RETURNF 0
;コンドーム精飲（奴隷）
;それまでの調教でゴム射してないとダメ
SIF !TFLAG:使用済み避妊具
	RETURNF 0

COMRESULT = 1
RETURNF 1

@実行判定_コンドーム精飲（奴隷）
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER
LOCAL = RESULT

CALL COM_ORDER_奉仕
LOCAL += RESULT

;男嫌い
IF TALENT:男嫌い
	LOCAL -= 12
	PRINT -男嫌い(12)
ENDIF
;男好き
IF TALENT:男好き
	LOCAL += 3
	PRINT +男好き(3)
ENDIF
;男（両刀・男好きなら無効）
IF SEX(TARGET) == 1 && !TALENT:両刀 && !TALENT:男好き
	LOCAL -= 5
	PRINT -男(5)
ENDIF

;24以上で実行
CALL 実効値判定, LOCAL, 25

RETURN RESULT

@COM_コンドーム精飲（奴隷）
PRINTL コンドーム精飲（奴隷）

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 70

SOURCE:性行動 = 100
SOURCE:達成 = 150
SOURCE:屈従 = 500
SOURCE:逸脱 = 500
SOURCE:反感 = 500
SOURCE:不潔 = 500

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;コンドームの精液を初期化
TFLAG:使用済み避妊具 = 0

CALL EXPUP, "精液経験", 1

CALL 魔力回復, 20

RETURN 1

