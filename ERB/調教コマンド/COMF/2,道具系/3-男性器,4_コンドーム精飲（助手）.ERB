;-------------------------------------------------
;コンドーム精飲（助手）
;特殊コマンド
;-------------------------------------------------
@USERCOM_ABLE_コンドーム精飲（助手）, ARG
#FUNCTION
;コンドーム精飲（助手）
;助手がいないとダメ
SIF ASSI < 1
	RETURNF 0
;それまでの調教でゴム射してないとダメ
SIF !TFLAG:使用済み避妊具
	RETURNF 0
;助手が従順4以上かつ欲望4以上かつ奉仕精神3以上かつ精液中毒が3以上ないとダメ
SIF ABL:ASSI:従順 < 4 || ABL:ASSI:欲望 < 4 || ABL:ASSI:奉仕精神 < 3 || ABL:ASSI:精液中毒 < 3
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_コンドーム精飲（助手）
PRINTL コンドーム精飲（助手）
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5
LOSEBASE:気力 += 30

SOURCE:液体 = 100
SOURCE:屈従 = 300
SOURCE:逸脱 = 200
SOURCE:反感 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 50

;助手と奴隷の相性によって、全体のソースが変化
SOURCE:液体 *= RELATION:(NO:ASSI)
SOURCE:屈従 *= RELATION:(NO:ASSI)
SOURCE:鬱屈 /= RELATION:(NO:ASSI)
SOURCE:逸脱 /= RELATION:(NO:ASSI)
SOURCE:反感 /= RELATION:(NO:ASSI)
SOURCE:液体 /= 100
SOURCE:屈従 /= 100
SOURCE:鬱屈 *= 100
SOURCE:逸脱 *= 100
SOURCE:反感 *= 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;コンドームの精液を初期化
TFLAG:使用済み避妊具 = 0

RETURN 1

