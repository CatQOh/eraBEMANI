;-------------------------------------------------
;搾精器
;-------------------------------------------------
@USERCOM_ABLE_搾精器, ARG
#FUNCTION
#DIM DYNAMIC 条件確定

;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;性器が露出してないとダメ
コマンド実行条件 += "性器が露出していないと実行できない/"
SIF !性器露出(TARGET)
	COMRESULT = 0
;解除はいつでも可能
SIF TEQUIP:搾精器 && COMRESULT
	条件確定 = 1

;小人体型持ちは、実行者と対象双方が小人体型ならOK
;それ以外の場合は主人が禁断の知識持ちじゃないとダメ
コマンド実行条件 += "対象が[小人体型]の場合は、実行者の体型が同じか主人に[禁断の知識]が無いと実行できない/"
IF TALENT:小人体型
	SIF !TALENT:MASTER:禁断の知識 && !TALENT:PLAYER:小人体型
		COMRESULT = 0
ENDIF
;アイテムを持っていないとダメ
コマンド実行条件 += "搾精器に改造した搾乳機が必要/"
SIF ITEM:搾乳器 <= 0
	COMRESULT = 0
;Ｐ使用中はダメ
コマンド実行条件 += "対象の男性器に道具使用中は実行できない/"
SIF Ｐ使用中(TARGET) || TEQUIP:コンドーム || TEQUIP:搾精コンドーム
	COMRESULT = 0
;ペニス無いとダメ
コマンド実行条件 += "対象に男性器が必要/"
SIF !PENIS(TARGET)
	COMRESULT = 0
;少なくとも半立ち状態じゃないとダメ
コマンド実行条件 += @"対象の勃起{PALAMLV:2}未満だと実行できない/"
SIF PALAM:勃起 < PALAMLV:2
	COMRESULT = 0
;搾精器に改造されてないとダメ
SIF SAVESTR:搾乳器 != "搾精器"
	COMRESULT = 0
;新妻プレイ中はダメ
コマンド実行条件 += "エプロン使用中は実行できない/"
SIF TEQUIP:エプロン
	COMRESULT = 0

IF 条件確定
	COMRESULT = 1
	RETURNF 1
ENDIF
RETURNF COMRESULT

@COM_搾精器
#DIM DYNAMIC 増加量

PRINTL 搾精器
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:搾精器, 0

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
増加量 = 100

;ABL:欲望をみる
増加量 += (増加量/10)*ABL:欲望

;奴隷のABL:Ｃ感覚をみる
SELECTCASE ABL:Ｃ感覚
	CASE 0
		TIMES 増加量 , 0.50
	CASE 1
		TIMES 増加量 , 1.00
	CASE 2
		TIMES 増加量 , 1.50
	CASE 3
		TIMES 増加量 , 2.00
	CASE 4
		TIMES 増加量 , 3.00
	CASEELSE
		増加量 += 増加量*ABL:Ｃ感覚
ENDSELECT

CALL 射精ゲージ増加, 増加量, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

SOURCE:快C = 500
SOURCE:露出 = 200
SOURCE:不潔 = 100
SOURCE:逸脱 = 200
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 200

;[衝動的]持ちは3分の1でアイテム破壊する（調教終了後に修復）
IF ((TALENT:衝動的 && !特質("しつけ")) || (TALENT:PLAYER:衝動的 && !特質("しつけ", PLAYER))) && RAND:3 == 0 && !TEQUIP:触手
	TFLAG:アイテム破壊 = 1
	ITEM:搾乳器 = -1
	TEQUIP:搾精器 = 0
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 2, 1

RETURN 1

