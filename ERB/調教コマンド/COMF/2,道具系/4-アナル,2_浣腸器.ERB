;-------------------------------------------------
;浣腸器
;-------------------------------------------------
@USERCOM_ABLE_浣腸器, ARG
#FUNCTION
;上級売春中は不可
SIF 上級売春中
	RETURNF 0

;その調教で既に排便済みなら出来ない
SIF TFLAG:腸洗浄済み
	RETURNF 0

;服着てるとダメ
SIF !性器露出(TARGET)
	RETURNF 0

;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:浣腸器
	COMRESULT = 1
	RETURNF 1
ENDIF

;無機物はダメ
SIF TALENT:無機物
	RETURNF 0
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	RETURNF 0
;アイテムを持っていないとダメ
SIF !ITEM:浣腸器
	RETURNF 0
;Ａ経験が100未満じゃできない
SIF EXP:Ａ経験 < 100
	RETURNF 0
;従順、欲望の合計が6ないとできない
SIF ABL:従順+ABL:欲望 < 6
	RETURNF 0

;アナル使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_浣腸器
IF TEQUIP:触手
	PRINTL 触手浣腸
	SELECTCOM = 167
ELSE
	PRINTL 浣腸器
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:浣腸器, 0

;触手浣腸は触手の汚れを追加
SIF TEQUIP:触手
	SETBIT STAIN:アナル, 5
;解除時
IF !TEQUIP:浣腸器
	IF !CFLAG:浣腸器で脱糞した経験
		EXP:異常経験++
		PRINTFORML 異常経験+1
	ENDIF
	CFLAG:浣腸器で脱糞した経験++
	SIF TEQUIP:ビデオカメラ
		CFLAG:脱糞を撮影された経験++
	SETBIT STAIN:アナル, 3
	TFLAG:腸洗浄済み = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 150

SOURCE:快A = 300
SOURCE:苦痛 = 500
SOURCE:露出 = 1000
SOURCE:屈従 = 200
SOURCE:不潔 = 800
SOURCE:逸脱 = 800
SOURCE:反感 = 3000
;解除時
IF !TEQUIP:浣腸器
	SOURCE:露出 += 1000
	SOURCE:反感 += 2000
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

CALL 特殊ソース処理_Ａ

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 4

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_浣腸器
;浣腸+アナルプラグ挿入中
IF TEQUIP:触手
	PRINTL ＜浣腸触手挿入中＞
ELSE
	PRINTL ＜浣腸器挿入中＞
ENDIF

LOSEBASE:体力 += 30
LOSEBASE:気力 += 100

SOURCE:快A += 150
SOURCE:屈従 += 100
SOURCE:露出 += 300
SOURCE:不潔 += 300
SOURCE:逸脱 += 250

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 250

CALL 特殊ソース処理_Ａ道具, 250, 250

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
SELECTCASE SELECTCOMS
	CASE "浣腸器"
		PRINTL Ａ経験+3
		EXP:Ａ経験 += 3
	CASEELSE
		PRINTL Ａ経験+1
		EXP:Ａ経験++
ENDSELECT

RETURN 1

