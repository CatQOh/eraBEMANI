;-------------------------------------------------
;空気浣腸
;-------------------------------------------------
@USERCOM_ABLE_空気浣腸, ARG
#FUNCTION
;上級売春中は不可
SIF 上級売春中
	RETURNF 0

;服着てるとダメ
SIF !性器露出(TARGET)
	RETURNF 0

;無機物はダメ
SIF TALENT:無機物
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	RETURNF 0
;アイテムを持っていないとダメ
SIF !ITEM:空気ポンプ
	RETURNF 0
;アナル使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0

;Ａ経験が50未満じゃできない
SIF EXP:Ａ経験 < 50
	RETURNF 0
;露出癖、欲望、従順の合計が10ないとできない
SIF ABL:露出癖+ABL:欲望+ABL:従順 < 10
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_空気浣腸
PRINTL 空気浣腸
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 40
LOSEBASE:気力 += 100

SOURCE:快A = 100
SOURCE:苦痛 = 150
SOURCE:露出 = 700
SOURCE:屈従 = 50
SOURCE:逸脱 = 300
SOURCE:反感 = 400

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100

CALL 特殊ソース処理_Ａ道具

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
PRINTL Ａ経験+1
EXP:Ａ経験++

CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

