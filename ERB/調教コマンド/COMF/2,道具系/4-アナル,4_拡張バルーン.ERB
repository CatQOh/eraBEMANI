;-------------------------------------------------
;拡張バルーン
;-------------------------------------------------
@USERCOM_ABLE_拡張バルーン, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;上級売春中は不可
SIF 上級売春中
	RETURNF 0

;服着てるとダメ
SIF !性器露出(TARGET)
	RETURNF 0

;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;解除はいつでも可能
IF TEQUIP:拡張バルーン
	COMRESULT = 1
	RETURNF 1
ENDIF
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && !TALENT:MASTER:禁断の知識
	RETURNF 0
;アイテムを持っていないとダメ
SIF ITEM:拡張バルーン <= 0
	RETURNF 0
;アナル使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_拡張バルーン
PRINTL 拡張バルーン
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:拡張バルーン, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 200

SOURCE:快A = 200
SOURCE:苦痛 = 800
SOURCE:露出 = 300
SOURCE:屈従 = 400
SOURCE:逸脱 = 700
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

CALL 特殊ソース処理_Ａ

;[衝動的]持ちは3分の1でアイテム破壊する（調教終了後に修復）
IF (TALENT:衝動的 || TALENT:PLAYER:衝動的) && RAND:3 == 0
	TFLAG:アイテム破壊 = 1
	ITEM:拡張バルーン = -1
	TEQUIP:拡張バルーン = 0
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;装備で既に計算されてるので1なら異常経験+
IF !EXP:Ｖ拡張経験 && EXP:Ａ拡張経験 == 1
	PRINTL 異常経験+1
	EXP:異常経験++
ENDIF

CALL EXPUP_BASE, 1, 4

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_拡張バルーン
PRINTL ＜拡張バルーン挿入中＞

LOSEBASE:体力 += 50
LOSEBASE:気力 += 100

SOURCE:快A += 100
SOURCE:苦痛 += 50
SOURCE:露出 += 150
SOURCE:屈従 += 200
SOURCE:逸脱 += 350

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 350

CALL 特殊ソース処理_Ａ道具, 400, 350

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SELECTCASE SELECTCOMS
	CASE "拡張バルーン"
		PRINTL Ａ経験+5
		EXP:Ａ経験 += 5
	CASEELSE
		PRINTL Ａ経験+3
		EXP:Ａ経験 += 3
ENDSELECT

PRINTL Ａ拡張経験+1
EXP:Ａ拡張経験++

