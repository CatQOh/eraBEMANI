;-------------------------------------------------
;乳首ローター
;-------------------------------------------------
@USERCOM_ABLE_乳首ローター, ARG
#FUNCTION
;ゲーセンに居る場合はトイレじゃないとできない
SIF TEQUIP:ゲームセンター && !TEQUIP:トイレ
	RETURNF 0
;上級売春中はアイテム無いとダメ
IF 上級売春中
	SIF !ITEM:娼館ローター
		RETURNF 0
ELSE
	;アイテムを持っていないとダメ
	SIF !ITEM:ローター
		RETURNF 0
ENDIF
;胸使用中は不可
SIF Ｂ使用中(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_乳首ローター
PRINTL 乳首ローター
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 15
LOSEBASE:気力 += 40

DOWNBASE:MASTER:体力 += 30
DOWNBASE:MASTER:気力 += 20

SOURCE:快B = 300
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30

;------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

