;-------------------------------------------------
;ローション
;-------------------------------------------------
@USERCOM_ABLE_ローション, ARG
#FUNCTION
;ローション実行判定
;アイテムを持っていないとダメ
SIF !ITEM:ローション
	RETURNF 0
;全裸じゃないとダメ
SIF OVER_GENITAL(TARGET) != "" || OVER_BUST(TARGET) != ""
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_ローション
PRINTL ローション
CALL KOJO_MESSAGE_COM

ITEM:ローション--

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 3

SOURCE:液体 = 10000
SOURCE:露出 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

;実績:レーヴァスレーターにローションを使う
SIF CHARANAMEF(TARGET) == "レーヴァスレーター"
	CALL 実績解除, "ピピピピピ…ボカーン"

RETURN 1

