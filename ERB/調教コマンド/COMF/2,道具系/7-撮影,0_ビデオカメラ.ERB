;-------------------------------------------------
;ビデオカメラ
;-------------------------------------------------
@USERCOM_ABLE_ビデオカメラ, ARG
#FUNCTION
#DIM DYNAMIC 条件確定

;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;マジックミラー撮影中はダメ
コマンド実行条件 += "マジックミラーによる撮影中は実行できない/"
SIF TEQUIP:羞恥プレイ && SAVESTR:大鏡 == "マジックミラー"
	COMRESULT = 0
;解除はいつでも可能
SIF TEQUIP:ビデオカメラ && COMRESULT
	条件確定 = 1

;カメラとテープのアイテムを持っていないとダメ
コマンド実行条件 += "アイテム[ビデオカメラ][ビデオテープ]が必要/"
SIF !ITEM:ビデオカメラ || !ITEM:ビデオテープ
	COMRESULT = 0

IF 条件確定
	COMRESULT = 1
	RETURNF 1
ENDIF
RETURNF COMRESULT

@COM_ビデオカメラ
;撮影者の処理
IF !TEQUIP:ビデオカメラ && ASSI > 0
	PRINTL 撮影者を選択してください　途中変更はできません
	PRINTL （撮影者を変更する場合、一度撮影を終了してください）
	PRINTFORML [0] %CALLNAME:MASTER%
	PRINTFORML [1] %CALLNAME:ASSI%
	PRINTL [2] やめる
	DO
		SIF ISSKIP()
			BREAK
		INPUT
		SELECTCASE RESULT
			CASE 0
				TFLAG:ビデオ撮影者 = 1
				PRINTFORML 撮影者は%CALLNAME:MASTER%です
				BREAK
			CASE 1
				TFLAG:ビデオ撮影者 = 2
				PRINTFORML 撮影者は%CALLNAME:ASSI%です
				BREAK
			CASE 2
				RETURN 0
		ENDSELECT
	LOOP 1
ELSEIF !TEQUIP:ビデオカメラ
	TFLAG:ビデオ撮影者 = 1
	PRINTFORML 撮影者は%CALLNAME:MASTER%です
ENDIF

CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:ビデオカメラ
	;ビデオ撮影がされていれば終了させる
	;テープは終了時に数を減らす、さらにこれまでの値段と経験を加算する
	TEQUIP:ビデオカメラ = 0
	ITEM:ビデオテープ--
	CALL PRICE_VIDEO
	PRINTW ★★★ビデオ撮影を終了します★★★
ELSE
	;ビデオ撮影してなければ初期化して開始
	TEQUIP:ビデオカメラ = 1
	TFLAG:ビデオ撮影回数 = 0
	VARSET ビデオ撮影内容, 
	PRINTW ★★★ビデオ撮影を開始します★★★
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_ビデオカメラ
#DIM DYNAMIC 増加量

;撮影開始時はカウントに入れない
SIF SELECTCOMS == "ビデオカメラ"
	RETURN 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 50

SOURCE:恐怖 += 300
SOURCE:露出 += 300
SOURCE:逸脱 += 400
SOURCE:反感 += 800

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 700

;苦痛を伴わないマゾっ気及びマゾの処理は先にしておく
;マゾっ気を見る
増加量 = 200
SELECTCASE ABL:マゾっ気
	CASE 0
		TIMES 増加量 , 0.80
		SOURCE:液体 += 0
		SOURCE:欲情 += 0
	CASE 1
		TIMES 増加量 , 1.00
		SOURCE:液体 += 20
		SOURCE:欲情 += 30
	CASE 2
		TIMES 増加量 , 1.20
		SOURCE:液体 += 40
		SOURCE:欲情 += 60
	CASE 3
		TIMES 増加量 , 1.40
		SOURCE:液体 += 60
		SOURCE:欲情 += 90
	CASE 4
		TIMES 増加量 , 1.50
		SOURCE:液体 += 80
		SOURCE:欲情 += 120
	CASE 5
		TIMES 増加量 , 1.70
		SOURCE:液体 += 100
		SOURCE:欲情 += 150
	CASE 6
		TIMES 増加量 , 1.90
		SOURCE:液体 += 120
		SOURCE:欲情 += 180
	CASE 7
		TIMES 増加量 , 2.10
		SOURCE:液体 += 140
		SOURCE:欲情 += 210
	CASE 8
		TIMES 増加量 , 2.30
		SOURCE:液体 += 160
		SOURCE:欲情 += 240
	CASE 9
		TIMES 増加量 , 2.50
		SOURCE:液体 += 180
		SOURCE:欲情 += 270
	CASE IS >= 10
		TIMES 増加量 , 3.00
		SOURCE:液体 += 200
		SOURCE:欲情 += 300
ENDSELECT

;ナルシスト
IF TALENT:ナルシスト
	SOURCE:欲情 += 50
	SOURCE:露出 += 100
	SOURCE:屈従 += 50
ENDIF

SOURCE:露出 += 増加量

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SELECTCASE TFLAG:ビデオ撮影者
	CASE 1
		CALL EXPUP, "撮影経験", 1, MASTER
	CASE 2
		CALL EXPUP, "撮影経験", 1, ASSI
ENDSELECT
CALL EXPUP, "被写経験", 1

;-------------------------------------------------
;ビデオの処理
;-------------------------------------------------
;撮影内容の保存
ビデオ撮影内容:(TFLAG:ビデオ撮影回数) = %SELECTCOMS%
TFLAG:ビデオ撮影回数++

;テープ残量がなくなると強制的にTEQUIPフラグを外す、さらにビデオの値段と経験の処理をする
IF TFLAG:ビデオ撮影回数 >= 10
	TEQUIP:ビデオカメラ = 0
	ITEM:ビデオテープ--
	CALL PRICE_VIDEO
	PRINTL ＜テープの残量がなくなりました　ビデオ撮影を終了します＞
ELSE
	PRINTFORML ＜ビデオ撮影中{TFLAG:ビデオ撮影回数}/10＞
ENDIF

;実績:うさぬこの自慰を撮影する
SIF CHARANAMEF(TARGET) == "＊うさぬこ＊" && SELECTCOMS == "自慰"
	CALL 実績解除,  "「F◯2アダルトに投稿するんだぬ？」"

RETURN 1

