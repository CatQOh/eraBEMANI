@USERCOM_ABLE_蜂蜜ローション, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;蜂蜜が必要
コマンド実行条件 += "食材[蜂蜜]が必要/"
SIF !材料一式判定("蜂蜜")
	COMRESULT = 0
;全裸じゃないとダメ
コマンド実行条件 += "対象が服を着てると実行できない/"
SIF OVER_GENITAL(TARGET) != "" || OVER_BUST(TARGET) != ""
	COMRESULT = 0
;シャワー中はダメ
コマンド実行条件 += "シャワー中は実行できない/"
SIF TEQUIP:シャワー
	COMRESULT = 0

RETURNF COMRESULT

@COM_蜂蜜ローション
PRINTL 蜂蜜ローション
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 3

DOWNBASE:MASTER:体力 += 10
DOWNBASE:MASTER:気力 += 10

;実際のローションより効果が薄い
SOURCE:液体 = 5000
SOURCE:露出 = 100
SOURCE:不潔 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

;実績:レーヴァスレーターにローションを使う
SIF CHARANAMEF(TARGET) == "レーヴァスレーター"
	CALL 実績解除, "ピピピピピ…ボカーン"

RETURN 1

