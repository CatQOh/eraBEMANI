SIF TALENT:PLAYER:無機物 || CSTR:PLAYER:種族 == "機械"
	COMRESULT = 0

RETURNF COMRESULT

@実行判定_スライム姦させる
#DIM DYNAMIC LCOUNT
#DIM DYNAMIC 実効値, 2
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER
実効値 = RESULT

CALL COM_ORDER_欲情, 0
実効値 += RESULT

FOR LCOUNT, 0, VARSIZE("TALENT")
	実効値:1 = 0
	SIF !TALENT:LCOUNT
		CONTINUE
	SELECTCASE TALENTNAME:LCOUNT
		CASE "恥じらい"
			実効値:1 = -7
		CASE "快感の否定"
			SIF FALLTYPE(TARGET) != 2
				実効値:1 = -10
		CASE "貞操観念"
			SIF FALLTYPE(TARGET) != 1 || PLAYER != MASTER
				実効値:1 = -10
		CASE "貞操無頓着"
			実効値:1 = 3
		CASE "男嫌い"
			SIF SEX(PLAYER) == 1 && (FALLTYPE(TARGET) != 1 || PLAYER != MASTER)
				実効値:1 = -12
		CASE "女嫌い"
			SIF SEX(PLAYER) == 2 && (FALLTYPE(TARGET) != 1 || PLAYER != MASTER)
				実効値:1 = -12
		CASE "処女"
			実効値:1 = -40
	ENDSELECT
	IF 実効値:1
		PRINTFORM \@SIGN(実効値:1) == 1 ? + # - \@%TALENTNAME:LCOUNT%({ABS(実効値:1)})
		実効値 += 実効値:1
	ENDIF
NEXT

;V経験
IF !TALENT:処女 && EXP:Ｖ経験 < 30
	実効値 -= 15
	PRINT -Ｖ経験不足(15)
ENDIF

;A経験
IF EXP:Ａ経験 < 100
	実効値 -= 30
	PRINT -Ａ経験不足(30)
ENDIF

;媚薬
IF TEQUIP:媚薬
	実効値 += 6
	PRINT +媚薬(6)
ENDIF

;溶ける快を持たない
IF !TALENT:溶ける快
	実効値 -= 34
	PRINT -溶ける快に目覚めてない(34)
ENDIF

;35以上で実行
CALL 実効値判定, 実効値, 35

RETURN RESULT

@COM_スライム姦させる
#DIM DYNAMIC 増加量
#DIM DYNAMIC 射精先

PRINTL スライム姦させる

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;実行者が奴隷フラグ
TFLAG:奴隷実行 = 1

;V経験を伴うコマンドのフラグ(処女膜再生対応)
TFLAG:膣コマンド = 1
SIF FALLTYPE(TARGET) == 1 && PLAYER == MASTER && TALENT:処女
	TFLAG:恋慕処女 = 1

;童貞喪失
IF TALENT:PLAYER:童貞
	TALENT:PLAYER:童貞 = 0
	IF TALENT:PLAYER:性転換済
		CSTR:PLAYER:性転換童貞 = %NAME:TARGET%
	ELSE
		CSTR:PLAYER:童貞 = %NAME:TARGET%
	ENDIF
ENDIF

;-------------------------------------------------
;脱衣
;-------------------------------------------------
IF OVER_GENITAL(TARGET) != ""
	IF CFLAG:挿入可
		TEQUIP:下半身下着 = 0
	ELSE
		TEQUIP:下半身下着 = 0
		TEQUIP:下半身上着 = 0
		TEQUIP:全身上着 = 0
	ENDIF
ENDIF

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
増加量 = 射精ゲージ計算_実行者受け(600)

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += 増加量/10*4*ABL:技巧

CALL 射精ゲージ増加, 増加量, PLAYER

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
増加量 = 射精ゲージ計算_奴隷挿入(800)

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += 増加量/10*4*ABL:技巧

CALL 射精ゲージ増加, 増加量, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 150
LOSEBASE:気力 += 200

DOWNBASE:MASTER:体力 += 80
DOWNBASE:MASTER:気力 += 60

;元々の形を捨てての行為なので、各感覚へのソースがランダム変動
SELECTCASE RAND:5
	CASE 0
		SOURCE:快C = 300
	CASE 1
		SOURCE:快C = 350
	CASE 2
		SOURCE:快C = 400
	CASE 3
		SOURCE:快C = 450
	CASE 4
		SOURCE:快C = 500
ENDSELECT
SELECTCASE RAND:5
	CASE 0
		SOURCE:快B = 300
	CASE 1
		SOURCE:快B = 350
	CASE 2
		SOURCE:快B = 400
	CASE 3
		SOURCE:快B = 450
	CASE 4
		SOURCE:快B = 500
ENDSELECT
SELECTCASE RAND:5
	CASE 0
		SOURCE:快V = 300
	CASE 1
		SOURCE:快V = 350
	CASE 2
		SOURCE:快V = 400
	CASE 3
		SOURCE:快V = 450
	CASE 4
		SOURCE:快V = 500
ENDSELECT
SELECTCASE RAND:5
	CASE 0
		SOURCE:快A = 300
	CASE 1
		SOURCE:快A = 350
	CASE 2
		SOURCE:快A = 400
	CASE 3
		SOURCE:快A = 450
	CASE 4
		SOURCE:快A = 500
ENDSELECT

SOURCE:性行動 = 500
SOURCE:屈従 = 1000
SOURCE:逸脱 = 800
SOURCE:露出 = 100
SOURCE:反感 = 100
SOURCE:恐怖 = 50
SOURCE:恭順 = 200
SOURCE:不潔 = 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 800

IF TALENT:PLAYER:処女
	IF TALENT:PLAYER:性転換済
		IF ASSIPLAY
			IF CFLAG:ASSI:陥落
				CFLAG:ASSI:性転換処女の奪われ方 = 2
			ELSEIF 相性値(ASSI, TARGET)
				CFLAG:ASSI:性転換処女の奪われ方 = 3
			ELSE
				CFLAG:ASSI:性転換処女の奪われ方 = 1
			ENDIF
		ENDIF
		CSTR:PLAYER:性転換処女 = %NAME:TARGET%
	ELSE
		IF ASSIPLAY
			IF CFLAG:ASSI:陥落
				CFLAG:ASSI:処女の奪われ方 = 2
			ELSEIF 相性値(ASSI, TARGET)
				CFLAG:ASSI:処女の奪われ方 = 3
			ELSE
				CFLAG:ASSI:処女の奪われ方 = 1
			ENDIF
		ENDIF
		CSTR:PLAYER:処女 = %NAME:TARGET%
	ENDIF
ENDIF

IF TALENT:PLAYER:処女 || TALENT:PLAYER:再生処女
	PRINTFORMW %CALLNAME:PLAYER%処女喪失
	SETBIT STAIN:PLAYER:膣内, 6
ENDIF

TALENT:PLAYER:処女 = 0
TALENT:PLAYER:再生処女 = 0

;貞操観念持ちで恋慕、親愛持ち以外には常に反発のソースを追加する（セックス系のみ）
SIF TALENT:貞操観念 && (FALLTYPE(TARGET) != 1 || PLAYER != MASTER)
	SOURCE:反感 += 1000

;処女だった場合は、苦痛のソースと反発のソースを追加する
IF TALENT:処女
	SOURCE:苦痛 += 2000
	SOURCE:反感 += 3000
ENDIF

;再生処女だった場合は、苦痛のソースと反発のソースを追加する
IF TALENT:再生処女
	SOURCE:苦痛 += 500
	SOURCE:反感 += 1000
ENDIF

;溶ける快を持たない場合は苦痛、恐怖、反発のソースを追加する
IF !TALENT:溶ける快
	SOURCE:苦痛 += 450
	SOURCE:恐怖 += 1150
	SOURCE:反感 += 700
ENDIF

;スライム同士の行為であれば４感覚のソースを追加する
IF CSTR:PLAYER:種族 == "スライム" || TALENT:PLAYER:スライム
	SOURCE:快C += 100
	SOURCE:快B += 100
	SOURCE:快V += 100
	SOURCE:快A += 100
ENDIF


CALL 特殊ソース処理_Ｖ
CALL 特殊ソース処理_Ａ
CALL 特殊ソース処理_セックス

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;射精時の処理
IF PLAYER == MASTER
	射精先 = 1
ELSEIF PLAYER == ASSI
	射精先 = 2
ENDIF

CALL SAMEN_CHECK, 6
CALL SAMEN_CHECK_T, 射精先

CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 射精先, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;膣内に破瓜の血の汚れを付加
SIF (TALENT:処女 || TALENT:再生処女) && CSTR:種族 != "スライム"
	SETBIT STAIN:膣内, 6
;奴隷の膣内⇔調教者のペニスの汚れが移動
STAIN:膣内 |= STAIN:PLAYER:ペニス
STAIN:PLAYER:ペニス |= STAIN:膣内

;調教者の全ての部位に粘液汚れを付加
SETBIT STAIN:PLAYER:口, 5
SETBIT STAIN:PLAYER:手, 5
SIF PENIS(PLAYER)
	SETBIT STAIN:PLAYER:ペニス, 5
SIF VAGINA(PLAYER)
	SETBIT STAIN:PLAYER:ヴァギナ, 5
SETBIT STAIN:PLAYER:アナル, 5
SETBIT STAIN:PLAYER:胸, 5
SETBIT STAIN:PLAYER:膣内, 5
SIF TEQUIP:PLAYER:下半身下着
	SETBIT STAIN:PLAYER:下着, 5

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 3, 2

CALL EXPUP, "Ｖ経験", 1
CALL EXPUP, "Ａ経験", 1
CALL EXPUP, "性交経験", 1
CALL EXPUP, "性交経験", 1, PLAYER
CALL EXPUP, "苦痛快楽経験", 1, PLAYER

;異常経験
IF CSTR:PLAYER:種族 != "スライム" && !CFLAG:PLAYER:スライム姦された経験
	PRINTL ＜スライム姦＞
	CALL EXPUP, "異常経験", 1, PLAYER
ENDIF
CFLAG:PLAYER:スライム姦された経験++

;スライム深度増加処理
IF !FLAG:抗スライム
	CFLAG:スライム度 += RAND(50, 100)
	IF CSTR:PLAYER:種族 == "スライム"
		CFLAG:PLAYER:スライム度 += RAND(50, 100)
	ELSE
		CFLAG:PLAYER:スライム度 += RAND(1, 3)
	ENDIF
ENDIF

;恋慕or親愛なら愛情経験+ 中出しでさらに+
IF FALLTYPE(TARGET) == 1 && PLAYER == MASTER
	IF NOWEX:射精 && !GETBIT(TFLAG:避妊具射精, 2)
		CALL EXPUP, "愛情経験", 2
	ELSE
		CALL EXPUP, "愛情経験", 1
	ENDIF
ENDIF

;魔力回復
CALL 魔力回復, 3, PLAYER

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1


経験回数:PLAYER:(NO:TARGET) += 1
経験回数:TARGET:(NO:PLAYER) += 1

RETURN 1

