;-------------------------------------------------
;顔面騎乗する
;-------------------------------------------------
@USERCOM_ABLE_顔面騎乗する, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は客がマゾじゃないとダメ
SIF 上級売春中 && !TALENT:マゾ
	RETURNF 0
;調教者がヴァギナ無いとダメ
SIF !VAGINA(PLAYER)
	RETURNF 0
;猫舌の奴隷の場合は技巧Lv2以上必要
SIF TALENT:猫舌 && ABL:技巧 < 2
	RETURNF 0
;ボールギャグ使用中は不可
SIF TEQUIP:ボールギャグ
	RETURNF 0
;服着てる場合は下が空いていないとダメ 下着一体型全身上着は例外
IF TEQUIP:PLAYER:下半身上着 || (TEQUIP:PLAYER:全身上着 && CFLAG:PLAYER:着衣併用 != 1)
	SIF !CFLAG:PLAYER:挿入可 && !CFLAG:PLAYER:着衣併用 != 2
		RETURNF 0
ENDIF
;PLAYERがペニスバンド装着中はダメ
SIF TEQUIP:PLAYER:ペニスバンド
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_顔面騎乗する
PRINTL 顔面騎乗する
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:奴隷実行 = 1

;-------------------------------------------------
;射精ゲージチェック（ふたなりの場合）
;-------------------------------------------------
LOCAL = 射精ゲージ計算_奉仕(100)

;TALENT:舌使いをみる
SIF TALENT:舌使い
	TIMES LOCAL , 2.00

CALL 射精ゲージ増加, LOCAL, PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 30
LOSEBASE:気力 += 100

DOWNBASE:MASTER:体力 += 30
DOWNBASE:MASTER:気力 += 30

SOURCE:性行動 = 300
SOURCE:恐怖 = 300
SOURCE:達成 = 100
SOURCE:屈従 = 500
SOURCE:逸脱 = 400
SOURCE:反感 = 400
SOURCE:不潔 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 400

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK, 6
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 3, 2

;奴隷が猫舌持ちの場合は嗜虐快楽経験を追加
SIF TALENT:猫舌
	CALL EXPUP, "嗜虐快楽経験", 1

CALL 魔力回復, 5
CALL 獣人催淫, 1

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1

;実績:紗矢で士朗を中出しさせた後に顔面騎乗する
IF CHARANAMEF(TARGET) == "神崎 士朗" && CHARANAMEF(PLAYER) == "神崎 紗矢"
	IF PLAYER == MASTER && GETBIT(TFLAG:中出し, 4)
		CALL 実績解除, "「士朗ちゃん、どう責任取ってくれるのかしら？」"
	ELSEIF PLAYER == ASSI && PREG:2
		CALL 実績解除, "「士朗ちゃん、どう責任取ってくれるのかしら？」"
	ENDIF
ENDIF

RETURN 1

