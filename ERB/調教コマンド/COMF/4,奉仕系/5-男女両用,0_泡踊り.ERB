;-------------------------------------------------
;泡踊り
;-------------------------------------------------
@USERCOM_ABLE_泡踊り, ARG
#FUNCTION
;上級売春中は不可
SIF 上級売春中
	RETURNF 0
;お風呂場プレイ中でプレイマットが無いとダメ
SIF !TEQUIP:お風呂場 || !ITEM:プレイマット
	RETURNF 0
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURNF 0
;Ｖ仕様中はダメ
SIF Ｖ使用中(TARGET)
	RETURNF 0
;Ａ使用中はダメ
SIF Ａ使用中(TARGET)
	RETURNF 0
;Ｂ使用中は不可
SIF Ｂ使用中(TARGET)
	RETURNF 0
;オナホール使用中はダメ
SIF TEQUIP:オナホール
	RETURNF 0
;ボールギャグ使用中は不可
SIF TEQUIP:ボールギャグ
	RETURNF 0
;縄使用中は不可
SIF TEQUIP:縄
	RETURNF 0
;アイマスク使用中は不可
SIF TEQUIP:アイマスク
	RETURNF 0
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@実行判定_泡踊り
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER
LOCAL = RESULT

CALL COM_ORDER_奉仕
LOCAL += RESULT

;40以上で実行
CALL 実効値判定, LOCAL, 40

RETURN RESULT

@COM_泡踊り
PRINTL 泡踊り

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;実行者が奴隷であるフラグ
TFLAG:奴隷実行 = 1

;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
IF CFLAG:PLAYER:貞操帯
	LOCAL = 0
ELSE
	LOCAL = 300
ENDIF

LOCAL = 射精ゲージ計算_奉仕(LOCAL)

;種族:人魚なら水の扱いが得意なので増やす
SIF CSTR:種族 == "人魚"
	TIMES LOCAL , 1.50

CALL 射精ゲージ増加, LOCAL, PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 70
LOSEBASE:気力 += 100

SOURCE:快C = 200
SOURCE:快B = 200
SOURCE:情愛 = 900
SOURCE:恭順 = 900
SOURCE:性行動 = 1300
SOURCE:達成 = 700
SOURCE:屈従 = 900
SOURCE:逸脱 = 400
SOURCE:反感 = 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK, 6
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の汚れ
RESET_STAIN TARGET

;調教者の汚れ
IF PLAYER == MASTER
	RESET_STAIN MASTER
ELSE
	RESET_STAIN ASSI
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 2, 2

;愛情経験
SIF FALLTYPE(TARGET) == 1 && PLAYER == MASTER
	CALL EXPUP, "愛情経験", 1

TFLAG:奉仕快楽 = 1

RETURN 1

