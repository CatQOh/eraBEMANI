;-------------------------------------------------
;アイマスク
;-------------------------------------------------
@USERCOM_ABLE_アイマスク, ARG
#FUNCTION
;アイマスク実行判定
;解除はいつでも可能
IF TEQUIP:アイマスク
	COMRESULT = 1
	RETURNF 1
ENDIF
;アイテムを持っていないとダメ
SIF !ITEM:アイマスク
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_アイマスク
PRINTL アイマスク
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:アイマスク, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 80

SOURCE:恐怖 = 50
SOURCE:露出 = 100
SOURCE:逸脱 = 300
SOURCE:反感 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
SELECTCASE GETEXPLV(EXP:緊縛経験, 4)
	CASE IS <= 2
		TIMES LOSEBASE:気力 , 1.00
	CASE 3
		TIMES LOSEBASE:気力 , 0.90
	CASE 4
		TIMES LOSEBASE:気力 , 0.70
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 2
PRINTL 緊縛経験+2

CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_アイマスク
PRINTL ＜アイマスク装着中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 10
LOSEBASE:気力 += 40

SOURCE:恐怖 += 200
SOURCE:露出 += 50
SOURCE:逸脱 += 150
SOURCE:反感 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
LOCAL = 40
SELECTCASE GETEXPLV(EXP:緊縛経験, 4)
	CASE IS <= 2
		TIMES LOCAL , 1.00
	CASE 3
		TIMES LOCAL , 0.90
	CASE 4
		TIMES LOCAL , 0.70
ENDSELECT
LOSEBASE:気力 += LOCAL

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF SELECTCOMS != "アイマスク"
	EXP:緊縛経験 += 1
	PRINTL 緊縛経験+1
ENDIF

RETURN 1

