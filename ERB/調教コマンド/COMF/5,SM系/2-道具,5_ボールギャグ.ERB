;-------------------------------------------------
;ボールギャグ
;-------------------------------------------------
@USERCOM_ABLE_ボールギャグ
;ボールギャグ実行判定
;触手口辱中だとダメ
SIF TEQUIP:触手口辱
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:ボールギャグ
	RETURN 1
;アイテムを持っていないとダメ
SIF !ITEM:ボールギャグ
	RETURN 0
;新妻プレイ中はダメ
SIF TEQUIP:エプロン
	RETURN 0

RETURN 1

@COM_ボールギャグ
PRINTL ボールギャグ
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:ボールギャグ, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 0
LOSEBASE:気力 += 50

SOURCE:恐怖 = 50
SOURCE:露出 = 30
SOURCE:屈従 = 50
SOURCE:逸脱 = 70
SOURCE:反感 = 150

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3
	TIMES LOSEBASE:体力 , 1.00
	TIMES LOSEBASE:気力 , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES LOSEBASE:体力 , 0.90
	TIMES LOSEBASE:気力 , 0.90
ELSE
	TIMES LOSEBASE:体力 , 0.70
	TIMES LOSEBASE:気力 , 0.70
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 2
PRINTL 緊縛経験+2

CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_ボールギャグ
PRINTL ＜ボールギャグ装備中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 5

SOURCE:恐怖 += 150
SOURCE:露出 += 150
SOURCE:屈従 += 75
SOURCE:逸脱 += 50
SOURCE:反感 += 200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
LOCAL = 25
IF EXP:緊縛経験 < EXPLV:3
	TIMES LOCAL , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES LOCAL , 0.90
ELSE
	TIMES LOCAL , 0.70
ENDIF
LOSEBASE:気力 += LOCAL

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
IF SELECTCOMS != "ボールギャグ"
	EXP:緊縛経験 += 1
	PRINTL 緊縛経験+1
ENDIF

RETURN 1

