;-------------------------------------------------
;叩いてもらう
;-------------------------------------------------
@USERCOM_ABLE_叩いてもらう, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は方針がSMか狂気じゃないとダメ
SIF 上級売春中 && !GROUPMATCH(3, 4)
	RETURNF 0
;サド、もしくはサドっ気3以上必要
SIF ABL:サドっ気 < 3 && !TALENT:サド
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:縄
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;助手の場合はマゾかマゾっ気3以上必要
IF PLAYER == ASSI
	SIF ABL:ASSI:マゾっ気 < 3 && !TALENT:マゾ
		RETURNF 0
ENDIF
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_叩いてもらう
PRINTL 叩いてもらう
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 40
LOSEBASE:気力 += 40

DOWNBASE:MASTER:体力 += 70
DOWNBASE:MASTER:気力 += 60

SOURCE:性行動 = 200
SOURCE:達成 = 150
SOURCE:中毒 = 150
SOURCE:逸脱 = 200
SOURCE:反感 = 100
SOURCE:不潔 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

CALL EXPUP, "嗜虐快楽経験", 3
CALL EXPUP, "調教経験", 3

RETURN 1

