;-------------------------------------------------
;踏んでもらう
;-------------------------------------------------
@USERCOM_ABLE_踏んでもらう, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がSMか狂気じゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がSMor狂気じゃないと実行できない/"
SIF 上級売春中 && !GROUPMATCH(3, 4)
	COMRESULT = 0
;サド、もしくはサドっ気3以上必要
コマンド実行条件 += "対象にサドっ気LV3以上or[サド]が必要/"
SIF ABL:サドっ気 < 3 && !TALENT:サド
	COMRESULT = 0
;足使用不可だとできない
コマンド実行条件 += "対象が[足使用不可]だと実行できない/"
SIF TALENT:足使用不可
	COMRESULT = 0
;拘束中はダメ
コマンド実行条件 += "縄で縛ってるときは実行できない/"
SIF TEQUIP:縄
	COMRESULT = 0
;触手調教中はダメ
コマンド実行条件 += "触手召喚中は実行できない/"
SIF TEQUIP:触手
	COMRESULT = 0
;助手の場合はマゾかマゾっ気3以上必要
コマンド実行条件 += "実行者が助手の場合、助手にマゾっ気LV3以上or[マゾ]が必要/"
IF PLAYER == ASSI
	SIF ABL:ASSI:マゾっ気 < 3 && !TALENT:マゾ
		COMRESULT = 0
ENDIF
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0

RETURNF COMRESULT

@COM_踏んでもらう
PRINTL 踏んでもらう
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 40
LOSEBASE:気力 += 40

DOWNBASE:MASTER:体力 += 80
DOWNBASE:MASTER:気力 += 60

SOURCE:性行動 = 250
SOURCE:達成 = 100
SOURCE:中毒 = 250
SOURCE:逸脱 = 200
SOURCE:反感 = 100
SOURCE:不潔 = 150

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 1, 1

CALL EXPUP, "嗜虐快楽経験", 3
CALL EXPUP, "調教経験", 3

RETURN 1

