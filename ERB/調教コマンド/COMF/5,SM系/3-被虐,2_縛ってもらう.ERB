;-------------------------------------------------
;縛ってもらう
;-------------------------------------------------
@USERCOM_ABLE_縛ってもらう, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;アイテム無いとダメ
IF 上級売春中
	SIF !ITEM:娼館縄
		RETURNF 0
ELSE
	SIF !ITEM:縄
		RETURNF 0
ENDIF
;上級売春中は方針がSMか狂気じゃないとダメ
SIF 上級売春中 && !GROUPMATCH(3, 4)
	RETURNF 0
;サド、もしくはサドっ気3以上必要
SIF ABL:サドっ気 < 3 && !TALENT:サド
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:縄
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_縛ってもらう
PRINTL 縛ってもらう
CALL KOJO_MESSAGE_COM

INVERTBIT TEQUIP:PLAYER:縄, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

DOWNBASE:MASTER:体力 += 50
DOWNBASE:MASTER:気力 += 50

SOURCE:性行動 = 300
SOURCE:達成 = 50
SOURCE:中毒 = 150
SOURCE:逸脱 = 300
SOURCE:反感 = 100
SOURCE:不潔 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

PRINTL 嗜虐快楽経験+3
EXP:嗜虐快楽経験 += 3
PRINTL 調教経験+3
EXP:調教経験 += 3
PRINTFORML 緊縛経験+2(%CALLNAME:PLAYER%)
EXP:PLAYER:緊縛経験 += 3

RETURN 1

