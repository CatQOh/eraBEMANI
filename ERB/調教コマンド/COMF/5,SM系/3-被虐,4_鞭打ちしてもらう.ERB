;-------------------------------------------------
;鞭打ちしてもらう
;-------------------------------------------------
@USERCOM_ABLE_鞭打ちしてもらう, ARG
#FUNCTION
;上級売春中は方針がSMか狂気じゃないとダメ
SIF 上級売春中 && !GROUPMATCH(3, 4)
	RETURNF 0
;サド、もしくはサドっ気3以上必要
SIF ABL:サドっ気 < 3 && !TALENT:サド
	RETURNF 0
;拘束中はダメ
SIF TEQUIP:縄
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_鞭打ちしてもらう
PRINTL 鞭打ちしてもらう
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

DOWNBASE:MASTER:体力 += 100
DOWNBASE:MASTER:気力 += 80

SOURCE:性行動 = 500
SOURCE:達成 = 200
SOURCE:中毒 = 400
SOURCE:逸脱 = 300
SOURCE:反感 = 100
SOURCE:不潔 = 50

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

PRINTL 嗜虐快楽経験+5
EXP:嗜虐快楽経験 += 5
PRINTL 調教経験+5
EXP:調教経験 += 5

RETURN 1

