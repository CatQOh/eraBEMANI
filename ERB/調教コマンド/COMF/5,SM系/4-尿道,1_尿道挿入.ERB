@USERCOM_ABLE_尿道挿入, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がハード、SMじゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がハードorSMじゃないと実行できない/"
SIF 上級売春中 && !GROUPMATCH(娼館方針, 2, 3)
	COMRESULT = 0
;調教者がペニス有り、もしくはペニスバンドがないとダメ
コマンド実行条件 += "実行者に男性器、もしくはペニスバンドが必要"
;Ｐ使用中か使用不可のときはダメ
コマンド実行条件 += "対象の男性器に道具仕様中は実行できない/"
SIF PENIS(TARGET) && Ｐ使用中(TARGET)
	COMRESULT = 0
;お風呂場プレイ中はプレイマットが無いとダメ
コマンド実行条件 += "お風呂場ではプレイマット(アイテム)が無いと実行できない/"
IF TEQUIP:お風呂場
	SIF !ITEM:プレイマット
		COMRESULT = 0
ENDIF

コマンド実行条件 += "尿道経験200以上必要 小人体型なら500以上必要/"
IF TALENT:小人体型
	SIF EXP:尿道経験 < 500
		COMRESULT = 0
ELSE
	SIF EXP:尿道経験 < 200
		COMRESULT = 0
ENDIF

@実行判定_尿道挿入
#DIM DYNAMIC 実効値
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;縄で縛られている場合は無視（縄が無い時のみ実行判定を行う）
SIF TEQUIP:縄
	RETURN 1

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER
実効値 = RESULT

;ABL:欲望
IF ABL:欲望
	実効値 += ABL:欲望*3
	PRINTFORM +欲望LV{ABL:欲望}({ABL:欲望*3})
ENDIF
;ABL:性交中毒
IF ABL:性交中毒
	実効値 += ABL:性交中毒
	PRINTFORM +性交中毒LV{ABL:性交中毒}({ABL:性交中毒})
ENDIF
;快楽刻印
IF MARK:快楽刻印
	実効値 += MARK:快楽刻印*3
	PRINTFORM +快楽刻印LV{MARK:快楽刻印}({MARK:快楽刻印*3})
ENDIF
;PALAM:潤滑（の不足）
IF PALAM:潤滑 < PALAMLV:3
	実効値 -= 50
	PRINT -潤滑不足(50)
ENDIF

;45以上で実行
CALL 実効値判定, 実効値, 45

RETURN RESULT

@COM_尿道挿入
#DIM DYNAMIC 増加量

PRINTL 尿道挿入

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;童貞喪失
IF TALENT:PLAYER:童貞
	TALENT:PLAYER:童貞 = 0
	IF TALENT:PLAYER:性転換済
		CSTR:PLAYER:性転換童貞 = %NAME:TARGET%
	ELSE
		CSTR:PLAYER:童貞 = %NAME:TARGET%
	ENDIF
ENDIF

;-------------------------------------------------
;脱衣
;-------------------------------------------------
IF OVER_GENITAL(TARGET) != ""
	IF CFLAG:挿入可
		TEQUIP:下半身下着 = 0
	ELSE
		TEQUIP:下半身下着 = 0
		TEQUIP:下半身上着 = 0
		TEQUIP:全身上着 = 0
	ENDIF
ENDIF

;-------------------------------------------------
;射精ゲージチェック（実行者）
;-------------------------------------------------
増加量 = 300

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += (増加量/10)*ABL:技巧

CALL 射精ゲージ増加, 増加量, PLAYER

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
;尿道経験を見る 2000で最大
増加量 = MAX(EXP:尿道経験, 2000)

;ABL:調教者の技巧をみる
増加量 += (増加量/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
増加量 += (増加量/10)*ABL:技巧

;奴隷のABL:マゾっ気をみる
増加量 += (増加量/5)*ABL:マゾっ気

CALL 射精ゲージ増加, 増加量, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 150
LOSEBASE:気力 += 100

DOWNBASE:MASTER:体力 += 80
DOWNBASE:MASTER:気力 += 50

SIF PENIS(TARGET)
	SOURCE:快C = 100
SOURCE:苦痛 = 2000
SOURCE:恐怖 = 500
SOURCE:中毒 = 300
SOURCE:液体 = 100
SOURCE:露出 = 100
SOURCE:反感 = 300
SOURCE:屈従 = 300
SOURCE:不潔 = 500

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 300

;尿道経験に応じてソース変動
SELECTCASE EXP:尿道経験
	;300未満
	CASE IS < 300
		;変動無し
	;300～399
	CASE IS < 400
		TIMES SOURCE:苦痛 , 0.90
		TIMES SOURCE:恐怖 , 0.80
		TIMES SOURCE:中毒 , 1.20
	;400～499
	CASE IS < 500
		TIMES SOURCE:苦痛 , 0.80
		TIMES SOURCE:恐怖 , 0.60
		TIMES SOURCE:中毒 , 1.40
	;500～599
	CASE IS < 600
		TIMES SOURCE:苦痛 , 0.70
		TIMES SOURCE:恐怖 , 0.40
		TIMES SOURCE:中毒 , 1.60
	;600～699
	CASE IS < 700
		TIMES SOURCE:苦痛 , 0.60
		TIMES SOURCE:恐怖 , 0.20
		TIMES SOURCE:中毒 , 1.80
	;700以上
	CASEELSE
		TIMES SOURCE:苦痛 , 0.50
		SOURCE:恐怖 = 0
		TIMES SOURCE:中毒 , 2.00
ENDSELECT

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK, 6
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
;中出しされた場合は強制的に射精させる
IF NOWEX:PLAYER:射精 && !避妊具(PLAYER) && PENIS(TARGET)
	NOWEX:射精++
	CFLAG:膀胱に射精された経験++
ENDIF
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 2, 4

CALL EXPUP, "尿道経験", 5
CALL EXPUP, "性交経験", 1
CALL EXPUP, "性交経験", 1, PLAYER

SIF !CFLAG:尿道に挿入された経験
	CALL EXPUP, "異常経験", 1
CFLAG:尿道に挿入された経験++

;魔力回復
SIF !避妊具(PLAYER)
	CALL 魔力回復, 3

経験回数:PLAYER:(NO:TARGET) += 1
経験回数:TARGET:(NO:PLAYER) += 1

RETURN 1



