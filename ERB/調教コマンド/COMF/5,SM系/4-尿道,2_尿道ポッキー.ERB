;-------------------------------------------------
;尿道ポッキー
;-------------------------------------------------
@USERCOM_ABLE_尿道ポッキー, ARG
#FUNCTION
#DIM DYNAMIC 条件確定

;上級売春中は不可
コマンド実行条件 += "上級売春中は実行不可/"
SIF 上級売春中
	COMRESULT = 0
;ゲーセンに居る場合は無理
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;素材無いとダメ
コマンド実行条件 += "材料[カカオ豆][麦]が必要/"
SIF !材料一式判定("カカオ豆", "麦")
	COMRESULT = 0
;服着てるとダメ
コマンド実行条件 += "性器が露出していないと実行できない/"
SIF !性器露出(TARGET)
	COMRESULT = 0
;解除はいつでも可能
SIF TEQUIP:尿道ポッキー && COMRESULT
	条件確定 = 1

;ペニバン使用中はダメ
コマンド実行条件 += "対象がペニスバンド装着中は実行不可/"
SIF TEQUIP:ペニスバンド
	COMRESULT = 0
;オナホ使用中もダメ
コマンド実行条件 += "対象がオナホール装着中は実行できない/"
SIF TEQUIP:オナホール
	COMRESULT = 0
;搾精機
コマンド実行条件 += "対象が搾精機装着中は実行できない/"
SIF TEQUIP:搾精器
	COMRESULT = 0
;避妊具
コマンド実行条件 += "対象が避妊具装着中は実行できない/"
SIF TEQUIP:コンドーム || TEQUIP:搾精コンドーム
	COMRESULT = 0
;貞操帯
コマンド実行条件 += "対象が貞操帯装着中は実行できない/"
SIF CFLAG:貞操帯
	COMRESULT = 0

IF 条件確定
	COMRESULT = 1
	RETURNF 1
ENDIF
RETURNF COMRESULT

@COM_尿道ポッキー
PRINTL 尿道ポッキー
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:尿道ポッキー, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 50
LOSEBASE:気力 += 80

SOURCE:屈従 = 200
SOURCE:苦痛 = 1200
SOURCE:恐怖 = 500
SOURCE:露出 = 500
SOURCE:逸脱 = 1000
SOURCE:反感 = 800
SOURCE:不潔 = 700

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, "尿道経験", 2
SIF PENIS(TARGET)
	CALL EXPUP, "射精管理経験", 1

;利尿剤効果は0になる
SIF TEQUIP:尿道ポッキー
	TEQUIP:利尿剤 = 0

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_尿道ポッキー
PRINTL ＜尿道ポッキー挿入中＞

LOSEBASE:体力 += 30
LOSEBASE:気力 += 50

SOURCE:屈従 = 100
SOURCE:苦痛 = 700
SOURCE:恐怖 = 300
SOURCE:露出 = 200
SOURCE:逸脱 = 300
SOURCE:反感 = 500
SOURCE:不潔 = 500

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF SELECTCOMS != "尿道ポッキー"
	CALL EXPUP, "尿道経験", 1

RETURN 1

