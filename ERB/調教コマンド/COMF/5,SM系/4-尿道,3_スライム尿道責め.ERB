	LOSEBASE:体力 += 30*TEQUIP:尿道スライム/MAX(EXP:尿道経験, 1)
	LOSEBASE:気力 += 50*TEQUIP:尿道スライム/MAX(EXP:尿道経験, 1)
ENDIF

SOURCE:屈従 = 100
SOURCE:苦痛 = 200
SOURCE:恐怖 = 500
SOURCE:露出 = 100
SOURCE:逸脱 = 300
SOURCE:反感 = 500
SOURCE:不潔 = 500

IF TEQUIP:尿道スライム > EXP:尿道経験
	SOURCE:苦痛 += 200*TEQUIP:尿道スライム/MAX(EXP:尿道経験, 1)
	SOURCE:反感 += 500*TEQUIP:尿道スライム/MAX(EXP:尿道経験, 1)
ENDIF

