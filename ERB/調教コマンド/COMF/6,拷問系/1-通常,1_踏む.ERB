;-------------------------------------------------
;踏む
;-------------------------------------------------
@USERCOM_ABLE_踏む, ARG
#FUNCTION
;ゲーセンに居る場合はできない
コマンド実行条件 += "ゲーセンでは実行不可/"
SIF TEQUIP:ゲームセンター
	COMRESULT = 0
;上級売春中は方針がSMで客がマゾじゃないとダメ
コマンド実行条件 += "上級売春中は経営方針がSMで客に[マゾ]が必要/"
SIF 上級売春中 && (娼館方針 != 3 || !TALENT:マゾ)
	COMRESULT = 0
;足使用不可だとできない
コマンド実行条件 += "実行者が[足使用不可]だと実行できない/"
SIF TALENT:PLAYER:足使用不可
	COMRESULT = 0
;アニマルだと無理
コマンド実行条件 += "対象が[アニマル]の場合は実行できない/"
SIF TALENT:アニマル
	COMRESULT = 0
;妊娠中は調教者がサドもしくは禁断の知識持ちじゃないとできない
コマンド実行条件 += "対象が妊娠中の場合、実行者が主人で[サド]or[禁断の知識]が必要/"
IF TALENT:妊娠
	SIF ASSIPLAY
		COMRESULT = 0
	SIF !TALENT:MASTER:サド && !TALENT:MASTER:禁断の知識
		COMRESULT = 0
ENDIF

RETURNF COMRESULT

@COM_踏む
IF ABL:PLAYER:技巧 == 0
	PRINTL 踏む
	CALL KOJO_MESSAGE_COM
ELSEIF ABL:PLAYER:技巧 >= 1
	PRINTL どこを踏みますか？
	PRINTL [0] 腹
	PRINTL [1] 胸
	SIF ABL:PLAYER:技巧 >= 2
		PRINTL [2] 股間
	SIF ABL:PLAYER:技巧 >= 3
		PRINTL [3] 首
	SIF ABL:PLAYER:技巧 >= 4
		PRINTL [4] 顔
	DO
		SIF ISSKIP()
			BREAK
		INPUT
		SIF RESULT > ABL:PLAYER:技巧
			CONTINUE
	LOOP LOOPRES(0, 1, 2, 3, 4)

	TFLAG:踏む部位 = RESULT

	SELECTCASE TFLAG:踏む部位
		CASE 0
			PRINTL 腹を踏む
		CASE 1
			PRINTL 胸を踏む
		CASE 2
			PRINTL 股間を踏む
		CASE 3
			PRINTL 首を踏む
		CASE 4
			PRINTL 顔を踏む
	ENDSELECT
	CALL KOJO_MESSAGE_COM
ENDIF

