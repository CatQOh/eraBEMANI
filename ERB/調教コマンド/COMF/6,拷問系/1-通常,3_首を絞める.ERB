;-------------------------------------------------
;首絞め
;-------------------------------------------------
@USERCOM_ABLE_首絞め
;サドじゃないとできない
SIF TALENT:PLAYER:サド
	RETURN 1

@COM_首を絞める
SELECTCASE PREVCOMS
	CASE "正常位"
		JUMP COM_正常位首絞め
	CASE "後背位"
		JUMP COM_後背位首絞め
	CASE "正常位アナル"
		JUMP COM_正常位アナル首絞め
	CASE "後背位アナル"
		JUMP COM_後背位アナル首絞め
	CASE "逆レイプ"
		JUMP COM_逆レイプ首絞め
ENDSELECT

PRINTL 首を絞める
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 400

SIF CFLAG:陥落
	SOURCE:情愛 += 300
SIF TALENT:倒錯的
	SOURCE:情愛 += 100
SIF TALENT:マゾ
	SOURCE:情愛 += 100
SIF TALENT:妄信
	SOURCE:情愛 += 100

SOURCE:情愛 += CFLAG:依存度/10

SOURCE:達成 = 30
SOURCE:苦痛 = 1200
SOURCE:恐怖 = 2200
SOURCE:欲情 = 400
SOURCE:屈従 = 800
SOURCE:逸脱 = 550
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 4

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

