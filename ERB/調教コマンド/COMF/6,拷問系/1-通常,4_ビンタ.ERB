;-------------------------------------------------
;ビンタ ( ‘д‘⊂彡☆))Д´) ﾊﾟｰﾝ
;-------------------------------------------------
@USERCOM_ABLE_ビンタ, ARG
#FUNCTION
;上級売春中は方針がSMで客がマゾじゃないとダメ
SIF 上級売春中 && (娼館方針 != 3 || !TALENT:マゾ)
	RETURNF 0
;サドじゃないとできない
SIF !TALENT:PLAYER:サド
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_ビンタ
PRINTL ビンタ
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 60
LOSEBASE:気力 += 30

SOURCE:苦痛 = 600
SOURCE:恐怖 = 700
SOURCE:中毒 = 50
SOURCE:欲情 = 50
SOURCE:屈従 = 200
SOURCE:鬱屈 = 200
SOURCE:逸脱 = 150
SOURCE:反感 = 1000

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
SOURCE:苦痛 += GETPALAMLV(PALAM:苦痛, 4)*(SOURCE:苦痛/2)

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && PLAYER == MASTER
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ENDIF

;実績:大犬のお姉さんに暴力を振るう
SIF CHARANAMEF(TARGET) == "大犬のお姉さん"
	CALL 実績解除, "何をするだァーッ！"

RETURN 1

