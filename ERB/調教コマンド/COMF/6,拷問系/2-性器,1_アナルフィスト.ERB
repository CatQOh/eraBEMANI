;-------------------------------------------------
;アナルフィスト
;-------------------------------------------------
@USERCOM_ABLE_アナルフィスト, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は方針が狂気じゃないとダメ
SIF 上級売春中 && 娼館方針 != 4
	RETURNF 0
;奴隷が淫乱系陥落か服従系陥落じゃないとダメ
SIF !上級売春中 && !GROUPMATCH(FALLTYPE(TARGET), 2, 3)
	RETURNF 0
;アナルに何か入ってるとダメ
SIF Ａ使用中(TARGET)
	RETURNF 0
;一定のＡ経験が必要 PLAYERが小柄なら手も小さいので緩和
IF TALENT:PLAYER:小柄体型
	SIF EXP:Ａ経験 < 100
		RETURNF 0
ELSE
	SIF EXP:Ａ経験 < 150
		RETURNF 0
ENDIF
;ASSIの場合、従順3以上かサドじゃないとできない。
IF PLAYER == ASSI
	SIF ABL:ASSI:従順 < 4 && !TALENT:ASSI:サド
	RETURNF 0
ENDIF
;小柄体型なら従順が4以上かつマゾっ気が4以上じゃないと実行できない
IF TALENT:小柄体型
	SIF ABL:従順 < 4 || ABL:マゾっ気 < 4
		RETURNF 0
ENDIF
;調教対象が小人体型の場合は主人が禁断の知識持ちじゃないとダメ
SIF TALENT:小人体型 && TALENT:MASTER:禁断の知識 == 0
	RETURNF 0

;服着てるとダメ
SIF !性器露出(TARGET)
	RETURNF 0

;お風呂場プレイ中はプレイマットが無いとダメ
SIF TEQUIP:お風呂場 && !ITEM:プレイマット
	RETURNF 0
;新妻プレイ中はダメ
SIF TEQUIP:エプロン
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_アナルフィスト
PRINTL アナルフィスト
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;射精ゲージチェック（奴隷）
;-------------------------------------------------
LOCAL = 射精ゲージ計算_Ａ挿入(100)

;ABL:調教者の技巧をみる
LOCAL += (LOCAL/5)*ABL:PLAYER:技巧

;ABL:技巧をみる
LOCAL += (LOCAL/10)*ABL:技巧

;ABL:従順をみる
LOCAL += (LOCAL/10)*ABL:従順

CALL 射精ゲージ増加, LOCAL, TARGET

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 300
LOSEBASE:気力 += 150

DOWNBASE:MASTER:体力 += 40
DOWNBASE:MASTER:気力 += 30

SOURCE:快A = 200
SOURCE:苦痛 = 1700
SOURCE:恐怖 = 600
SOURCE:露出 = 100
SOURCE:屈従 = 1500
SOURCE:逸脱 = 1700
SOURCE:反感 = 1700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;フィストなどのAへの大きな苦痛は先に処理しておく
CALL 特殊ソース処理_Ａ強

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 5

CALL SAMEN_SHOOT_T, 5, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷のアナル⇔調教者の手の汚れが移動
SETBIT STAIN:PLAYER:手, 3
STAIN:アナル |= STAIN:PLAYER:手
STAIN:PLAYER:手 |= STAIN:アナル

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 3, 5

CALL EXPUP, "Ａ経験", 15

;異常経験
IF !EXP:Ｖ拡張経験 && !EXP:Ａ拡張経験
	PRINTL ＜初Ａ拡張＞
	CALL EXPUP, "異常経験", 1
ENDIF

CALL EXPUP, "Ａ拡張経験", 5

RETURN 1

