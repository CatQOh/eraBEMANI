;-------------------------------------------------
;アナルフィストさせる
;-------------------------------------------------
@USERCOM_ABLE_アナルフィストさせる, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は方針がSM、狂気じゃないとダメ
SIF 上級売春中 && !GROUPMATCH(娼館方針, 3, 4)
	RETURNF 0
;サド、もしくはサドっ気3以上必要(娼館方針が狂気ならスルー)
SIF !(上級売春中 && 娼館方針 == 4) && !TALENT:サド && ABL:サドっ気 < 3
	RETURNF 0

;実行者のＡ経験100以上orＡ感覚3以上
SIF EXP:PLAYER:Ａ経験 < 100 && ABL:Ａ感覚 <= 3
	RETURNF 0

;助手の場合は助手が陥落していないとダメ
SIF ASSIPLAY && !CFLAG:ASSI:陥落
	RETURNF 0
;調教者が小人体型のとき主人が禁断の知識持ちじゃないとダメ
SIF TALENT:PLAYER:小人体型 && !TALENT:MASTER:禁断の知識 && !TALENT:小人体型
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;縄使用中は出来ない
SIF TEQUIP:縄
	RETURNF 0
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@実行判定_アナルフィストさせる
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER
LOCAL = RESULT

CALL COM_ORDER_フィストさせる
LOCAL += RESULT

LOCAL:1 = 0
;精液の汚れ
SIF GETBIT(STAIN:PLAYER:アナル, 2)
	LOCAL:1 += 2
;アナルの汚れ
SIF GETBIT(STAIN:PLAYER:アナル, 3)
	LOCAL:1 += 6
;母乳汚れ
SIF GETBIT(STAIN:PLAYER:アナル, 4)
	LOCAL:1 += 1
;尿
SIF GETBIT(STAIN:PLAYER:アナル, 7)
	LOCAL:1 += 3

SIF TALENT:汚れ無視
	LOCAL:1 /= 3
SIF TALENT:潔癖症
	LOCAL:1 *= 2

;汚れあり
IF LOCAL:1
	LOCAL -= LOCAL:1
	IF TALENT:汚れ無視
		PRINT -汚れあり、汚れ無視
	ELSEIF TALENT:潔癖症
		PRINT -汚れあり、潔癖症
	ELSE
		PRINT -汚れあり
	ENDIF
	PRINTFORM ({LOCAL:1})
ENDIF

;36以上で実行
CALL 実効値判定, LOCAL, 36

RETURN RESULT

@COM_アナルフィストさせる
PRINTL アナルフィストさせる

SIF !TFLAG:実行判定無視
	CALLFORM 実行判定_%SELECTCOMS%
SIF !RESULT && !TFLAG:実行判定無視
	RETURN 0

;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;実行者が奴隷フラグ
TFLAG:奴隷実行 = 1

;-------------------------------------------------
;脱衣
;-------------------------------------------------
IF OVER_GENITAL(PLAYER) != ""
	IF CFLAG:PLAYER:挿入可
		TEQUIP:PLAYER:下半身下着 = 0
	ELSE
		TEQUIP:PLAYER:下半身下着 = 0
		TEQUIP:PLAYER:下半身上着 = 0
		TEQUIP:PLAYER:全身上着 = 0
	ENDIF
ENDIF

;-------------------------------------------------
;射精ゲージチェック（主人）
;-------------------------------------------------
TFLAG:奴隷挿入箇所 = 2
LOCAL = 射精ゲージ計算_実行者受け(400)

;ABL:技巧をみる
LOCAL += LOCAL/10*4*ABL:技巧

CALL 射精ゲージ増加, LOCAL, PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 70

DOWNBASE:MASTER:体力 += 130
DOWNBASE:MASTER:気力 += 100

SOURCE:恐怖 = 50
SOURCE:性行動 = 500
SOURCE:屈従 = 300
SOURCE:逸脱 = 1000
SOURCE:反感 = 500
SOURCE:中毒 = 200
;上の方で計算した汚れ
SOURCE:不潔 = LOCAL:1*60+100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 500

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
;射精時の処理
CALL SAMEN_CHECK, 6
CALL SAMEN_CHECK_T

CALL SAMEN_SHOOT, 6, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の手⇔調教者のアナルの汚れが移動
STAIN:手 |= STAIN:PLAYER:アナル
STAIN:PLAYER:アナル |= STAIN:手

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 2, 2

CALL EXPUP, "Ａ経験", 5, PLAYER
CALL EXPUP, "Ａ拡張経験", 2, PLAYER
CALL EXPUP, "苦痛快楽経験", 2, PLAYER
CALL EXPUP, "嗜虐快楽経験", 3

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1

RETURN 1

