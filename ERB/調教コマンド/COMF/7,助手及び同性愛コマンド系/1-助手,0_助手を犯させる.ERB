		ENDIF
	ELSEIF RELATION:ASSI:(NO:TARGET) > 100
		IF TALENT:ASSI:性転換済
			CFLAG:ASSI:性転換処女の奪われ方 = 3
		ELSE
			CFLAG:ASSI:処女の奪われ方 = 3
		ENDIF		
	ELSE
