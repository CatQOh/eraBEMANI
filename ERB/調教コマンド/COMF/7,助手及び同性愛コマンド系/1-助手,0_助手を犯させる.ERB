@実行判定_助手を犯させる
#DIM DYNAMIC LCOUNT
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

VARSET LOCAL, 0
LOCAL = RESULT

;ABL:欲望
IF ABL:欲望
	LOCAL += ABL:欲望
	PRINTFORM +欲望LV{ABL:欲望}({ABL:欲望})
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	LOCAL += ABL:奉仕精神*4
	PRINTFORM +奉仕精神LV{ABL:奉仕精神}({ABL:奉仕精神*4})
ENDIF
;快楽刻印
IF MARK:快楽刻印
	LOCAL += MARK:快楽刻印*2
	PRINTFORM +快楽刻印LV{MARK:快楽刻印}({MARK:快楽刻印*2})
ENDIF

CALL COM_ORDER_欲情, 0
LOCAL += RESULT

FOR LCOUNT, 0, VARSIZE("TALENT")
	LOCAL:1 = 0
	SIF !TALENT:LCOUNT
		CONTINUE
	SELECTCASE TALENTNAME:LCOUNT
		CASE "娼婦"
			LOCAL:1 = 10
		CASE "淫乱"
			LOCAL:1 = 5
		CASE "恥じらい"
			LOCAL:1 = -5
		CASE "献身的"
			LOCAL:1 = 6
		CASE "快感の否定"
			SIF FALLTYPE(TARGET) != 2
				LOCAL:1 = -5
		CASE "快感に素直"
			LOCAL:1 = 3
		CASE "貞操観念"
			LOCAL:1 = -12
	ENDSELECT
	IF LOCAL:1
		PRINTFORM \@SIGN(LOCAL:1) == 1 ? + # - \@%TALENTNAME:LCOUNT%({ABS(LOCAL:1)})
		LOCAL += LOCAL:1
	ENDIF
NEXT

;助手との相性
SELECTCASE RELATION:(NO:ASSI)
	CASE IS < 100
		LOCAL -= (100-RELATION:(NO:ASSI))/10+1
		PRINTFORM -相性悪い({(100-RELATION:(NO:ASSI))/10+1})
	CASE IS > 100
		LOCAL += (RELATION:(NO:ASSI)-100)/10+1
		PRINTFORM +相性良い({(RELATION:(NO:ASSI)-100)/10+1})
ENDSELECT

;助手が処女
IF TALENT:ASSI:処女
	LOCAL -= 15
	PRINTFORM -助手が処女(15)
ENDIF

;40以上で実行
CALL 実効値判定, LOCAL, 40

RETURN RESULT

