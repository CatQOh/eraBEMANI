;-------------------------------------------------
;触手射精止め
;-------------------------------------------------
@USERCOM_ABLE_触手射精止め, ARG
#FUNCTION
;触手ないとダメ
SIF !TEQUIP:触手
	RETURNF 0
;対象にペニス無いとダメ
SIF !PENIS(TARGET)
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_触手射精止め
PRINTL 触手射精止め
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:射精止め, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 30
LOSEBASE:気力 += 50

SOURCE:屈従 = 500
SOURCE:苦痛 = 500
SOURCE:逸脱 = 1000
SOURCE:反感 = 500

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験++
PRINTL 緊縛経験+1

TENTACLE++

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_射精止め
PRINTL ＜触手射精止め中＞

LOSEBASE:体力 += 20
LOSEBASE:気力 += 70

SOURCE:屈従 = 100
SOURCE:苦痛 = 200
SOURCE:逸脱 = 300
SOURCE:反感 = 100

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験++
PRINTL 緊縛経験+1

;触手経験加算
TENTACLE++

RETURN 1

