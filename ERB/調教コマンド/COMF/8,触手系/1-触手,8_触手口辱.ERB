;-------------------------------------------------
;触手口辱
;-------------------------------------------------
@USERCOM_ABLE_触手口辱, ARG
#FUNCTION
;触手ないとダメ
コマンド実行条件 += "触手召喚中じゃないと実行できない/"
SIF !TEQUIP:触手
	COMRESULT = 0
;ボールギャグ使用中は不可
コマンド実行条件 += "対象がボールギャグ装着中は実行できない/"
SIF TEQUIP:ボールギャグ
	COMRESULT = 0

RETURNF COMRESULT

@COM_触手口辱
;触手口辱
PRINTL 触手口辱
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:触手口辱, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

SOURCE:性行動 = 200
SOURCE:屈従 = 1000
SOURCE:逸脱 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:フェラ経験++
PRINTL フェラ経験+1
RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_触手口辱
PRINTL ＜触手口辱中＞

LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

SOURCE:性行動 += 100
SOURCE:屈従 += 700
SOURCE:逸脱 += 700

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:フェラ経験++
PRINTL フェラ経験+1

;触手経験加算
TENTACLE++

RETURN 1

