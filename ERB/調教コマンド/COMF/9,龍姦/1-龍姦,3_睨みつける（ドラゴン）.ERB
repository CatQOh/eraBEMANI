;-------------------------------------------------
;睨みつける（ドラゴン）
;-------------------------------------------------
@USERCOM_ABLE_睨みつける（ドラゴン）, ARG
#FUNCTION
;ゲーセンに居る場合はできない
SIF TEQUIP:ゲームセンター
	RETURNF 0
;上級売春中は方針が狂気じゃないと不可
SIF 上級売春中 && 娼館方針 != 4
	RETURNF 0
;アイマスク装備中はダメ
SIF TEQUIP:アイマスク
	RETURNF 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURNF 0
;風呂場だとダメ
SIF TEQUIP:お風呂場
	RETURNF 0
;PLAYERがドラゴン使い持ってないとダメ
SIF !TALENT:PLAYER:ドラゴン使い
	RETURNF 0
;PLAYERが助手で未陥落だとダメ
SIF PLAYER == ASSI && !CFLAG:PLAYER:陥落
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_睨みつける（ドラゴン）
PRINTL 睨みつける（ドラゴン）
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

DOWNBASE:MASTER:体力 += 10
DOWNBASE:MASTER:気力 += 10

;同じドラゴン使いには恐怖が入らない
IF TALENT:ドラゴン使い
	SOURCE:恭順 = 200
	SOURCE:情愛 = 200
ELSE
	SOURCE:恐怖 = 1500
ENDIF
SOURCE:屈従 = 200
SOURCE:逸脱 = 300

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 0, 1

RETURN 1

