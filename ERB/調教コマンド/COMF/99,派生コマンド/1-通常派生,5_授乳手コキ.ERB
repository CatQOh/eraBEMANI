;-------------------------------------------------
;授乳手コキ
;-------------------------------------------------
@USERCOM_ABLE_授乳手コキ, ARG
#FUNCTION
;授乳手コキ
;大体の条件は派生元の母乳飲み判定と共通なため省略
;乳房が露出してないとダメ
SIF OVER_BUST(TARGET) != ""
	RETURNF 0
;アニマルだと無理
SIF TALENT:アニマル
	RETURNF 0

COMRESULT = 1
RETURNF 1

@COM_授乳手コキ
PRINTL 授乳手コキ
SELECTCOMS = 授乳手コキ
SELECTCOM = GETNUM(TRAINNAME, "授乳手コキ")
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;射精ゲージチェック
;-------------------------------------------------
LOCAL = 500
;対象が母性持ちだと気持ち良い
SIF TALENT:母性
	LOCAL += 200

CALL 射精ゲージ増加, 射精ゲージ計算_奉仕(LOCAL), PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 50
LOSEBASE:気力 += 50

SOURCE:快B = 400
SOURCE:性行動 = 500
SOURCE:達成 = 200
SOURCE:情愛 = 1000
SOURCE:露出 = 1000
SOURCE:恭順 = 3000
SOURCE:屈従 = 500
SOURCE:不潔 = 50
SOURCE:反感 = 100

;対象が母性持ちならいろいろボーナス
IF TALENT:母性
	LOSEBASE:体力 -= 10
	LOSEBASE:気力 -= 20
	SOURCE:快B += 100
	SOURCE:情愛 += 500
	SOURCE:恭順 += 2000
	SOURCE:不潔 -= 50
	SOURCE:反感 -= 100
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 100

;対象が母性持ちならいろいろボーナス
IF TALENT:母性
	LOSEBASE:体力 -= 10
	LOSEBASE:気力 -= 20
	SOURCE:快B += 100
	SOURCE:情愛 += 500
	SOURCE:恭順 += 2000
	SOURCE:不潔 -= 50
	SOURCE:反感 -= 100
ENDIF

;調教者が［幼稚］か［幼児退行］
IF TALENT:PLAYER:幼稚 || TALENT:PLAYER:幼児／幼児退行
	TIMES SOURCE:快B , 1.20
	TIMES SOURCE:情愛 , 1.20
ENDIF

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK, 3
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT, 3, NOWEX:PLAYER:射精
CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の手⇔調教者のペニスの汚れが移動
STAIN:手 |= STAIN:PLAYER:ペニス
STAIN:PLAYER:ペニス |= STAIN:手

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP_BASE, 2, 3

;愛情経験
SIF FALLTYPE(TARGET) == 1 && PLAYER == MASTER
	CALL EXPUP, "愛情経験", 1

;魔力回復
CALL 魔力回復, 5, PLAYER
CALL 獣人催淫, 1, PLAYER

;奉仕快楽フラグ
TFLAG:奉仕快楽 = 1

RETURN 1

