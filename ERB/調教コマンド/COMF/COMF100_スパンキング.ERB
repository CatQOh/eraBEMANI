;-------------------------------------------------
;スパンキング
;-------------------------------------------------
@USERCOM_ABLE_スパンキング
;スパンキング実行判定
;従順3未満のASSIの場合スパンキングはできない（サドならＯＫ）
IF PLAYER == ASSI
	SIF ABL:ASSI:従順 < 3 && !TALENT:ASSI:サド
		RETURN 0
ENDIF

;触手調教中はダメ
SIF TEQUIP:触手
	RETURN 0

RETURN 1

@COM_スパンキング
PRINTL スパンキング
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 60
LOSEBASE:気力 += 20

SOURCE:苦痛 = 450
SOURCE:恐怖 = 400
SOURCE:逸脱 = 50
SOURCE:反感 = 300
SOURCE:露出 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;苦痛のパラメータによる苦痛のソース増加は先に処理しておく
IF PALAM:苦痛 < PALAMLV:1
	TIMES SOURCE:苦痛 , 1.00
ELSEIF PALAM:苦痛 < PALAMLV:2
	TIMES SOURCE:苦痛 , 1.50
ELSEIF PALAM:苦痛 < PALAMLV:3
	TIMES SOURCE:苦痛 , 2.00
ELSEIF PALAM:苦痛 < PALAMLV:4
	TIMES SOURCE:苦痛 , 2.50
ELSEIF PALAM:苦痛 >= PALAMLV:4
	TIMES SOURCE:苦痛 , 3.00
ENDIF
;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 3

;依存度補正値(服従で1、隷属で2）
IF TALENT:服従 && !ASSIPLAY
	TFLAG:依存度補正 += 1
ELSEIF TALENT:隷属 && !ASSIPLAY
	TFLAG:依存度補正 += 2
ENDIF

;実績:午前中から既にやる気の無いマモニスおじさんをひっぱたく
SIF CHARANAMEF(TARGET) == "マモニス" && TIME == 0
	CALL 実績解除, "「あ、私午後から畑行きますんで」"

RETURN 1

