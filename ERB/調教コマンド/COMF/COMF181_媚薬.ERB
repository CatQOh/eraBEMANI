;-------------------------------------------------
;媚薬
;特殊コマンド
;-------------------------------------------------
@USERCOM_ABLE181
;媚薬実行判定
;アイテムを持っているか、触手調教中でないとダメ
SIF !ITEM:媚薬 && !TEQUIP:触手
	RETURN 0
;薬毒耐性だとダメ
SIF TALENT:薬毒耐性
	RETURN 0
;[無機物]か種族:機械だとダメ
SIF TALENT:無機物 || CSTR:種族 == "機械"
	RETURN 0

RETURN 1

@COM181
PRINTL 媚薬
CALL KOJO_MESSAGE_COM

SIF !TEQUIP:触手
	ITEM:媚薬--

TEQUIP:媚薬 = 1

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:体力 += 150
	LOSEBASE:気力 += 150
ELSE
	LOSEBASE:体力 += 300
	LOSEBASE:気力 += 300
ENDIF

;媚薬効果で欲情のアップが2倍になるので実際には+5000
UP:欲情 = 2500
SOURCE:逸脱 = 1000

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

