;-------------------------------------------------
;利尿剤
;特殊コマンド
;-------------------------------------------------
@USERCOM_ABLE182
;利尿剤実行判定
;アイテムを持っているか、触手調教中でないとダメ
SIF !ITEM:利尿剤 && !TEQUIP:触手
	RETURN 0
;薬毒耐性の場合、直接注入以外ダメ
SIF TALENT:薬毒耐性 && !TEQUIP:触手
	RETURN 0
;[無機物]か種族:機械だとダメ
SIF TALENT:無機物 || CSTR:種族 == "機械"
	RETURN 0
;新妻プレイ中はダメ
SIF TEQUIP:エプロン
	RETURN 0

RETURN 1

@COM182
PRINTL 利尿剤
CALL KOJO_MESSAGE_COM

SIF !TEQUIP:触手
	ITEM:利尿剤--

TEQUIP:利尿剤 = 10

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
;調教者が調合知識を持っていれば消費を抑えられる
IF TALENT:PLAYER:調合知識
	LOSEBASE:体力 += 100
	LOSEBASE:気力 += 100
ELSE
	LOSEBASE:体力 += 200
	LOSEBASE:気力 += 200
ENDIF

SOURCE:露出 = 200
SOURCE:逸脱 = 800
;利尿剤効果で軽く変動
SOURCE:反感 = 150

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

