@USERCOM_ABLE_睨みつける（ドラゴン）
;罵倒
;アイマスク装備中はダメ
SIF TEQUIP:アイマスク
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURN 0
;風呂場だとダメ
SIF TEQUIP:お風呂場
	RETURN 0
;PLAYERがドラゴン使い持ってないとダメ
SIF !TALENT:PLAYER:ドラゴン使い
	RETURN 0
;PLAYERが助手で未陥落だとダメ
SIF PLAYER == ASSI && !CFLAG:PLAYER:陥落
	RETURN 0

RETURN 1

@COM_睨みつける（ドラゴン）
PRINTL 睨みつける（ドラゴン）
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 10
LOSEBASE:気力 += 50

;同じドラゴン使いには恐怖が入らない
IF TALENT:ドラゴン使い
	SOURCE:恭順 = 200
	SOURCE:情愛 = 200
ELSE
	SOURCE:恐怖 = 1500
ENDIF
SOURCE:屈従 = 200
SOURCE:逸脱 = 300

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 0, 1

RETURN 1

