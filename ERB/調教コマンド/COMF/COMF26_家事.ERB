@USERCOM_ABLE26
;家事
;助手可能もしくは陥落済みじゃないとダメ
SIF !CFLAG:陥落 && CFLAG:状態 != 2
	RETURN 0
;拘束中はダメ
SIF TEQUIP:アイマスク || TEQUIP:縄 || TEQUIP:触手
	RETURN 0

RETURN 1

@COM26
PRINTL 家事
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 70
LOSEBASE:気力 += 100

SOURCE:情愛 = 100
SOURCE:性行動 = 500
SOURCE:達成 = 500
SOURCE:反感 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
LOCAL = ABL:料理技能+1
LOCAL:1 = ABL:PLAYER:料理技能+1
PRINTFORML 家事経験+{LOCAL}
PRINTFORML 家事経験+{LOCAL:1}(%CALLNAME:PLAYER%)
EXP:家事経験 += LOCAL
EXP:PLAYER:家事経験 += LOCAL:1

;愛情経験
PRINTL 愛情経験+1
EXP:愛情経験 += 1

;依存度補正値(恋慕で1、親愛で2）
IF TALENT:恋慕
	TFLAG:依存度補正 += 1
ELSEIF TALENT:親愛
	TFLAG:依存度補正 += 2
ENDIF

RETURN 1

