;-------------------------------------------------
;フェラする
;愛撫系コマンド、レベル1
;-------------------------------------------------
@USERCOM_ABLE2
#DIM LCOUNT
;フェラする実行判定
;性器が汚れている場合（精液、アナル、粘液、血、尿）
FOR LCOUNT, 0, 8
	IF GETBIT(STAIN:ペニス, LCOUNT)
		SELECTCASE LCOUNT
			CASE 2, 3, 5, 6, 7
				;実行者
				SELECTCASE PLAYER
					;主人
					CASE MASTER
						;汚れ無視じゃないと実行できない
						SIF !TALENT:MASTER:汚れ無視 && ABL:MASTER:技巧 <= 2
							RETURN 0
					;助手
					CASE ASSI
						;汚臭敏感で従順3以下の場合フェラはできない（汚れ無視なら可能）
						SIF ABL:ASSI:従順 <= 3 && TALENT:ASSI:汚臭敏感 && !TALENT:ASSI:汚れ無視
							RETURN 0
				ENDSELECT
				BREAK
		ENDSELECT
	ENDIF
NEXT
;猫舌の調教者の場合は技巧Lv2以上必要
SIF TALENT:PLAYER:猫舌 && ABL:PLAYER:技巧 < 2
	RETURN 0
;対象がペニス無いとダメ
SIF !PENIS(TARGET)
	RETURN 0
;オナホール使用中はダメ
SIF TEQUIP:オナホール
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURN 0

RETURN 1

@COM2
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回と今回の調教者が同じで縄、ボールギャグ使用中でない場合
IF PLAYER == TFLAG:前コマンド実行者 && !TEQUIP:縄 && !TEQUIP:ボールギャグ
	;前回のコマンド
	SELECTCASE PREVCOMS
		;フェラチオ、クンニ強制、シックスナインだとシックスナインに
		CASE "フェラチオ", "クンニ強制", "シックスナイン"
			CALL USERCOM_ABLE501
			SIF RESULT
				JUMP COM501
	ENDSELECT
ENDIF

