;-------------------------------------------------
;ニプルキャップ
;道具使用コマンド
;-------------------------------------------------
@USERCOM_ABLE47
;ニプルキャップ実行判定
;触手調教中はダメ
SIF TEQUIP:触手
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:ニプルキャップ
	RETURN 1
;アイテムを持っていないとダメ
SIF !ITEM:ニプルキャップ
	RETURN 0
;上半身下着または上半身上着または全身上着をつけているとダメ
SIF TEQUIP:上半身下着 || TEQUIP:上半身上着 || TEQUIP:全身上着
	RETURN 0
;搾乳器使用中は不可
SIF TEQUIP:搾乳器
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:乳房電極
	RETURN 0
;ASSIの場合、技巧3以上じゃないと使えない。
IF ASSIPLAY
	SIF ABL:ASSI:技巧 < 3
		RETURN 0
ENDIF
;シャワー中はダメ
SIF TEQUIP:シャワー
	RETURN 0

RETURN 1

@COM47
IF TEQUIP:触手
	PRINTL 触手乳首責め
	SELECTCOM = 164
ELSE
	PRINTL ニプルキャップ
ENDIF
CALL KOJO_MESSAGE_COM

;着脱の処理
INVERTBIT TEQUIP:ニプルキャップ, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 20
LOSEBASE:気力 += 50

SOURCE:快B = 200
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 30

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手乳首責めなら、触手体液が胸に付く
SIF TEQUIP:触手
	SETBIT STAIN:胸, 5

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM47
;ニプルキャップ装備中
IF TEQUIP:触手
	PRINTL ＜触手乳首責め中＞
ELSE
	PRINTL ＜ニプルキャップ装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 10
LOSEBASE:気力 += 30

SOURCE:快B += 100
SOURCE:露出 += 10
SOURCE:逸脱 += 20
SOURCE:反感 += 20

RETURN 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;触手経験加算
SIF TEQUIP:触手
	TENTACLE++

