;-------------------------------------------------
;搾精コンドーム
;-------------------------------------------------
@USERCOM_ABLE_搾精コンドーム
;搾精コンドーム実行判定
;解除はいつでも可能
SIF TEQUIP:搾精コンドーム
	RETURN 1
;アイテムを持っていないとダメ
SIF !ITEM:搾精コンドーム
	RETURN 0

;下半身下着をつけているとダメ
SIF TEQUIP:下半身下着
	RETURN 0
;下の空いてない上着を着ているとダメ
IF TEQUIP:下半身上着 || (TEQUIP:全身上着 && CFLAG:着衣併用 != 1)
	SIF !CFLAG:挿入可
		RETURN 0
ENDIF

;オナホール及びコンドーム使用中は不可
SIF TEQUIP:オナホール || TEQUIP:コンドーム
	RETURN 0
;ペニス無いとダメ
SIF !PENIS(TARGET)
	RETURN 0

RETURN 1

@COM_搾精コンドーム
IF TEQUIP:触手
	PRINTL 触手搾精
	SELECTCOM = 170
ELSE
	PRINTL 搾精コンドーム
ENDIF

CALL KOJO_MESSAGE_COM

;着脱の処理
SIF !TEQUIP:触手 && !TEQUIP:搾精コンドーム
	ITEM:搾精コンドーム--
INVERTBIT TEQUIP:搾精コンドーム, 0

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 3
LOSEBASE:気力 += 10

SOURCE:快C = 10
SOURCE:中毒 = 5
SOURCE:液体 = 5
SOURCE:欲情 = 10
SOURCE:屈従 = 5
SOURCE:反感 = 10

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:抑圧 || TALENT:抵抗
	SOURCE:鬱屈 += 10

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 0

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM_搾精コンドーム
IF TEQUIP:触手
	PRINTL ＜触手搾精中＞
ELSE
	PRINTL ＜搾精コンドーム装備中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:体力 += 0
LOSEBASE:気力 += 2

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
SIF TEQUIP:触手
	TENTACLE++

RETURN 1

