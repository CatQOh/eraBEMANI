;-------------------------------------------------
;母乳飲み
;奉仕系コマンド、レベル4
;-------------------------------------------------
@USERCOM_ABLE89
;母乳飲み
;母乳体質じゃなきゃダメ
SIF !TALENT:母乳体質
	RETURN 0
;陥落済みじゃないとダメ
SIF !CFLAG:陥落
	RETURN 0
;上半身下着、上半身上着、全身上着をつけているとダメ
SIF TEQUIP:上半身下着 || TEQUIP:上半身上着 || TEQUIP:全身上着
	RETURN 0
;ニプルキャップ使用中は不可
SIF TEQUIP:ニプルキャップ
	RETURN 0
;搾乳機使用中は不可
SIF TEQUIP:搾乳器
	RETURN 0
;乳房電極装着中はダメ
SIF TEQUIP:乳房電極
	RETURN 0
;縄使用中は不可
SIF TEQUIP:縄
	RETURN 0
;触手調教中はダメ
SIF TEQUIP:触手
	RETURN 0

RETURN 1

@COM89
PRINTL 母乳飲み
;-------------------------------------------------
;実行決定
;-------------------------------------------------
CALL KOJO_MESSAGE_COM

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
LOSEBASE:体力 += 100
LOSEBASE:気力 += 50

SOURCE:情愛 = 1000
SOURCE:達成 = 1000
SOURCE:恭順 = 2000
SOURCE:屈従 = 1000
SOURCE:逸脱 = 100
SOURCE:反感 = 100

;-------------------------------------------------
;絶頂チェック
;-------------------------------------------------
CALL SOURCE_CHECK_CVAB

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK_T, 0

CALL SAMEN_SHOOT_T, 0, NOWEX:射精

;-------------------------------------------------
;絶頂時のウェイト
;-------------------------------------------------
;SIF NOWEX:Ｃ絶頂 || NOWEX:Ｖ絶頂 || NOWEX:Ａ絶頂 || NOWEX:Ｂ絶頂 || NOWEX:射精 || NOWEX:放尿 || NOWEX:噴乳 || NOWEX:MASTER:射精 || (ASSI > 0 && NOWEX:ASSI:射精)
;	WAIT

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の胸の汚れは舐め取る
STAIN:胸 = 0

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
CALL EXPUP, 1, 1

;愛情経験
IF (TALENT:恋慕 || TALENT:親愛) && PLAYER == MASTER
	PRINTL 愛情経験+2
	EXP:愛情経験 += 2
ENDIF

;依存度補正値(主人かつ恋慕で1、親愛で2）
IF TALENT:恋慕 && PLAYER == MASTER
	TFLAG:依存度補正 += 2
ELSEIF TALENT:親愛 && PLAYER == MASTER
	TFLAG:依存度補正 += 4
ENDIF

RETURN 1

