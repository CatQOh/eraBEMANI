;-------------------------------------------------
;依存度システムの処理
;依存度はプラスに大きいと主人に対して慕う形で依存し、
;マイナスに大きいと主人を畏怖する形で依存していく
;上記の依存の仕方はプラマイから苦痛刻印に置き換え
;-------------------------------------------------
@DEPENDENCE_CHECK
#DIM DYNAMIC 増加量

;依存度のベクトル処理
;0は関数終了、崩壊も依存度は変化しない
IF TALENT:崩壊
	PRINTL <依存度変化無し>
	RETURN 0
ENDIF

増加量 = 0

;ABL:従順をみる
増加量 += ABL:従順*2

;ABL:奉仕精神をみる
増加量 += ABL:奉仕精神

;難易度を見る
SELECTCASE FLAG:難易度
	;NORMAL
	CASE 1
		増加量 += 0
	;HYPER
	CASE 2
		増加量 -= 1
	;ANOTHER
	CASE 3
		増加量 -= 2
ENDSELECT

;素質による増減
;陥落素質
;恋慕
SIF TALENT:恋慕
	増加量 += 7
;親愛
SIF TALENT:親愛
	増加量 += 10
;淫乱
SIF TALENT:淫乱 && 相性値(TARGET, MASTER) > 100
	増加量 += 3
;娼婦
SIF TALENT:娼婦 && 相性値(TARGET, MASTER) > 100
	増加量 += 5
;服従
SIF TALENT:服従
	増加量 += 5
;隷属
SIF TALENT:隷属
	増加量 += 7

;絶頂強度による補正
増加量 += TFLAG:絶頂強度

;その他素質
;淫核
SIF TALENT:淫核
	増加量 += 1
;淫膣
SIF TALENT:淫膣
	増加量 += 1
;淫尻
SIF TALENT:淫尻
	増加量 += 1
;淫乳
SIF TALENT:淫乳
	増加量 += 1
;妄信
SIF TALENT:妄信
	増加量 += 2
;寂しがり屋で助手が居る場合
SIF TALENT:寂しがり屋 && ASSI > 0
	増加量 += 3
;男好き&主人が男
SIF TALENT:男好き && SEX(MASTER) == 1
	増加量 += 1
;女好き&主人が女
SIF TALENT:女好き && SEX(MASTER) == 2
	増加量 += 1
;痛みに弱い
SIF TALENT:痛みに弱い
	増加量 += 1
;快感に素直
SIF TALENT:快感に素直
	増加量 += 2
;マゾ
SIF TALENT:マゾ
	増加量 += 1
;幼稚
SIF TALENT:幼稚
	増加量 += 1
;弱気
SIF TALENT:弱気
	増加量 += 2

;主人の魅力
SIF TALENT:MASTER:魅力
	増加量 += 2
;主人の魅惑
SIF TALENT:MASTER:魅惑
	増加量 += 3
;主人の謎の魅力
SIF TALENT:MASTER:謎の魅力
	増加量 += 5
;主人の治療
SIF TALENT:MASTER:治療
	増加量 += 2
;主人の鼓舞
SIF TALENT:MASTER:鼓舞
	増加量 += 2
;主人の人気
SIF TALENT:MASTER:人気
	増加量 += 3

;恋心&PLAYERが恋心抱いている相手
SIF TALENT:恋心 && TALENT:恋心 == PLAYER
	増加量 += 4
;既婚者&PLAYERが伴侶
SIF TALENT:既婚者 && TALENT:既婚者 == PLAYER
	増加量 += 7

;実行者がMASTERで同性
IF PLAYER == MASTER && SEX(MASTER) == SEX(TARGET)
	SELECTCASE SEX(TARGET)
		CASE 1
			増加量 += ABL:ホモっ気+ABL:ゲイ中毒
		CASE 2
			増加量 += ABL:レズっ気+ABL:レズ中毒
	ENDSELECT
ENDIF

;屈服刻印
増加量 += MARK:屈服刻印

;ヤンデレなら依存度1.5倍
SIF TALENT:ヤンデレ
	TIMES 増加量, 1.50

;依存度補正を加算
増加量 += TFLAG:依存度補正

;アニマルなら3倍
;アニマルだと無理
SIF TALENT:アニマル
	増加量 *= 3


;同族嫌悪&同種族
SIF TALENT:同族嫌悪 && CSTR:種族 == CSTR:PLAYER:種族
	増加量 /= 2
;感情乏しい
SIF TALENT:感情乏しい
	増加量 /= 2

;生意気
SIF TALENT:生意気
	増加量 -= 1
;反抗的
SIF TALENT:反抗的
	増加量 -= 1
;ツンデレ+従順3以下
SIF TALENT:ツンデレ && ABL:従順 <= 3
	増加量 -= 2
;自制心
SIF TALENT:自制心
	増加量 -= 1
;無関心
SIF TALENT:無関心
	増加量 -= 2
;一線越えない+未陥落
SIF TALENT:一線越えない && !CFLAG:陥落
	増加量 -= 3
;抑圧
SIF TALENT:抑圧
	増加量 -= 1
;抵抗
SIF TALENT:抵抗
	増加量 -= 1
;弱味
SIF TALENT:弱味
	増加量 -= 2
;痛みに強い
SIF TALENT:痛みに強い
	増加量 -= 1
;快感の否定
SIF TALENT:快感の否定
	増加量 -= 2
;強気
SIF TALENT:強気
	増加量 -= 2
;男嫌い&主人が男
SIF TALENT:男嫌い && SEX(MASTER) == 1
	増加量 -= 2
;女嫌い&主人が女
SIF TALENT:女嫌い && SEX(MASTER) == 2
	増加量 -= 2
;恋心&PLAYERが恋心抱いている相手じゃない
SIF TALENT:恋心 && TALENT:恋心 != PLAYER && !CFLAG:陥落
	増加量 -= 5
;既婚者&PLAYERが伴侶じゃない
SIF TALENT:既婚者 && TALENT:既婚者 != PLAYER && !CFLAG:陥落
	増加量 -= 10
;反発刻印
増加量 -= MARK:反発刻印

CFLAG:依存度 += 増加量

IF 増加量 > 0
	IF CFLAG:依存度 >= 5000
		PRINTL <依存度最大>
		CFLAG:依存度 = 5000
	ELSE
		PRINTL <依存度増加>
	ENDIF
ELSEIF 増加量 < 0
	PRINTL <依存度減少>
ELSE
	PRINTL <依存度変化無し>
ENDIF

TFLAG:依存度補正 = 0

RETURN 0
