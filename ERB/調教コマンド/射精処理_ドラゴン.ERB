;---------------------------------------------------------
;ドラゴンが射精するかのチェック
;---------------------------------------------------------
@SAMEN_CHECK_DRAGON
LOCAL = BASE:PLAYER:ドラゴン射精/MAXBASE:PLAYER:ドラゴン射精
SIF LOCAL <= 0
	RETURN 0

SELECTCASE SELECTCOMS
	CASE "フェラさせる(ドラゴン)"
		PRINTFORML %CSTR:PLAYER:ドラゴン%口内射精
	CASE "膣を犯す(ドラゴン)"
		PRINTFORML %CSTR:PLAYER:ドラゴン%膣内射精
	CASE "アナルを犯す(ドラゴン)"
		PRINTFORML %CSTR:PLAYER:ドラゴン%腸内射精
ENDSELECT

NOWEX:PLAYER:ドラゴン射精 = LOCAL

RETURN LOCAL

@SAMEN_SHOOT_DRAGON, 射精量
#DIM 射精量

SIF 射精量 <= 0
	RETURN 0

SELECTCASE SELECTCOMS
	CASE "フェラさせる(ドラゴン)"
		CFLAG:ドラゴンを口で射精させた経験++
	CASE "膣を犯す(ドラゴン)"
		SOURCE:恐怖 += 500
		SOURCE:苦痛 += 300
		SOURCE:屈従 += 500
		CFLAG:ドラゴン膣内射精経験++
	CASE "アナルを犯す(ドラゴン)"
		SOURCE:恐怖 += 300
		SOURCE:苦痛 += 500
		SOURCE:屈従 += 500
		CFLAG:ドラゴン腸内射精経験++
ENDSELECT

EX:PLAYER:ドラゴン射精++

;ドラゴンの精液は多い
PRINTFORML 精液経験+{射精量*3}
EXP:精液経験 += 射精量*3

BASE:PLAYER:ドラゴン射精 -= MAXBASE:PLAYER:ドラゴン射精*射精量
SIF BASE:PLAYER:ドラゴン射精 >= MAXBASE:PLAYER:ドラゴン射精
	BASE:PLAYER:ドラゴン射精 = MAXBASE:PLAYER:ドラゴン射精-1



;射精時に中毒充足のソースを追加
;通常射精時
SIF 射精量 == 1
	LOCAL = 500
;大量射精時
SIF 射精量 >= 2
	LOCAL = 1000

;精液中毒を見る
SELECTCASE ABL:精液中毒
	CASE 0, 1
		TIMES LOCAL , 0.10
	CASE 2
		TIMES LOCAL , 0.30
	CASE 3
		TIMES LOCAL , 0.60
	CASE 4
		TIMES LOCAL , 0.90
	CASE 5
		TIMES LOCAL , 1.20
	CASE 6
		TIMES LOCAL , 1.50
	CASE 7
		TIMES LOCAL , 1.80
	CASE 8
		TIMES LOCAL , 2.30
	CASE 9
		TIMES LOCAL , 3.00
	CASE IS >= 10
		TIMES LOCAL , 5.00
ENDSELECT

SOURCE:中毒 += LOCAL

