;紅刃……1/5の確率で豹変
;冷音……天気が雨・雪・雷雨で豹変
IF TARGET >= 0
	IF CHARANAMEF(TARGET) == "紅刃" && RAND:5 == 0
		CALL TRANCE_ON, TARGET
		TRANCE:200 = 1
		DRAWLINE
		PRINTFORMW ＜紅刃は性格が豹変した＞
	ELSEIF CHARANAMEF(TARGET) == "春雨 冷音" && INRANGE(FLAG:天気, 3, 5)
		CALL TRANCE_ON, TARGET
		TRANCE:200 = 1
		DRAWLINE
		PRINTFORMW ＜冷音は性格が豹変した＞
	ENDIF
ENDIF
IF ASSI >= 0
	IF CHARANAMEF(ASSI) == "紅刃" && RAND:5 == 0
		CALL TRANCE_ON, ASSI
		TRANCE:ASSI:200 = 1
		DRAWLINE
		PRINTFORMW ＜紅刃は性格が豹変した＞
	ELSEIF CHARANAMEF(ASSI) == "春雨 冷音" && INRANGE(FLAG:天気, 3, 5)
		CALL TRANCE_ON, ASSI
		TRANCE:ASSI:200 = 1
		DRAWLINE
		PRINTFORMW ＜冷音は性格が豹変した＞
	ENDIF
ENDIF

