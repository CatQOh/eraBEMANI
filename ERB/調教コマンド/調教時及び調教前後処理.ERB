SIF !TFLAG:気絶 && !TFLAG:流産 && !CFLAG:使用不可
	CALL SELF_CHECK

;実績「1回の調教でフローラに10回以上中出しする」
IF CHARANAMEF(TARGET) == "フローラ"
	LOCAL = 0
	LOCAL += PREG:0
