;-------------------------------------------------
;@SCHOOL_KOJO_SHOOT（X1をキャラ番号に置換）
;PLAYERの射精をトリガーにした口上
;-------------------------------------------------
@SCHOOL_KOJO_SHOOT_KX1
;地の文表示関数 地の文を表示させたくない場合はコメントアウト
TRYCALL SHOOT_MESSAGE

SIF OPTION:口上表示 == 0
	RETURN 0

;-------------------------------------------------
;調教者の射精時のテキスト
;どこに射精した、という変数を削除したため、コマンドで分岐するのが確実で安心です
;分からない場合は既存の口上を参考にするとわかりやすいかもです
;SELECTCOMS = "実行したコマンド名"
;-------------------------------------------------
PRINTFORMW 

;-------------------------------------------------
;@SCHOOL_KOJO_EX関係（X1をキャラ番号に置換）
;奴隷の絶頂をトリガーにした口上
;-------------------------------------------------
@SCHOOL_KOJO_EX_KX1
;地の文表示関数 地の文表示させたくない場合はコメントアウト
TRYCALL EX_MESSAGE

SIF OPTION:口上表示 == 0
	RETURN 0
;-------------------------------------------------
;奴隷の絶頂時のテキスト FEXを使用
;-------------------------------------------------
;-------------------------------------------------
;C絶頂
;-------------------------------------------------
IF NOWEX:Ｃ絶頂
	;初めて
	IF FEX:0 == 0
		PRINTFORMW 
		FEX:0 = 1
	;二回目以降
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;V絶頂
;-------------------------------------------------
IF NOWEX:Ｖ絶頂
	;初めて
	IF FEX:1 == 0
		PRINTFORMW 
		FEX:1 = 1
	;二回目以降
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;A絶頂
;-------------------------------------------------
IF NOWEX:Ａ絶頂
	;初めて
	IF FEX:2 == 0
		PRINTFORMW 
		FEX:2 = 1
	;二回目以降
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;B絶頂
;-------------------------------------------------
IF NOWEX:Ｂ絶頂
	;初めて
	IF FEX:3 == 0
		PRINTFORMW 
		FEX:3 = 1
	;二回目以降
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;噴乳
;-------------------------------------------------
;噴乳している
IF NOWEX:噴乳
	;陥落済み
	IF 陥落(TARGET)
		PRINTFORMW 
	;屈服刻印Lv3
	ELSEIF MARK:屈服刻印 == 3
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;射精 大量射精時にはNOWEX:射精に2以上が代入される
;-------------------------------------------------
;射精している
IF NOWEX:射精
	PRINTFORMW 
ENDIF

;-------------------------------------------------
;潮噴き 調教対象にペニスがある場合のみ
;-------------------------------------------------
IF NOWEX:潮噴き
	PRINTFORMW 
ENDIF

;-------------------------------------------------
;放尿 ふたなりじゃない女性がおもらし癖を持っている、もしくは利尿剤発動時に絶頂で漏らす
;-------------------------------------------------
;放尿している
IF NOWEX:放尿 && (TEQUIP:利尿剤 || TALENT:おもらし癖) && SEX(TARGET) == 2
	PRINTFORMW 
ENDIF

;-------------------------------------------------
;@SCHOOL_KOJO_AFTER関係（X1をキャラ番号に置換）
;調教後の変化をトリガーにした口上
;-------------------------------------------------
@SCHOOL_KOJO_AFTER_KX1
;地の文表示関数 地の文表示させたくない場合はコメントアウト
TRYCALL AFTER_MESSAGE
SIF OPTION:口上表示 == 0
	RETURN 0
;-------------------------------------------------
;調教後のテキスト
;-------------------------------------------------
;-------------------------------------------------
;処女喪失(処女のみ)
;-------------------------------------------------
IF TFLAG:コマンド破瓜
	;恋慕・親愛かつ主人のセックスによる処女喪失
	IF TFLAG:恋慕処女
		PRINTFORMW 
	;それ以外の時に処女喪失
	ELSE
		PRINTFORMW 
	ENDIF
ENDIF

;-------------------------------------------------
;@SCHOOL_KOJO_PALAM関係（X1をキャラ番号に置換）
;パラメータ変化をトリガーにした口上
;-------------------------------------------------
@SCHOOL_KOJO_PALAM_KX1
;地の文表示関数 地の文表示させたくない場合はコメントアウト
TRYCALL PALAM_MESSAGE
SIF OPTION:口上表示 == 0
	RETURN 0
;-------------------------------------------------
;パラメータ変化時のテキスト
;-------------------------------------------------
;-------------------------------------------------
;初めて潤滑がLV4になった
;-------------------------------------------------
IF PALAM:潤滑+UP:潤滑 > PALAMLV:4 && FPALAM:0 == 0
	;ローションを使った場合
	IF SELECTCOMS == "ローション"
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
	FPALAM:0 = 1
ENDIF

;-------------------------------------------------
;初めて欲情がLV3になった
;-------------------------------------------------
IF PALAM:欲情+UP:欲情 > PALAMLV:3 && FPALAM:1 == 0
	;媚薬を使った場合
	IF SELECTCOMS == "媚薬"
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
	FPALAM:1 = 1
ENDIF

;-------------------------------------------------
;初めて屈服がLV3になった
;-------------------------------------------------
IF PALAM:屈服+UP:屈服 > PALAMLV:3 && FPALAM:2 == 0
	;陥落済み
	IF 陥落(TARGET)
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
	FPALAM:2 = 1
ENDIF

;-------------------------------------------------
;初めて恭順がLV3になった
;-------------------------------------------------
IF PALAM:恭順+UP:恭順 > PALAMLV:3 && FPALAM:3 == 0
	;陥落済み
	IF 陥落(TARGET)
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
	FPALAM:3 = 1
ENDIF

;-------------------------------------------------
;初めて恐怖がLV3になった
;-------------------------------------------------
IF PALAM:恐怖+UP:恐怖 > PALAMLV:3 && FPALAM:4 == 0
	;陥落済み
	IF 陥落(TARGET)
		PRINTFORMW 
	;それ以外
	ELSE
		PRINTFORMW 
	ENDIF
	FPALAM:4 = 1
ENDIF

